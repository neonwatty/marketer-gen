<%# Journey Builder - Visual Interface for Creating Marketing Journeys %>
<% content_for :title, "Journey Builder" %>

<div class="journey-builder min-h-screen bg-gray-50">
  <!-- Top Navigation Bar -->
  <div class="bg-white border-b border-gray-200 shadow-sm sticky top-0 z-50">
    <div class="px-6 py-4 flex items-center justify-between">
      <!-- Left: Breadcrumb and Title -->
      <div class="flex items-center space-x-4">
        <%= link_to journey_templates_path, class: "text-gray-500 hover:text-gray-700" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <h1 class="text-xl font-semibold text-gray-900">Journey Builder</h1>
        <span class="text-sm text-gray-500">Building: <%= @template&.name || "New Journey" %></span>
      </div>
      
      <!-- Center: Builder Tools -->
      <div class="flex items-center space-x-2">
        <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-md" title="Undo">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
          </svg>
        </button>
        <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-md" title="Redo">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 10h-10a8 8 0 00-8 8v2m18-10l-6 6m6-6l-6-6"/>
          </svg>
        </button>
        <div class="w-px h-6 bg-gray-300"></div>
        <button class="px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100 rounded-md flex items-center space-x-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
          </svg>
          <span>Zoom</span>
        </button>
        <button class="px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100 rounded-md">Fit to Screen</button>
      </div>
      
      <!-- Right: Actions -->
      <div class="flex items-center space-x-3">
        <button class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          Preview
        </button>
        <button class="px-4 py-2 text-sm font-medium text-white bg-gray-600 border border-transparent rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
          Save Draft
        </button>
        <button class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          Publish
        </button>
      </div>
    </div>
  </div>

  <!-- Main Builder Layout -->
  <div class="flex h-screen pt-16">
    <!-- Left Sidebar: Step Palette -->
    <div class="w-80 bg-white border-r border-gray-200 flex-shrink-0 overflow-y-auto">
      <div class="p-6">
        <!-- AI Suggestions Panel -->
        <div class="mb-6 p-4 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg border border-blue-200">
          <div class="flex items-center space-x-2 mb-3">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            <h3 class="text-sm font-medium text-blue-900">AI Suggestions</h3>
          </div>
          <p class="text-xs text-blue-700 mb-3">Based on your journey goals, here are recommended next steps:</p>
          <div class="space-y-2">
            <div class="p-2 bg-white rounded border border-blue-200 text-xs">
              <span class="font-medium">Welcome Email</span>
              <p class="text-gray-600 mt-1">Start with a personalized welcome message</p>
            </div>
            <button class="w-full text-xs text-blue-600 hover:text-blue-800 font-medium">
              View all suggestions â†’
            </button>
          </div>
        </div>

        <!-- Templates Section -->
        <div class="mb-6">
          <h3 class="text-sm font-medium text-gray-900 mb-3">Quick Templates</h3>
          <div class="space-y-2">
            <div class="p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-blue-100 rounded flex items-center justify-center">
                  <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Welcome Series</p>
                  <p class="text-xs text-gray-500">3-email sequence</p>
                </div>
              </div>
            </div>
            
            <div class="p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-green-100 rounded flex items-center justify-center">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Nurture Campaign</p>
                  <p class="text-xs text-gray-500">Lead development</p>
                </div>
              </div>
            </div>
            
            <div class="p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-amber-100 rounded flex items-center justify-center">
                  <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Sales Sequence</p>
                  <p class="text-xs text-gray-500">Convert prospects</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Journey Stages -->
        <div class="mb-6">
          <h3 class="text-sm font-medium text-gray-900 mb-3">Journey Stages</h3>
          <div class="space-y-3">
            <!-- Awareness Stage -->
            <div class="journey-stage" data-stage="awareness">
              <div class="flex items-center space-x-2 mb-2">
                <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                <h4 class="text-sm font-medium text-gray-900">Awareness</h4>
              </div>
              <div class="ml-5 space-y-2">
                <div class="step-type p-2 border border-blue-200 bg-blue-50 rounded cursor-pointer hover:bg-blue-100" 
                     draggable="true" data-step-type="blog_post" data-stage="awareness">
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                    <span class="text-xs font-medium text-blue-900">Blog Post</span>
                  </div>
                </div>
                
                <div class="step-type p-2 border border-blue-200 bg-blue-50 rounded cursor-pointer hover:bg-blue-100" 
                     draggable="true" data-step-type="social_media" data-stage="awareness">
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m-9 0h10m-10 0a2 2 0 00-2 2v14a2 2 0 002 2h10a2 2 0 002-2V6a2 2 0 00-2-2"/>
                    </svg>
                    <span class="text-xs font-medium text-blue-900">Social Media</span>
                  </div>
                </div>
                
                <div class="step-type p-2 border border-blue-200 bg-blue-50 rounded cursor-pointer hover:bg-blue-100" 
                     draggable="true" data-step-type="lead_magnet" data-stage="awareness">
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4"/>
                    </svg>
                    <span class="text-xs font-medium text-blue-900">Lead Magnet</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Consideration Stage -->
            <div class="journey-stage" data-stage="consideration">
              <div class="flex items-center space-x-2 mb-2">
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <h4 class="text-sm font-medium text-gray-900">Consideration</h4>
              </div>
              <div class="ml-5 space-y-2">
                <div class="step-type p-2 border border-green-200 bg-green-50 rounded cursor-pointer hover:bg-green-100" 
                     draggable="true" data-step-type="email_sequence" data-stage="consideration">
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    <span class="text-xs font-medium text-green-900">Email Sequence</span>
                  </div>
                </div>
                
                <div class="step-type p-2 border border-green-200 bg-green-50 rounded cursor-pointer hover:bg-green-100" 
                     draggable="true" data-step-type="webinar" data-stage="consideration">
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                    </svg>
                    <span class="text-xs font-medium text-green-900">Webinar</span>
                  </div>
                </div>
                
                <div class="step-type p-2 border border-green-200 bg-green-50 rounded cursor-pointer hover:bg-green-100" 
                     draggable="true" data-step-type="case_study" data-stage="consideration">
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <span class="text-xs font-medium text-green-900">Case Study</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Conversion Stage -->
            <div class="journey-stage" data-stage="conversion">
              <div class="flex items-center space-x-2 mb-2">
                <div class="w-3 h-3 bg-amber-500 rounded-full"></div>
                <h4 class="text-sm font-medium text-gray-900">Conversion</h4>
              </div>
              <div class="ml-5 space-y-2">
                <div class="step-type p-2 border border-amber-200 bg-amber-50 rounded cursor-pointer hover:bg-amber-100" 
                     draggable="true" data-step-type="sales_call" data-stage="conversion">
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                    <span class="text-xs font-medium text-amber-900">Sales Call</span>
                  </div>
                </div>
                
                <div class="step-type p-2 border border-amber-200 bg-amber-50 rounded cursor-pointer hover:bg-amber-100" 
                     draggable="true" data-step-type="demo" data-stage="conversion">
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    <span class="text-xs font-medium text-amber-900">Product Demo</span>
                  </div>
                </div>
                
                <div class="step-type p-2 border border-amber-200 bg-amber-50 rounded cursor-pointer hover:bg-amber-100" 
                     draggable="true" data-step-type="trial_offer" data-stage="conversion">
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2m0 0V9a2 2 0 00-2 2v2a2 2 0 00-2 2v1a2 2 0 00-2 2v3.24a2 2 0 01-.659 1.472L3 19.24V8.5A2.5 2.5 0 015.5 6H10"/>
                    </svg>
                    <span class="text-xs font-medium text-amber-900">Free Trial</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Retention Stage -->
            <div class="journey-stage" data-stage="retention">
              <div class="flex items-center space-x-2 mb-2">
                <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                <h4 class="text-sm font-medium text-gray-900">Retention</h4>
              </div>
              <div class="ml-5 space-y-2">
                <div class="step-type p-2 border border-purple-200 bg-purple-50 rounded cursor-pointer hover:bg-purple-100" 
                     draggable="true" data-step-type="onboarding" data-stage="retention">
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                    <span class="text-xs font-medium text-purple-900">Onboarding</span>
                  </div>
                </div>
                
                <div class="step-type p-2 border border-purple-200 bg-purple-50 rounded cursor-pointer hover:bg-purple-100" 
                     draggable="true" data-step-type="newsletter" data-stage="retention">
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                    </svg>
                    <span class="text-xs font-medium text-purple-900">Newsletter</span>
                  </div>
                </div>
                
                <div class="step-type p-2 border border-purple-200 bg-purple-50 rounded cursor-pointer hover:bg-purple-100" 
                     draggable="true" data-step-type="feedback_survey" data-stage="retention">
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                    </svg>
                    <span class="text-xs font-medium text-purple-900">Feedback Survey</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Canvas Area -->
    <div class="flex-1 flex">
      <!-- Canvas -->
      <div class="flex-1 relative overflow-auto bg-gray-100" id="journey-canvas">
        <!-- Canvas Grid Background -->
        <div class="absolute inset-0" style="background-image: radial-gradient(circle, #d1d5db 1px, transparent 1px); background-size: 20px 20px;"></div>
        
        <!-- Journey Steps Container -->
        <div class="relative z-10 min-h-full p-8" id="journey-flow">
          <!-- Example Journey Steps - These would be dynamically generated -->
          <div class="journey-flow-container">
            <!-- Start Node -->
            <div class="journey-step start-step absolute" style="top: 100px; left: 100px;" data-step-id="start">
              <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center text-white font-bold shadow-lg border-4 border-white">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
              </div>
              <div class="mt-2 text-center">
                <p class="text-xs font-medium text-gray-900">Start</p>
              </div>
            </div>

            <!-- Example Email Step -->
            <div class="journey-step email-step absolute" style="top: 100px; left: 300px;" data-step-id="step1" data-stage="awareness">
              <div class="journey-step-card">
                <div class="w-32 bg-white rounded-lg shadow-md border border-blue-200 hover:shadow-lg transition-shadow">
                  <div class="bg-blue-500 text-white px-3 py-2 rounded-t-lg">
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                        <span class="text-xs font-medium">Email</span>
                      </div>
                      <button class="text-blue-200 hover:text-white">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                      </button>
                    </div>
                  </div>
                  <div class="p-3">
                    <p class="text-xs font-medium text-gray-900 mb-1">Welcome Email</p>
                    <p class="text-xs text-gray-500">Introduce your brand</p>
                    <div class="mt-2 flex items-center space-x-1 text-xs text-gray-400">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <span>Immediate</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Connection Line Example -->
            <svg class="absolute inset-0 pointer-events-none z-0" style="top: 0; left: 0; width: 100%; height: 100%;">
              <defs>
                <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
                  <polygon points="0 0, 10 3.5, 0 7" fill="#6b7280"/>
                </marker>
              </defs>
              <path d="M 180 132 Q 220 132 260 132" stroke="#6b7280" stroke-width="2" fill="none" marker-end="url(#arrowhead)"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Right Panel: Properties -->
      <div class="w-80 bg-white border-l border-gray-200 flex-shrink-0 overflow-y-auto" id="properties-panel">
        <div class="p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Step Properties</h3>
          
          <!-- No Selection State -->
          <div id="no-selection" class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.122 2.122"/>
