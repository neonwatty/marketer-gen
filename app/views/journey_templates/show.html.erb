<div class="journey-template-details bg-gray-50 min-h-screen">
  <!-- Header Section -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-6">
        <!-- Breadcrumb -->
        <nav class="flex mb-4" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-4">
            <li>
              <%= link_to journey_templates_path, class: "text-sm text-gray-500 hover:text-gray-700" do %>
                Templates
              <% end %>
            </li>
            <li class="flex items-center">
              <svg class="flex-shrink-0 h-4 w-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z"/>
              </svg>
              <span class="ml-4 text-sm text-gray-700"><%= @template.name %></span>
            </li>
          </ol>
        </nav>

        <div class="flex items-start justify-between">
          <div class="flex-1">
            <div class="flex items-center space-x-3 mb-2">
              <h1 class="text-3xl font-bold text-gray-900"><%= @template.name %></h1>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                v<%= @template.version %>
              </span>
              <% if @template.published? %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Published
                </span>
              <% end %>
            </div>
            
            <div class="flex items-center space-x-6 text-sm text-gray-600">
              <span><%= @template.category_humanized %> â€¢ <%= @template.template_type_humanized %></span>
              <span><%= @template.stage_count %> stages</span>
              <span><%= @template.estimated_duration_days %> days duration</span>
              <span><%= @template.usage_count %> times used</span>
            </div>

            <% if @template.description.present? %>
              <p class="mt-3 text-gray-600"><%= @template.description %></p>
            <% end %>

            <!-- Tags -->
            <% if @template.tags_array.any? %>
              <div class="mt-4 flex flex-wrap gap-2">
                <% @template.tags_array.each do |tag| %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <%= tag %>
                  </span>
                <% end %>
              </div>
            <% end %>
          </div>

          <!-- Actions -->
          <div class="flex items-center space-x-3 ml-6">
            <button type="button" 
                    class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                    data-template-id="<%= @template.id %>"
                    onclick="duplicateTemplate(this)">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
              Duplicate
            </button>
            
            <button type="button" 
                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                    data-template-id="<%= @template.id %>"
                    onclick="showApplyModal(this)">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              Apply to Campaign
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">
        
        <!-- Journey Stages -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Journey Stages</h2>
            <p class="text-sm text-gray-600 mt-1">Step-by-step customer journey flow</p>
          </div>
          
          <div class="p-6">
            <div class="space-y-4">
              <% @template_stages.each_with_index do |stage, index| %>
                <div class="relative">
                  <!-- Connection Line -->
                  <% unless index == @template_stages.length - 1 %>
                    <div class="absolute left-4 top-16 w-0.5 h-8 bg-gray-300"></div>
                  <% end %>
                  
                  <!-- Stage Card -->
                  <div class="flex items-start space-x-4 p-4 bg-gray-50 rounded-lg">
                    <!-- Stage Number -->
                    <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                      <span class="text-sm font-medium text-blue-600"><%= index + 1 %></span>
                    </div>
                    
                    <!-- Stage Details -->
                    <div class="flex-1 min-w-0">
                      <div class="flex items-center justify-between">
                        <h3 class="text-base font-medium text-gray-900"><%= stage['name'] %></h3>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= stage_color(stage['stage_type']) %>-100 text-<%= stage_color(stage['stage_type']) %>-800">
                          <%= stage['stage_type'] %>
                        </span>
                      </div>
                      
                      <% if stage['description'].present? %>
                        <p class="mt-2 text-sm text-gray-600"><%= stage['description'] %></p>
                      <% end %>
                      
                      <% if stage['content'].present? %>
                        <p class="mt-2 text-sm text-gray-700 font-medium">Content: <%= stage['content'] %></p>
                      <% end %>
                      
                      <!-- Stage Metadata -->
                      <div class="mt-3 flex items-center space-x-6 text-xs text-gray-500">
                        <div class="flex items-center space-x-1">
                          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                          </svg>
                          <span>Duration: <%= stage['duration_days'] %> days</span>
                        </div>
                        
                        <% if stage.dig('configuration', 'channels')&.any? %>
                          <div class="flex items-center space-x-1">
                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M7 4a3 3 0 016 0v4a3 3 0 11-6 0V4zm4 10.93A7.001 7.001 0 0017 8a1 1 0 10-2 0A5 5 0 015 8a1 1 0 00-2 0 7.001 7.001 0 006 6.93V17H6a1 1 0 100 2h8a1 1 0 100-2h-3v-2.07z" clip-rule="evenodd"/>
                            </svg>
                            <span>Channels: <%= stage['configuration']['channels'].join(', ') %></span>
                          </div>
                        <% end %>
                        
                        <% if stage.dig('configuration', 'success_metrics')&.any? %>
                          <div class="flex items-center space-x-1">
                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"/>
                              <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"/>
                            </svg>
                            <span>Metrics: <%= stage['configuration']['success_metrics'].join(', ') %></span>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Template Variables -->
        <% if @template.variables.any? %>
          <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
              <h2 class="text-lg font-medium text-gray-900">Template Variables</h2>
              <p class="text-sm text-gray-600 mt-1">Customizable parameters for this template</p>
            </div>
            
            <div class="p-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% @template.variables.each do |variable| %>
                  <div class="p-4 bg-gray-50 rounded-lg">
                    <div class="flex items-center justify-between mb-2">
                      <h3 class="font-medium text-gray-900"><%= variable['name'] %></h3>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= variable['required'] ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                        <%= variable['required'] ? 'Required' : 'Optional' %>
                      </span>
                    </div>
                    
                    <% if variable['description'].present? %>
                      <p class="text-sm text-gray-600 mb-2"><%= variable['description'] %></p>
                    <% end %>
                    
                    <div class="text-xs text-gray-500 space-y-1">
                      <div>Type: <span class="font-medium"><%= variable['type'] %></span></div>
                      <% if variable['default_value'].present? %>
                        <div>Default: <span class="font-medium"><%= variable['default_value'] %></span></div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        
        <!-- Template Stats -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-base font-medium text-gray-900">Usage Statistics</h3>
          </div>
          <div class="px-6 py-4">
            <dl class="grid grid-cols-1 gap-4 text-sm">
              <div>
                <dt class="font-medium text-gray-500">Total Usage</dt>
                <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @usage_stats[:total_usage] %></dd>
              </div>
              
              <div>
                <dt class="font-medium text-gray-500">Recent Usage (30 days)</dt>
                <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @usage_stats[:recent_usage] %></dd>
              </div>
              
              <% if @usage_stats[:adoption_rate] > 0 %>
                <div>
                  <dt class="font-medium text-gray-500">Adoption Rate</dt>
                  <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @usage_stats[:adoption_rate] %>%</dd>
                </div>
              <% end %>
              
              <% if @usage_stats[:success_rate] > 0 %>
                <div>
                  <dt class="font-medium text-gray-500">Success Rate</dt>
                  <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @usage_stats[:success_rate] %>%</dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <!-- Template Metadata -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-base font-medium text-gray-900">Template Details</h3>
          </div>
          <div class="px-6 py-4">
            <dl class="grid grid-cols-1 gap-4 text-sm">
              <div>
                <dt class="font-medium text-gray-500">Author</dt>
                <dd class="mt-1 text-gray-900"><%= @template.author || 'System' %></dd>
              </div>
              
              <div>
                <dt class="font-medium text-gray-500">Created</dt>
                <dd class="mt-1 text-gray-900"><%= @template.created_at.strftime("%B %d, %Y") %></dd>
              </div>
              
              <% if @template.published? %>
                <div>
                  <dt class="font-medium text-gray-500">Published</dt>
                  <dd class="mt-1 text-gray-900"><%= @template.published_at.strftime("%B %d, %Y") %></dd>
                </div>
              <% end %>
              
              <% if @template.parent_template_id.present? %>
                <div>
                  <dt class="font-medium text-gray-500">Based On</dt>
                  <dd class="mt-1">
                    <%= link_to @template.previous_version.name, 
                                journey_template_path(@template.parent_template_id),
                                class: "text-blue-600 hover:text-blue-800" %>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <!-- Version History -->
        <% if @template.child_templates.any? || @template.parent_template_id.present? %>
          <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
              <h3 class="text-base font-medium text-gray-900">Version History</h3>
            </div>
            <div class="px-6 py-4">
              <div class="space-y-3">
                <!-- Current Version -->
                <div class="flex items-center justify-between p-3 bg-blue-50 rounded-lg">
                  <div>
                    <div class="font-medium text-gray-900">v<%= @template.version %> (Current)</div>
                    <div class="text-xs text-gray-500"><%= @template.created_at.strftime("%m/%d/%Y") %></div>
                  </div>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    Active
                  </span>
                </div>
                
                <!-- Previous Versions -->
                <% if @template.parent_template_id.present? %>
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div>
                      <div class="font-medium text-gray-700">v<%= @template.previous_version.version %></div>
                      <div class="text-xs text-gray-500"><%= @template.previous_version.created_at.strftime("%m/%d/%Y") %></div>
                    </div>
                    <%= link_to "View", journey_template_path(@template.parent_template_id),
                                class: "text-sm text-blue-600 hover:text-blue-800" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Apply to Campaign Modal -->
<div id="applyModal" class="fixed inset-0 z-50 hidden">
  <div class="flex items-center justify-center min-h-screen px-4">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75" onclick="closeApplyModal()"></div>
    <div class="relative bg-white rounded-lg max-w-lg w-full shadow-xl">
      <div class="p-6 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Apply Template to Campaign</h3>
      </div>
      
      <form id="applyForm" class="p-6">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Campaign</label>
            <select id="campaignSelect" name="campaign_id" required class="w-full border-gray-300 rounded-md">
              <option value="">Choose a campaign...</option>
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Journey Name</label>
            <input type="text" id="journeyName" name="name" class="w-full border-gray-300 rounded-md" placeholder="Enter journey name...">
          </div>
        </div>
      </form>
      
      <div class="flex justify-end space-x-3 p-6 border-t border-gray-200">
        <button type="button" onclick="closeApplyModal()" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
          Cancel
        </button>
        <button type="button" onclick="applyTemplate()" id="applyButton" class="px-4 py-2 bg-blue-600 text-white rounded-md text-sm font-medium hover:bg-blue-700">
          Apply Template
        </button>
      </div>
    </div>
  </div>
</div>

<script>
let selectedTemplateId = null;

function showApplyModal(button) {
  selectedTemplateId = button.dataset.templateId;
  document.getElementById('journeyName').value = '<%= @template.name %> Journey';
  document.getElementById('applyModal').classList.remove('hidden');
  loadCampaigns();
}

function closeApplyModal() {
  document.getElementById('applyModal').classList.add('hidden');
  selectedTemplateId = null;
}

async function loadCampaigns() {
  try {
    const response = await fetch('/campaigns.json');
    if (!response.ok) return;
    
    const campaigns = await response.json();
    const select = document.getElementById('campaignSelect');
    
    select.innerHTML = '<option value="">Choose a campaign...</option>';
    campaigns.forEach(campaign => {
      const option = document.createElement('option');
      option.value = campaign.id;
      option.textContent = campaign.name;
      select.appendChild(option);
    });
  } catch (error) {
    console.warn('Could not load campaigns:', error);
  }
}

async function applyTemplate() {
  if (!selectedTemplateId) return;
  
  const form = document.getElementById('applyForm');
  const formData = new FormData(form);
  const campaignId = formData.get('campaign_id');
  const journeyName = formData.get('name');
  
  if (!campaignId) {
    alert('Please select a campaign.');
    return;
  }
  
  const button = document.getElementById('applyButton');
  button.disabled = true;
  button.textContent = 'Applying...';
  
  try {
    const response = await fetch(`/journey_templates/${selectedTemplateId}/apply_to_campaign`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
      },
      body: JSON.stringify({
        campaign_id: campaignId,
        name: journeyName || '<%= @template.name %> Journey'
      })
    });
    
    const data = await response.json();
    
    if (data.success) {
      alert(data.message);
      closeApplyModal();
      window.location.href = `/campaigns/${campaignId}/customer_journey/builder`;
    } else {
      throw new Error(data.message || 'Failed to apply template');
    }
  } catch (error) {
    console.error('Error applying template:', error);
    alert(error.message || 'Failed to apply template to campaign.');
  } finally {
    button.disabled = false;
    button.textContent = 'Apply Template';
  }
}

async function duplicateTemplate(button) {
  const templateId = button.dataset.templateId;
  const name = prompt('Enter a name for the duplicated template:', '<%= @template.name %> Copy');
  
  if (!name) return;
  
  button.disabled = true;
  const originalText = button.textContent;
  button.textContent = 'Duplicating...';
  
  try {
    const response = await fetch(`/journey_templates/${templateId}/duplicate`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
      },
      body: JSON.stringify({ name: name })
    });
    
    const data = await response.json();
    
    if (data.success) {
      alert(data.message);
      location.reload();
    } else {
      throw new Error(data.message || 'Failed to duplicate template');
    }
  } catch (error) {
    console.error('Error duplicating template:', error);
    alert(error.message || 'Failed to duplicate template.');
  } finally {
    button.disabled = false;
    button.textContent = originalText;
  }
}
</script>

<%
def stage_color(stage_type)
  colors = {
    'Awareness' => 'blue',
    'Consideration' => 'yellow',
    'Conversion' => 'green',
    'Retention' => 'purple',
    'Advocacy' => 'indigo'
  }
  colors[stage_type] || 'gray'
end
%>