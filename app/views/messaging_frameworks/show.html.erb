                  <input type="radio" 
                         name="formality" 
                         value="very_formal"
                         data-tone-attribute="formality"
                         <%= 'checked' if @messaging_framework.tone_attributes&.dig('formality') == 'very_formal' %>
                         class="h-4 w-4 text-indigo-600 focus:ring-indigo-500">
                  <div class="ml-3">
                    <span class="block text-sm font-medium text-gray-900">Very Formal</span>
                    <span class="block text-xs text-gray-500">Professional, traditional, serious</span>
                  </div>
                </label>
                
                <label class="flex items-center p-3 rounded-lg border border-gray-200 cursor-pointer hover:bg-gray-50 transition-colors">
