<div class="min-h-screen bg-gray-50" data-controller="messaging-framework">
  <!-- Header Section -->
  <header class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <a href="<%= brand_path(@brand) %>" class="text-gray-500 hover:text-gray-700 transition-colors">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
          </a>
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Messaging Framework</h1>
            <p class="text-sm text-gray-600 mt-1"><%= @brand.name %></p>
          </div>
        </div>
        
        <div class="flex items-center space-x-3">
          <button data-action="click->messaging-framework#exportFramework" 
                  class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
            </svg>
            Export
          </button>
          
          <label for="import-file" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer transition-colors">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
            Import
          </label>
          <input type="file" id="import-file" class="hidden" accept=".json" data-action="change->messaging-framework#importFramework">
          
          <button data-action="click->messaging-framework#saveAll" 
                  class="inline-flex items-center px-4 py-2 bg-indigo-600 text-sm font-medium rounded-lg text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Save All Changes
          </button>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Tab Navigation -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 mb-8">
      <nav class="flex space-x-8 px-6" aria-label="Tabs">
        <button data-tab="overview" data-action="click->messaging-framework#switchTab" 
                class="tab-button active py-4 px-1 border-b-2 border-indigo-500 font-medium text-sm text-indigo-600 whitespace-nowrap">
          Overview
        </button>
        <button data-tab="key-messages" data-action="click->messaging-framework#switchTab"
                class="tab-button py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
          Key Messages
        </button>
        <button data-tab="value-propositions" data-action="click->messaging-framework#switchTab"
                class="tab-button py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
          Value Propositions
        </button>
        <button data-tab="terminology" data-action="click->messaging-framework#switchTab"
                class="tab-button py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
          Terminology
        </button>
        <button data-tab="approved-phrases" data-action="click->messaging-framework#switchTab"
                class="tab-button py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
          Approved Phrases
        </button>
        <button data-tab="banned-words" data-action="click->messaging-framework#switchTab"
                class="tab-button py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
          Banned Words
        </button>
        <button data-tab="tone" data-action="click->messaging-framework#switchTab"
                class="tab-button py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
          Tone & Voice
        </button>
        <button data-tab="compliance" data-action="click->messaging-framework#switchTab"
                class="tab-button py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
          Compliance Preview
        </button>
      </nav>
    </div>

    <!-- Tab Content -->
    <div class="tab-content">
      <!-- Overview Tab -->
      <div data-tab-content="overview" class="tab-pane active">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Tagline & Mission -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Brand Foundation</h3>
            
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Tagline</label>
                <input type="text" 
                       data-field="tagline"
                       value="<%= @messaging_framework.tagline %>"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-colors"
                       placeholder="Enter your brand tagline...">
                <button data-action="click->messaging-framework#getAISuggestions" 
                        data-content-type="tagline"
                        class="mt-2 text-sm text-indigo-600 hover:text-indigo-700 font-medium">
                  Get AI Suggestions
                </button>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Mission Statement</label>
                <textarea data-field="mission_statement"
                          rows="3"
                          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-colors resize-none"
                          placeholder="Enter your mission statement..."><%= @messaging_framework.mission_statement %></textarea>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Vision Statement</label>
                <textarea data-field="vision_statement"
                          rows="3"
                          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-colors resize-none"
                          placeholder="Enter your vision statement..."><%= @messaging_framework.vision_statement %></textarea>
              </div>
            </div>
          </div>

          <!-- Quick Stats -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Framework Statistics</h3>
            
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-gray-50 rounded-lg p-4">
                <div class="text-2xl font-bold text-indigo-600" data-stat="key-messages-count">
                  <%= (@messaging_framework.key_messages || {}).values.flatten.count %>
                </div>
                <div class="text-sm text-gray-600 mt-1">Key Messages</div>
              </div>
              
              <div class="bg-gray-50 rounded-lg p-4">
                <div class="text-2xl font-bold text-indigo-600" data-stat="value-props-count">
                  <%= (@messaging_framework.value_propositions || {}).values.flatten.count %>
                </div>
                <div class="text-sm text-gray-600 mt-1">Value Propositions</div>
              </div>
              
              <div class="bg-gray-50 rounded-lg p-4">
                <div class="text-2xl font-bold text-indigo-600" data-stat="approved-phrases-count">
                  <%= (@messaging_framework.approved_phrases || []).count %>
                </div>
                <div class="text-sm text-gray-600 mt-1">Approved Phrases</div>
              </div>
              
              <div class="bg-gray-50 rounded-lg p-4">
                <div class="text-2xl font-bold text-indigo-600" data-stat="banned-words-count">
                  <%= (@messaging_framework.banned_words || []).count %>
                </div>
                <div class="text-sm text-gray-600 mt-1">Banned Words</div>
              </div>
            </div>
            
            <div class="mt-6 pt-6 border-t border-gray-200">
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-700">Framework Status</span>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= @messaging_framework.active ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= @messaging_framework.active ? 'Active' : 'Inactive' %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Key Messages Tab -->
      <div data-tab-content="key-messages" class="tab-pane hidden">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-semibold text-gray-900">Key Messages</h3>
            <button data-action="click->messaging-framework#addKeyMessageCategory"
                    class="inline-flex items-center px-3 py-1.5 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
              <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Add Category
            </button>
          </div>

          <div data-key-messages-container class="space-y-6">
            <% (@messaging_framework.key_messages || {}).each do |category, messages| %>
              <div class="key-message-category" data-category="<%= category %>">
                <div class="flex items-center justify-between mb-3">
                  <h4 class="text-sm font-semibold text-gray-700 uppercase tracking-wider"><%= category %></h4>
                  <button data-action="click->messaging-framework#removeKeyMessageCategory"
                          data-category="<%= category %>"
                          class="text-gray-400 hover:text-red-600 transition-colors">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                  </button>
                </div>
                
                <div class="sortable-messages space-y-2" data-category="<%= category %>">
                  <% messages.each_with_index do |message, index| %>
                    <div class="message-item bg-gray-50 rounded-lg p-4 flex items-start space-x-3 cursor-move group" data-index="<%= index %>">
                      <svg class="h-5 w-5 text-gray-400 mt-0.5 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                      </svg>
                      <div class="flex-1">
                        <p class="text-gray-800"><%= message %></p>
                      </div>
                      <button data-action="click->messaging-framework#removeKeyMessage"
                              data-category="<%= category %>"
                              data-index="<%= index %>"
                              class="text-gray-400 hover:text-red-600 opacity-0 group-hover:opacity-100 transition-all">
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                      </button>
                    </div>
                  <% end %>
                </div>
                
                <div class="mt-3">
                  <div class="flex space-x-2">
                    <input type="text" 
                           data-new-message-input="<%= category %>"
                           class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                           placeholder="Add a new message...">
                    <button data-action="click->messaging-framework#addKeyMessage"
                            data-category="<%= category %>"
                            class="px-3 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors">
                      Add
                    </button>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <% if (@messaging_framework.key_messages || {}).empty? %>
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No key messages</h3>
              <p class="mt-1 text-sm text-gray-500">Get started by adding a category.</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Value Propositions Tab -->
      <div data-tab-content="value-propositions" class="tab-pane hidden">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-semibold text-gray-900">Value Propositions</h3>
            <button data-action="click->messaging-framework#getAISuggestions"
                    data-content-type="value_propositions"
                    class="inline-flex items-center px-3 py-1.5 border border-indigo-600 text-sm font-medium rounded-lg text-indigo-600 hover:bg-indigo-50 transition-colors">
              <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
              Get AI Suggestions
            </button>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Primary Value Propositions -->
            <div>
              <h4 class="text-sm font-semibold text-gray-700 uppercase tracking-wider mb-3">Primary</h4>
              <div class="sortable-value-props space-y-2" data-type="primary">
                <% ((@messaging_framework.value_propositions || {})['primary'] || []).each_with_index do |prop, index| %>
                  <div class="value-prop-item bg-indigo-50 border border-indigo-200 rounded-lg p-4 flex items-start space-x-3 cursor-move group" data-index="<%= index %>">
                    <svg class="h-5 w-5 text-indigo-400 mt-0.5 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                    <div class="flex-1">
                      <p class="text-gray-800"><%= prop %></p>
                    </div>
                    <button data-action="click->messaging-framework#removeValueProposition"
                            data-type="primary"
                            data-index="<%= index %>"
                            class="text-indigo-400 hover:text-red-600 opacity-0 group-hover:opacity-100 transition-all">
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    </button>
                  </div>
                <% end %>
              </div>
              
              <div class="mt-3">
                <div class="flex space-x-2">
                  <input type="text" 
                         data-new-value-prop-input="primary"
                         class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                         placeholder="Add primary value proposition...">
                  <button data-action="click->messaging-framework#addValueProposition"
                          data-type="primary"
                          class="px-3 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors">
                    Add
                  </button>
                </div>
              </div>
            </div>

            <!-- Supporting Value Propositions -->
            <div>
              <h4 class="text-sm font-semibold text-gray-700 uppercase tracking-wider mb-3">Supporting</h4>
              <div class="sortable-value-props space-y-2" data-type="supporting">
                <% ((@messaging_framework.value_propositions || {})['supporting'] || []).each_with_index do |prop, index| %>
                  <div class="value-prop-item bg-gray-50 rounded-lg p-4 flex items-start space-x-3 cursor-move group" data-index="<%= index %>">
                    <svg class="h-5 w-5 text-gray-400 mt-0.5 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                    <div class="flex-1">
                      <p class="text-gray-800"><%= prop %></p>
                    </div>
                    <button data-action="click->messaging-framework#removeValueProposition"
                            data-type="supporting"
                            data-index="<%= index %>"
                            class="text-gray-400 hover:text-red-600 opacity-0 group-hover:opacity-100 transition-all">
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    </button>
                  </div>
                <% end %>
              </div>
              
              <div class="mt-3">
                <div class="flex space-x-2">
                  <input type="text" 
                         data-new-value-prop-input="supporting"
                         class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                         placeholder="Add supporting value proposition...">
                  <button data-action="click->messaging-framework#addValueProposition"
                          data-type="supporting"
                          class="px-3 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors">
                    Add
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Terminology Tab -->
      <div data-tab-content="terminology" class="tab-pane hidden">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-semibold text-gray-900">Brand Terminology</h3>
            <button data-action="click->messaging-framework#addTerminology"
                    class="inline-flex items-center px-3 py-1.5 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
              <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Add Term
            </button>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4" data-terminology-container>
            <% (@messaging_framework.terminology || {}).each do |term, definition| %>
              <div class="terminology-item bg-gray-50 rounded-lg p-4 group relative">
                <button data-action="click->messaging-framework#removeTerminology"
                        data-term="<%= term %>"
                        class="absolute top-2 right-2 text-gray-400 hover:text-red-600 opacity-0 group-hover:opacity-100 transition-all">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                </button>
                
                <h5 class="font-semibold text-gray-900 mb-2"><%= term %></h5>
                <p class="text-sm text-gray-600"><%= definition %></p>
              </div>
            <% end %>
          </div>

          <% if (@messaging_framework.terminology || {}).empty? %>
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No terminology defined</h3>
              <p class="mt-1 text-sm text-gray-500">Add important brand terms and their definitions.</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Approved Phrases Tab -->
      <div data-tab-content="approved-phrases" class="tab-pane hidden">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-6">
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Approved Phrases</h3>
              <p class="text-sm text-gray-600 mt-1">Pre-approved phrases that align with brand voice</p>
            </div>
            <div class="relative">
              <input type="text" 
                     data-action="input->messaging-framework#searchApprovedPhrases"
                     class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                     placeholder="Search phrases...">
              <svg class="absolute left-3 top-2.5 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
          </div>

          <div class="mb-4">
            <div class="flex space-x-2">
              <input type="text" 
                     data-approved-phrases-input
                     class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                     placeholder="Enter phrases separated by commas...">
              <button data-action="click->messaging-framework#addApprovedPhrases"
                      class="px-4 py-2 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors">
                Add Phrases
              </button>
            </div>
          </div>

          <div class="flex flex-wrap gap-2" data-approved-phrases-container>
            <% (@messaging_framework.approved_phrases || []).each do |phrase| %>
