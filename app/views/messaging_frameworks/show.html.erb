                    <span class="text-sm font-medium text-gray-700">Authoritative</span>
                    <label class="relative inline-flex items-center cursor-pointer">
                      <input type="checkbox" 
                             data-tone-attribute="authoritative"
                             <%= 'checked' if @messaging_framework.tone_attributes&.dig('authoritative') == true %>
                             class="sr-only peer">
                      <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                    </label>
                  </label>
                </div>
                
                <div>
                  <label class="flex items-center justify-between">
                    <span class="text-sm font-medium text-gray-700">Empathetic</span>
                    <label class="relative inline-flex items-center cursor-pointer">
                      <input type="checkbox" 
                             data-tone-attribute="empathetic"
                             <%= 'checked' if @messaging_framework.tone_attributes&.dig('empathetic') == true %>
                             class="sr-only peer">
                      <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                    </label>
                  </label>
                </div>
                
                <div>
                  <label class="flex items-center justify-between">
                    <span class="text-sm font-medium text-gray-700">Inspirational</span>
                    <label class="relative inline-flex items-center cursor-pointer">
                      <input type="checkbox" 
                             data-tone-attribute="inspirational"
                             <%= 'checked' if @messaging_framework.tone_attributes&.dig('inspirational') == true %>
                             class="sr-only peer">
                      <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                    </label>
                  </label>
                </div>
                
                <div>
                  <label class="flex items-center justify-between">
                    <span class="text-sm font-medium text-gray-700">Educational</span>
                    <label class="relative inline-flex items-center cursor-pointer">
                      <input type="checkbox" 
                             data-tone-attribute="educational"
                             <%= 'checked' if @messaging_framework.tone_attributes&.dig('educational') == true %>
                             class="sr-only peer">
                      <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                    </label>
                  </label>
                </div>
                
                <div>
                  <label class="flex items-center justify-between">
                    <span class="text-sm font-medium text-gray-700">Humorous</span>
                    <label class="relative inline-flex items-center cursor-pointer">
                      <input type="checkbox" 
                             data-tone-attribute="humorous"
                             <%= 'checked' if @messaging_framework.tone_attributes&.dig('humorous') == true %>
                             class="sr-only peer">
                      <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                    </label>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <!-- Energy Level -->
          <div class="mt-8 pt-8 border-t border-gray-200">
            <h4 class="text-sm font-semibold text-gray-700 mb-4">Energy Level</h4>
            <div class="space-y-2">
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Low Energy</span>
                <span class="text-gray-600">High Energy</span>
              </div>
              <input type="range" 
                     min="1" 
                     max="10" 
                     value="<%= @messaging_framework.tone_attributes&.dig('energy_level') || 5 %>"
                     data-tone-attribute="energy_level"
                     class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-indigo-600">
              <div class="text-center">
                <span class="text-2xl font-bold text-indigo-600" data-energy-level-display><%= @messaging_framework.tone_attributes&.dig('energy_level') || 5 %></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Compliance Preview Tab -->
      <div data-tab-content="compliance" class="tab-pane hidden">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Test Content Input -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Test Content</h3>
            
            <textarea data-compliance-test-input
                      rows="10"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent resize-none"
                      placeholder="Enter content to test for compliance..."></textarea>
            
            <button data-action="click->messaging-framework#validateContent"
                    class="mt-4 w-full px-4 py-2 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors">
              Validate Content
            </button>
          </div>

          <!-- Validation Results -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Validation Results</h3>
            
            <div data-validation-results class="space-y-4">
              <div class="text-center py-12 text-gray-500">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
