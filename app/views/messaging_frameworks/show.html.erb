                </label>
                
                <label class="flex items-center p-3 rounded-lg border border-gray-200 cursor-pointer hover:bg-gray-50 transition-colors">
                  <input type="radio" 
                         name="formality" 
                         value="neutral"
                         data-tone-attribute="formality"
                         <%= 'checked' if @messaging_framework.tone_attributes&.dig('formality') == 'neutral' %>
                         class="h-4 w-4 text-indigo-600 focus:ring-indigo-500">
                  <div class="ml-3">
                    <span class="block text-sm font-medium text-gray-900">Neutral</span>
                    <span class="block text-xs text-gray-500">Balanced, adaptable</span>
                  </div>
                </label>
                
                <label class="flex items-center p-3 rounded-lg border border-gray-200 cursor-pointer hover:bg-gray-50 transition-colors">
                  <input type="radio" 
                         name="formality" 
                         value="casual"
                         data-tone-attribute="formality"
                         <%= 'checked' if @messaging_framework.tone_attributes&.dig('formality') == 'casual' %>
                         class="h-4 w-4 text-indigo-600 focus:ring-indigo-500">
                  <div class="ml-3">
                    <span class="block text-sm font-medium text-gray-900">Casual</span>
                    <span class="block text-xs text-gray-500">Conversational, approachable</span>
                  </div>
                </label>
                
                <label class="flex items-center p-3 rounded-lg border border-gray-200 cursor-pointer hover:bg-gray-50 transition-colors">
                  <input type="radio" 
                         name="formality" 
                         value="very_casual"
                         data-tone-attribute="formality"
                         <%= 'checked' if @messaging_framework.tone_attributes&.dig('formality') == 'very_casual' %>
                         class="h-4 w-4 text-indigo-600 focus:ring-indigo-500">
                  <div class="ml-3">
                    <span class="block text-sm font-medium text-gray-900">Very Casual</span>
                    <span class="block text-xs text-gray-500">Friendly, playful, relaxed</span>
                  </div>
                </label>
              </div>
            </div>

            <!-- Voice Characteristics -->
            <div>
              <h4 class="text-sm font-semibold text-gray-700 mb-4">Voice Characteristics</h4>
              <div class="space-y-4">
