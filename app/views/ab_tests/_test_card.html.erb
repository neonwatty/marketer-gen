<%# A/B Test Card Component %>
<div class="bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-lg transition-all duration-200 overflow-hidden">
  <!-- Card Header -->
  <div class="px-6 py-4 border-b border-gray-100">
    <div class="flex items-center justify-between">
      <div class="flex-1 min-w-0">
        <div class="flex items-center space-x-3">
          <h3 class="text-lg font-semibold text-gray-900 truncate">
            <%= link_to test.name, ab_test_path(test), class: "hover:text-blue-600 transition-colors duration-200" %>
          </h3>
          
          <!-- Status Badge -->
          <% case test.status %>
          <% when 'running' %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-green-400" fill="currentColor" viewBox="0 0 8 8">
                <circle cx="4" cy="4" r="3" />
              </svg>
              Running
            </span>
          <% when 'paused' %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-yellow-400" fill="currentColor" viewBox="0 0 8 8">
                <circle cx="4" cy="4" r="3" />
              </svg>
              Paused
            </span>
          <% when 'completed' %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-blue-400" fill="currentColor" viewBox="0 0 8 8">
                <circle cx="4" cy="4" r="3" />
              </svg>
              Completed
            </span>
          <% when 'draft' %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-gray-400" fill="currentColor" viewBox="0 0 8 8">
                <circle cx="4" cy="4" r="3" />
              </svg>
              Draft
            </span>
          <% end %>
          
          <!-- Winner Badge -->
          <% if test.winner_declared? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
              <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-amber-400" fill="currentColor" viewBox="0 0 8 8">
                <circle cx="4" cy="4" r="3" />
              </svg>
              Winner: <%= test.winner_variant.name %>
            </span>
          <% end %>
        </div>
        
        <div class="flex items-center mt-2 text-sm text-gray-500 space-x-4">
          <span class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-6m-8 0H3m2-13h2.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H15M9 7v10a1 1 0 001 1h4a1 1 0 001-1V7a1 1 0 00-1-1H10a1 1 0 00-1 1z"></path>
            </svg>
            <%= test.test_type.humanize %>
          </span>
          
          <span class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <% if test.start_date %>
              Started <%= test.start_date.strftime("%b %d") %>
            <% else %>
              Not started
            <% end %>
          </span>
          
          <span class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <%= pluralize(test.duration_days.to_i, 'day') %>
          </span>
        </div>
      </div>
      
      <!-- Actions Dropdown -->
      <div class="flex-shrink-0 ml-4" data-controller="dropdown">
        <button type="button" 
                data-action="click->dropdown#toggle"
                class="inline-flex items-center p-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
          </svg>
        </button>
        
        <div data-dropdown-target="menu" 
             class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-2 z-10 hidden">
          <%= link_to ab_test_path(test), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" do %>
            <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            View Details
          <% end %>
          
          <%= link_to results_ab_test_path(test), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" do %>
            <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            View Results
          <% end %>
          
          <% if test.draft? %>
            <%= link_to start_ab_test_path(test), method: :post, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" do %>
              <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h8m-6 4h8m-6 4h8M7 7h.01M7 3h5.99"></path>
              </svg>
              Start Test
            <% end %>
          <% elsif test.running? %>
            <%= link_to pause_ab_test_path(test), method: :post, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" do %>
              <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Pause Test
            <% end %>
          <% elsif test.paused? %>
            <%= link_to resume_ab_test_path(test), method: :post, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" do %>
              <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h8m-6 4h8m-6 4h8M7 7h.01M7 3h5.99"></path>
              </svg>
              Resume Test
            <% end %>
          <% end %>
          
          <% if test.running? && test.can_complete? %>
            <%= link_to complete_ab_test_path(test), method: :post, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" do %>
              <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
              </svg>
              Complete Test
            <% end %>
          <% end %>
          
          <div class="border-t border-gray-100 my-2"></div>
          
          <%= link_to edit_ab_test_path(test), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" do %>
            <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Test
          <% end %>
          
          <%= link_to ab_test_path(test), method: :delete, 
                      data: { confirm: 'Are you sure? This action cannot be undone.' },
                      class: "block px-4 py-2 text-sm text-red-700 hover:bg-red-50" do %>
            <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete Test
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Card Body -->
  <div class="px-6 py-4">
    <!-- Progress Bar (for running tests) -->
    <% if test.running? || test.paused? %>
      <div class="mb-4">
        <div class="flex justify-between text-sm text-gray-600 mb-2">
          <span>Progress</span>
          <span><%= test.progress_percentage %>% complete</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div class="bg-blue-600 h-2 rounded-full transition-all duration-300" 
               style="width: <%= test.progress_percentage %>%"></div>
        </div>
      </div>
    <% end %>

    <!-- Key Metrics -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
      <div class="text-center p-3 bg-gray-50 rounded-lg">
        <div class="text-sm font-medium text-gray-500">Visitors</div>
        <div class="text-lg font-bold text-gray-900">
          <%= number_with_delimiter(test.ab_test_variants.sum(:total_visitors)) %>
        </div>
      </div>
      
      <div class="text-center p-3 bg-gray-50 rounded-lg">
        <div class="text-sm font-medium text-gray-500">Conversions</div>
        <div class="text-lg font-bold text-gray-900">
          <%= number_with_delimiter(test.ab_test_variants.sum(:conversions)) %>
        </div>
      </div>
      
      <div class="text-center p-3 bg-gray-50 rounded-lg">
        <div class="text-sm font-medium text-gray-500">Conversion Rate</div>
        <div class="text-lg font-bold text-gray-900">
          <% avg_rate = test.ab_test_variants.average(:conversion_rate) %>
          <%= number_to_percentage(avg_rate || 0, precision: 1) %>
        </div>
      </div>
      
      <div class="text-center p-3 bg-gray-50 rounded-lg">
        <div class="text-sm font-medium text-gray-500">Confidence</div>
        <div class="text-lg font-bold <%= test.statistical_significance_reached? ? 'text-green-600' : 'text-gray-900' %>">
          <% if test.statistical_significance_reached? %>
            <%= test.confidence_level %>%
          <% else %>
            <span class="text-gray-500">--</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Variants Summary -->
    <div class="border-t border-gray-100 pt-4">
      <h4 class="text-sm font-medium text-gray-900 mb-3">Variants</h4>
      <div class="space-y-2">
        <% test.ab_test_variants.order(:id).each do |variant| %>
          <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <% if variant.is_control? %>
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800">
                    Control
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-purple-100 text-purple-800">
                    Treatment
                  </span>
                <% end %>
              </div>
              <div>
                <div class="text-sm font-medium text-gray-900"><%= variant.name %></div>
                <div class="text-xs text-gray-500">
                  <%= variant.traffic_percentage.to_i %>% traffic
                </div>
              </div>
            </div>
            
            <div class="flex items-center space-x-4 text-sm">
              <div class="text-right">
                <div class="font-medium text-gray-900">
                  <%= number_to_percentage(variant.conversion_rate, precision: 1) %>
                </div>
                <div class="text-xs text-gray-500">
                  <%= number_with_delimiter(variant.total_visitors) %> visitors
                </div>
              </div>
              
              <% unless variant.is_control? %>
                <div class="text-right">
                  <% lift = variant.lift_vs_control %>
                  <div class="font-medium <%= lift > 0 ? 'text-green-600' : lift < 0 ? 'text-red-600' : 'text-gray-900' %>">
                    <% if lift > 0 %>+<% end %><%= number_to_percentage(lift, precision: 1) %>
                  </div>
                  <div class="text-xs text-gray-500">lift</div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Statistical Significance Indicator -->
    <% if test.running? || test.completed? %>
      <div class="mt-4 p-3 rounded-lg <%= test.statistical_significance_reached? ? 'bg-green-50 border border-green-200' : 'bg-yellow-50 border border-yellow-200' %>">
        <div class="flex items-center">
          <% if test.statistical_significance_reached? %>
            <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm font-medium text-green-800">Statistical significance reached</span>
          <% else %>
            <svg class="w-5 h-5 text-yellow-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.864-.833-2.464 0L5.232 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            <span class="text-sm font-medium text-yellow-800">More data needed for statistical significance</span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Card Footer -->
  <div class="px-6 py-3 bg-gray-50 border-t border-gray-100">
    <div class="flex items-center justify-between">
      <div class="text-sm text-gray-500">
        Campaign: 
        <%= link_to test.campaign.name, campaign_path(test.campaign), 
                    class: "text-blue-600 hover:text-blue-800 font-medium" %>
      </div>
      
      <div class="flex items-center space-x-2">
        <%= link_to ab_test_path(test), 
                    class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          View Details
          <svg class="ml-1 w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>