<%# A/B Test Variant Form Partial %>
<div class="border border-gray-200 rounded-lg p-4 mb-4" 
     data-ab-test-form-target="variantForm"
     data-variant-index="<%= variant.new_record? ? 'NEW_RECORD' : variant.id %>">
  
  <!-- Variant Header -->
  <div class="flex items-center justify-between mb-4">
    <div class="flex items-center space-x-3">
      <div class="flex-shrink-0">
        <% if variant.is_control? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Control
          </span>
        <% else %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Treatment
          </span>
        <% end %>
      </div>
      
      <h3 class="text-lg font-medium text-gray-900">
        <%= variant.is_control? ? 'Control Variant' : 'Treatment Variant' %>
      </h3>
    </div>
    
    <!-- Remove Variant Button (only for treatments and if more than 1 treatment) -->
    <% unless variant.is_control? %>
      <button type="button" 
              data-action="click->ab-test-form#removeVariant"
              data-variant-index="<%= variant.new_record? ? 'NEW_RECORD' : variant.id %>"
              class="inline-flex items-center p-2 text-red-600 hover:text-red-800 hover:bg-red-50 rounded-lg transition-colors duration-200">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      </button>
    <% end %>
    
    <!-- Hidden fields for existing records -->
    <% unless variant.new_record? %>
      <%= form.hidden_field :id %>
    <% end %>
    <%= form.hidden_field :is_control %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
    <!-- Variant Name -->
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" do %>
        Variant Name <span class="text-red-500">*</span>
      <% end %>
      <%= form.text_field :name, 
                          required: true,
                          placeholder: variant.is_control? ? "Control" : "Treatment A",
                          class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                          data: { action: "input->form-validation#validateField" } %>
    </div>

    <!-- Traffic Percentage -->
    <div>
      <%= form.label :traffic_percentage, class: "block text-sm font-medium text-gray-700 mb-2" do %>
        Traffic Allocation (%) <span class="text-red-500">*</span>
      <% end %>
      <div class="relative">
        <%= form.number_field :traffic_percentage, 
                              required: true,
                              min: 1,
                              max: 100,
                              step: 1,
                              placeholder: "50",
                              class: "w-full px-3 py-2 pr-8 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                              data: { 
                                action: "input->ab-test-form#updateTrafficAllocation input->form-validation#validateField",
                                ab_test_form_target: "trafficInput"
                              } %>
        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
          <span class="text-gray-500 text-sm">%</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Journey Selection -->
  <div class="mt-4">
    <%= form.label :journey_id, class: "block text-sm font-medium text-gray-700 mb-2" do %>
      Journey <span class="text-red-500">*</span>
    <% end %>
    <%= form.select :journey_id, 
                    options_from_collection_for_select(journeys, :id, :name, variant.journey_id),
                    { prompt: "Select a journey for this variant" },
                    { required: true,
                      class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                      data: { action: "change->form-validation#validateField" } } %>
    <p class="mt-1 text-sm text-gray-500">
      Choose the journey that visitors will experience for this variant
    </p>
  </div>

  <!-- Variant Description -->
  <div class="mt-4">
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :description, 
                       rows: 2,
                       placeholder: variant.is_control? ? "Describe the current/control experience..." : "Describe what changes in this treatment...",
                       class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <!-- Variant Type (Hidden field with default) -->
  <%= form.hidden_field :variant_type, value: variant.is_control? ? 'control' : 'treatment' %>

  <!-- Journey Preview (if journey selected) -->
  <div class="mt-4" data-ab-test-form-target="journeyPreview" style="display: none;">
    <div class="p-3 bg-gray-50 border border-gray-200 rounded-lg">
      <div class="flex items-center justify-between mb-2">
        <h4 class="text-sm font-medium text-gray-900">Journey Preview</h4>
        <button type="button" 
                data-action="click->ab-test-form#toggleJourneyPreview"
                class="text-sm text-blue-600 hover:text-blue-800">
          View Details
        </button>
      </div>
      
      <div class="space-y-2 text-sm text-gray-600" data-ab-test-form-target="journeyDetails">
        <!-- Journey details will be populated by Stimulus controller -->
      </div>
    </div>
  </div>

  <!-- Expected Performance (placeholder for future AI predictions) -->
  <div class="mt-4 p-3 bg-blue-50 border border-blue-200 rounded-lg">
    <div class="flex items-center">
      <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <div class="text-sm">
        <div class="font-medium text-blue-800">AI Performance Prediction</div>
        <div class="text-blue-700">Performance predictions will be available after journey selection</div>
      </div>
    </div>
  </div>
</div>