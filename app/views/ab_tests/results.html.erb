<% content_for :title, "#{@ab_test.name} - Test Results" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
  <!-- Header Section -->
  <div class="bg-white border-b border-gray-200 shadow-sm">
    <div class="px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div class="flex-1 min-w-0">
          <!-- Breadcrumb -->
          <nav class="flex mb-4" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
              <li class="inline-flex items-center">
                <%= link_to ab_tests_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" do %>
                  A/B Tests
                <% end %>
              </li>
              <li>
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <%= link_to @ab_test.name, ab_test_path(@ab_test), class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" %>
                </div>
              </li>
              <li>
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Results</span>
                </div>
              </li>
            </ol>
          </nav>

          <h1 class="text-heading-h2 text-gray-900 font-bold">Test Results</h1>
          <p class="mt-2 text-secondary"><%= @ab_test.name %></p>
        </div>
        
        <!-- Export Actions -->
        <div class="flex items-center space-x-3">
          <%= link_to results_ab_test_path(@ab_test, format: :csv),
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Export CSV
          <% end %>

          <%= link_to ab_test_path(@ab_test),
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Test
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Results Summary -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6 mb-8">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-lg font-semibold text-gray-900">Test Summary</h2>
        <div class="flex items-center space-x-4">
          <!-- Status Badge -->
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
            <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-blue-400" fill="currentColor" viewBox="0 0 8 8">
              <circle cx="4" cy="4" r="3" />
            </svg>
            <%= @ab_test.status.humanize %>
          </span>

          <!-- Winner Badge -->
          <% if @results_summary[:winner] %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-amber-100 text-amber-800">
              <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-amber-400" fill="currentColor" viewBox="0 0 8 8">
                <circle cx="4" cy="4" r="3" />
              </svg>
              Winner: <%= @results_summary[:winner] %>
            </span>
          <% end %>

          <!-- Statistical Significance -->
          <% if @results_summary[:statistical_significance] %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-green-400" fill="currentColor" viewBox="0 0 8 8">
                <circle cx="4" cy="4" r="3" />
              </svg>
              Statistically Significant
            </span>
          <% else %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
              <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-yellow-400" fill="currentColor" viewBox="0 0 8 8">
                <circle cx="4" cy="4" r="3" />
              </svg>
              Not Significant
            </span>
          <% end %>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <div class="text-sm font-medium text-gray-500">Duration</div>
          <div class="text-2xl font-bold text-gray-900">
            <%= pluralize(@results_summary[:duration_days].to_i, 'day') %>
          </div>
        </div>
        
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <div class="text-sm font-medium text-gray-500">Total Visitors</div>
          <div class="text-2xl font-bold text-gray-900">
            <%= number_with_delimiter(@results_summary[:total_visitors]) %>
          </div>
        </div>
        
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <div class="text-sm font-medium text-gray-500">Overall Conv. Rate</div>
          <div class="text-2xl font-bold text-gray-900">
            <%= number_to_percentage(@results_summary[:overall_conversion_rate], precision: 1) %>
          </div>
        </div>
        
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <div class="text-sm font-medium text-gray-500">Confidence Level</div>
          <div class="text-2xl font-bold text-gray-900">
            <%= @results_summary[:confidence_level] %>%
          </div>
        </div>
        
        <div class="text-center p-4 bg-gray-50 rounded-lg">
          <div class="text-sm font-medium text-gray-500">Variants</div>
          <div class="text-2xl font-bold text-gray-900">
            <%= @ab_test.ab_test_variants.count %>
          </div>
        </div>
      </div>
    </div>

    <!-- Variant Comparison -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm mb-8">
      <div class="px-6 py-4 border-b border-gray-100">
        <h2 class="text-lg font-semibold text-gray-900">Variant Comparison</h2>
        <p class="text-sm text-gray-500 mt-1">Side-by-side performance analysis of all variants</p>
      </div>

      <div class="p-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <!-- Control Variant -->
          <% if @results_summary[:control_performance] %>
            <div class="border-2 border-blue-200 rounded-xl p-6 bg-blue-50">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                  <h3 class="text-lg font-semibold text-gray-900">Control</h3>
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800">
                    Baseline
                  </span>
                </div>
                <div class="text-sm text-gray-500">
                  <%= @results_summary[:control_performance][:traffic_percentage].to_i %>% traffic
                </div>
              </div>

              <div class="grid grid-cols-2 gap-4 mb-4">
                <div class="text-center p-3 bg-white rounded-lg">
                  <div class="text-sm font-medium text-gray-500">Visitors</div>
                  <div class="text-xl font-bold text-gray-900">
                    <%= number_with_delimiter(@results_summary[:control_performance][:total_visitors]) %>
                  </div>
                </div>
                
                <div class="text-center p-3 bg-white rounded-lg">
                  <div class="text-sm font-medium text-gray-500">Conversions</div>
                  <div class="text-xl font-bold text-gray-900">
                    <%= number_with_delimiter(@results_summary[:control_performance][:conversions]) %>
                  </div>
                </div>
              </div>

              <div class="text-center p-4 bg-white rounded-lg">
                <div class="text-sm font-medium text-gray-500">Conversion Rate</div>
                <div class="text-3xl font-bold text-blue-600">
                  <%= number_to_percentage(@results_summary[:control_performance][:conversion_rate], precision: 2) %>
                </div>
                <div class="text-xs text-gray-500 mt-1">
                  Confidence: <%= @results_summary[:control_performance][:confidence_interval] %>%
                </div>
              </div>
            </div>
          <% end %>

          <!-- Treatment Variants -->
          <% @results_summary[:treatment_performances].each_with_index do |treatment, index| %>
            <% comparison = @variant_comparisons.find { |v| v[:variant_name] == treatment[:name] } %>
            <div class="border-2 <%= treatment[:name] == @results_summary[:winner] ? 'border-amber-200 bg-amber-50' : 'border-purple-200 bg-purple-50' %> rounded-xl p-6">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                  <h3 class="text-lg font-semibold text-gray-900"><%= treatment[:name] %></h3>
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-purple-100 text-purple-800">
                    Treatment
                  </span>
                  <% if treatment[:name] == @results_summary[:winner] %>
                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-amber-100 text-amber-800">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                      Winner
                    </span>
                  <% end %>
                </div>
                <div class="text-sm text-gray-500">
                  <%= treatment[:traffic_percentage].to_i %>% traffic
                </div>
              </div>

              <div class="grid grid-cols-2 gap-4 mb-4">
                <div class="text-center p-3 bg-white rounded-lg">
                  <div class="text-sm font-medium text-gray-500">Visitors</div>
                  <div class="text-xl font-bold text-gray-900">
                    <%= number_with_delimiter(treatment[:total_visitors]) %>
                  </div>
                </div>
                
                <div class="text-center p-3 bg-white rounded-lg">
                  <div class="text-sm font-medium text-gray-500">Conversions</div>
                  <div class="text-xl font-bold text-gray-900">
                    <%= number_with_delimiter(treatment[:conversions]) %>
                  </div>
                </div>
              </div>

              <div class="text-center p-4 bg-white rounded-lg mb-4">
                <div class="text-sm font-medium text-gray-500">Conversion Rate</div>
                <div class="text-3xl font-bold <%= treatment[:name] == @results_summary[:winner] ? 'text-amber-600' : 'text-purple-600' %>">
                  <%= number_to_percentage(treatment[:conversion_rate], precision: 2) %>
                </div>
                <div class="text-xs text-gray-500 mt-1">
                  Confidence: <%= treatment[:confidence_interval] %>%
                </div>
              </div>

              <!-- Statistical Comparison -->
              <% if comparison %>
                <div class="space-y-3">
                  <div class="flex justify-between items-center p-3 bg-white rounded-lg">
                    <span class="text-sm font-medium text-gray-500">Lift vs Control</span>
                    <span class="text-lg font-bold <%= comparison[:lift_percentage] > 0 ? 'text-green-600' : comparison[:lift_percentage] < 0 ? 'text-red-600' : 'text-gray-900' %>">
                      <% if comparison[:lift_percentage] > 0 %>+<% end %>
                      <%= number_to_percentage(comparison[:lift_percentage], precision: 1) %>
                    </span>
                  </div>
                  
                  <div class="flex justify-between items-center p-3 bg-white rounded-lg">
                    <span class="text-sm font-medium text-gray-500">Statistical Significance</span>
                    <span class="text-lg font-bold <%= comparison[:is_significant] ? 'text-green-600' : 'text-yellow-600' %>">
                      <%= number_to_percentage(comparison[:statistical_significance], precision: 1) %>
                    </span>
                  </div>
                  
                  <div class="p-3 bg-white rounded-lg">
                    <div class="text-sm font-medium text-gray-500 mb-2">Confidence Interval</div>
                    <div class="text-sm text-gray-700">
                      <%= comparison[:confidence_interval].first %>% - <%= comparison[:confidence_interval].last %>%
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2 mt-2">
                      <div class="bg-blue-600 h-2 rounded-full" style="width: <%= comparison[:statistical_significance] %>%"></div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Performance Timeline -->
    <% if @performance_timeline.any? %>
      <div class="bg-white rounded-xl border border-gray-200 shadow-sm mb-8">
        <div class="px-6 py-4 border-b border-gray-100">
          <h2 class="text-lg font-semibold text-gray-900">Performance Timeline</h2>
          <p class="text-sm text-gray-500 mt-1">Historical performance data over time</p>
        </div>

        <div class="p-6">
          <div class="h-64 bg-gray-50 rounded-lg flex items-center justify-center">
            <div class="text-center">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 48 48">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">Performance Chart</h3>
              <p class="mt-1 text-sm text-gray-500">Chart visualization would be implemented with Chart.js or similar</p>
            </div>
          </div>
          
          <!-- Timeline Data Table -->
          <div class="mt-6">
            <h3 class="text-sm font-medium text-gray-900 mb-3">Recent Data Points</h3>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Control Rate</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Treatment Rate</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lift</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @performance_timeline.last(10).each do |data_point| %>
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= data_point.recorded_at.strftime("%m/%d %H:%M") %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= number_to_percentage(data_point.control_conversion_rate || 0, precision: 1) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= number_to_percentage(data_point.treatment_conversion_rate || 0, precision: 1) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <% lift = ((data_point.treatment_conversion_rate || 0) - (data_point.control_conversion_rate || 0)) %>
                        <span class="<%= lift > 0 ? 'text-green-600' : lift < 0 ? 'text-red-600' : 'text-gray-900' %>">
                          <% if lift > 0 %>+<% end %><%= number_to_percentage(lift, precision: 1) %>
                        </span>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Statistical Analysis Deep Dive -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm">
      <div class="px-6 py-4 border-b border-gray-100">
        <h2 class="text-lg font-semibold text-gray-900">Statistical Analysis</h2>
        <p class="text-sm text-gray-500 mt-1">Detailed statistical breakdown and interpretation</p>
      </div>

      <div class="p-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <!-- Analysis Summary -->
          <div>
            <h3 class="text-sm font-medium text-gray-900 mb-4">Analysis Summary</h3>
            
            <% if @statistical_analysis.present? %>
              <div class="space-y-4">
                <div class="p-4 rounded-lg <%= @statistical_analysis[:is_significant] ? 'bg-green-50 border border-green-200' : 'bg-yellow-50 border border-yellow-200' %>">
                  <div class="flex items-center mb-2">
                    <% if @statistical_analysis[:is_significant] %>
                      <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <span class="text-sm font-medium text-green-800">Statistically Significant Result</span>
                    <% else %>
                      <svg class="w-5 h-5 text-yellow-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.864-.833-2.464 0L5.232 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                      </svg>
                      <span class="text-sm font-medium text-yellow-800">Not Statistically Significant</span>
                    <% end %>
                  </div>
                  <div class="text-xs <%= @statistical_analysis[:is_significant] ? 'text-green-600' : 'text-yellow-600' %>">
                    p-value: <%= @statistical_analysis[:p_value] %> | 
                    Confidence: <%= number_to_percentage(@statistical_analysis[:confidence_interval], precision: 1) %>
                  </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                  <div class="p-3 bg-gray-50 rounded-lg">
                    <div class="text-sm font-medium text-gray-500">p-value</div>
                    <div class="text-lg font-bold text-gray-900">
                      <%= @statistical_analysis[:p_value] %>
                    </div>
                  </div>
                  
                  <div class="p-3 bg-gray-50 rounded-lg">
                    <div class="text-sm font-medium text-gray-500">Confidence</div>
                    <div class="text-lg font-bold text-gray-900">
                      <%= number_to_percentage(@statistical_analysis[:confidence_interval], precision: 1) %>
                    </div>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 48 48">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">Insufficient Data</h3>
                <p class="mt-1 text-sm text-gray-500">More visitors needed for statistical analysis</p>
              </div>
            <% end %>
          </div>

          <!-- Recommendations -->
          <div>
            <h3 class="text-sm font-medium text-gray-900 mb-4">Recommendations</h3>
            
            <div class="space-y-3">
              <% action_recommendation = @ab_test.recommend_action %>
              <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-blue-500 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <div>
                    <div class="text-sm font-medium text-blue-800">Recommended Action</div>
                    <div class="text-sm text-blue-700 mt-1">
                      <%= action_recommendation %>
                    </div>
                  </div>
                </div>
              </div>

              <% if @ab_test.winner_declared? %>
                <div class="p-4 bg-amber-50 border border-amber-200 rounded-lg">
                  <div class="flex items-start">
                    <svg class="w-5 h-5 text-amber-500 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                    </svg>
                    <div>
                      <div class="text-sm font-medium text-amber-800">Implementation Steps</div>
                      <div class="text-sm text-amber-700 mt-1">
                        1. Implement the winning variant (<%= @ab_test.winner_variant.name %>) across all traffic<br>
                        2. Monitor performance for any unexpected changes<br>
                        3. Document learnings for future tests
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>