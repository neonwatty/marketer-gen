<% content_for :title, "A/B Testing Dashboard" %>

<%= render 'accessibility_enhancements' %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100" 
     data-controller="ab-test-dashboard status-poller"
     data-ab-test-dashboard-refresh-interval-value="30000"
     role="main"
     id="main-content"
     aria-label="A/B Testing Dashboard">
  
  <!-- Header Section -->
  <div class="bg-white border-b border-gray-200 shadow-sm">
    <div class="px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-heading-h2 text-gray-900 font-bold">A/B Testing Dashboard</h1>
          <p class="mt-2 text-secondary">Monitor and analyze your A/B tests performance</p>
        </div>
        
        <div class="flex items-center space-x-4">
          <%= link_to new_ab_test_path, 
                      class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200 focus-outline",
                      "aria-label": "Create new A/B test",
                      "data-keyboard-shortcut": "Alt+N" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Create New Test
            <span class="sr-only">(Keyboard shortcut: Alt+N)</span>
          <% end %>
          
          <button type="button" 
                  data-action="click->ab-test-dashboard#refresh"
                  data-ab-test-dashboard-target="refreshButton"
                  class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200 focus-outline"
                  aria-label="Refresh dashboard data"
                  title="Refresh dashboard data (Alt+R)">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            Refresh
            <span class="sr-only">(Keyboard shortcut: Alt+R)</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Metrics Overview -->
  <div class="px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Tests -->
      <div class="bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-md transition-shadow duration-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Total Tests</p>
            <p class="text-2xl font-bold text-gray-900" data-ab-test-dashboard-target="totalTests">
              <%= @dashboard_metrics[:total_tests] %>
            </p>
          </div>
        </div>
      </div>

      <!-- Running Tests -->
      <div class="bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-md transition-shadow duration-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Running Tests</p>
            <p class="text-2xl font-bold text-gray-900" data-ab-test-dashboard-target="runningTests">
              <%= @dashboard_metrics[:running_tests] %>
            </p>
          </div>
        </div>
      </div>

      <!-- Tests with Winners -->
      <div class="bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-md transition-shadow duration-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Tests with Winners</p>
            <p class="text-2xl font-bold text-gray-900" data-ab-test-dashboard-target="testsWithWinners">
              <%= @dashboard_metrics[:tests_with_winners] %>
            </p>
          </div>
        </div>
      </div>

      <!-- Average Conversion Rate -->
      <div class="bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-md transition-shadow duration-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Avg Conversion Rate</p>
            <p class="text-2xl font-bold text-gray-900" data-ab-test-dashboard-target="averageConversionRate">
              <%= number_to_percentage(@dashboard_metrics[:average_conversion_rate], precision: 1) %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Navigation Tabs -->
    <div class="bg-white rounded-lg border border-gray-200 shadow-sm mb-8" data-controller="tabs">
      <div class="border-b border-gray-200">
        <nav class="-mb-px flex space-x-8 px-6" aria-label="Tabs">
          <button data-action="click->tabs#switch" 
                  data-tabs-target="tab" 
                  data-tab-name="active"
                  class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm focus:outline-none focus:text-blue-600 focus:border-blue-500 tab-active">
            Active Tests
            <span class="bg-gray-100 text-gray-900 ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium">
              <%= @active_tests.count %>
            </span>
          </button>
          
          <button data-action="click->tabs#switch" 
                  data-tabs-target="tab" 
                  data-tab-name="completed"
                  class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm focus:outline-none focus:text-blue-600 focus:border-blue-500">
            Completed Tests
            <span class="bg-gray-100 text-gray-900 ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium">
              <%= @completed_tests.count %>
            </span>
          </button>
          
          <button data-action="click->tabs#switch" 
                  data-tabs-target="tab" 
                  data-tab-name="drafts"
                  class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm focus:outline-none focus:text-blue-600 focus:border-blue-500">
            Draft Tests
            <span class="bg-gray-100 text-gray-900 ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium">
              <%= @draft_tests.count %>
            </span>
          </button>
        </nav>
      </div>

      <!-- Active Tests Tab -->
      <div data-tabs-target="content" 
           data-tab-name="active" 
           class="p-6 tab-content">
        <% if @active_tests.any? %>
          <div class="space-y-6">
            <% @active_tests.each do |test| %>
              <%= render 'test_card', test: test, status: 'active' %>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 48 48">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M34 20v-4a4 4 0 00-4-4H10a4 4 0 00-4 4v20a4 4 0 004 4h20a4 4 0 004-4v-4M10 20h28m-8-8l8 8-8 8"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No active tests</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by creating your first A/B test.</p>
            <div class="mt-6">
              <%= link_to new_ab_test_path, 
                          class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Create Test
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Completed Tests Tab -->
      <div data-tabs-target="content" 
           data-tab-name="completed" 
           class="p-6 tab-content hidden">
        <% if @completed_tests.any? %>
          <div class="space-y-6">
            <% @completed_tests.each do |test| %>
              <%= render 'test_card', test: test, status: 'completed' %>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 48 48">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No completed tests</h3>
            <p class="mt-1 text-sm text-gray-500">Completed tests will appear here once they finish running.</p>
          </div>
        <% end %>
      </div>

      <!-- Draft Tests Tab -->
      <div data-tabs-target="content" 
           data-tab-name="drafts" 
           class="p-6 tab-content hidden">
        <% if @draft_tests.any? %>
          <div class="space-y-6">
            <% @draft_tests.each do |test| %>
              <%= render 'test_card', test: test, status: 'draft' %>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 48 48">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No draft tests</h3>
            <p class="mt-1 text-sm text-gray-500">Draft tests are saved configurations that haven't been started yet.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>