<% content_for :title, "Edit A/B Test - #{@ab_test.name}" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
  <!-- Header Section -->
  <div class="bg-white border-b border-gray-200 shadow-sm">
    <div class="px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <!-- Breadcrumb -->
          <nav class="flex mb-4" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
              <li class="inline-flex items-center">
                <%= link_to ab_tests_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" do %>
                  A/B Tests
                <% end %>
              </li>
              <li>
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <%= link_to @ab_test.name, ab_test_path(@ab_test), class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" %>
                </div>
              </li>
              <li>
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Edit</span>
                </div>
              </li>
            </ol>
          </nav>

          <h1 class="text-heading-h2 text-gray-900 font-bold">Edit A/B Test</h1>
          <p class="mt-2 text-secondary">Modify test configuration and settings</p>
        </div>
        
        <div class="flex items-center space-x-3">
          <%= link_to ab_test_path(@ab_test), 
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Test
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Status Warning -->
  <% if @ab_test.running? %>
    <div class="px-4 sm:px-6 lg:px-8 py-4">
      <div class="rounded-md bg-yellow-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.864-.833-2.464 0L5.232 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Test is Currently Running</h3>
            <div class="mt-2 text-sm text-yellow-700">
              <p>Some settings cannot be modified while the test is active. Consider pausing the test if you need to make significant changes.</p>
            </div>
            <div class="mt-3">
              <%= link_to pause_ab_test_path(@ab_test), method: :post,
                          class: "text-sm font-medium text-yellow-800 hover:text-yellow-900 underline" do %>
                Pause Test to Enable Full Editing
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Main Content -->
  <div class="px-4 sm:px-6 lg:px-8 py-8">
    <%= form_with model: @ab_test, local: true, class: "space-y-8", 
                  data: { controller: "ab-test-form form-validation" } do |form| %>
      
      <!-- Form Errors -->
      <% if @ab_test.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.864-.833-2.464 0L5.232 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @ab_test.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Basic Information -->
      <div class="bg-white rounded-xl border border-gray-200 shadow-sm">
        <div class="px-6 py-4 border-b border-gray-100">
          <h2 class="text-lg font-semibold text-gray-900">Basic Information</h2>
          <p class="text-sm text-gray-500">Test name, type, and description</p>
        </div>

        <div class="p-6 space-y-6">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Test Name -->
            <div>
              <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                Test Name <span class="text-red-500">*</span>
              <% end %>
              <%= form.text_field :name, 
                                  required: true,
                                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'bg-gray-50' if @ab_test.running?}",
                                  readonly: @ab_test.running?,
                                  data: { action: "input->form-validation#validateField" } %>
              <% if @ab_test.running? %>
                <p class="mt-1 text-sm text-yellow-600">Cannot modify while test is running</p>
              <% end %>
            </div>

            <!-- Test Type -->
            <div>
              <%= form.label :test_type, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                Test Type <span class="text-red-500">*</span>
              <% end %>
              <%= form.select :test_type, 
                              options_for_select(AbTest::TEST_TYPES.map { |type| [type.humanize, type] }, @ab_test.test_type),
                              {},
                              { required: true,
                                class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'bg-gray-50' if @ab_test.running?}",
                                disabled: @ab_test.running?,
                                data: { action: "change->form-validation#validateField" } } %>
            </div>
          </div>

          <!-- Campaign (Read-only) -->
          <div class="p-4 bg-gray-50 border border-gray-200 rounded-lg">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-6m-8 0H3m2-13h2.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H15M9 7v10a1 1 0 001 1h4a1 1 0 001-1V7a1 1 0 00-1-1H10a1 1 0 00-1 1z"></path>
              </svg>
              <div>
                <div class="text-sm font-medium text-gray-800">Campaign</div>
                <div class="text-sm text-gray-600">
                  <%= link_to @ab_test.campaign.name, campaign_path(@ab_test.campaign), 
                              class: "text-blue-600 hover:text-blue-800" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Description -->
          <div>
            <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :description, 
                               rows: 3,
                               class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <!-- Hypothesis -->
          <div>
            <%= form.label :hypothesis, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              Hypothesis <span class="text-red-500">*</span>
            <% end %>
            <%= form.text_area :hypothesis, 
                               rows: 3,
                               required: true,
                               class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                               data: { action: "input->form-validation#validateField" } %>
          </div>
        </div>
      </div>

      <!-- Variants Configuration -->
      <div class="bg-white rounded-xl border border-gray-200 shadow-sm">
        <div class="px-6 py-4 border-b border-gray-100">
          <div class="flex items-center justify-between">
            <div>
              <h2 class="text-lg font-semibold text-gray-900">Variants Configuration</h2>
              <p class="text-sm text-gray-500">Manage test variants and traffic allocation</p>
            </div>
            
            <% unless @ab_test.running? %>
              <button type="button" 
                      data-action="click->ab-test-form#addVariant"
                      class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add Variant
              </button>
            <% end %>
          </div>
        </div>

        <div class="p-6" data-ab-test-form-target="variantsContainer">
          <%= form.fields_for :ab_test_variants do |variant_form| %>
            <div class="border border-gray-200 rounded-lg p-4 mb-4" 
                 data-ab-test-form-target="variantForm"
                 data-variant-index="<%= variant_form.object.id %>">
              
              <!-- Variant Header -->
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                  <div class="flex-shrink-0">
                    <% if variant_form.object.is_control? %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                        Control
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                        Treatment
                      </span>
                    <% end %>
                  </div>
                  
                  <h3 class="text-lg font-medium text-gray-900">
                    <%= variant_form.object.name %>
                  </h3>

                  <!-- Performance Badge (if test is running/completed) -->
                  <% if @ab_test.running? || @ab_test.completed? %>
                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-800">
                      <%= number_to_percentage(variant_form.object.conversion_rate, precision: 1) %> conv. rate
                    </span>
                  <% end %>
                </div>
                
                <!-- Remove Variant Button (disabled if running) -->
                <% unless variant_form.object.is_control? || @ab_test.running? %>
                  <button type="button" 
                          data-action="click->ab-test-form#removeVariant"
                          data-variant-index="<%= variant_form.object.id %>"
                          class="inline-flex items-center p-2 text-red-600 hover:text-red-800 hover:bg-red-50 rounded-lg transition-colors duration-200">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  </button>
                <% end %>
                
                <%= variant_form.hidden_field :id %>
                <%= variant_form.hidden_field :is_control %>
              </div>

              <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
                <!-- Variant Name -->
                <div>
                  <%= variant_form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                    Variant Name <span class="text-red-500">*</span>
                  <% end %>
                  <%= variant_form.text_field :name, 
                                              required: true,
                                              class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'bg-gray-50' if @ab_test.running?}",
                                              readonly: @ab_test.running? %>
                </div>

                <!-- Traffic Percentage -->
                <div>
                  <%= variant_form.label :traffic_percentage, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                    Traffic Allocation (%) <span class="text-red-500">*</span>
                  <% end %>
                  <div class="relative">
                    <%= variant_form.number_field :traffic_percentage, 
                                                  required: true,
                                                  min: 1,
                                                  max: 100,
                                                  step: 1,
                                                  class: "w-full px-3 py-2 pr-8 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'bg-gray-50' if @ab_test.running?}",
                                                  readonly: @ab_test.running?,
                                                  data: { 
                                                    action: "input->ab-test-form#updateTrafficAllocation",
                                                    ab_test_form_target: "trafficInput"
                                                  } %>
                    <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                      <span class="text-gray-500 text-sm">%</span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Journey Selection -->
              <div class="mt-4">
                <%= variant_form.label :journey_id, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                  Journey <span class="text-red-500">*</span>
                <% end %>
                <%= variant_form.select :journey_id, 
                                        options_from_collection_for_select(@journeys, :id, :name, variant_form.object.journey_id),
                                        { prompt: "Select a journey for this variant" },
                                        { required: true,
                                          class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'bg-gray-50' if @ab_test.running?}",
                                          disabled: @ab_test.running? } %>
              </div>

              <!-- Variant Description -->
              <div class="mt-4">
                <%= variant_form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= variant_form.text_area :description, 
                                           rows: 2,
                                           class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
              </div>

              <!-- Performance Stats (if test has data) -->
              <% if (@ab_test.running? || @ab_test.completed?) && variant_form.object.total_visitors > 0 %>
                <div class="mt-4 p-3 bg-gray-50 border border-gray-200 rounded-lg">
                  <h4 class="text-sm font-medium text-gray-900 mb-2">Current Performance</h4>
                  <div class="grid grid-cols-3 gap-4 text-sm">
                    <div>
                      <div class="text-gray-500">Visitors</div>
                      <div class="font-medium text-gray-900">
                        <%= number_with_delimiter(variant_form.object.total_visitors) %>
                      </div>
                    </div>
                    <div>
                      <div class="text-gray-500">Conversions</div>
                      <div class="font-medium text-gray-900">
                        <%= number_with_delimiter(variant_form.object.conversions) %>
                      </div>
                    </div>
                    <div>
                      <div class="text-gray-500">Conv. Rate</div>
                      <div class="font-medium text-gray-900">
                        <%= number_to_percentage(variant_form.object.conversion_rate, precision: 1) %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>

              <%= variant_form.hidden_field :variant_type %>
            </div>
          <% end %>
        </div>

        <!-- Traffic Allocation Summary -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
          <div class="flex items-center justify-between">
            <span class="text-sm font-medium text-gray-700">Total Traffic Allocation:</span>
            <span class="text-lg font-bold" data-ab-test-form-target="totalTraffic">
              <%= @ab_test.ab_test_variants.sum(:traffic_percentage) %>%
            </span>
          </div>
          <div class="mt-2 w-full bg-gray-200 rounded-full h-2">
            <div class="bg-blue-600 h-2 rounded-full transition-all duration-300" 
                 data-ab-test-form-target="trafficBar" 
                 style="width: <%= [@ab_test.ab_test_variants.sum(:traffic_percentage), 100].min %>%"></div>
          </div>
        </div>
      </div>

      <!-- Test Configuration -->
      <div class="bg-white rounded-xl border border-gray-200 shadow-sm">
        <div class="px-6 py-4 border-b border-gray-100">
          <h2 class="text-lg font-semibold text-gray-900">Test Configuration</h2>
          <p class="text-sm text-gray-500">Statistical settings and test duration</p>
        </div>

        <div class="p-6 space-y-6">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Confidence Level -->
            <div>
              <%= form.label :confidence_level, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                Confidence Level <span class="text-red-500">*</span>
              <% end %>
              <%= form.select :confidence_level,
                              options_for_select([[95, 95], [90, 90], [99, 99]], @ab_test.confidence_level),
                              {},
                              { required: true,
                                class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'bg-gray-50' if @ab_test.running?}",
                                disabled: @ab_test.running? } %>
            </div>

            <!-- Significance Threshold -->
            <div>
              <%= form.label :significance_threshold, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                Significance Threshold <span class="text-red-500">*</span>
              <% end %>
              <%= form.number_field :significance_threshold,
                                    min: 1,
                                    max: 20,
                                    step: 0.1,
                                    required: true,
                                    class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'bg-gray-50' if @ab_test.running?}",
                                    readonly: @ab_test.running? %>
            </div>

            <!-- Minimum Sample Size -->
            <div>
              <%= form.label :minimum_sample_size, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :minimum_sample_size,
                                    min: 100,
                                    step: 100,
                                    class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            </div>
          </div>

          <!-- Test Duration -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div>
              <%= form.label :start_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.datetime_local_field :start_date,
                                            class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'bg-gray-50' if @ab_test.running?}",
                                            readonly: @ab_test.running? %>
              <% if @ab_test.running? %>
                <p class="mt-1 text-sm text-yellow-600">Cannot modify start date while test is running</p>
              <% end %>
            </div>

            <div>
              <%= form.label :end_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.datetime_local_field :end_date,
                                            class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
              <p class="mt-1 text-sm text-gray-500">Can be modified while test is running</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="flex items-center justify-between space-x-4">
        <div class="flex items-center space-x-4">
          <%= link_to ab_test_path(@ab_test), 
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200" do %>
            Cancel
          <% end %>
        </div>

        <div class="flex items-center space-x-3">
          <%= form.submit "Save Changes", 
                          class: "inline-flex items-center px-6 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200",
                          data: { disable_with: "Saving..." } %>
        </div>
      </div>
    <% end %>
  </div>
</div>