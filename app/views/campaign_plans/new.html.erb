<% content_for :page_title, "New Campaign Plan" %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Create Campaign Plan</h1>
      <p class="mt-2 text-gray-600">Set up your campaign parameters to generate a comprehensive marketing plan</p>
    </div>

    <%= form_with model: @campaign_plan, local: true, class: "space-y-6",
        data: { 
          controller: "form-validation", 
          action: "submit->form-validation#submit",
          form_validation_server_validation_value: true,
          form_validation_debounce_value: 300
        } do |form| %>
      <% if @campaign_plan.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <h3 class="text-sm font-medium text-red-800 mb-2">Please fix the following errors:</h3>
          <ul class="text-sm text-red-700 list-disc list-inside">
            <% @campaign_plan.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h2>
        
        <div class="space-y-4">
          <%= render 'shared/smart_field',
              form: form,
              field_name: :name,
              field_type: :text_field,
              label: "Campaign Name",
              required: true,
              suggestions_endpoint: "/api/v1/suggestions/campaign_plans",
              placeholder: "e.g., Q1 Product Launch Campaign",
              help_text: "Choose a descriptive name that identifies the campaign's purpose and timeframe",
              css_classes: "pr-16" %>

          <%= render 'shared/smart_field',
              form: form,
              field_name: :description,
              field_type: :text_area,
              label: "Description",
              suggestions_endpoint: "/api/v1/suggestions/campaign_plans",
              placeholder: "Brief description of the campaign goals and context...",
              help_text: "Describe what you want to achieve with this campaign" %>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= form.label :campaign_type, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :campaign_type, 
                  options_for_select([["Select campaign type", ""]] + @campaign_types.map { |type| [type.humanize, type] }),
                  {},
                  class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
            </div>

            <div>
              <%= form.label :objective, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :objective,
                  options_for_select([["Select objective", ""]] + @objectives.map { |obj| [obj.humanize, obj] }),
                  {},
                  class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Target Audience & Context</h2>
        
        <div class="space-y-4">
          <%= render 'shared/smart_field',
              form: form,
              field_name: :target_audience,
              field_type: :text_area,
              label: "Target Audience",
              suggestions_endpoint: "/api/v1/suggestions/campaign_plans",
              placeholder: "Describe your target audience: demographics, interests, pain points...",
              help_text: "Define who you want to reach with this campaign" %>

          <div>
            <%= form.label :brand_context, "Brand Context (Optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_area :brand_context, rows: 3,
                class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "Additional brand guidelines or specific messaging requirements..." %>
            <p class="text-xs text-gray-500 mt-1">Leave blank to use your active brand identity settings</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Constraints (Optional)</h2>
        
        <div class="space-y-4">
          <%= render 'shared/smart_field',
              form: form,
              field_name: :budget_constraints,
              field_type: :text_area,
              label: "Budget Constraints",
              suggestions_endpoint: "/api/v1/suggestions/campaign_plans",
              placeholder: "Budget limitations, preferred channels, cost considerations...",
              help_text: "Specify your budget range and any spending preferences" %>

          <%= render 'shared/smart_field',
              form: form,
              field_name: :timeline_constraints,
              field_type: :text_area,
              label: "Timeline Constraints",
              suggestions_endpoint: "/api/v1/suggestions/campaign_plans",
              placeholder: "Timeline requirements, key dates, campaign duration...",
              help_text: "Define when the campaign should launch and run" %>
        </div>
      </div>

      <div class="flex justify-end gap-4">
        <%= link_to "Cancel", campaign_plans_path, 
            class: "bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-2 px-4 rounded-md transition duration-200" %>
        <%= form.submit "Create Campaign Plan", 
            class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>