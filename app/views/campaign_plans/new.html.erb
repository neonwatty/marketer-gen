<% content_for(:title) { "New Campaign Plan - #{@campaign.name}" } %>

<div class="campaign-plan-creator" data-controller="campaign-plan-form template-selector">
  <!-- Header -->
  <div class="bg-white border-b border-gray-200 mb-8">
    <div class="px-6 py-4">
      <div class="flex items-center gap-3 mb-2">
        <%= link_to campaign_campaign_plans_path(@campaign), 
            class: "text-gray-500 hover:text-gray-700 transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>
        <h1 class="text-heading-h2 font-bold text-gray-900 m-0">Create New Campaign Plan</h1>
      </div>
      <p class="text-base text-gray-600">Campaign: <span class="font-medium"><%= @campaign.name %></span></p>
    </div>
  </div>

  <!-- Plan Creation Steps -->
  <div class="px-6">
    <!-- Step Indicator -->
    <div class="mb-8">
      <nav aria-label="Progress">
        <ol role="list" class="flex items-center">
          <li class="relative pr-8 sm:pr-20">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
              <div class="h-0.5 w-full bg-blue-600"></div>
            </div>
            <a href="#" class="relative w-8 h-8 flex items-center justify-center bg-blue-600 rounded-full hover:bg-blue-900" aria-current="step">
              <span class="text-white font-medium text-sm">1</span>
            </a>
            <span class="absolute top-10 left-1/2 transform -translate-x-1/2 text-xs font-medium text-blue-600">Template</span>
          </li>

          <li class="relative pr-8 sm:pr-20">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
              <div class="h-0.5 w-full bg-gray-200"></div>
            </div>
            <a href="#" class="relative w-8 h-8 flex items-center justify-center bg-white border-2 border-gray-300 rounded-full hover:border-gray-400">
              <span class="text-gray-500 font-medium text-sm">2</span>
            </a>
            <span class="absolute top-10 left-1/2 transform -translate-x-1/2 text-xs font-medium text-gray-500">Details</span>
          </li>

          <li class="relative">
            <a href="#" class="relative w-8 h-8 flex items-center justify-center bg-white border-2 border-gray-300 rounded-full hover:border-gray-400">
              <span class="text-gray-500 font-medium text-sm">3</span>
            </a>
            <span class="absolute top-10 left-1/2 transform -translate-x-1/2 text-xs font-medium text-gray-500">Review</span>
          </li>
        </ol>
      </nav>
    </div>

    <!-- Template Selection Section -->
    <div class="mb-8" data-template-selector-target="templateSection">
      <div class="bg-white shadow-sm rounded-lg border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Choose a Template</h2>
          <p class="text-sm text-gray-600 mt-1">Start with a pre-built template or create from scratch</p>
        </div>

        <div class="p-6">
          <!-- Template Filter -->
          <div class="mb-6">
            <div class="flex flex-wrap gap-4">
              <div>
                <label for="industry-filter" class="block text-sm font-medium text-gray-700 mb-1">Industry</label>
                <select id="industry-filter" 
                        name="industry_filter"
                        class="block w-40 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                        data-action="change->template-selector#filterByIndustry">
                  <option value="">All Industries</option>
                  <% @industry_types.each do |industry| %>
                    <option value="<%= industry %>"><%= industry %></option>
                  <% end %>
                </select>
              </div>
              
              <div>
                <label for="type-filter" class="block text-sm font-medium text-gray-700 mb-1">Type</label>
                <select id="type-filter" 
                        name="type_filter"
                        class="block w-40 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                        data-action="change->template-selector#filterByType">
                  <option value="">All Types</option>
                  <% PlanTemplate::TEMPLATE_TYPES.each do |type| %>
                    <option value="<%= type %>"><%= type.humanize %></option>
                  <% end %>
                </select>
              </div>
            </div>
          </div>

          <!-- Template Gallery -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" data-template-selector-target="gallery">
            <!-- Start from Scratch Option -->
            <div class="template-card bg-gradient-to-br from-blue-50 to-indigo-100 border-2 border-dashed border-blue-300 rounded-lg p-6 cursor-pointer hover:border-blue-500 hover:shadow-md transition-all duration-200"
                 data-template-id=""
                 data-action="click->template-selector#selectTemplate">
              <div class="text-center">
                <div class="w-12 h-12 bg-blue-200 rounded-lg flex items-center justify-center mx-auto mb-4">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                  </svg>
                </div>
                <h3 class="text-sm font-medium text-gray-900 mb-2">Start from Scratch</h3>
                <p class="text-xs text-gray-600">Create a completely custom campaign plan</p>
              </div>
            </div>

            <!-- Template Cards -->
            <% @templates.each do |template| %>
              <div class="template-card bg-white border border-gray-200 rounded-lg p-6 cursor-pointer hover:border-blue-500 hover:shadow-md transition-all duration-200"
                   data-template-id="<%= template.id %>"
                   data-industry="<%= template.industry_type %>"
                   data-type="<%= template.template_type %>"
                   data-action="click->template-selector#selectTemplate">
                
                <!-- Template Header -->
                <div class="flex items-start justify-between mb-3">
                  <div class="flex-1">
                    <h3 class="text-sm font-medium text-gray-900 mb-1 line-clamp-2"><%= template.name %></h3>
                    <div class="flex items-center gap-2 mb-2">
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                        <%= template.industry_type %>
                      </span>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                        <%= template.template_type.humanize %>
                      </span>
                    </div>
                  </div>
                  
                  <button type="button" 
                          class="p-1 text-gray-400 hover:text-gray-600 transition-colors"
                          data-action="click->template-selector#previewTemplate"
                          data-template-id="<%= template.id %>">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                  </button>
                </div>

                <!-- Template Description -->
                <p class="text-xs text-gray-600 mb-3 line-clamp-3"><%= template.description %></p>

                <!-- Template Features -->
                <div class="space-y-2">
                  <div class="flex items-center gap-2">
                    <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-xs text-gray-600"><%= template.default_channels.length %> default channels</span>
                  </div>
                  
                  <div class="flex items-center gap-2">
                    <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-xs text-gray-600">Pre-built messaging framework</span>
                  </div>
                  
                  <div class="flex items-center gap-2">
                    <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-xs text-gray-600">Success metrics template</span>
                  </div>
                </div>

                <!-- Usage Stats -->
                <div class="mt-3 pt-3 border-t border-gray-100 flex items-center justify-between text-xs text-gray-500">
                  <span>Used <%= template.usage_count %> times</span>
                  <% if template.is_public %>
                    <span class="text-blue-600">Public</span>
                  <% else %>
                    <span class="text-orange-600">Private</span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Plan Details Form -->
    <div class="plan-details-section" data-template-selector-target="detailsSection" style="display: none;">
      <%= form_with model: [@campaign, @campaign_plan], 
                    class: "space-y-6",
                    data: { 
                      controller: "campaign-plan-form",
                      action: "submit->campaign-plan-form#submit"
                    } do |form| %>
        
        <input type="hidden" name="template_id" data-template-selector-target="selectedTemplateId">
        
        <div class="bg-white shadow-sm rounded-lg border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Plan Details</h2>
            <p class="text-sm text-gray-600 mt-1">Customize your campaign plan settings</p>
          </div>

          <div class="p-6 space-y-6">
            <!-- Basic Information -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
              <div>
                <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.text_field :name, 
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                    placeholder: "Enter plan name" %>
                <% if @campaign_plan.errors[:name].any? %>
                  <p class="mt-1 text-sm text-red-600"><%= @campaign_plan.errors[:name].first %></p>
                <% end %>
              </div>

              <div>
                <%= form.label :plan_type, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= form.select :plan_type, 
                    options_for_select(@plan_types.map { |type| [type.humanize, type] }, @campaign_plan.plan_type),
                    { prompt: "Select plan type" },
                    { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
                <% if @campaign_plan.errors[:plan_type].any? %>
                  <p class="mt-1 text-sm text-red-600"><%= @campaign_plan.errors[:plan_type].first %></p>
                <% end %>
              </div>
            </div>

            <!-- Template Preview -->
            <div id="template-preview" data-template-selector-target="templatePreview" style="display: none;">
              <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h3 class="text-sm font-medium text-blue-800">Template Selected</h3>
                    <div class="mt-2 text-sm text-blue-700" data-template-selector-target="templatePreviewContent">
                      <!-- Template preview content will be inserted here -->
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-between pt-6 border-t border-gray-200">
              <%= link_to campaign_campaign_plans_path(@campaign), 
                  class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
                Cancel
              <% end %>
              
              <div class="flex gap-3">
                <button type="button" 
                        class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
                        data-action="click->template-selector#goBack">
                  Back
                </button>
                
                <%= form.submit "Create Plan", 
                    class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors",
                    data: { "campaign-plan-form-target": "submitButton" } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Template Preview Modal -->
<div id="template-preview-modal" 
     class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50 hidden"
     data-template-selector-target="previewModal">
  <div class="relative top-20 mx-auto p-5 border w-11/12 max-w-4xl shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <!-- Modal Header -->
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900" data-template-selector-target="previewTitle">Template Preview</h3>
        <button type="button" 
                class="text-gray-400 hover:text-gray-600 transition-colors"
                data-action="click->template-selector#closePreview">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      
      <!-- Modal Content -->
      <div class="max-h-96 overflow-y-auto" data-template-selector-target="previewContent">
        <!-- Preview content will be loaded here -->
      </div>
      
      <!-- Modal Footer -->
      <div class="flex justify-end gap-3 mt-6 pt-4 border-t border-gray-200">
        <button type="button" 
                class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
                data-action="click->template-selector#closePreview">
          Close
        </button>
        <button type="button" 
                class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 transition-colors"
                data-action="click->template-selector#selectFromPreview">
          Use This Template
        </button>
      </div>
    </div>
  </div>
</div>