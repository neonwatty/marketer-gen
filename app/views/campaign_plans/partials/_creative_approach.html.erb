<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6 creative-approach">
  <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
    <svg class="w-6 h-6 text-pink-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z" />
    </svg>
    Creative Approach
  </h2>
  
  <div class="space-y-6">
    <!-- Brand Consistency Framework -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div class="bg-gradient-to-br from-pink-50 to-purple-50 rounded-lg p-4 border border-pink-200">
        <h3 class="text-lg font-medium text-gray-900 mb-3 flex items-center">
          <svg class="w-5 h-5 text-pink-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a.997.997 0 01-1.414 0l-7-7A1.997 1.997 0 013 12V7a4 4 0 014-4z" />
          </svg>
          Brand Identity
        </h3>
        <div class="space-y-3">
          <div class="creative-element">
            <h4 class="text-sm font-medium text-gray-800 mb-1">Visual Style</h4>
            <p class="text-sm text-gray-600">Consistent color palette, typography, and imagery style across all touchpoints</p>
          </div>
          <div class="creative-element">
            <h4 class="text-sm font-medium text-gray-800 mb-1">Tone of Voice</h4>
            <p class="text-sm text-gray-600">
              <% tone = case campaign_plan.campaign_type
                  when 'awareness', 'brand_awareness' then 'Inspiring and educational'
                  when 'engagement' then 'Conversational and friendly'
                  when 'conversion', 'sales_promotion' then 'Persuasive and action-oriented'
                  when 'retention', 'customer_retention' then 'Supportive and relationship-focused'
                  else 'Professional yet approachable'
                  end %>
              <%= tone %>
            </p>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-lg p-4 border border-blue-200">
        <h3 class="text-lg font-medium text-gray-900 mb-3 flex items-center">
          <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          Creative Themes
        </h3>
        <div class="space-y-3">
          <% if campaign_plan.generated_strategy.is_a?(Hash) && campaign_plan.generated_strategy['creative_themes'] %>
            <% campaign_plan.generated_strategy['creative_themes'].each do |theme| %>
              <div class="bg-white rounded-md p-2 border border-blue-100">
                <p class="text-sm text-blue-800 font-medium"><%= theme %></p>
              </div>
            <% end %>
          <% else %>
            <div class="space-y-2">
              <div class="bg-white rounded-md p-2 border border-blue-100">
                <p class="text-sm text-blue-800 font-medium">Authentic storytelling</p>
              </div>
              <div class="bg-white rounded-md p-2 border border-blue-100">
                <p class="text-sm text-blue-800 font-medium">Customer-centric messaging</p>
              </div>
              <div class="bg-white rounded-md p-2 border border-blue-100">
                <p class="text-sm text-blue-800 font-medium">Value demonstration</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Cross-Platform Threading -->
    <div class="border border-gray-200 rounded-lg p-4">
      <h3 class="text-lg font-medium text-gray-900 mb-3 flex items-center">
        <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
        </svg>
        Cross-Platform Content Threading
      </h3>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-gray-50 rounded-md p-3">
          <h4 class="text-sm font-medium text-gray-900 mb-2">Content Repurposing</h4>
          <ul class="text-xs text-gray-600 space-y-1">
            <li>• Blog posts → Social media snippets</li>
            <li>• Video content → Audio podcasts</li>
            <li>• Infographics → Carousel posts</li>
            <li>• Webinars → Educational series</li>
          </ul>
        </div>
        
        <div class="bg-gray-50 rounded-md p-3">
          <h4 class="text-sm font-medium text-gray-900 mb-2">Narrative Consistency</h4>
          <ul class="text-xs text-gray-600 space-y-1">
            <li>• Unified campaign hashtags</li>
            <li>• Consistent call-to-actions</li>
            <li>• Interconnected storylines</li>
            <li>• Progressive content reveals</li>
          </ul>
        </div>
        
        <div class="bg-gray-50 rounded-md p-3">
          <h4 class="text-sm font-medium text-gray-900 mb-2">Cross-References</h4>
          <ul class="text-xs text-gray-600 space-y-1">
            <li>• Platform-specific teasers</li>
            <li>• Content series connections</li>
            <li>• User journey mapping</li>
            <li>• Engagement amplification</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Asset Requirements -->
    <% if campaign_plan.generated_assets.present? %>
      <div class="border border-gray-200 rounded-lg p-4">
        <h3 class="text-lg font-medium text-gray-900 mb-3 flex items-center">
          <svg class="w-5 h-5 text-orange-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          Creative Asset Framework
        </h3>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
          <% assets = campaign_plan.generated_assets.is_a?(Array) ? campaign_plan.generated_assets : [] %>
          <% if assets.any? %>
            <% assets.each do |asset| %>
              <div class="bg-orange-50 rounded-md p-3 border border-orange-200 text-center">
                <div class="text-orange-600 mb-2">
                  <svg class="w-6 h-6 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <p class="text-xs font-medium text-orange-800"><%= asset %></p>
              </div>
            <% end %>
          <% else %>
            <div class="col-span-full text-center text-gray-500 py-4">
              <p class="text-sm">Creative asset requirements will be detailed in the generated campaign plan</p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>