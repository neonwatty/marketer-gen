<div class="timeline-visualization" data-controller="timeline-drag-drop" data-timeline-data="<%= timeline_data.to_json %>">
  <% if timeline_data[:phases].present? %>
    <!-- Timeline Header -->
    <div class="mb-6">
      <div class="flex justify-between items-center mb-4">
        <div>
          <h4 class="text-base font-medium text-gray-900">Campaign Timeline</h4>
          <p class="text-sm text-gray-600">Total duration: <%= timeline_data[:total_weeks] %> weeks</p>
        </div>
        <div class="flex items-center gap-2">
          <button type="button" 
                  class="px-3 py-1 text-xs font-medium rounded-md text-gray-700 bg-gray-100 hover:bg-gray-200 transition-colors"
                  data-action="click->timeline-drag-drop#zoomOut"
                  data-timeline-drag-drop-target="zoomOut">
            Zoom Out
          </button>
          <button type="button" 
                  class="px-3 py-1 text-xs font-medium rounded-md text-gray-700 bg-gray-100 hover:bg-gray-200 transition-colors"
                  data-action="click->timeline-drag-drop#zoomIn"
                  data-timeline-drag-drop-target="zoomIn">
            Zoom In
          </button>
        </div>
      </div>
      
      <!-- Timeline Scale -->
      <div class="relative h-8 bg-gray-50 rounded-md border border-gray-200 mb-4">
        <div class="absolute inset-0 flex">
          <% (0..timeline_data[:total_weeks]).step(2).each do |week| %>
            <div class="flex-shrink-0 relative" style="width: <%= (2.0 / timeline_data[:total_weeks]) * 100 %>%;">
              <div class="absolute top-0 left-0 w-px h-full bg-gray-300"></div>
              <div class="absolute top-1 left-1 text-xs text-gray-500">W<%= week %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Timeline Phases -->
    <div class="space-y-4" data-timeline-drag-drop-target="container">
      <% timeline_data[:phases].each_with_index do |phase, index| %>
        <div class="timeline-phase bg-white border border-gray-200 rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow duration-200"
             data-phase-id="<%= phase[:id] %>"
             data-phase-index="<%= index %>"
             data-draggable="true"
             data-action="dragstart->timeline-drag-drop#dragStart dragend->timeline-drag-drop#dragEnd">
          
          <!-- Phase Header -->
          <div class="flex items-center justify-between mb-3">
            <div class="flex items-center gap-3">
              <!-- Drag Handle -->
              <div class="drag-handle cursor-move text-gray-400 hover:text-gray-600 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
                </svg>
              </div>
              
              <!-- Phase Badge -->
              <div class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-<%= phase[:color] %>-100 text-<%= phase[:color] %>-800">
                <%= phase[:name].humanize %>
              </div>
              
              <h5 class="text-sm font-medium text-gray-900">
                Phase <%= index + 1 %>: <%= phase[:name].humanize %>
              </h5>
            </div>
            
            <div class="flex items-center gap-2 text-sm text-gray-500">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span><%= phase[:duration_weeks] %> weeks</span>
            </div>
          </div>

          <!-- Phase Timeline Bar -->
          <div class="relative mb-3">
            <div class="h-3 bg-gray-100 rounded-full overflow-hidden">
              <div class="h-full bg-<%= phase[:color] %>-500 rounded-full transition-all duration-300"
                   style="width: <%= (phase[:duration_weeks].to_f / timeline_data[:total_weeks]) * 100 %>%;
                          margin-left: <%= (phase[:start_week].to_f / timeline_data[:total_weeks]) * 100 %>%;">
              </div>
            </div>
            
            <!-- Week markers -->
            <div class="absolute -bottom-5 left-0 right-0 flex justify-between text-xs text-gray-400">
              <span>Week <%= phase[:start_week] %></span>
              <span>Week <%= phase[:start_week] + phase[:duration_weeks] %></span>
            </div>
          </div>

          <!-- Phase Activities -->
          <div class="mt-6">
            <div class="flex items-center justify-between mb-2">
              <h6 class="text-xs font-medium text-gray-700 uppercase tracking-wide">Activities</h6>
              <button type="button" 
                      class="text-xs text-blue-600 hover:text-blue-800 font-medium"
                      data-action="click->timeline-drag-drop#editPhase"
                      data-phase-id="<%= phase[:id] %>">
                Edit
              </button>
            </div>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
              <% phase[:activities].each do |activity| %>
                <div class="bg-gray-50 rounded-md px-3 py-2 text-sm text-gray-700 border border-gray-200">
                  <div class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-<%= phase[:color] %>-400 rounded-full flex-shrink-0"></div>
                    <span class="truncate"><%= activity.humanize %></span>
                  </div>
                </div>
              <% end %>
              
              <% if phase[:activities].empty? %>
                <div class="bg-gray-50 rounded-md px-3 py-2 text-sm text-gray-500 border border-dashed border-gray-300">
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    <span>Add activities</span>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Critical Path Indicator -->
          <% if timeline_data[:critical_path]&.include?(phase) %>
            <div class="mt-3 flex items-center gap-2">
              <div class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></div>
              <span class="text-xs font-medium text-red-600">Critical Path</span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Add Phase Button -->
    <div class="mt-6 text-center">
      <button type="button" 
              class="inline-flex items-center px-4 py-2 border border-dashed border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors"
              data-action="click->timeline-drag-drop#addPhase">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Add Phase
      </button>
    </div>

    <!-- Timeline Summary -->
    <div class="mt-8 bg-gray-50 rounded-lg p-4">
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900"><%= timeline_data[:total_weeks] %></div>
          <div class="text-sm text-gray-600">Total Weeks</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900"><%= timeline_data[:phases].length %></div>
          <div class="text-sm text-gray-600">Phases</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900"><%= timeline_data[:critical_path]&.length || 0 %></div>
          <div class="text-sm text-gray-600">Critical Items</div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No timeline phases</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by adding your first campaign phase.</p>
      <div class="mt-6">
        <button type="button" 
                class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors"
                data-action="click->timeline-drag-drop#addPhase">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Add First Phase
        </button>
      </div>
    </div>
  <% end %>
</div>

<!-- Drag Drop Indicator -->
<div class="timeline-drop-indicator hidden absolute left-0 right-0 h-1 bg-blue-500 rounded-full z-10"
     data-timeline-drag-drop-target="dropIndicator">
</div>