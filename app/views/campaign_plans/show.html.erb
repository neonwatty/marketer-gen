<% content_for :title, @campaign_plan.name %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-start mb-8">
      <div>
        <div class="flex items-center gap-3 mb-2">
          <h1 class="text-3xl font-bold text-gray-900"><%= @campaign_plan.name %></h1>
          <span class="px-3 py-1 text-sm font-medium rounded-full 
            <%= case @campaign_plan.status
                when 'draft' then 'bg-gray-100 text-gray-800'
                when 'generating' then 'bg-yellow-100 text-yellow-800'
                when 'completed' then 'bg-green-100 text-green-800'
                when 'failed' then 'bg-red-100 text-red-800'
                when 'archived' then 'bg-gray-100 text-gray-600'
                end %>">
            <%= @campaign_plan.status.humanize %>
          </span>
        </div>
        
        <p class="text-gray-600 mb-4"><%= @campaign_plan.description if @campaign_plan.description %></p>
        
        <div class="flex items-center gap-6 text-sm text-gray-500">
          <span><strong>Type:</strong> <%= @campaign_plan.campaign_type.humanize %></span>
          <span><strong>Objective:</strong> <%= @campaign_plan.objective.humanize %></span>
          <span><strong>Created:</strong> <%= time_ago_in_words(@campaign_plan.created_at) %> ago</span>
          <% if @campaign_plan.completed? %>
            <span class="text-green-600"><strong>Progress:</strong> <%= @campaign_plan.generation_progress %>%</span>
          <% end %>
        </div>
      </div>
      
      <div class="flex items-center gap-2">
        <%= link_to "Edit", edit_campaign_plan_path(@campaign_plan), 
            class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-md transition duration-200" %>
        
        <% if @campaign_plan.ready_for_generation? %>
          <%= link_to "Generate Plan", generate_campaign_plan_path(@campaign_plan), method: :post,
              class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md transition duration-200" %>
        <% end %>
        
        <% if @campaign_plan.can_be_regenerated? %>
          <%= link_to "Regenerate", regenerate_campaign_plan_path(@campaign_plan), method: :post,
              class: "bg-orange-600 hover:bg-orange-700 text-white font-medium py-2 px-4 rounded-md transition duration-200",
              data: { confirm: "Are you sure you want to regenerate this plan? This will replace all existing content." } %>
        <% end %>
        
        <% if @campaign_plan.completed? %>
          <!-- Generate All Content Button -->
          <% if !@campaign_plan.generated_contents.exists? %>
            <%= button_to generate_all_content_campaign_plan_path(@campaign_plan),
                method: :post,
                class: "bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-md transition duration-200 flex items-center gap-2",
                data: { turbo_confirm: "This will generate all content pieces for this campaign. Continue?" } do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
              </svg>
              Generate All Content
            <% end %>
          <% end %>
          
          <!-- Export Dropdown -->
          <div class="relative inline-block text-left" data-controller="dropdown">
            <button type="button" 
                    class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200 flex items-center gap-2"
                    data-action="click->dropdown#toggle">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Export
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            
            <div class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 hidden"
                 data-dropdown-target="menu">
              <div class="py-1">
                <%= link_to export_pdf_campaign_plan_path(@campaign_plan),
                    class: "flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  Export PDF
                <% end %>
                
                <%= link_to export_presentation_campaign_plan_path(@campaign_plan),
                    class: "flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2h4a1 1 0 011 1v14a1 1 0 01-1 1H3a1 1 0 01-1-1V5a1 1 0 011-1h4z" />
                  </svg>
                  Export Presentation
                <% end %>
              </div>
            </div>
          </div>

          <!-- Share Button -->
          <button type="button" 
                  class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-md transition duration-200 flex items-center gap-2"
                  data-controller="modal" data-action="click->modal#open">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z" />
            </svg>
            Share
          </button>
        <% end %>
      </div>
    </div>

    <!-- Enhanced Generation Status -->
    <%= render 'progress_section' %>

    <!-- Campaign Parameters -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
      <!-- Target Audience -->
      <% if @campaign_plan.target_audience.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Target Audience</h3>
          <p class="text-gray-700 text-sm"><%= simple_format(@campaign_plan.target_audience) %></p>
        </div>
      <% end %>

      <!-- Budget Constraints -->
      <% if @campaign_plan.budget_constraints.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Budget Constraints</h3>
          <p class="text-gray-700 text-sm"><%= simple_format(@campaign_plan.budget_constraints) %></p>
        </div>
      <% end %>

      <!-- Timeline Constraints -->
      <% if @campaign_plan.timeline_constraints.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Timeline Constraints</h3>
          <p class="text-gray-700 text-sm"><%= simple_format(@campaign_plan.timeline_constraints) %></p>
        </div>
      <% end %>
    </div>

    <!-- Generated Content -->
    <% if @campaign_plan.has_generated_content? %>
      <div class="space-y-6">
        <!-- Analytics Dashboard Section -->
        <%= render 'campaign_plans/partials/analytics_dashboard', campaign_plan: @campaign_plan %>
        
        <!-- Strategic Overview Section -->
        <%= render 'campaign_plans/partials/strategic_overview', campaign_plan: @campaign_plan %>
        
        <!-- Content Mapping Section -->
        <%= render 'campaign_plans/partials/content_map', campaign_plan: @campaign_plan %>
        
        <!-- Creative Approach Section -->
        <%= render 'campaign_plans/partials/creative_approach', campaign_plan: @campaign_plan %>
        
        <!-- Enhanced Timeline Visualization -->
        <%= render 'campaign_plans/partials/timeline_visualization', campaign_plan: @campaign_plan %>
        
        <!-- Strategic Rationale Section -->
        <%= render 'campaign_plans/partials/strategic_rationale', campaign_plan: @campaign_plan %>

        <!-- Campaign Summary (Legacy) -->
        <% if @campaign_plan.generated_summary.present? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
              <svg class="w-6 h-6 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Campaign Summary
            </h2>
            <div class="prose max-w-none">
              <%= simple_format(@campaign_plan.generated_summary) %>
            </div>
          </div>
        <% end %>

        <!-- Required Assets -->
        <% if @campaign_plan.generated_assets.present? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
              <svg class="w-6 h-6 text-teal-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
              Required Assets
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <% assets = @campaign_plan.generated_assets %>
              <% if assets.is_a?(Array) %>
                <% assets.each do |asset| %>
                  <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-md hover:bg-gray-100 transition-colors">
                    <div class="flex-shrink-0 w-6 h-6 bg-green-100 text-green-800 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                      </svg>
                    </div>
                    <span class="text-sm text-gray-700"><%= asset %></span>
                  </div>
                <% end %>
              <% else %>
                <%= simple_format(assets.to_s) %>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Generated Content Pieces -->
        <% if @campaign_plan.generated_contents.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex justify-between items-center mb-4">
              <h2 class="text-xl font-semibold text-gray-900 flex items-center">
                <svg class="w-6 h-6 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                </svg>
                Generated Content Pieces
                <span class="ml-2 px-2 py-1 text-xs font-medium bg-purple-100 text-purple-800 rounded-full">
                  <%= @campaign_plan.generated_contents.count %>
                </span>
              </h2>
              
              <%= link_to campaign_plan_generated_contents_path(@campaign_plan),
                  class: "text-sm text-purple-600 hover:text-purple-700 font-medium flex items-center gap-1" do %>
                View All
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              <% end %>
            </div>

            <!-- Content Type Summary -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
              <% content_counts = @campaign_plan.generated_contents.group(:content_type).count %>
              <% ['email', 'social_post', 'blog_article', 'ad_copy'].each do |content_type| %>
                <% count = content_counts[content_type] || 0 %>
                <div class="text-center p-3 bg-gray-50 rounded-lg">
                  <div class="text-2xl font-bold text-gray-900"><%= count %></div>
                  <div class="text-xs text-gray-600 mt-1"><%= content_type.humanize.pluralize(count) %></div>
                </div>
              <% end %>
            </div>

            <!-- Recent Content List -->
            <div class="space-y-3">
              <% @campaign_plan.generated_contents.recent.limit(5).each do |content| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors">
                  <div class="flex justify-between items-start">
                    <div class="flex-1">
                      <div class="flex items-center gap-2 mb-1">
                        <%= link_to content.title, generated_content_path(content),
                            class: "font-medium text-gray-900 hover:text-purple-600" %>
                        <span class="px-2 py-0.5 text-xs font-medium rounded-full
                          <%= case content.status
                              when 'draft' then 'bg-gray-100 text-gray-700'
                              when 'approved' then 'bg-green-100 text-green-700'
                              when 'published' then 'bg-blue-100 text-blue-700'
                              when 'archived' then 'bg-gray-100 text-gray-500'
                              end %>">
                          <%= content.status.capitalize %>
                        </span>
                      </div>
                      <div class="text-sm text-gray-600">
                        <span class="font-medium"><%= content.content_type.humanize %></span>
                        <% if content.format_variant.present? %>
                          · <%= content.format_variant.capitalize %> format
                        <% end %>
                        · <%= content.word_count %> words
                        · Created <%= time_ago_in_words(content.created_at) %> ago
                      </div>
                      <% if content.body_content.present? %>
                        <p class="text-sm text-gray-500 mt-2 line-clamp-2">
                          <%= truncate(strip_tags(content.body_content), length: 150) %>
                        </p>
                      <% end %>
                    </div>
                    <div class="ml-4 flex items-center gap-2">
                      <%= link_to edit_generated_content_path(content),
                          class: "text-gray-400 hover:text-gray-600" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

            <% if @campaign_plan.generated_contents.count > 5 %>
              <div class="mt-4 pt-4 border-t border-gray-200 text-center">
                <%= link_to campaign_plan_generated_contents_path(@campaign_plan),
                    class: "text-purple-600 hover:text-purple-700 font-medium" do %>
                  View all <%= @campaign_plan.generated_contents.count %> content pieces →
                <% end %>
              </div>
            <% end %>
          </div>
        <% elsif @campaign_plan.completed? && !@campaign_plan.generated_contents.exists? %>
          <!-- Prompt to Generate Content -->
          <div class="bg-gradient-to-r from-purple-50 to-indigo-50 rounded-lg shadow-sm border border-purple-200 p-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Ready to Generate Content!</h3>
                <p class="text-gray-600 mb-4">
                  Your campaign plan is complete. Now you can generate all the content pieces 
                  (emails, social posts, blog articles, etc.) based on your campaign strategy.
                </p>
                <%= button_to generate_all_content_campaign_plan_path(@campaign_plan),
                    method: :post,
                    class: "inline-flex items-center gap-2 bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-md transition duration-200",
                    data: { turbo_confirm: "This will generate all content pieces for this campaign. Continue?" } do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                  </svg>
                  Generate All Content Now
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- No Generated Content -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
        <div class="mx-auto h-24 w-24 text-gray-400 mb-4">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" 
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No campaign plan generated yet</h3>
        <p class="text-gray-600 mb-6">Generate your comprehensive campaign plan to see the strategic overview, timeline, and required assets.</p>
        
        <% if @campaign_plan.ready_for_generation? %>
          <%= link_to "Generate Campaign Plan", generate_campaign_plan_path(@campaign_plan), method: :post,
              class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
        <% else %>
          <p class="text-sm text-gray-500 mb-4">Complete the required fields to enable plan generation</p>
          <%= link_to "Edit Campaign", edit_campaign_plan_path(@campaign_plan), 
              class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
        <% end %>
      </div>
    <% end %>

    <!-- Navigation -->
    <div class="flex justify-between items-center mt-8 pt-6 border-t border-gray-200">
      <%= link_to "← Back to Campaign Plans", campaign_plans_path, 
          class: "text-gray-600 hover:text-gray-800 font-medium" %>
      
      <div class="flex gap-2">
        <% if @campaign_plan.can_be_archived? %>
          <%= link_to "Archive", archive_campaign_plan_path(@campaign_plan), method: :patch,
              class: "text-gray-600 hover:text-gray-800 font-medium",
              data: { confirm: "Are you sure you want to archive this campaign plan?" } %>
        <% end %>
        
        <%= link_to "Delete", campaign_plan_path(@campaign_plan), method: :delete,
            class: "text-red-600 hover:text-red-800 font-medium",
            data: { confirm: "Are you sure you want to delete this campaign plan? This action cannot be undone." } %>
      </div>
    </div>

    <!-- Share Modal -->
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50" data-modal-target="overlay" data-action="click->modal#close">
      <div class="flex items-center justify-center min-h-screen px-4">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full" data-action="click->modal#stopPropagation">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Share Campaign Plan</h3>
          </div>
          
          <%= form_with url: share_plan_campaign_plan_path(@campaign_plan), method: :post, local: true, class: "px-6 py-4" do |form| %>
            <div class="mb-4">
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email address</label>
              <%= form.email_field :email, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent",
                  placeholder: "Enter email address",
                  required: true %>
              <p class="mt-2 text-sm text-gray-500">
                The recipient will receive an email with a secure link to view this campaign plan. The link will expire in 7 days.
              </p>
            </div>
            
            <div class="flex justify-end gap-3">
              <button type="button" 
                      class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-md transition duration-200"
                      data-action="click->modal#close">
                Cancel
              </button>
              <%= form.submit "Share Plan", 
                  class: "px-4 py-2 text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 rounded-md transition duration-200" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>