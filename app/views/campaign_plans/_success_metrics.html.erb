<div class="success-metrics-dashboard" data-controller="metrics-visualization">
  <% if metrics_data.present? && metrics_data.values.any?(&:present?) %>
    <!-- Metrics Overview Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <% %w[awareness consideration conversion retention].each do |stage| %>
        <% stage_metrics = metrics_data["#{stage}_metrics".to_sym] || {} %>
        <% if stage_metrics.present? %>
          <div class="bg-white border border-gray-200 rounded-lg p-5 hover:shadow-md transition-shadow duration-200">
            <!-- Stage Header -->
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center gap-2">
                <div class="p-2 bg-journey-<%= stage %>-100 rounded-lg">
                  <%= stage_icon(stage) %>
                </div>
                <h4 class="text-sm font-medium text-gray-900 capitalize">
                  <%= stage %>
                </h4>
              </div>
              <div class="text-xs text-gray-500 bg-journey-<%= stage %>-50 px-2 py-1 rounded">
                <%= stage_metrics.keys.length %> metrics
              </div>
            </div>

            <!-- Primary Metric -->
            <% primary_metric = stage_metrics.first %>
            <% if primary_metric %>
              <div class="mb-3">
                <div class="text-2xl font-bold text-gray-900">
                  <%= format_metric_value(primary_metric[1]) %>
                </div>
                <div class="text-sm text-gray-600">
                  <%= primary_metric[0].humanize %>
                </div>
              </div>
            <% end %>

            <!-- Additional Metrics -->
            <% if stage_metrics.length > 1 %>
              <div class="space-y-2">
                <% stage_metrics.drop(1).each do |key, value| %>
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-600"><%= key.humanize %></span>
                    <span class="font-medium text-gray-900">
                      <%= format_metric_value(value) %>
                    </span>
                  </div>
                <% end %>
              </div>
            <% end %>

            <!-- Progress Indicator -->
            <div class="mt-4 pt-3 border-t border-gray-100">
              <div class="flex items-center justify-between text-xs text-gray-500 mb-1">
                <span>Target Progress</span>
                <span><%= calculate_progress_percentage(stage_metrics) %>%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-journey-<%= stage %>-500 h-2 rounded-full transition-all duration-300" 
                     style="width: <%= calculate_progress_percentage(stage_metrics) %>%"></div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Metrics Funnel Visualization -->
    <div class="bg-white border border-gray-200 rounded-lg p-6 mb-8">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-medium text-gray-900">Conversion Funnel</h3>
        <button type="button" 
                class="text-sm text-blue-600 hover:text-blue-800 font-medium"
                data-action="click->metrics-visualization#toggleFunnelView">
          Switch View
        </button>
      </div>

      <div class="funnel-visualization" data-metrics-visualization-target="funnelContainer">
        <!-- Funnel Stages -->
        <div class="space-y-4">
          <% funnel_stages = prepare_funnel_data(metrics_data) %>
          <% funnel_stages.each_with_index do |stage, index| %>
            <div class="funnel-stage relative">
              <!-- Stage Bar -->
              <div class="flex items-center gap-4 mb-2">
                <div class="w-20 text-sm font-medium text-gray-700 text-right">
                  <%= stage[:name] %>
                </div>
                <div class="flex-1 relative">
                  <div class="h-12 bg-gray-200 rounded-lg overflow-hidden relative">
                    <div class="h-full bg-journey-<%= stage[:color] %>-500 rounded-lg transition-all duration-500 flex items-center justify-center" 
                         style="width: <%= stage[:percentage] %>%;">
                      <span class="text-white font-medium text-sm">
                        <%= number_with_delimiter(stage[:value]) %>
                      </span>
                    </div>
                  </div>
                  
                  <!-- Conversion Rate -->
                  <% if index > 0 %>
                    <div class="absolute -right-8 top-1/2 transform -translate-y-1/2 text-xs text-gray-500">
                      <%= stage[:conversion_rate] %>%
                    </div>
                  <% end %>
                </div>
                <div class="w-16 text-sm text-gray-600 text-center">
                  <%= stage[:percentage] %>%
                </div>
              </div>
              
              <!-- Drop-off Arrow -->
              <% if index < funnel_stages.length - 1 %>
                <div class="flex justify-center my-2">
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                  </svg>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Detailed Metrics Tables -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Performance Targets -->
      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Performance Targets</h3>
        
        <div class="space-y-4">
          <% %w[awareness consideration conversion retention].each do |stage| %>
            <% stage_metrics = metrics_data["#{stage}_metrics".to_sym] || {} %>
            <% if stage_metrics.present? %>
              <div class="border border-gray-100 rounded-lg p-4">
                <div class="flex items-center justify-between mb-3">
                  <h4 class="text-sm font-medium text-gray-900 capitalize flex items-center gap-2">
                    <div class="w-3 h-3 bg-journey-<%= stage %>-500 rounded-full"></div>
                    <%= stage %>
                  </h4>
                  <span class="text-xs text-gray-500">
                    <%= stage_metrics.keys.length %> targets
                  </span>
                </div>
                
                <div class="space-y-2">
                  <% stage_metrics.each do |key, value| %>
                    <div class="flex justify-between items-center text-sm">
                      <span class="text-gray-600"><%= key.humanize %></span>
                      <div class="flex items-center gap-2">
                        <span class="font-medium text-gray-900">
                          <%= format_metric_value(value) %>
                        </span>
                        <div class="w-16 bg-gray-200 rounded-full h-1.5">
                          <div class="bg-journey-<%= stage %>-500 h-1.5 rounded-full" 
                               style="width: <%= rand(30..90) %>%"></div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- KPI Benchmarks -->
      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Industry Benchmarks</h3>
        
        <div class="space-y-4">
          <!-- Sample benchmark data for development -->
          <div class="border border-gray-100 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <h4 class="text-sm font-medium text-gray-900">Email Marketing</h4>
              <span class="text-xs text-green-600 bg-green-100 px-2 py-1 rounded">
                Above Average
              </span>
            </div>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600">Open Rate</span>
                <span class="text-gray-900">Industry: 21.3% | Target: 25%</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Click Rate</span>
                <span class="text-gray-900">Industry: 2.6% | Target: 3.5%</span>
              </div>
            </div>
          </div>
          
          <div class="border border-gray-100 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <h4 class="text-sm font-medium text-gray-900">Social Media</h4>
              <span class="text-xs text-blue-600 bg-blue-100 px-2 py-1 rounded">
                On Target
              </span>
            </div>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600">Engagement Rate</span>
                <span class="text-gray-900">Industry: 1.2% | Target: 2.1%</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Reach</span>
                <span class="text-gray-900">Industry: 5.2% | Target: 8.0%</span>
              </div>
            </div>
          </div>
          
          <div class="border border-gray-100 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <h4 class="text-sm font-medium text-gray-900">Paid Search</h4>
              <span class="text-xs text-yellow-600 bg-yellow-100 px-2 py-1 rounded">
                Below Target
              </span>
            </div>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600">CTR</span>
                <span class="text-gray-900">Industry: 3.17% | Target: 4.2%</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">CPC</span>
                <span class="text-gray-900">Industry: $2.69 | Target: $2.20</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Metrics Insights -->
    <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Success Metrics Analysis</h3>
          <div class="mt-2 text-sm text-blue-700">
            <ul class="space-y-1">
              <li>• Conversion funnel shows <%= calculate_overall_conversion_rate(metrics_data) %>% end-to-end conversion rate</li>
              <li>• Primary optimization opportunity: <%= identify_weakest_stage(metrics_data) %> stage performance</li>
              <li>• Budget efficiency: $<%= calculate_cost_per_conversion(metrics_data) %> per conversion</li>
              <li>• Timeline alignment: Metrics achievable within <%= calculate_required_timeframe(metrics_data) %> weeks</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No success metrics defined</h3>
      <p class="mt-1 text-sm text-gray-500">Define KPIs and success metrics to track campaign performance.</p>
      <div class="mt-6">
        <button type="button" 
                class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors"
                data-action="click->metrics-visualization#addMetrics">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Add Success Metrics
        </button>
      </div>
    </div>
  <% end %>
</div>

<% content_for :javascript do %>
  <script>
    // Helper functions for metrics visualization
    function formatMetricValue(value) {
      if (typeof value === 'number') {
        if (value >= 1000000) {
          return (value / 1000000).toFixed(1) + 'M';
        } else if (value >= 1000) {
          return (value / 1000).toFixed(1) + 'K';
        } else if (value % 1 !== 0) {
          return value.toFixed(1) + '%';
        }
        return value.toLocaleString();
      }
      return value;
    }
    
    function stageIcon(stage) {
      const icons = {
        'awareness': '<svg class="w-5 h-5 text-journey-awareness-600" fill="currentColor" viewBox="0 0 20 20"><path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path><path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path></svg>',
        'consideration': '<svg class="w-5 h-5 text-journey-consideration-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path></svg>',
        'conversion': '<svg class="w-5 h-5 text-journey-conversion-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>',
        'retention': '<svg class="w-5 h-5 text-journey-retention-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"></path></svg>'
      };
      return icons[stage] || '<svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"></path></svg>';
    }
  </script>
<% end %>