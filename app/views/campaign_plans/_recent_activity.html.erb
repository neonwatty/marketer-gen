<div class="recent-activity-widget">
  <% if collaboration_data[:recent_comments].present? %>
    <div class="space-y-4">
      <% collaboration_data[:recent_comments].each do |comment| %>
        <div class="flex gap-3">
          <!-- User Avatar -->
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center">
              <span class="text-xs font-medium text-gray-600">
                <%= comment.user.display_name.first.upcase %>
              </span>
            </div>
          </div>
          
          <!-- Comment Content -->
          <div class="flex-1 min-w-0">
            <div class="bg-gray-50 rounded-lg p-3">
              <div class="flex items-center justify-between mb-1">
                <span class="text-sm font-medium text-gray-900"><%= comment.user.display_name %></span>
                <span class="text-xs text-gray-500" title="<%= comment.created_at.strftime("%B %d, %Y at %I:%M %p") %>">
                  <%= time_ago_in_words(comment.created_at) %> ago
                </span>
              </div>
              <p class="text-sm text-gray-700 line-clamp-3"><%= comment.content %></p>
              
              <!-- Comment Type Indicator -->
              <% if comment.comment_type.present? %>
                <div class="mt-2">
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= comment_type_classes(comment.comment_type) %>">
                    <%= comment.comment_type.humanize %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      
      <!-- View All Comments Link -->
      <div class="text-center pt-2">
        <%= link_to campaign_plan_path(@campaign_plan, anchor: "comments"), 
            class: "text-sm text-blue-600 hover:text-blue-800 font-medium transition-colors" do %>
          View all comments â†’
        <% end %>
      </div>
    </div>
    
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-6">
      <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
      <h4 class="mt-2 text-sm font-medium text-gray-900">No recent activity</h4>
      <p class="mt-1 text-sm text-gray-500">Comments and updates will appear here.</p>
      
      <!-- Quick Add Comment -->
      <div class="mt-4">
        <button type="button" 
                class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
                data-action="click->recent-activity#showCommentForm">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Add Comment
        </button>
      </div>
    </div>
  <% end %>
</div>

<!-- Activity Timeline for Development -->
<% if Rails.env.development? %>
  <div class="mt-6 pt-4 border-t border-gray-200">
    <h5 class="text-sm font-medium text-gray-900 mb-3">Development Timeline</h5>
    <div class="space-y-3">
      <!-- Sample activities for development -->
      <div class="flex gap-3">
        <div class="flex-shrink-0">
          <div class="w-2 h-2 bg-blue-500 rounded-full mt-2"></div>
        </div>
        <div class="flex-1">
          <div class="text-sm text-gray-900">Plan created</div>
          <div class="text-xs text-gray-500">2 hours ago</div>
        </div>
      </div>
      
      <div class="flex gap-3">
        <div class="flex-shrink-0">
          <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
        </div>
        <div class="flex-1">
          <div class="text-sm text-gray-900">Strategic rationale updated</div>
          <div class="text-xs text-gray-500">1 hour ago</div>
        </div>
      </div>
      
      <div class="flex gap-3">
        <div class="flex-shrink-0">
          <div class="w-2 h-2 bg-yellow-500 rounded-full mt-2"></div>
        </div>
        <div class="flex-1">
          <div class="text-sm text-gray-900">Timeline phases added</div>
          <div class="text-xs text-gray-500">30 minutes ago</div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!-- Notification Center -->
<div class="mt-6 pt-4 border-t border-gray-200" data-controller="notification-center">
  <div class="flex items-center justify-between mb-3">
    <h5 class="text-sm font-medium text-gray-900">Notifications</h5>
    <button type="button" 
            class="text-xs text-gray-500 hover:text-gray-700 transition-colors"
            data-action="click->notification-center#markAllRead">
      Mark all read
    </button>
  </div>
  
  <div class="space-y-2" data-notification-center-target="notifications">
    <!-- Notifications will be loaded here via AJAX -->
    <div class="text-sm text-gray-500 italic">Loading notifications...</div>
  </div>
</div>

<style>
  .comment-type-general { @apply bg-gray-100 text-gray-800; }
  .comment-type-feedback { @apply bg-yellow-100 text-yellow-800; }
  .comment-type-approval { @apply bg-green-100 text-green-800; }
  .comment-type-question { @apply bg-blue-100 text-blue-800; }
  .comment-type-concern { @apply bg-red-100 text-red-800; }
</style>