<% content_for(:title) { "Campaign Plans - #{@campaign.name}" } %>

<div class="campaign-plans-index" data-controller="campaign-plans-list">
  <!-- Header -->
  <div class="bg-white border-b border-gray-200 mb-8">
    <div class="px-6 py-4">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-2">
            <%= link_to campaigns_path, 
                class: "text-gray-500 hover:text-gray-700 transition-colors" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            <% end %>
            <h1 class="text-heading-h2 font-bold text-gray-900 m-0">Campaign Plans</h1>
          </div>
          <p class="text-base text-gray-600">Campaign: <span class="font-medium"><%= @campaign.name %></span></p>
          <div class="flex items-center gap-4 mt-2 text-sm text-gray-500">
            <span><%= @plans.count %> total plans</span>
            <span>•</span>
            <span><%= @approved_plans.count %> approved</span>
            <span>•</span>
            <span><%= @review_plans.count %> in review</span>
          </div>
        </div>
        
        <div class="flex items-center gap-3">
          <%= link_to new_campaign_campaign_plan_path(@campaign), 
              class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Create Plan
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Plan Status Tabs -->
  <div class="px-6 mb-8">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <button type="button" 
                class="plan-status-tab active border-blue-500 text-blue-600 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm"
                data-action="click->campaign-plans-list#showTab"
                data-tab="all">
          All Plans
          <span class="bg-blue-100 text-blue-600 hidden ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium lg:inline-block">
            <%= @plans.count %>
          </span>
        </button>
        
        <button type="button" 
                class="plan-status-tab text-gray-500 hover:text-gray-700 whitespace-nowrap py-2 px-1 border-b-2 border-transparent hover:border-gray-300 font-medium text-sm"
                data-action="click->campaign-plans-list#showTab"
                data-tab="draft">
          Draft
          <span class="bg-gray-100 text-gray-600 hidden ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium lg:inline-block">
            <%= @draft_plans.count %>
          </span>
        </button>
        
        <button type="button" 
                class="plan-status-tab text-gray-500 hover:text-gray-700 whitespace-nowrap py-2 px-1 border-b-2 border-transparent hover:border-gray-300 font-medium text-sm"
                data-action="click->campaign-plans-list#showTab"
                data-tab="review">
          In Review
          <span class="bg-yellow-100 text-yellow-600 hidden ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium lg:inline-block">
            <%= @review_plans.count %>
          </span>
        </button>
        
        <button type="button" 
                class="plan-status-tab text-gray-500 hover:text-gray-700 whitespace-nowrap py-2 px-1 border-b-2 border-transparent hover:border-gray-300 font-medium text-sm"
                data-action="click->campaign-plans-list#showTab"
                data-tab="approved">
          Approved
          <span class="bg-green-100 text-green-600 hidden ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium lg:inline-block">
            <%= @approved_plans.count %>
          </span>
        </button>
      </nav>
    </div>
  </div>

  <!-- Plans Content -->
  <div class="px-6">
    <% if @plans.any? %>
      <!-- Plans Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" data-campaign-plans-list-target="plansContainer">
        <% @plans.each do |plan| %>
          <div class="plan-card bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow duration-200"
               data-plan-status="<%= plan.status %>"
               data-campaign-plans-list-target="planCard">
            
            <!-- Plan Header -->
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-medium text-gray-900 truncate">
                  <%= link_to plan.name, campaign_plan_path(plan), 
                      class: "hover:text-blue-600 transition-colors" %>
                </h3>
                <div class="flex items-center gap-2 mt-1">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_badge_classes(plan.status) %>">
                    <%= plan.status.humanize %>
                  </span>
                  <span class="text-xs text-gray-500">v<%= plan.version %></span>
                </div>
              </div>
              
              <!-- Plan Actions Menu -->
              <div class="relative ml-4" data-controller="dropdown">
                <button type="button" 
                        class="p-1 text-gray-400 hover:text-gray-600 transition-colors"
                        data-action="click->dropdown#toggle">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                  </svg>
                </button>
                
                <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50">
                  <div class="py-1">
                    <%= link_to dashboard_campaign_plan_path(plan), 
                        class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
                      <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                      </svg>
                      Dashboard
                    <% end %>
                    
                    <% if can_edit_plan?(plan) %>
                      <%= link_to edit_campaign_plan_path(plan), 
                          class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
                        <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                        Edit Plan
                      <% end %>
                    <% end %>
                    
                    <%= link_to export_campaign_plan_path(plan, format: 'pdf'), 
                        class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
                      <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                      Export PDF
                    <% end %>
                    
                    <% if plan.draft? && can_edit_plan?(plan) %>
                      <div class="border-t border-gray-100"></div>
                      <%= button_to submit_for_review_campaign_plan_path(plan), 
                          method: :post,
                          class: "flex items-center w-full px-4 py-2 text-sm text-blue-700 hover:bg-blue-50 transition-colors text-left",
                          confirm: "Submit this plan for review?" do %>
                        <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                        </svg>
                        Submit for Review
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Plan Stats -->
            <div class="grid grid-cols-2 gap-4 mb-4">
              <div>
                <div class="text-2xl font-bold text-gray-900"><%= plan.completion_percentage %>%</div>
                <div class="text-sm text-gray-600">Complete</div>
                <div class="w-full bg-gray-200 rounded-full h-2 mt-1">
                  <div class="bg-blue-600 h-2 rounded-full transition-all duration-300" 
                       style="width: <%= plan.completion_percentage %>%"></div>
                </div>
              </div>
              
              <div>
                <div class="text-2xl font-bold text-gray-900"><%= plan.estimated_duration_weeks %></div>
                <div class="text-sm text-gray-600">Weeks</div>
                <div class="flex items-center mt-1">
                  <svg class="w-4 h-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-xs text-gray-500"><%= plan.phase_count %> phases</span>
                </div>
              </div>
            </div>

            <!-- Plan Metrics -->
            <div class="space-y-2 mb-4">
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Budget</span>
                <span class="font-medium text-gray-900">$<%= number_with_delimiter(plan.total_budget) %></span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Channels</span>
                <span class="font-medium text-gray-900"><%= plan.channel_count %></span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Plan Type</span>
                <span class="font-medium text-gray-900"><%= plan.plan_type.humanize %></span>
              </div>
            </div>

            <!-- Plan Footer -->
            <div class="pt-4 border-t border-gray-100">
              <div class="flex items-center justify-between text-sm text-gray-500">
                <div class="flex items-center gap-2">
                  <div class="w-5 h-5 bg-gray-200 rounded-full flex items-center justify-center">
                    <span class="text-xs font-medium text-gray-600">
                      <%= plan.user.display_name.first.upcase %>
                    </span>
                  </div>
                  <span><%= plan.user.display_name %></span>
                </div>
                <span title="<%= plan.updated_at.strftime("%B %d, %Y at %I:%M %p") %>">
                  <%= time_ago_in_words(plan.updated_at) %> ago
                </span>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No campaign plans yet</h3>
        <p class="mt-2 text-sm text-gray-500 max-w-sm mx-auto">
          Get started by creating your first campaign plan. Choose from industry templates or start from scratch.
        </p>
        <div class="mt-8">
          <%= link_to new_campaign_campaign_plan_path(@campaign), 
              class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Create Your First Plan
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Mobile Quick Actions -->
<div class="lg:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 p-4 safe-area-bottom">
  <div class="flex gap-3">
    <%= link_to new_campaign_campaign_plan_path(@campaign), 
        class: "flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      New Plan
    <% end %>
    
    <button type="button" 
            class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors"
            data-action="click->campaign-plans-list#showFilters">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.707A1 1 0 013 7V4z" />
      </svg>
    </button>
  </div>
</div>