<% content_for :page_title, "Campaign Plans" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Campaign Plans</h1>
      <p class="mt-2 text-gray-600">Create and manage comprehensive marketing campaign plans</p>
    </div>
    
    <%= link_to "New Campaign Plan", new_campaign_plan_path, 
        class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <%= form_tag campaign_plans_path, method: :get, local: true, class: "space-y-4" do %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div>
          <%= label_tag :search, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= text_field_tag :search, params[:search], 
              placeholder: "Search by name...", 
              class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
        
        <div>
          <%= label_tag :campaign_type, "Campaign Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag :campaign_type, 
              options_for_select([["All Types", ""]] + @campaign_types.map { |type| [type.humanize, type] }, params[:campaign_type]),
              class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
        
        <div>
          <%= label_tag :objective, "Objective", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag :objective, 
              options_for_select([["All Objectives", ""]] + @objectives.map { |obj| [obj.humanize, obj] }, params[:objective]),
              class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
        
        <div>
          <%= label_tag :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag :status, 
              options_for_select([["All Statuses", ""]] + @statuses.map { |status| [status.humanize, status] }, params[:status]),
              class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
      </div>
      
      <div class="flex gap-2">
        <%= submit_tag "Filter", class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-md transition duration-200" %>
        <%= link_to "Clear", campaign_plans_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-2 px-4 rounded-md transition duration-200" %>
      </div>
    <% end %>
  </div>

  <!-- Campaign Plans List -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <% if @campaign_plans.any? %>
      <div class="divide-y divide-gray-200">
        <% @campaign_plans.each do |plan| %>
          <div class="p-6 hover:bg-gray-50 transition duration-200">
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <h3 class="text-lg font-semibold text-gray-900">
                    <%= link_to plan.name, plan, class: "hover:text-blue-600 transition duration-200" %>
                  </h3>
                  
                  <span class="px-2 py-1 text-xs font-medium rounded-full 
                    <%= case plan.status
                        when 'draft' then 'bg-gray-100 text-gray-800'
                        when 'generating' then 'bg-yellow-100 text-yellow-800'
                        when 'completed' then 'bg-green-100 text-green-800'
                        when 'failed' then 'bg-red-100 text-red-800'
                        when 'archived' then 'bg-gray-100 text-gray-600'
                        end %>">
                    <%= plan.status.humanize %>
                  </span>
                </div>
                
                <p class="text-gray-600 mb-2"><%= truncate(plan.description, length: 150) if plan.description %></p>
                
                <div class="flex items-center gap-4 text-sm text-gray-500">
                  <span><strong>Type:</strong> <%= plan.campaign_type.humanize %></span>
                  <span><strong>Objective:</strong> <%= plan.objective.humanize %></span>
                  <span><strong>Created:</strong> <%= time_ago_in_words(plan.created_at) %> ago</span>
                  <% if plan.completed? %>
                    <span class="text-green-600"><strong>Progress:</strong> <%= plan.generation_progress %>%</span>
                  <% end %>
                </div>
              </div>
              
              <div class="flex items-center gap-2 ml-4">
                <%= link_to "View", plan, class: "text-blue-600 hover:text-blue-800 font-medium" %>
                
                <% if plan.ready_for_generation? %>
                  <%= link_to "Generate", generate_campaign_plan_path(plan), method: :post,
                      class: "bg-green-600 hover:bg-green-700 text-white text-sm font-medium py-1 px-3 rounded-md transition duration-200" %>
                <% end %>
                
                <% if plan.can_be_regenerated? %>
                  <%= link_to "Regenerate", regenerate_campaign_plan_path(plan), method: :post,
                      class: "bg-orange-600 hover:bg-orange-700 text-white text-sm font-medium py-1 px-3 rounded-md transition duration-200",
                      data: { confirm: "Are you sure you want to regenerate this plan? This will replace all existing content." } %>
                <% end %>
                
                <%= link_to "Edit", edit_campaign_plan_path(plan), 
                    class: "text-gray-600 hover:text-gray-800 font-medium" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <div class="mx-auto h-24 w-24 text-gray-400 mb-4">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" 
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No campaign plans yet</h3>
        <p class="text-gray-600 mb-6">Get started by creating your first campaign plan</p>
        <%= link_to "Create Campaign Plan", new_campaign_plan_path, 
            class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>