<%# Enhanced progress section for campaign plan generation %>

<% if @campaign_plan.generating? %>
  <!-- Real-time Progress Tracker -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-6"
       data-controller="progress-tracker progress-bar"
       data-progress-tracker-task-id-value="<%= @campaign_plan.id %>"
       data-progress-tracker-endpoint-value="/api/v1/progress/campaign_plans/<%= @campaign_plan.id %>"
       data-progress-tracker-refresh-interval-value="1500"
       data-progress-tracker-auto-refresh-value="true">
    
    <!-- Header -->
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center">
        <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-blue-600 mr-3"></div>
        <div>
          <h3 class="text-lg font-semibold text-blue-900">Generating Campaign Plan</h3>
          <p class="text-sm text-blue-700" data-progress-tracker-target="message">
            <%= @campaign_plan.generation_status_message || 'Preparing generation...' %>
          </p>
        </div>
      </div>
      <div class="text-right">
        <div class="text-2xl font-bold text-blue-900" data-progress-tracker-target="percentage">
          <%= @campaign_plan.generation_progress_percentage %>%
        </div>
        <div class="text-xs text-blue-600">Progress</div>
      </div>
    </div>

    <!-- Progress Bar -->
    <div class="mb-6">
      <div class="w-full bg-blue-200 rounded-full h-3">
        <div class="h-3 bg-blue-600 rounded-full transition-all duration-300 ease-out"
             data-progress-tracker-target="progressBar"
             data-progress-width="<%= @campaign_plan.generation_progress_percentage %>"></div>
      </div>
    </div>

    <!-- Step Indicators -->
    <div class="flex items-center justify-between">
      <% @campaign_plan.generation_steps.each_with_index do |step, index| %>
        <% 
          step_completed = index < @campaign_plan.current_generation_step
          step_current = index == @campaign_plan.current_generation_step
          step_future = index > @campaign_plan.current_generation_step
        %>
        
        <div class="flex items-center <%= 'flex-1' unless index == @campaign_plan.generation_steps.length - 1 %>"
             data-progress-tracker-target="step">
          <!-- Step Circle -->
          <div class="flex flex-col items-center">
            <div class="flex items-center justify-center w-10 h-10 rounded-full border-2 font-medium transition-all duration-200 step-circle
                        <%= if step_completed
                              'bg-green-600 border-green-600 text-white'
                            elsif step_current
                              'bg-blue-600 border-blue-600 text-white'
                            else
                              'bg-white border-gray-300 text-gray-500'
                            end %>">
              <% if step_completed %>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              <% elsif step_current %>
                <div class="w-3 h-3 bg-current rounded-full animate-pulse"></div>
              <% else %>
                <%= index + 1 %>
              <% end %>
            </div>
            
            <!-- Step Label -->
            <span class="mt-2 text-xs font-medium text-center max-w-16 step-label
                         <%= if step_completed
                               'text-green-600'
                             elsif step_current
                               'text-blue-600'
                             else
                               'text-gray-500'
                             end %>">
              <%= step %>
            </span>
          </div>
          
          <!-- Connector Line -->
          <% unless index == @campaign_plan.generation_steps.length - 1 %>
            <div class="flex-1 mx-3">
              <div class="h-1 rounded transition-colors duration-200
                          <%= step_completed ? 'bg-green-600' : 'bg-gray-300' %>"></div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Additional Info -->
    <div class="mt-4 pt-4 border-t border-blue-200">
      <div class="flex justify-between items-center text-sm text-blue-700">
        <span>
          <% if @campaign_plan.estimated_time_remaining %>
            Estimated time remaining: <%= @campaign_plan.estimated_time_remaining %>
          <% end %>
        </span>
        <button type="button" 
                class="text-blue-600 hover:text-blue-800 font-medium"
                data-action="click->progress-tracker#refresh">
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Refresh
        </button>
      </div>
    </div>
  </div>


<% elsif @campaign_plan.failed? %>
  <!-- Error State -->
  <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-6">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-lg font-medium text-red-900">Generation Failed</h3>
        <div class="mt-2 text-sm text-red-700">
          <%= @campaign_plan.metadata&.dig('error_message') || 'An error occurred while generating the campaign plan.' %>
        </div>
        <div class="mt-4">
          <%= link_to "Try Again", regenerate_campaign_plan_path(@campaign_plan), 
              method: :post,
              class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md transition duration-200" %>
        </div>
      </div>
    </div>
  </div>

<% elsif @campaign_plan.completed? %>
  <!-- Success State -->
  <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-green-800">Campaign Plan Generated Successfully</h3>
        <div class="mt-1 text-sm text-green-600">
          <% if @campaign_plan.generation_duration %>
            Generated in <%= time_duration_in_words(@campaign_plan.generation_duration) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>