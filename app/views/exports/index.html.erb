<% content_for :title, "Exports" %>

<div class="min-h-screen bg-gray-50">
  <div class="container mx-auto px-6 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Data Exports</h1>
      <p class="text-gray-600">Export your campaign data, content, and analytics in various formats</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="bg-white rounded-lg shadow-sm border p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Campaign Data Export</h3>
        <p class="text-gray-600 mb-4">Export campaign details, performance metrics, and content data</p>
        <div class="space-y-3">
          <%= link_to "Export as CSV", exports_path(format: :csv), method: :post, class: "block text-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700" %>
          <%= link_to "Export as PDF", exports_path(format: :pdf), method: :post, class: "block text-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700" %>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm border p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Calendar Export</h3>
        <p class="text-gray-600 mb-4">Export content schedules and calendar events</p>
        <div class="space-y-3">
          <%= link_to "Export Calendar", calendar_exports_path, method: :post, class: "block text-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700" %>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm border p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Performance Report</h3>
        <p class="text-gray-600 mb-4">Export detailed performance analytics and metrics</p>
        <div class="space-y-3">
          <%= link_to "Export Report", performance_exports_path, method: :post, class: "block text-center px-4 py-2 bg-purple-600 text-white text-sm font-medium rounded-md hover:bg-purple-700" %>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm border p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Comprehensive Export</h3>
        <p class="text-gray-600 mb-4">Export all campaign data in multiple formats</p>
        <div class="space-y-3">
          <%= link_to "Create Export Package", comprehensive_exports_path, method: :post, class: "block text-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700" %>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm border p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Bulk Export</h3>
        <p class="text-gray-600 mb-4">Export multiple campaigns at once</p>
        <div class="space-y-3">
          <%= link_to "Bulk Export", bulk_exports_path, method: :post, class: "block text-center px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-md hover:bg-gray-700" %>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm border p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Export Templates</h3>
        <p class="text-gray-600 mb-4">Browse available export templates and formats</p>
        <div class="space-y-3">
          <%= link_to "View Templates", templates_exports_path, class: "block text-center px-4 py-2 bg-yellow-600 text-white text-sm font-medium rounded-md hover:bg-yellow-700" %>
        </div>
      </div>
    </div>

    <div class="mt-8 bg-white rounded-lg shadow-sm border p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Exports</h3>
      <div class="text-center py-8">
        <p class="text-gray-500">No recent exports available</p>
      </div>
    </div>
  </div>
</div>