<% content_for :title, @journey.name %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="bg-white shadow">
    <div class="px-4 py-6 sm:p-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @journey.name %></h1>
          <p class="mt-1 text-sm text-gray-500">
            <%= @journey.campaign_type&.humanize || 'No type' %> • 
            Created <%= time_ago_in_words(@journey.created_at) %> ago
          </p>
        </div>
        <div class="flex space-x-3">
          <% if @journey.status == 'draft' %>
            <%= link_to "Publish", publish_journey_path(@journey), method: :post, 
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
          <% end %>
          
          <%= link_to "Duplicate", duplicate_journey_path(@journey), method: :post,
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          
          <%= link_to "Edit", edit_journey_path(@journey), 
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-8 lg:grid-cols-3">
    <!-- Main Content -->
    <div class="lg:col-span-2">
      <!-- Journey Details -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Journey Details</h3>
          <div class="mt-5">
            <% if @journey.description.present? %>
              <p class="text-sm text-gray-600"><%= @journey.description %></p>
            <% else %>
              <p class="text-sm text-gray-400 italic">No description provided</p>
            <% end %>
          </div>
          
          <% if @journey.target_audience.present? %>
            <div class="mt-6">
              <h4 class="text-sm font-medium text-gray-900">Target Audience</h4>
              <p class="mt-1 text-sm text-gray-600"><%= @journey.target_audience %></p>
            </div>
          <% end %>
          
          <% if @journey.goals.present? && @journey.goals.any? %>
            <div class="mt-6">
              <h4 class="text-sm font-medium text-gray-900">Goals</h4>
              <ul class="mt-1 list-disc list-inside text-sm text-gray-600">
                <% @journey.goals.each do |goal| %>
                  <li><%= goal %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Journey Steps -->
      <div class="mt-8 bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center justify-between">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Journey Steps</h3>
            <%= link_to "Add Step", new_journey_step_path(@journey),
                class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
          
          <% if @journey_steps.any? %>
            <div class="mt-6 flow-root">
              <ul class="-mb-8">
                <% @journey_steps.each_with_index do |step, index| %>
                  <li>
                    <div class="relative pb-8">
                      <% unless index == @journey_steps.size - 1 %>
                        <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                      <% end %>
                      <div class="relative flex space-x-3">
                        <div>
                          <span class="h-8 w-8 rounded-full bg-indigo-500 flex items-center justify-center ring-8 ring-white">
                            <span class="text-white text-sm font-medium"><%= step.position + 1 %></span>
                          </span>
                        </div>
                        <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                          <div>
                            <h4 class="text-sm font-medium text-gray-900">
                              <%= link_to step.name, [@journey, step], class: "hover:text-indigo-600" %>
                            </h4>
                            <p class="text-sm text-gray-500">
                              <%= step.stage.humanize %> • 
                              <%= step.content_type&.humanize || 'No type' %> • 
                              <%= step.channel&.humanize || 'No channel' %>
                            </p>
                            <% if step.description.present? %>
                              <p class="mt-1 text-sm text-gray-600"><%= truncate(step.description, length: 100) %></p>
                            <% end %>
                          </div>
                          <div class="text-right text-sm whitespace-nowrap text-gray-500">
                            <%= link_to "Edit", edit_journey_step_path(@journey, step), class: "text-indigo-600 hover:text-indigo-900" %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          <% else %>
            <div class="mt-6 text-center py-6">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M13 7h-2v4H7v2h4v4h2v-4h4v-2h-4V7z"/>
              </svg>
              <h4 class="mt-2 text-sm font-medium text-gray-900">No steps yet</h4>
              <p class="mt-1 text-sm text-gray-500">Get started by adding your first journey step.</p>
              <div class="mt-4">
                <%= link_to "Add Step", new_journey_step_path(@journey),
                    class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1">
      <!-- Status -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Status</h3>
          <div class="mt-5">
            <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium <%= 
              case @journey.status
              when 'published' then 'bg-green-100 text-green-800'
              when 'draft' then 'bg-yellow-100 text-yellow-800'  
              when 'archived' then 'bg-gray-100 text-gray-800'
              else 'bg-gray-100 text-gray-800'
              end
            %>">
              <%= @journey.status.humanize %>
            </span>
          </div>
          
          <% if @journey.published_at %>
            <div class="mt-4">
              <p class="text-sm text-gray-500">
                Published <%= time_ago_in_words(@journey.published_at) %> ago
              </p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Performance -->
      <% if @performance_score && @performance_score > 0 %>
        <div class="mt-6 bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Performance</h3>
            <div class="mt-5">
              <div class="text-3xl font-bold text-indigo-600">
                <%= number_to_percentage(@performance_score, precision: 1) %>
              </div>
              <p class="text-sm text-gray-500">Overall performance score</p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Campaign -->
      <% if @campaign %>
        <div class="mt-6 bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Campaign</h3>
            <div class="mt-5">
              <p class="text-sm font-medium text-gray-900"><%= @campaign.name %></p>
              <p class="text-sm text-gray-500"><%= @campaign.campaign_type&.humanize %></p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Actions -->
      <div class="mt-6 bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Actions</h3>
          <div class="mt-5 space-y-3">
            <% if @journey.status != 'archived' %>
              <%= link_to "Archive Journey", archive_journey_path(@journey), method: :post,
                  class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                  data: { confirm: "Are you sure you want to archive this journey?" } %>
            <% end %>
            
            <%= link_to "Delete Journey", @journey, method: :delete,
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                data: { confirm: "Are you sure you want to delete this journey? This action cannot be undone." } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>