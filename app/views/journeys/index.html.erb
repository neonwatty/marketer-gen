<% content_for :title, "Journeys" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Header with Stats -->
  <div class="sm:flex sm:items-start sm:justify-between">
    <div class="sm:flex-auto">
      <h1 class="text-heading-h2">Customer Journeys</h1>
      <p class="mt-2 text-base leading-relaxed text-tertiary">Design, manage, and optimize your marketing automation flows.</p>
      
      <!-- Quick Stats -->
      <div class="mt-4 grid grid-cols-1 gap-5 sm:grid-cols-4">
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>  
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-muted truncate">Published</dt>
                  <dd class="text-xl font-semibold text-primary"><%= @journeys.published.count %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>  
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-muted truncate">Draft</dt>
                  <dd class="text-xl font-semibold text-primary"><%= @journeys.draft.count %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>  
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-muted truncate">Total Steps</dt>
                  <dd class="text-xl font-semibold text-primary"><%= @journeys.joins(:journey_steps).count %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M9.243 3.03a1 1 0 01.727 1.213L9.53 6h2.94l.56-2.243a1 1 0 111.94.486L14.53 6H17a1 1 0 110 2h-2.97l-1 4H15a1 1 0 110 2h-2.47l-.56 2.242a1 1 0 11-1.94-.485L10.47 14H7.53l-.56 2.242a1 1 0 11-1.94-.485L5.47 14H3a1 1 0 110-2h2.97l1-4H5a1 1 0 110-2h2.47l.56-2.243a1 1 0 011.213-.727zM9.03 8l-1 4h2.94l1-4H9.03z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>  
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-muted truncate">Avg. Performance</dt>
                  <dd class="text-xl font-semibold text-primary">
                    <%= number_to_percentage(@journeys.map(&:latest_performance_score).compact.sum / [@journeys.count, 1].max, precision: 0) %>
                  </dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <div class="flex space-x-3">
        <%= link_to journey_templates_path, class: "inline-flex items-center justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Templates
        <% end %>
        <%= link_to "New Journey", new_journey_path, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
    </div>
  </div>

  <!-- Enhanced Filters and View Controls -->
  <div class="mt-8 bg-white rounded-lg shadow">
    <div class="p-4 border-b border-gray-200">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div class="flex-1">
          <%= form_with url: journeys_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-4" do |form| %>
            <div class="flex-1">
              <%= form.text_field :search, placeholder: "Search journeys...", value: params[:search], 
                  class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>
            
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 sm:flex-none">
              <%= form.select :status, options_for_select([
                ['All Statuses', ''],
                ['Draft', 'draft'],
                ['Published', 'published'],
                ['Archived', 'archived']
              ], params[:status]), {}, { 
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" 
              } %>
              
              <%= form.select :campaign_type, options_for_select([
                ['All Types', '']
              ] + Journey::CAMPAIGN_TYPES.map { |type| [type.humanize, type] }, params[:campaign_type]), {}, { 
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" 
              } %>
              
              <%= form.select :sort_by, options_for_select([
                ['Recently Updated', ''],
                ['Name', 'name'],
                ['Created Date', 'created_at'],
                ['Status', 'status']
              ], params[:sort_by]), {}, { 
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" 
              } %>
              
              <%= form.submit "Filter", 
                  class: "inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          <% end %>
        </div>
        
        <!-- View Toggle -->
        <div class="mt-4 sm:mt-0 sm:ml-4 flex items-center space-x-2">
          <span class="text-sm text-gray-500">View:</span>
          <div class="bg-gray-100 p-1 rounded-md flex">
            <button id="grid-view-btn" 
                    class="view-toggle px-3 py-1 text-sm font-medium rounded text-gray-700 bg-white shadow-sm border border-gray-300 hover:bg-gray-50 active">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
              </svg>
            </button>
            <button id="list-view-btn" 
                    class="view-toggle px-3 py-1 text-sm font-medium rounded text-gray-500 hover:text-gray-700 hover:bg-gray-50">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Journeys Grid View -->
  <div id="grid-view" class="mt-6">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @journeys.each do |journey| %>
        <div class="group bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200 hover:shadow-md hover:border-gray-300 transition-all duration-200">
          <!-- Header with Status and Actions -->
          <div class="px-6 py-4 border-b border-gray-100">
            <div class="flex items-start justify-between">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <% case journey.status %>
                  <% when 'published' %>
                    <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center">
                      <svg class="h-5 w-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                  <% when 'draft' %>
                    <div class="h-10 w-10 rounded-full bg-yellow-100 flex items-center justify-center">
                      <svg class="h-5 w-5 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                  <% else %>
                    <div class="h-10 w-10 rounded-full bg-gray-100 flex items-center justify-center">
                      <svg class="h-5 w-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="ml-4">
                  <h3 class="text-heading-h5 group-hover:text-indigo-600 transition-colors">
                    <%= link_to journey.name, journey, class: "block" %>
                  </h3>
                  <div class="flex items-center space-x-2 text-sm text-muted">
                    <span><%= journey.campaign_type&.humanize || 'No type' %></span>
                    <span>•</span>
                    <span><%= journey.total_steps %> steps</span>
                    <% if journey.brand.present? %>
                      <span>•</span>
                      <span class="text-info"><%= journey.brand.name %></span>
                    <% end %>
                  </div>
                </div>
              </div>
              
              <!-- Quick Actions -->
              <div class="relative" data-controller="dropdown">
                <button data-action="click->dropdown#toggle" class="p-2 text-gray-400 hover:text-gray-600 rounded-full hover:bg-gray-100">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                  </svg>
                </button>
                <div data-dropdown-target="menu" class="dropdown-menu hidden absolute right-0 top-8 w-48 bg-white rounded-md shadow-lg z-10 border border-gray-200">
                  <%= link_to journey, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                    <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    View Details
                  <% end %>
                  <%= link_to edit_journey_path(journey), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                    <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit Journey
                  <% end %>
                  <%= link_to duplicate_journey_path(journey), method: :post, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                    <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                    Duplicate
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Content -->
          <div class="px-6 py-4">
            <p class="text-base leading-relaxed text-tertiary line-clamp-2 mb-4">
              <%= journey.description.present? ? truncate(journey.description, length: 120) : "No description provided" %>
            </p>
            
            <!-- Analytics Row -->
            <% if journey.latest_performance_score > 0 %>
              <div class="mb-4 p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-600">Performance</span>
                  <span class="font-semibold text-gray-900">
                    <%= number_to_percentage(journey.latest_performance_score, precision: 1) %>
                  </span>
                </div>
                <div class="mt-2 bg-gray-200 rounded-full h-2">
                  <div class="bg-gradient-to-r from-green-400 to-blue-500 h-2 rounded-full" 
                       style="width: <%= journey.latest_performance_score %>%"></div>
                </div>
              </div>
            <% end %>
            
            <!-- Brand Compliance Indicator -->
            <% if journey.brand.present? %>
              <% compliance_score = journey.latest_brand_compliance_score %>
              <div class="mb-4 flex items-center justify-between p-2 bg-blue-50 rounded">
                <div class="flex items-center">
                  <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-sm text-blue-900 font-medium">Brand Compliance</span>
                </div>
                <span class="text-sm font-semibold <%= compliance_score >= 0.8 ? 'text-green-600' : compliance_score >= 0.6 ? 'text-yellow-600' : 'text-red-600' %>">
                  <%= number_to_percentage(compliance_score * 100, precision: 0) %>
                </span>
              </div>
            <% end %>
            
            <!-- Tags and Status -->
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-2">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                      <%= case journey.status
                          when 'published' then 'bg-green-100 text-green-800'
                          when 'draft' then 'bg-yellow-100 text-yellow-800'  
                          when 'archived' then 'bg-gray-100 text-gray-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                  <%= journey.status.humanize %>
                </span>
                
                <% if journey.campaign.present? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= journey.campaign.name %>
                  </span>
                <% end %>
              </div>
              
              <div class="text-xs text-gray-500">
                Updated <%= time_ago_in_words(journey.updated_at) %> ago
              </div>
            </div>
          </div>
          
          <!-- Footer Actions -->
          <div class="px-6 py-3 bg-gray-50 border-t border-gray-100">
            <div class="flex justify-between items-center">
              <div class="flex space-x-3">
                <%= link_to journey, class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium" %>
                  View
                <% end %>
                <%= link_to edit_journey_path(journey), class: "text-sm text-gray-600 hover:text-gray-800" do %>
                  Edit
                <% end %>
              </div>
              
              <% if journey.status == 'draft' %>
                <%= link_to publish_journey_path(journey), method: :post, 
                    class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded text-white bg-green-600 hover:bg-green-700" do %>
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                  </svg>
                  Publish
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Enhanced List View -->
  <div id="list-view" class="mt-6 hidden">
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @journeys.each do |journey| %>
          <li class="hover:bg-gray-50">
            <div class="px-6 py-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center flex-1 min-w-0">
                  <!-- Status Icon -->
                  <div class="flex-shrink-0 mr-4">
                    <% case journey.status %>
                    <% when 'published' %>
                      <div class="h-8 w-8 rounded-full bg-green-100 flex items-center justify-center">
                        <svg class="h-4 w-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                      </div>
                    <% when 'draft' %>
                      <div class="h-8 w-8 rounded-full bg-yellow-100 flex items-center justify-center">
                        <svg class="h-4 w-4 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                        </svg>
                      </div>
                    <% else %>
                      <div class="h-8 w-8 rounded-full bg-gray-100 flex items-center justify-center">
                        <svg class="h-4 w-4 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                        </svg>
                      </div>
                    <% end %>
                  </div>
                  
                  <!-- Journey Info -->
                  <div class="flex-1 min-w-0">
                    <h3 class="text-lg font-medium text-gray-900 truncate">
                      <%= link_to journey.name, journey, class: "hover:text-indigo-600" %>
                    </h3>
                    <div class="mt-1 flex items-center space-x-4 text-sm text-gray-500">
                      <span><%= journey.campaign_type&.humanize || 'No type' %></span>
                      <span><%= journey.total_steps %> steps</span>
                      <% if journey.brand.present? %>
                        <span class="text-blue-600"><%= journey.brand.name %></span>
                      <% end %>
                      <span>Updated <%= time_ago_in_words(journey.updated_at) %> ago</span>
                    </div>
                    <% if journey.description.present? %>
                      <p class="mt-2 text-sm text-gray-600 truncate">
                        <%= journey.description %>
                      </p>
                    <% end %>
                  </div>
                </div>
                
                <!-- Metrics and Actions -->
                <div class="flex items-center space-x-6">
                  <!-- Performance Score -->
                  <% if journey.latest_performance_score > 0 %>
                    <div class="text-center">
                      <div class="text-sm font-medium text-gray-900">
                        <%= number_to_percentage(journey.latest_performance_score, precision: 0) %>
                      </div>
                      <div class="text-xs text-gray-500">Performance</div>
                    </div>
                  <% end %>
                  
                  <!-- Brand Compliance -->
                  <% if journey.brand.present? %>
                    <% compliance_score = journey.latest_brand_compliance_score %>
                    <div class="text-center">
                      <div class="text-sm font-medium <%= compliance_score >= 0.8 ? 'text-green-600' : compliance_score >= 0.6 ? 'text-yellow-600' : 'text-red-600' %>">
                        <%= number_to_percentage(compliance_score * 100, precision: 0) %>
                      </div>
                      <div class="text-xs text-gray-500">Compliance</div>
                    </div>
                  <% end %>
                  
