      </div>
    </div>
  <% end %>

  <!-- Enhanced Pagination -->
  <% if @journeys.respond_to?(:total_pages) && @journeys.total_pages > 1 %>
    <div class="mt-8 bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 rounded-lg shadow">
      <div class="flex-1 flex justify-between sm:hidden">
        <% if @journeys.prev_page %>
          <%= link_to journeys_path(page: @journeys.prev_page), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            Previous
          <% end %>
        <% end %>
        <% if @journeys.next_page %>
          <%= link_to journeys_path(page: @journeys.next_page), class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            Next
          <% end %>
        <% end %>
      </div>
      <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
        <div>
          <p class="text-sm text-gray-700">
            Showing <span class="font-medium"><%= @journeys.offset_value + 1 %></span> to 
            <span class="font-medium"><%= [@journeys.offset_value + @journeys.limit_value, @journeys.total_count].min %></span> of 
            <span class="font-medium"><%= @journeys.total_count %></span> journeys
          </p>
        </div>
        <div>
          <%= paginate @journeys, theme: 'twitter_bootstrap_4' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  // View Toggle Functionality
  document.addEventListener('DOMContentLoaded', function() {
    const gridViewBtn = document.getElementById('grid-view-btn');
    const listViewBtn = document.getElementById('list-view-btn');
    const gridView = document.getElementById('grid-view');
    const listView = document.getElementById('list-view');
    
    // Load saved preference or default to grid
    let currentView = localStorage.getItem('journeys-view') || 'grid';
    
    function switchToView(view) {
      if (view === 'list') {
        gridView.classList.add('hidden');
        listView.classList.remove('hidden');
        gridViewBtn.classList.remove('active', 'bg-white', 'shadow-sm', 'border-gray-300', 'text-gray-700');
        gridViewBtn.classList.add('text-gray-500', 'hover:text-gray-700', 'hover:bg-gray-50');
        listViewBtn.classList.remove('text-gray-500', 'hover:text-gray-700', 'hover:bg-gray-50');
        listViewBtn.classList.add('active', 'bg-white', 'shadow-sm', 'border-gray-300', 'text-gray-700');
        currentView = 'list';
      } else {
        listView.classList.add('hidden');
        gridView.classList.remove('hidden');
        listViewBtn.classList.remove('active', 'bg-white', 'shadow-sm', 'border-gray-300', 'text-gray-700');
        listViewBtn.classList.add('text-gray-500', 'hover:text-gray-700', 'hover:bg-gray-50');
        gridViewBtn.classList.remove('text-gray-500', 'hover:text-gray-700', 'hover:bg-gray-50');
        gridViewBtn.classList.add('active', 'bg-white', 'shadow-sm', 'border-gray-300', 'text-gray-700');
        currentView = 'grid';
      }
      localStorage.setItem('journeys-view', currentView);
    }
    
    // Set initial view
    switchToView(currentView);
    
    // Event listeners
    gridViewBtn.addEventListener('click', () => switchToView('grid'));
    listViewBtn.addEventListener('click', () => switchToView('list'));
    
    // Auto-refresh data every 30 seconds for real-time updates
    if (document.querySelector('[data-auto-refresh="true"]')) {
      setInterval(() => {
        // Only refresh if user is active and on the page
        if (!document.hidden && Date.now() - window.lastActivity < 60000) {
          fetch(window.location.href, {
            headers: { 'Accept': 'application/json' }
          })
          .then(response => response.json())
          .then(data => {
            // Update journey cards with new data
            // This would require more sophisticated updating logic
            console.log('Data refreshed');
          })
          .catch(error => console.log('Refresh failed:', error));
        }
      }, 30000);
      
      // Track user activity
      window.lastActivity = Date.now();
      document.addEventListener('mousemove', () => window.lastActivity = Date.now());
      document.addEventListener('keypress', () => window.lastActivity = Date.now());
    }
  });
</script>

