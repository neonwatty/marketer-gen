<div class="container mx-auto px-6 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Customer Journeys</h1>
      <p class="text-gray-600 mt-2">Create and manage your customer journey campaigns</p>
    </div>
    <%= link_to "New Journey", new_journey_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6" data-controller="filters">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Filter Journeys</h3>
    <%= form_with url: journeys_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |form| %>
      <div>
        <%= form.label :campaign_type, "Campaign Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :campaign_type, options_for_select([["All Types", ""]] + Journey::CAMPAIGN_TYPES.map {|t| [t.humanize, t]}), { selected: params[:campaign_type] }, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>
      
      <div>
        <%= form.label :template_type, "Template Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :template_type, options_for_select([["All Templates", ""]] + Journey::TEMPLATE_TYPES.map {|t| [t.humanize, t]}), { selected: params[:template_type] }, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>
      
      <div>
        <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :status, options_for_select([["All Statuses", ""]] + Journey::STATUSES.map {|s| [s.humanize, s]}), { selected: params[:status] }, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>
      
      <div class="flex items-end">
        <%= form.submit "Apply Filters", class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
        <%= link_to "Clear", journeys_path, class: "ml-2 text-gray-600 hover:text-gray-800 font-medium py-2 px-4" %>
      </div>
    <% end %>
  </div>

  <!-- Journeys Grid -->
  <% if @journeys.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @journeys.each do |journey| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
          <div class="p-6">
            <div class="flex justify-between items-start mb-4">
              <h3 class="text-lg font-semibold text-gray-900 truncate"><%= journey.name %></h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_badge_classes(journey.status) %>">
                <%= journey.status.humanize %>
              </span>
            </div>
            
            <p class="text-gray-600 text-sm mb-4 line-clamp-3"><%= journey.description %></p>
            
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= journey.campaign_type.humanize %>
              </span>
              <% if journey.template_type.present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <%= journey.template_type.humanize %>
                </span>
              <% end %>
            </div>
            
            <div class="flex justify-between items-center text-sm text-gray-500 mb-4">
              <span><%= pluralize(journey.total_steps, 'step') %></span>
              <span><%= time_ago_in_words(journey.created_at) %> ago</span>
            </div>
            
            <div class="flex space-x-2">
              <%= link_to "View", journey, class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white text-center py-2 px-3 rounded-md text-sm font-medium transition-colors" %>
              <%= link_to "Edit", edit_journey_path(journey), class: "flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 text-center py-2 px-3 rounded-md text-sm font-medium transition-colors" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No journeys found</h3>
      <p class="text-gray-600 mb-6">Get started by creating your first customer journey.</p>
      <%= link_to "Create Journey", new_journey_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>