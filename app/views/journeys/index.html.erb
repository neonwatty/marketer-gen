<div class="container mx-auto px-6 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Customer Journeys</h1>
      <p class="text-gray-600 mt-2">Create and manage your customer journey campaigns</p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Use Template", select_template_journeys_path, class: "bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium py-2 px-4 rounded-lg transition-colors" %>
      <%= link_to "New Journey", new_journey_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
    </div>
  </div>

  <!-- Analytics Dashboard -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-blue-100">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Journeys</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @analytics[:total_journeys] %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-green-100">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Active</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @analytics[:active_journeys] %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-purple-100">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Completed</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @analytics[:completed_journeys] %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-yellow-100">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Avg. Completion</p>
          <p class="text-2xl font-semibold text-gray-900"><%= number_with_precision(@analytics[:average_completion_rate], precision: 1) %>%</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6" data-controller="filters">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Search & Filter Journeys</h3>
    <%= form_with url: journeys_path, method: :get, local: true, class: "space-y-4" do |form| %>
      <!-- Search Bar -->
      <div>
        <%= form.label :search, "Search journeys", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="relative">
          <%= form.text_field :search, placeholder: "Search by name or description...", value: params[:search], class: "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-blue-500 focus:border-blue-500" %>
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Filters -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <%= form.label :campaign_type, "Campaign Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :campaign_type, options_for_select([["All Types", ""]] + Journey::CAMPAIGN_TYPES.map {|t| [t.humanize, t]}), { selected: params[:campaign_type] }, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
        </div>
        
        <div>
          <%= form.label :template_type, "Template Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :template_type, options_for_select([["All Templates", ""]] + Journey::TEMPLATE_TYPES.map {|t| [t.humanize, t]}), { selected: params[:template_type] }, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
        </div>
        
        <div>
          <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :status, options_for_select([["All Statuses", ""]] + Journey::STATUSES.map {|s| [s.humanize, s]}), { selected: params[:status] }, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
        </div>
        
        <div class="flex items-end">
          <%= form.submit "Apply Filters", class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-md transition-colors mr-2" %>
          <%= link_to "Clear", journeys_path, class: "text-gray-600 hover:text-gray-800 font-medium py-2 px-4" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Bulk Actions -->
  <% if @journeys.any? %>
    <div data-controller="bulk-actions" 
         data-bulk-actions-resource-value="journeys"
         data-bulk-actions-archive-url-value="<%= bulk_archive_journeys_path %>"
         data-bulk-actions-duplicate-url-value="<%= bulk_duplicate_journeys_path %>"
         data-bulk-actions-delete-url-value="<%= bulk_delete_journeys_path %>"
         class="mb-6">
      
      <!-- Bulk Actions Toolbar (Initially Hidden) -->
      <div data-bulk-actions-target="toolbar" class="hidden bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <span class="text-sm font-medium text-blue-900">
              <span data-bulk-actions-target="selectedCount">0</span> journeys selected
            </span>
            <button type="button" 
                    data-action="click->bulk-actions#clearSelection"
                    class="text-sm text-blue-600 hover:text-blue-800">Clear Selection</button>
          </div>
          
          <div class="flex space-x-2">
            <button type="button" 
                    data-action="click->bulk-actions#bulkDuplicate"
                    data-bulk-actions-target="bulkButton"
                    class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-3 rounded-md text-sm transition-colors">
              Duplicate Selected
            </button>
            <button type="button" 
                    data-action="click->bulk-actions#bulkArchive"
                    data-bulk-actions-target="bulkButton"
                    class="bg-yellow-600 hover:bg-yellow-700 text-white font-medium py-2 px-3 rounded-md text-sm transition-colors">
              Archive Selected
            </button>
            <button type="button" 
                    data-action="click->bulk-actions#bulkDelete"
                    data-bulk-actions-target="bulkButton"
                    data-min-selection="1"
                    class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-3 rounded-md text-sm transition-colors">
              Delete Selected
            </button>
          </div>
        </div>
      </div>

      <!-- Select All Header -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <input type="checkbox" 
                   data-bulk-actions-target="selectAllCheckbox"
                   data-action="change->bulk-actions#selectAll"
                   class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
            <h3 class="text-lg font-medium text-gray-900">Select Journeys</h3>
          </div>
          <p class="text-sm text-gray-600">Select journeys to perform bulk actions</p>
        </div>
      </div>
    
      <!-- Journeys Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" data-controller="journey-comparison">
        <% @journeys.each do |journey| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow" data-bulk-actions-target="row">
          <div class="p-6">
            <div class="flex justify-between items-start mb-4">
              <div class="flex items-center space-x-3">
                <input type="checkbox" 
                       name="journey_ids[]" 
                       value="<%= journey.id %>"
                       data-bulk-actions-target="checkbox"
                       data-action="change->bulk-actions#toggleSelection"
                       class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                <h3 class="text-lg font-semibold text-gray-900 truncate"><%= journey.name %></h3>
              </div>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_badge_classes(journey.status) %>">
                <%= journey.status.humanize %>
              </span>
            </div>
            
            <p class="text-gray-600 text-sm mb-4 line-clamp-3"><%= journey.description %></p>
            
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= journey.campaign_type.humanize %>
              </span>
              <% if journey.template_type.present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <%= journey.template_type.humanize %>
                </span>
              <% end %>
            </div>
            
            <div class="grid grid-cols-2 gap-4 mb-4 text-sm">
              <div class="text-gray-500">
                <span class="font-medium"><%= pluralize(journey.total_steps, 'step') %></span>
              </div>
              <div class="text-gray-500">
                <span class="font-medium"><%= journey.completion_rate %>% complete</span>
              </div>
              <div class="text-gray-500">
                <span>Created <%= time_ago_in_words(journey.created_at) %> ago</span>
              </div>
              <div class="text-gray-500">
                <span>Last activity <%= time_ago_in_words(journey.last_activity) %> ago</span>
              </div>
            </div>
            
            <div class="flex flex-col space-y-2">
              <div class="flex space-x-2">
                <%= link_to "View", journey, class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white text-center py-2 px-3 rounded-md text-sm font-medium transition-colors" %>
                <%= link_to "Edit", edit_journey_path(journey), class: "flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 text-center py-2 px-3 rounded-md text-sm font-medium transition-colors" %>
              </div>
              
              <div class="flex space-x-2">
                <%= link_to "Duplicate", duplicate_journey_path(journey), method: :post, class: "flex-1 bg-green-100 hover:bg-green-200 text-green-700 text-center py-1 px-2 rounded text-xs font-medium transition-colors" %>
                <% if journey.can_be_archived? %>
                  <%= link_to "Archive", archive_journey_path(journey), method: :patch, 
                      data: { confirm: "Are you sure you want to archive this journey?" },
                      class: "flex-1 bg-yellow-100 hover:bg-yellow-200 text-yellow-700 text-center py-1 px-2 rounded text-xs font-medium transition-colors" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No journeys found</h3>
      <p class="text-gray-600 mb-6">Get started by creating your first customer journey.</p>
      <%= link_to "Create Journey", new_journey_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>

