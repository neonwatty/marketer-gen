<% content_for :title, "Edit #{@journey.name}" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-6">
    <div class="flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900">Edit Journey</h1>
      <%= link_to "Back to Journey", @journey, class: "text-indigo-600 hover:text-indigo-900" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-8">
      <%= form_with model: @journey, local: true, class: "space-y-6" do |form| %>
        <% if @journey.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@journey.errors.count, "error") %> prohibited this journey from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @journey.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Enter journey name" %>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description, rows: 4, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Describe the purpose and flow of this journey" %>
        </div>

        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <%= form.label :campaign_type, class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :campaign_type, 
                options_for_select([['Select a type', '']] + Journey::CAMPAIGN_TYPES.map { |type| [type.humanize, type] }, @journey.campaign_type),
                {},
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>

          <div>
            <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :status,
                options_for_select([
                  ['Draft', 'draft'],
                  ['Published', 'published'],
                  ['Archived', 'archived']
                ], @journey.status),
                {},
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>
        </div>

        <div>
          <%= form.label :target_audience, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :target_audience, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Who is this journey designed for?" %>
        </div>

        <% if @campaigns.any? %>
          <div>
            <%= form.label :campaign_id, "Campaign (optional)", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :campaign_id,
                options_for_select([['No campaign', '']] + @campaigns.map { |c| [c.name, c.id] }, @journey.campaign_id),
                {},
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>
        <% end %>

        <% if @brands.any? %>
          <div>
            <%= form.label :brand_id, "Brand (optional)", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :brand_id,
                options_for_select([['No brand', '']] + @brands.map { |b| [b.name, b.id] }, @journey.brand_id),
                {},
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>
        <% end %>

        <div>
          <%= form.label :goals, "Goals (one per line)", class: "block text-sm font-medium text-gray-700" %>
          <%= text_area_tag "journey[goals]", (@journey.goals || []).join("\n"), 
              rows: 3, 
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: "List the main goals for this journey" %>
          <p class="mt-2 text-sm text-gray-500">Enter each goal on a separate line</p>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", @journey, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= form.submit "Update Journey", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>