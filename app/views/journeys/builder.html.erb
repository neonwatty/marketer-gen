<% content_for :title, "Journey Builder" %>

<div class="journey-builder-container" data-journey-id="<%= @journey&.id %>">
  <!-- Journey Builder Header -->
  <div class="bg-white border-b border-gray-200 shadow-sm sticky top-0 z-50">
    <div class="px-6 py-4 flex items-center justify-between">
      <!-- Left: Navigation and Title -->
      <div class="flex items-center space-x-4">
        <%= link_to journeys_path, class: "text-gray-500 hover:text-gray-700 transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <div>
          <h1 class="text-xl font-semibold text-gray-900">Journey Builder</h1>
          <div class="flex items-center space-x-2 text-sm text-gray-500">
            <span id="journey-name-display"><%= @journey&.name || "New Journey" %></span>
            <span id="unsaved-indicator" class="hidden text-yellow-600 font-medium">‚óè Unsaved changes</span>
          </div>
        </div>
      </div>
      
      <!-- Center: Builder Tools -->
      <div class="flex items-center space-x-2">
        <button id="undo-btn" class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-md disabled:opacity-50" title="Undo (Ctrl+Z)" disabled>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
          </svg>
        </button>
        <button id="redo-btn" class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-md disabled:opacity-50" title="Redo (Ctrl+Shift+Z)" disabled>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 10h-10a8 8 0 00-8 8v2m18-10l-6 6m6-6l-6-6"/>
          </svg>
        </button>
        <div class="w-px h-6 bg-gray-300"></div>
        
        <!-- Zoom Controls -->
        <div class="flex items-center space-x-1 bg-gray-100 rounded-md p-1">
          <button id="zoom-out-btn" class="p-1 text-gray-600 hover:text-gray-800 hover:bg-white rounded">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM13 10H7"/>
            </svg>
          </button>
          <span id="zoom-level" class="text-xs text-gray-600 min-w-12 text-center">100%</span>
          <button id="zoom-in-btn" class="p-1 text-gray-600 hover:text-gray-800 hover:bg-white rounded">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
            </svg>
          </button>
        </div>
        <button id="fit-to-screen-btn" class="px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100 rounded-md">
          Fit to Screen
        </button>
      </div>
      
      <!-- Right: Actions -->
      <div class="flex items-center space-x-3">
        <div data-controller="loading" data-loading-type-value="button">
          <%= render "shared/loading_button", 
              text: "AI Suggestions",
              loading_text: "Generating...",
              type: "button",
              variant: "outline",
              size: "sm",
              classes: "text-indigo-600 bg-indigo-50 border-indigo-200 hover:bg-indigo-100",
              id: "ai-suggestions-btn",
              icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>'.html_safe %>
        </div>
        <button id="preview-btn" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
          Preview
        </button>
        <%= render "shared/loading_button", 
            text: "Save Draft",
            loading_text: "Saving...",
            type: "button",
            variant: "secondary",
            size: "sm",
            id: "save-draft-btn",
            icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"/></svg>'.html_safe %>
        <%= render "shared/loading_button", 
            text: "Publish Journey",
            loading_text: "Publishing...",
            type: "button",
            variant: "primary",
            size: "sm",
            id: "publish-btn",
            icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/></svg>'.html_safe %>
      </div>
    </div>
  </div>

  <!-- Main Builder Layout -->
  <div class="flex h-screen pt-16 bg-gray-50">
    <!-- Left Sidebar: Components Palette -->
    <div class="w-80 bg-white border-r border-gray-200 flex-shrink-0 overflow-y-auto custom-scrollbar">
      <div class="p-6">
        <!-- Quick Templates -->
        <div class="mb-6">
          <h3 class="text-sm font-semibold text-gray-900 mb-3 flex items-center">
            <svg class="w-4 h-4 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Quick Start Templates
          </h3>
          <div class="space-y-2">
            <button class="template-card w-full p-3 border border-gray-200 rounded-lg hover:bg-blue-50 hover:border-blue-200 text-left transition-colors" 
                    data-template="welcome-series">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-blue-100 rounded flex items-center justify-center">
                  <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Welcome Series</p>
                  <p class="text-xs text-gray-500">3-email onboarding sequence</p>
                </div>
              </div>
            </button>
            
            <button class="template-card w-full p-3 border border-gray-200 rounded-lg hover:bg-green-50 hover:border-green-200 text-left transition-colors" 
                    data-template="nurture-campaign">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-green-100 rounded flex items-center justify-center">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Lead Nurture</p>
                  <p class="text-xs text-gray-500">Educational content flow</p>
                </div>
              </div>
            </button>
            
            <button class="template-card w-full p-3 border border-gray-200 rounded-lg hover:bg-amber-50 hover:border-amber-200 text-left transition-colors" 
                    data-template="conversion-funnel">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-amber-100 rounded flex items-center justify-center">
                  <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Sales Funnel</p>
                  <p class="text-xs text-gray-500">Prospect to customer flow</p>
                </div>
              </div>
            </button>
          </div>
        </div>

        <!-- Journey Steps by Stage -->
        <div class="space-y-6">
          <!-- Awareness Stage -->
          <div class="journey-stage-section" data-stage="awareness">
            <div class="flex items-center space-x-2 mb-3">
              <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
              <h4 class="text-sm font-semibold text-gray-900">Awareness Stage</h4>
              <span class="text-xs text-gray-500">(Top of funnel)</span>
            </div>
            <div class="space-y-2">
              <div class="step-component group cursor-pointer p-3 border border-blue-200 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors" 
                   draggable="true" data-step-type="blog_post" data-stage="awareness">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-blue-100 rounded flex items-center justify-center group-hover:bg-white">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-blue-900">Blog Post</p>
                    <p class="text-xs text-blue-700">Educational content</p>
                  </div>
                </div>
              </div>
              
              <div class="step-component group cursor-pointer p-3 border border-blue-200 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors" 
                   draggable="true" data-step-type="social_media" data-stage="awareness">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-blue-100 rounded flex items-center justify-center group-hover:bg-white">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m-9 0h10m-10 0a2 2 0 00-2 2v14a2 2 0 002 2h10a2 2 0 002-2V6a2 2 0 00-2-2"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-blue-900">Social Media Post</p>
                    <p class="text-xs text-blue-700">Social engagement</p>
                  </div>
                </div>
              </div>
              
              <div class="step-component group cursor-pointer p-3 border border-blue-200 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors" 
                   draggable="true" data-step-type="lead_magnet" data-stage="awareness">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-blue-100 rounded flex items-center justify-center group-hover:bg-white">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-blue-900">Lead Magnet</p>
                    <p class="text-xs text-blue-700">Free resource offer</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Consideration Stage -->
          <div class="journey-stage-section" data-stage="consideration">
            <div class="flex items-center space-x-2 mb-3">
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              <h4 class="text-sm font-semibold text-gray-900">Consideration Stage</h4>
              <span class="text-xs text-gray-500">(Middle of funnel)</span>
            </div>
            <div class="space-y-2">
              <div class="step-component group cursor-pointer p-3 border border-green-200 bg-green-50 rounded-lg hover:bg-green-100 transition-colors" 
                   draggable="true" data-step-type="email_sequence" data-stage="consideration">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-green-100 rounded flex items-center justify-center group-hover:bg-white">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-green-900">Email Sequence</p>
                    <p class="text-xs text-green-700">Automated email series</p>
                  </div>
                </div>
              </div>
              
              <div class="step-component group cursor-pointer p-3 border border-green-200 bg-green-50 rounded-lg hover:bg-green-100 transition-colors" 
                   draggable="true" data-step-type="webinar" data-stage="consideration">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-green-100 rounded flex items-center justify-center group-hover:bg-white">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-green-900">Webinar</p>
                    <p class="text-xs text-green-700">Educational presentation</p>
                  </div>
                </div>
              </div>
              
              <div class="step-component group cursor-pointer p-3 border border-green-200 bg-green-50 rounded-lg hover:bg-green-100 transition-colors" 
                   draggable="true" data-step-type="case_study" data-stage="consideration">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-green-100 rounded flex items-center justify-center group-hover:bg-white">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-green-900">Case Study</p>
                    <p class="text-xs text-green-700">Success story content</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Conversion Stage -->
          <div class="journey-stage-section" data-stage="conversion">
            <div class="flex items-center space-x-2 mb-3">
              <div class="w-3 h-3 bg-amber-500 rounded-full"></div>
              <h4 class="text-sm font-semibold text-gray-900">Conversion Stage</h4>
              <span class="text-xs text-gray-500">(Bottom of funnel)</span>
            </div>
            <div class="space-y-2">
              <div class="step-component group cursor-pointer p-3 border border-amber-200 bg-amber-50 rounded-lg hover:bg-amber-100 transition-colors" 
                   draggable="true" data-step-type="sales_call" data-stage="conversion">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-amber-100 rounded flex items-center justify-center group-hover:bg-white">
                    <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-amber-900">Sales Call</p>
                    <p class="text-xs text-amber-700">Personal consultation</p>
                  </div>
                </div>
              </div>
              
              <div class="step-component group cursor-pointer p-3 border border-amber-200 bg-amber-50 rounded-lg hover:bg-amber-100 transition-colors" 
                   draggable="true" data-step-type="demo" data-stage="conversion">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-amber-100 rounded flex items-center justify-center group-hover:bg-white">
                    <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-amber-900">Product Demo</p>
                    <p class="text-xs text-amber-700">Live demonstration</p>
                  </div>
                </div>
              </div>
              
              <div class="step-component group cursor-pointer p-3 border border-amber-200 bg-amber-50 rounded-lg hover:bg-amber-100 transition-colors" 
                   draggable="true" data-step-type="trial_offer" data-stage="conversion">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-amber-100 rounded flex items-center justify-center group-hover:bg-white">
                    <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2m0 0V9a2 2 0 00-2 2v2a2 2 0 00-2 2v1a2 2 0 00-2 2v3.24a2 2 0 01-.659 1.472L3 19.24V8.5A2.5 2.5 0 015.5 6H10"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-amber-900">Free Trial</p>
                    <p class="text-xs text-amber-700">Product trial offer</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Retention Stage -->
          <div class="journey-stage-section" data-stage="retention">
            <div class="flex items-center space-x-2 mb-3">
              <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
              <h4 class="text-sm font-semibold text-gray-900">Retention Stage</h4>
              <span class="text-xs text-gray-500">(Post-purchase)</span>
            </div>
            <div class="space-y-2">
              <div class="step-component group cursor-pointer p-3 border border-purple-200 bg-purple-50 rounded-lg hover:bg-purple-100 transition-colors" 
                   draggable="true" data-step-type="onboarding" data-stage="retention">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-purple-100 rounded flex items-center justify-center group-hover:bg-white">
                    <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-purple-900">Customer Onboarding</p>
                    <p class="text-xs text-purple-700">Welcome new customers</p>
                  </div>
                </div>
              </div>
              
              <div class="step-component group cursor-pointer p-3 border border-purple-200 bg-purple-50 rounded-lg hover:bg-purple-100 transition-colors" 
                   draggable="true" data-step-type="newsletter" data-stage="retention">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-purple-100 rounded flex items-center justify-center group-hover:bg-white">
                    <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-purple-900">Newsletter</p>
                    <p class="text-xs text-purple-700">Regular updates</p>
                  </div>
                </div>
              </div>
              
