<div class="container mx-auto px-6 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Journey Comparison</h1>
      <p class="text-gray-600 mt-2">Compare performance and structure across selected journeys</p>
    </div>
    <%= link_to "Back to Journeys", journeys_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
  </div>

  <!-- High-Level Metrics Comparison -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Performance Overview</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Journey</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Steps</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Completion Rate</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Campaign Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @comparison_data.each do |data| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= data[:journey].name %></div>
                <div class="text-sm text-gray-500"><%= truncate(data[:journey].description, length: 50) %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_badge_classes(data[:journey].status) %>">
                  <%= data[:journey].status.humanize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= data[:analytics][:total_steps] %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= data[:analytics][:completion_rate] %>%
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= data[:journey].campaign_type.humanize %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= data[:analytics][:duration] %> days
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Step Type Breakdown -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Steps by Type</h3>
      <div class="space-y-4">
        <% all_step_types = @comparison_data.flat_map { |data| data[:steps_by_type].keys }.uniq.sort %>
        <% all_step_types.each do |step_type| %>
          <div>
            <div class="flex justify-between text-sm font-medium text-gray-700 mb-1">
              <span><%= step_type.humanize %></span>
            </div>
            <div class="grid grid-cols-<%= [@comparison_data.length, 4].min %> gap-2">
              <% @comparison_data.each do |data| %>
                <div class="text-center">
                  <div class="text-lg font-semibold text-gray-900">
                    <%= data[:steps_by_type][step_type] || 0 %>
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= truncate(data[:journey].name, length: 15) %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Steps by Channel</h3>
      <div class="space-y-4">
        <% all_channels = @comparison_data.flat_map { |data| data[:steps_by_channel].keys }.uniq.compact.sort %>
        <% all_channels.each do |channel| %>
          <div>
            <div class="flex justify-between text-sm font-medium text-gray-700 mb-1">
              <span><%= channel.humanize %></span>
            </div>
            <div class="grid grid-cols-<%= [@comparison_data.length, 4].min %> gap-2">
              <% @comparison_data.each do |data| %>
                <div class="text-center">
                  <div class="text-lg font-semibold text-gray-900">
                    <%= data[:steps_by_channel][channel] || 0 %>
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= truncate(data[:journey].name, length: 15) %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Journey Details -->
  <div class="grid grid-cols-1 gap-6">
    <% @comparison_data.each do |data| %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex justify-between items-start mb-4">
          <h3 class="text-lg font-semibold text-gray-900"><%= data[:journey].name %></h3>
          <%= link_to "View Journey", data[:journey], class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-2 px-4 rounded-md transition-colors" %>
        </div>
        
        <p class="text-gray-600 mb-4"><%= data[:journey].description %></p>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
          <div>
            <div class="text-sm font-medium text-gray-500">Campaign Type</div>
            <div class="text-lg font-semibold text-gray-900"><%= data[:journey].campaign_type.humanize %></div>
          </div>
          <div>
            <div class="text-sm font-medium text-gray-500">Template Type</div>
            <div class="text-lg font-semibold text-gray-900"><%= data[:journey].template_type&.humanize || 'Custom' %></div>
          </div>
          <div>
            <div class="text-sm font-medium text-gray-500">Total Steps</div>
            <div class="text-lg font-semibold text-gray-900"><%= data[:analytics][:total_steps] %></div>
          </div>
          <div>
            <div class="text-sm font-medium text-gray-500">Last Activity</div>
            <div class="text-lg font-semibold text-gray-900"><%= time_ago_in_words(data[:analytics][:last_activity]) %> ago</div>
          </div>
        </div>

        <!-- Step Status Breakdown -->
        <div class="mt-4">
          <div class="text-sm font-medium text-gray-500 mb-2">Step Status Distribution</div>
          <div class="flex space-x-4">
            <% data[:steps_by_status].each do |status, count| %>
              <div class="text-center">
                <div class="text-lg font-semibold text-gray-900"><%= count %></div>
                <div class="text-xs text-gray-500"><%= status.humanize %></div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>