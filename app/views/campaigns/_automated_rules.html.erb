<div class="automated-rules" data-controller="automated-rules">
  <div class="flex items-center justify-between mb-4">
    <p class="text-sm text-gray-600">Configure automatic status changes based on campaign milestones and conditions.</p>
    <button type="button" 
            class="btn btn-outline btn-sm"
            data-action="click->automated-rules#addRule">
      Add Rule
    </button>
  </div>

  <!-- Active Rules -->
  <div class="space-y-4" data-automated-rules-target="rulesList">
    <% get_automated_rules(campaign).each do |rule| %>
      <div class="rule-card bg-gray-50 border rounded-lg p-4" data-rule-id="<%= rule[:id] %>">
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <!-- Rule Title -->
            <div class="flex items-center mb-2">
              <h6 class="text-sm font-medium text-gray-900 mr-2"><%= rule[:name] %></h6>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium
                           <%= rule[:enabled] ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= rule[:enabled] ? 'Active' : 'Inactive' %>
              </span>
            </div>
            
            <!-- Rule Description -->
            <p class="text-sm text-gray-600 mb-3"><%= rule[:description] %></p>
            
            <!-- Rule Logic -->
            <div class="rule-logic bg-white border rounded p-3 text-sm">
              <div class="flex items-center mb-2">
                <span class="font-medium text-gray-900 mr-2">When:</span>
                <span class="text-blue-600"><%= rule[:trigger][:description] %></span>
              </div>
              <div class="flex items-center">
                <span class="font-medium text-gray-900 mr-2">Then:</span>
                <span class="text-green-600"><%= rule[:action][:description] %></span>
              </div>
            </div>
            
            <!-- Rule Status -->
            <% if rule[:last_triggered] %>
              <div class="mt-2 text-xs text-gray-500">
                Last triggered: <%= rule[:last_triggered].strftime('%m/%d/%Y at %I:%M %p') %>
              </div>
            <% end %>
          </div>
          
          <!-- Rule Actions -->
          <div class="flex items-center space-x-2 ml-4">
            <button type="button" 
                    class="text-blue-600 hover:text-blue-700 text-sm"
                    data-action="click->automated-rules#editRule"
                    data-rule-id="<%= rule[:id] %>">
              Edit
            </button>
            
            <button type="button" 
                    class="text-red-600 hover:text-red-700 text-sm"
                    data-action="click->automated-rules#deleteRule"
                    data-rule-id="<%= rule[:id] %>">
              Delete
            </button>
            
            <div class="relative" data-controller="dropdown">
              <button type="button" 
                      class="text-gray-400 hover:text-gray-600"
                      data-action="click->dropdown#toggle">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                </svg>
              </button>
              
              <div class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border z-50" data-dropdown-target="menu">
                <div class="py-1">
                  <button type="button" 
                          class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                          data-action="click->automated-rules#toggleRule"
                          data-rule-id="<%= rule[:id] %>">
                    <%= rule[:enabled] ? 'Disable' : 'Enable' %> Rule
                  </button>
                  
                  <button type="button" 
                          class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                          data-action="click->automated-rules#duplicateRule"
                          data-rule-id="<%= rule[:id] %>">
                    Duplicate Rule
                  </button>
                  
                  <button type="button" 
                          class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                          data-action="click->automated-rules#testRule"
                          data-rule-id="<%= rule[:id] %>">
                    Test Rule
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Default Rules Templates -->
  <% if get_automated_rules(campaign).empty? %>
    <div class="empty-state text-center py-8">
      <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
      <h6 class="text-sm font-medium text-gray-900 mb-2">No automated rules configured</h6>
      <p class="text-sm text-gray-500 mb-4">Set up rules to automatically manage your campaign status based on milestones and conditions.</p>
      
      <!-- Quick Setup Templates -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 max-w-2xl mx-auto">
        <div class="template-card bg-white border rounded-lg p-4 cursor-pointer hover:shadow-md transition-shadow"
             data-action="click->automated-rules#createFromTemplate"
             data-template="completion">
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <h6 class="text-sm font-medium text-gray-900">Auto-Complete</h6>
          </div>
          <p class="text-xs text-gray-600">Automatically complete campaign when end date is reached</p>
        </div>
        
        <div class="template-card bg-white border rounded-lg p-4 cursor-pointer hover:shadow-md transition-shadow"
             data-action="click->automated-rules#createFromTemplate"
             data-template="performance">
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-blue-600 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <h6 class="text-sm font-medium text-gray-900">Performance-Based</h6>
          </div>
          <p class="text-xs text-gray-600">Pause campaign if performance drops below threshold</p>
        </div>
        
        <div class="template-card bg-white border rounded-lg p-4 cursor-pointer hover:shadow-md transition-shadow"
             data-action="click->automated-rules#createFromTemplate"
             data-template="budget">
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-yellow-600 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
            </svg>
            <h6 class="text-sm font-medium text-gray-900">Budget Alert</h6>
          </div>
          <p class="text-xs text-gray-600">Notify when 80% of budget is spent</p>
        </div>
        
        <div class="template-card bg-white border rounded-lg p-4 cursor-pointer hover:shadow-md transition-shadow"
             data-action="click->automated-rules#createFromTemplate"
             data-template="milestone">
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-purple-600 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
            <h6 class="text-sm font-medium text-gray-900">Milestone Tracker</h6>
          </div>
          <p class="text-xs text-gray-600">Update status when key milestones are reached</p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Rule Creation Modal -->
  <div class="fixed inset-0 z-50 hidden" 
       data-automated-rules-target="ruleModal" 
       role="dialog" 
       aria-labelledby="rule-modal-title" 
       aria-hidden="true">
    <div class="flex items-center justify-center min-h-screen px-4">
      <div class="fixed inset-0 bg-black bg-opacity-50 transition-opacity" 
           data-action="click->automated-rules#hideModal"></div>
      <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full p-6 relative">
        <div class="flex items-center justify-between mb-4">
          <h3 id="rule-modal-title" class="text-lg font-bold text-gray-900">Create Automation Rule</h3>
          <button type="button" 
                  class="text-gray-400 hover:text-gray-600"
                  data-action="click->automated-rules#hideModal"
                  aria-label="Close modal">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
        
        <div data-automated-rules-target="modalContent">
          <!-- Modal content will be loaded here -->
        </div>
      </div>
    </div>
  </div>
</div>