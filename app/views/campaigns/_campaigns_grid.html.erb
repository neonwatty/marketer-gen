<div class="campaigns-grid" data-controller="bulk-actions" role="region" aria-label="Campaigns grid view">
  <!-- Grid Header -->
  <div class="flex items-center justify-between mb-6 p-4 bg-white rounded-lg border">
    <div class="flex items-center gap-4">
      <!-- Select All -->
      <div class="flex items-center">
        <input type="checkbox" 
               class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" 
               data-action="change->bulk-actions#toggleSelectAll"
               data-bulk-actions-target="selectAllCheckbox"
               aria-label="Select all campaigns">
        <span class="ml-2 text-sm text-gray-600">Select all</span>
      </div>
      
      <!-- Results Info -->
      <div class="text-sm text-gray-600">
        <%= pluralize(@campaigns.total_count, 'campaign') %> total
      </div>
    </div>
    
    <!-- Grid Actions -->
    <div class="flex items-center gap-2">
      <!-- Export -->
      <div class="relative" data-controller="dropdown">
        <button type="button" 
                class="btn btn-outline btn-sm inline-flex items-center"
                data-action="click->dropdown#toggle"
                aria-haspopup="true"
                aria-expanded="false">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-4-4m4 4l4-4m5-5V5a2 2 0 00-2-2H5a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2V5a2 2 0 00-2-2z"/>
          </svg>
          Export
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
        
        <div class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border z-50" data-dropdown-target="menu" role="menu">
          <div class="py-1">
            <%= link_to campaigns_path(format: :csv, **request.query_parameters), 
                        class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                        role: "menuitem" do %>
              <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              Export as CSV
            <% end %>
            <%= link_to campaigns_path(format: :xlsx, **request.query_parameters), 
                        class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                        role: "menuitem" do %>
              <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              Export as Excel
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Campaign Cards Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <% @campaigns.each do |campaign| %>
      <div class="campaign-card bg-white rounded-lg border hover:shadow-lg transition-all duration-200 relative group"
           data-controller="campaign-card"
           data-campaign-id="<%= campaign.id %>"
           role="article"
           aria-label="Campaign: <%= campaign.name %>">
        
        <!-- Card Header -->
        <div class="p-4 border-b">
          <div class="flex items-start justify-between mb-3">
            <!-- Selection Checkbox -->
            <div class="flex-shrink-0">
              <input type="checkbox" 
                     class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" 
                     data-action="change->bulk-actions#toggleSelect"
                     data-bulk-actions-target="checkbox"
                     data-campaign-id="<%= campaign.id %>"
                     aria-label="Select campaign <%= campaign.name %>">
            </div>
            
            <!-- Status Badge -->
            <div class="flex-1 flex justify-end">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= campaign_status_classes(campaign.status) %>">
                <%= campaign_status_icon(campaign.status) %>
                <span class="ml-1"><%= campaign.status.humanize %></span>
              </span>
            </div>
          </div>
          
          <!-- Campaign Icon & Type -->
          <div class="flex items-center mb-3">
            <div class="w-10 h-10 rounded-lg flex items-center justify-center <%= campaign_type_bg_color(campaign.campaign_type) %>">
              <%= campaign_type_icon(campaign.campaign_type) %>
            </div>
            <div class="ml-3">
              <div class="text-xs text-gray-500 uppercase tracking-wide font-medium">
                <%= campaign.campaign_type&.humanize || 'Unspecified' %>
              </div>
            </div>
          </div>
          
          <!-- Campaign Name -->
          <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
            <%= link_to campaign.name, campaign_path(campaign), 
                        class: "hover:text-blue-600 transition-colors",
                        title: campaign.name %>
          </h3>
          
          <!-- Description -->
          <p class="text-sm text-gray-600 line-clamp-2 mb-3">
            <%= campaign.description || "No description provided" %>
          </p>
        </div>
        
        <!-- Card Body -->
        <div class="p-4">
          <!-- Persona Info -->
          <div class="flex items-center mb-4">
            <div class="w-6 h-6 bg-gray-200 rounded-full flex items-center justify-center">
              <span class="text-xs font-medium text-gray-600">
                <%= campaign.persona.name[0].upcase %>
              </span>
            </div>
            <div class="ml-2">
              <div class="text-sm font-medium text-gray-900">
                <%= campaign.persona.name %>
              </div>
            </div>
          </div>
          
          <!-- Performance Metrics -->
          <% if campaign.active? || campaign.completed? %>
            <% performance = campaign.performance_summary %>
            <div class="mb-4">
              <div class="flex items-center justify-between mb-2">
                <span class="text-xs text-gray-500">Performance</span>
                <span class="text-xs font-medium text-gray-900">
                  <%= performance[:completion_rate] || 0 %>% completion
                </span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-blue-600 h-2 rounded-full" 
                     style="width: <%= [performance[:completion_rate] || 0, 100].min %>%"
                     aria-label="<%= performance[:completion_rate] || 0 %>% completion rate"></div>
              </div>
              <div class="flex items-center justify-between mt-2 text-xs text-gray-500">
                <span><%= pluralize(campaign.journeys.count, 'journey') %></span>
                <span><%= pluralize(performance[:total_executions] || 0, 'execution') %></span>
              </div>
            </div>
          <% else %>
            <div class="mb-4 text-center py-4 text-gray-400">
              <svg class="w-8 h-8 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
              <div class="text-xs">No performance data</div>
            </div>
          <% end %>
          
          <!-- Dates -->
          <div class="flex items-center justify-between text-xs text-gray-500 mb-4">
            <div>
              <span class="block">Created</span>
              <span class="font-medium"><%= campaign.created_at.strftime('%m/%d/%Y') %></span>
            </div>
            <div class="text-right">
              <span class="block">Updated</span>
              <span class="font-medium"><%= time_ago_in_words(campaign.updated_at) %> ago</span>
            </div>
          </div>
        </div>
        
        <!-- Card Footer -->
        <div class="px-4 py-3 bg-gray-50 border-t rounded-b-lg">
          <div class="flex items-center justify-between">
            <!-- Quick Actions -->
            <div class="flex items-center space-x-2">
              <% if campaign.draft? %>
                <%= button_to "Activate", campaign_path(campaign), 
                              method: :patch, 
                              params: { campaign: { status: 'active' } },
                              class: "text-xs bg-green-100 text-green-700 px-2 py-1 rounded hover:bg-green-200 transition-colors",
                              form: { "data-controller": "confirmation", "data-confirmation-message-value": "Activate this campaign?" },
                              title: "Activate campaign" %>
              <% elsif campaign.active? %>
                <%= button_to "Pause", campaign_path(campaign), 
                              method: :patch, 
                              params: { campaign: { status: 'paused' } },
                              class: "text-xs bg-yellow-100 text-yellow-700 px-2 py-1 rounded hover:bg-yellow-200 transition-colors",
                              form: { "data-controller": "confirmation", "data-confirmation-message-value": "Pause this campaign?" },
                              title: "Pause campaign" %>
              <% elsif campaign.paused? %>
                <%= button_to "Resume", campaign_path(campaign), 
                              method: :patch, 
                              params: { campaign: { status: 'active' } },
                              class: "text-xs bg-green-100 text-green-700 px-2 py-1 rounded hover:bg-green-200 transition-colors",
                              form: { "data-controller": "confirmation", "data-confirmation-message-value": "Resume this campaign?" },
                              title: "Resume campaign" %>
              <% end %>
            </div>
            
            <!-- Action Menu -->
            <div class="relative" data-controller="dropdown">
              <button type="button" 
                      class="p-1 text-gray-400 hover:text-gray-600 rounded hover:bg-gray-100"
                      data-action="click->dropdown#toggle"
                      aria-haspopup="true"
                      aria-expanded="false"
                      aria-label="Campaign actions for <%= campaign.name %>">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                </svg>
              </button>
              
              <div class="hidden absolute right-0 bottom-full mb-2 w-48 bg-white rounded-md shadow-lg border z-50" data-dropdown-target="menu" role="menu">
                <div class="py-1">
                  <%= link_to campaign_path(campaign), 
                              class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                              role: "menuitem" do %>
                    <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    View Details
                  <% end %>
                  
                  <%= link_to edit_campaign_path(campaign), 
                              class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                              role: "menuitem" do %>
                    <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    Edit Campaign
                  <% end %>
                  
                  <div class="border-t border-gray-100"></div>
                  
                  <%= link_to duplicate_campaign_path(campaign), 
                              method: :post,
                              class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                              role: "menuitem",
                              "data-controller": "confirmation",
                              "data-confirmation-message-value": "Duplicate this campaign?" do %>
                    <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                    </svg>
                    Duplicate
                  <% end %>
                  
                  <% unless campaign.archived? %>
                    <%= link_to archive_campaign_path(campaign), 
                                method: :patch,
                                class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                                role: "menuitem",
                                "data-controller": "confirmation",
                                "data-confirmation-message-value": "Archive this campaign?" do %>
                      <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8l6 6 6-6"/>
                      </svg>
                      Archive
                    <% end %>
                  <% end %>
                  
                  <div class="border-t border-gray-100"></div>
                  
                  <%= link_to campaign_path(campaign), 
                              method: :delete,
                              class: "block px-4 py-2 text-sm text-red-700 hover:bg-red-50",
                              role: "menuitem",
                              "data-controller": "confirmation",
                              "data-confirmation-message-value": "Are you sure you want to delete this campaign? This action cannot be undone." do %>
                    <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                    Delete
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Hover overlay -->
        <div class="absolute inset-0 border-2 border-transparent group-hover:border-blue-200 rounded-lg pointer-events-none transition-colors"></div>
      </div>
    <% end %>
  </div>
  
  <!-- Empty state for grid -->
  <% if @campaigns.empty? %>
    <div class="text-center py-16">
      <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
      </svg>
      <h3 class="text-xl font-medium text-gray-900 mb-2">No campaigns found</h3>
      <p class="text-gray-500 mb-6">Try adjusting your filters or create your first campaign.</p>
    </div>
  <% end %>
</div>