<% content_for :title, "Campaign Assistant" %>
<% content_for :description, "Create your marketing campaign with our conversational AI assistant" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <div class="flex items-center space-x-4">
          <%= link_to campaigns_path, class: "text-gray-600 hover:text-gray-900 transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          <% end %>
          <h1 class="text-2xl font-bold text-gray-900">Campaign Assistant</h1>
        </div>
        
        <div class="flex items-center space-x-4">
          <div class="hidden sm:flex items-center text-sm text-gray-600">
            <svg class="w-4 h-4 mr-1 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            AI Assistant Active
          </div>
          
          <%= link_to campaigns_path, class: "btn btn-outline" do %>
            View All Campaigns
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      
      <!-- Left Sidebar - Information Panel -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-sm border p-6 space-y-6">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">How it works</h3>
            <div class="space-y-3">
              <div class="flex items-start space-x-3">
                <div class="w-6 h-6 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-sm font-medium flex-shrink-0">
                  1
                </div>
                <p class="text-sm text-gray-600">Tell us about your marketing goals and target audience</p>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-6 h-6 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-sm font-medium flex-shrink-0">
                  2
                </div>
                <p class="text-sm text-gray-600">Answer guided questions to refine your campaign strategy</p>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-6 h-6 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-sm font-medium flex-shrink-0">
                  3
                </div>
                <p class="text-sm text-gray-600">Get a complete campaign plan with automated journeys</p>
              </div>
            </div>
          </div>
          
          <div class="border-t pt-6">
            <h4 class="text-sm font-medium text-gray-900 mb-2">Time Savings</h4>
            <div class="flex items-center space-x-2">
              <div class="text-2xl font-bold text-green-600">70%</div>
              <div class="text-sm text-gray-600">reduction in setup time</div>
            </div>
            <p class="text-xs text-gray-500 mt-1">Compared to manual campaign creation</p>
          </div>
          
          <div class="border-t pt-6">
            <h4 class="text-sm font-medium text-gray-900 mb-2">What you'll get</h4>
            <ul class="text-sm text-gray-600 space-y-1">
              <li class="flex items-center">
                <svg class="w-3 h-3 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Complete campaign plan
              </li>
              <li class="flex items-center">
                <svg class="w-3 h-3 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Target audience persona
              </li>
              <li class="flex items-center">
                <svg class="w-3 h-3 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Automated customer journeys
              </li>
              <li class="flex items-center">
                <svg class="w-3 h-3 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Success metrics & KPIs
              </li>
            </ul>
          </div>
        </div>
      </div>
      
      <!-- Main Chat Interface -->
      <div class="lg:col-span-3">
        <div class="bg-white rounded-lg shadow-sm border h-[700px] overflow-hidden">
          <!-- Chat Container -->
          <div 
            id="campaign-intake-chat" 
            data-controller="campaign-intake"
            data-campaign-intake-expanded-value="true"
            data-campaign-intake-position-value="inline"
            data-campaign-intake-completion-redirect-value="<%= campaigns_path %>"
            class="h-full"
          >
            <!-- React app will mount here -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Loading State -->
<div id="loading-overlay" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50" style="display: none;">
  <div class="bg-white rounded-lg p-8 max-w-sm mx-4">
    <div class="text-center">
      <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">Creating Your Campaign</h3>
      <p class="text-gray-600">This may take a few moments...</p>
    </div>
  </div>
</div>

<script>
  // Handle campaign completion
  document.addEventListener('campaign-intake:completed', function(event) {
    console.log('Campaign completed:', event.detail);
    
    // Show success message
    const overlay = document.getElementById('loading-overlay');
    overlay.style.display = 'flex';
    
    // Update overlay content to show success
    overlay.innerHTML = `
      <div class="bg-white rounded-lg p-8 max-w-md mx-4">
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Campaign Created Successfully!</h3>
          <p class="text-gray-600 mb-4">Your campaign has been generated and is ready for review.</p>
          <a href="${event.detail.campaignUrl || '<%= campaigns_path %>'}" class="btn btn-primary">
            View Campaign
          </a>
        </div>
      </div>
    `;
  });
  
  // Handle errors
  document.addEventListener('campaign-intake:error', function(event) {
    console.error('Campaign intake error:', event.detail);
    
    // Show error notification (you might want to use a toast library)
    alert('An error occurred: ' + (event.detail.message || 'Unknown error'));
  });
  
  // Handle progress updates
  document.addEventListener('campaign-intake:progress', function(event) {
    console.log('Progress update:', event.detail);
    
    // You could update a progress indicator here if needed
  });
</script>