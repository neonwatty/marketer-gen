  <!-- Conflict Resolution Modal -->
  <div class="hidden" data-journey-persistence-target="conflictModal">
    <!-- Modal content populated by controller -->
  </div>
  
  <!-- Version History Modal -->
  <div class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50" 
       data-journey-persistence-target="versionHistoryModal">
    <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full mx-4 max-h-[80vh] overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
