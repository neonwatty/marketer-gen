<div class="journey-builder bg-white rounded-lg shadow-lg" 
     data-controller="journey-builder journey-persistence journey-builder-mobile" 
     data-journey-builder-campaign-id-value="<%= campaign.id if defined?(campaign) %>"
     data-journey-builder-existing-stages-value="<%= [].to_json %>"
     data-journey-persistence-journey-id-value="<%= journey&.id %>"
     data-journey-persistence-campaign-id-value="<%= campaign.id if defined?(campaign) %>"
     data-journey-persistence-auto-save-enabled-value="true"
     data-journey-persistence-optimistic-updates-value="true"
     data-journey-builder-mobile-current-panel-value="canvas">
  
  <!-- Journey Builder Header -->
  <div class="journey-builder-header flex items-center justify-between p-6 border-b border-gray-200" 
       data-journey-builder-mobile-target="mobileHeader">
    <div class="flex-1">
      <div class="flex items-center space-x-4">
        <h2 class="text-2xl font-bold text-gray-900">Journey Builder</h2>
        <!-- Save Status Indicator -->
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 rounded-full bg-gray-300" 
               data-journey-persistence-target="syncIndicator"></div>
          <span class="text-xs text-gray-500" 
                data-journey-persistence-target="saveStatus">Ready</span>
        </div>
      </div>
      <p class="text-sm text-gray-600 mt-1 desktop-block tablet-block mobile-hidden">Design your customer journey with drag-and-drop stages</p>
      
      <!-- Mobile Actions Row -->
      <div class="actions-mobile hidden mt-3">
        <button type="button" 
                class="flex-1 inline-flex justify-center items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
                data-action="click->journey-builder#validateJourney">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Validate
        </button>
        <button type="button" 
                class="flex-1 inline-flex justify-center items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700"
                data-action="click->journey-builder#saveJourney">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          Save
        </button>
      </div>
      
      <!-- Recovery Banner (hidden by default) -->
      <div class="hidden mt-2" data-journey-persistence-target="recoveryBanner">
        <!-- Recovery content populated by controller -->
      </div>
    </div>
    
    <!-- Desktop Journey Actions -->
    <div class="actions-desktop flex items-center space-x-3">
      <div class="relative inline-block text-left">
        <button type="button" 
                class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                data-action="click->journey-persistence#toggleActionMenu"
                id="persistence-menu-button">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
          </svg>
          Actions
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>

        <div class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50"
             data-journey-persistence-target="actionMenu">
          <div class="py-1">
            <button type="button"
                    class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                    data-action="click->journey-persistence#duplicateJourney">
              Duplicate Journey
            </button>
            <button type="button"
                    class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                    data-action="click->journey-persistence#showVersionHistory">
              Version History
            </button>
            <button type="button"
                    class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                    data-action="click->journey-persistence#showExportModal">
              Export Journey
            </button>
            <button type="button"
                    class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                    data-action="click->journey-persistence#showImportModal">
              Import Journey
            </button>
            <hr class="my-1">
            <button type="button"
                    class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                    data-action="click->journey-builder#resetJourney">
              Reset Journey
            </button>
          </div>
        </div>
      </div>
      
      <button type="button" 
              class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
              data-controller="journey-validation"
              data-journey-validation-journey-id-value="<%= campaign.id if defined?(campaign) %>"
              data-journey-validation-auto-validate-value="false"
              data-journey-validation-target="validateButton"
              data-action="click->journey-validation#triggerValidation">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Validate
      </button>
      
      <button type="button" 
              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
              data-action="click->journey-builder#saveJourney">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        Save Journey
      </button>
    </div>
  </div>

  <!-- Mobile Tab Navigation (hidden on desktop/tablet) -->
  <div class="mobile-tabs hidden" data-journey-builder-mobile-target="mobileTabs">
    <!-- Tabs populated by mobile controller -->
  </div>

  <!-- Main Content Area -->
  <div class="main-content flex h-screen max-h-[800px]" data-journey-builder-mobile-target="mobileContent">
    <!-- Stage Library Sidebar -->
    <div class="w-80 bg-gray-50 border-r border-gray-200 p-4 overflow-y-auto mobile-panel" 
         data-journey-builder-mobile-target="stageLibraryPanel">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 mobile-stage-library-header">Journey Stages</h3>
      
      <!-- Stage Templates -->
      <div class="space-y-3" data-journey-builder-target="stageLibrary">
        <!-- Awareness Stage -->
        <div class="stage-template stage-library-item mobile-stage-template bg-white p-4 rounded-lg border-2 border-dashed border-blue-300 cursor-move hover:border-blue-400 hover:shadow-md transition-all"
             data-stage-type="awareness"
             data-journey-builder-target="stageTemplate"
             data-journey-builder-mobile-target="mobileStageTemplate"
             draggable="true">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gray-900">Awareness</h4>
              <p class="text-xs text-gray-500">Initial brand discovery</p>
            </div>
          </div>
        </div>

        <!-- Consideration Stage -->
        <div class="stage-template stage-library-item mobile-stage-template bg-white p-4 rounded-lg border-2 border-dashed border-yellow-300 cursor-move hover:border-yellow-400 hover:shadow-md transition-all"
             data-stage-type="consideration"
             data-journey-builder-target="stageTemplate"
             data-journey-builder-mobile-target="mobileStageTemplate"
             draggable="true">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gray-900">Consideration</h4>
              <p class="text-xs text-gray-500">Evaluating options</p>
            </div>
          </div>
        </div>

        <!-- Conversion Stage -->
        <div class="stage-template stage-library-item mobile-stage-template bg-white p-4 rounded-lg border-2 border-dashed border-green-300 cursor-move hover:border-green-400 hover:shadow-md transition-all"
             data-stage-type="conversion"
             data-journey-builder-target="stageTemplate"
             data-journey-builder-mobile-target="mobileStageTemplate"
             draggable="true">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gray-900">Conversion</h4>
              <p class="text-xs text-gray-500">Making the purchase</p>
            </div>
          </div>
        </div>

        <!-- Retention Stage -->
        <div class="stage-template stage-library-item mobile-stage-template bg-white p-4 rounded-lg border-2 border-dashed border-purple-300 cursor-move hover:border-purple-400 hover:shadow-md transition-all"
             data-stage-type="retention"
             data-journey-builder-target="stageTemplate"
             data-journey-builder-mobile-target="mobileStageTemplate"
             draggable="true">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gray-900">Retention</h4>
              <p class="text-xs text-gray-500">Building loyalty</p>
            </div>
          </div>
        </div>

        <!-- Advocacy Stage -->
        <div class="stage-template stage-library-item mobile-stage-template bg-white p-4 rounded-lg border-2 border-dashed border-indigo-300 cursor-move hover:border-indigo-400 hover:shadow-md transition-all"
             data-stage-type="advocacy"
             data-journey-builder-target="stageTemplate"
             data-journey-builder-mobile-target="mobileStageTemplate"
             draggable="true">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z"/>
              </svg>
            </div>
            <div>
              <h4 class="font-medium text-gray-900">Advocacy</h4>
              <p class="text-xs text-gray-500">Becoming promoters</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Template Library -->
      <div class="mt-8">
        <div class="flex items-center justify-between mb-3">
          <h4 class="text-md font-semibold text-gray-900">Templates</h4>
          <%= link_to journey_templates_path, 
                      class: "text-sm text-blue-600 hover:text-blue-800 font-medium",
                      target: "_blank" do %>
            Browse All
            <svg class="w-3 h-3 inline ml-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"/>
              <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"/>
            </svg>
          <% end %>
        </div>

        <!-- Quick Templates -->
        <div class="space-y-2 mb-4" data-journey-builder-target="quickTemplates">
          <!-- Templates will be populated here -->
          <div class="text-center py-4">
            <div class="inline-block animate-spin rounded-full h-4 w-4 border-b-2 border-blue-600"></div>
            <p class="text-xs text-gray-500 mt-1">Loading templates...</p>
          </div>
        </div>

        <!-- Template Search -->
        <div class="border-t pt-4">
          <div class="relative mb-3">
            <input type="text" 
                   placeholder="Search templates..."
                   class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
                   data-journey-builder-target="templateSearchInput"
                   data-action="input->journey-builder#handleTemplateSearch">
            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
              <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
          </div>
          
          <!-- Search Results -->
          <div class="max-h-48 overflow-y-auto space-y-1" data-journey-builder-target="templateSearchResults">
            <!-- Search results will appear here -->
          </div>
        </div>
      </div>
    </div>

    <!-- Journey Canvas -->
    <div class="flex-1 bg-gray-100 relative overflow-auto mobile-panel canvas" 
         data-journey-builder-mobile-target="canvasPanel">
      <div class="journey-canvas mobile-canvas h-full min-h-[600px] p-8" 
           data-journey-builder-target="canvas"
           data-action="dragover->journey-builder#handleCanvasDragOver drop->journey-builder#handleCanvasDrop">
        
        <!-- Canvas Instructions (shown when empty) -->
        <div class="canvas-instructions flex flex-col items-center justify-center h-full text-center"
             data-journey-builder-target="canvasInstructions">
          <div class="w-16 h-16 bg-gray-300 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Design Your Customer Journey</h3>
          <p class="text-gray-500 mb-4 max-w-md">Drag stages from the sidebar to build your customer journey. Connect stages to create a flow that guides customers from awareness to advocacy.</p>
          <div class="flex items-center text-sm text-gray-400">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            Tip: Start with a template or drag individual stages
          </div>
        </div>

        <!-- Journey Stages Container -->
        <div class="journey-stages flex flex-wrap gap-6 items-start min-h-full"
             data-journey-builder-target="stagesContainer" 
             style="display: none;">
          <!-- Dynamically populated with stage cards -->
        </div>

        <!-- Connection Lines SVG Overlay -->
        <svg class="connection-lines absolute inset-0 w-full h-full pointer-events-none" 
             data-journey-builder-target="connectionLines"
             style="z-index: 1;">
          <!-- Connection lines will be drawn here -->
        </svg>
      </div>
    </div>

    <!-- Enhanced Stage Configuration Panel -->
    <div class="stage-config-panel w-96 bg-white border-l border-gray-200 overflow-hidden mobile-panel"
         data-journey-builder-target="configPanel"
         data-journey-builder-mobile-target="configPanel"
         style="display: none;">
      
      <!-- Configuration Header -->
      <div class="flex items-center justify-between p-6 border-b border-gray-200 bg-gray-50">
        <div>
          <h3 class="text-lg font-semibold text-gray-900">Stage Configuration</h3>
          <p class="text-sm text-gray-600 mt-1" data-journey-builder-target="configSubtitle">
            Configure stage settings and behavior
          </p>
        </div>
        <button type="button" 
                class="text-gray-400 hover:text-gray-600 p-1"
                data-action="click->journey-builder#closeConfigPanel">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </button>
      </div>

      <!-- Stage Type Indicator -->
      <div class="px-6 py-3 bg-blue-50 border-b border-blue-100">
        <div class="flex items-center space-x-2">
          <div class="w-3 h-3 rounded-full bg-blue-500" data-journey-builder-target="stageTypeIndicator"></div>
          <span class="text-sm font-medium text-blue-900" data-journey-builder-target="stageTypeLabel">
            Stage Type
          </span>
        </div>
      </div>

      <!-- Configuration Form Container -->
      <div class="flex-1 overflow-y-auto max-h-[calc(100vh-200px)]"
           data-controller="stage-config"
           data-stage-config-stage-data-value="{}"
           data-action="stage-config:stageConfigSaved->journey-builder#handleStageConfigSaved stage-config:configCancelled->journey-builder#closeConfigPanel stage-config:notification->journey-builder#handleNotification">
        
        <!-- Basic Stage Information -->
        <div class="p-6 border-b border-gray-200">
          <h4 class="text-base font-medium text-gray-900 mb-4">Basic Information</h4>
          
          <!-- Stage Name -->
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-1">Stage Name</label>
            <input type="text" 
                   name="name"
                   class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                   data-journey-builder-target="stageNameInput"
                   data-stage-config-target="stageNameInput">
          </div>

          <!-- Stage Description -->
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
            <textarea name="description" 
                      rows="3"
                      class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                      data-journey-builder-target="stageDescriptionInput"
                      data-stage-config-target="stageDescriptionInput"
                      placeholder="Describe what happens in this stage..."></textarea>
          </div>

          <!-- Duration -->
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-1">Duration (days)</label>
            <input type="number" 
                   name="duration_days"
                   min="1"
                   class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                   data-journey-builder-target="stageDurationInput"
                   data-stage-config-target="stageDurationInput">
          </div>
        </div>

        <!-- Dynamic Configuration Form -->
        <form data-journey-builder-target="configForm" 
              data-stage-config-target="form"
              data-action="submit->stage-config#handleFormSubmit">
          
          <!-- Error Container -->
          <div class="px-6 pt-4" data-stage-config-target="errorContainer"></div>
          
          <!-- Dynamic Fields Container -->
          <div class="px-6 pb-6" data-stage-config-target="dynamicFieldsContainer">
            <!-- Dynamic fields will be populated here based on stage type -->
            <div class="text-center py-8 text-gray-500">
              <svg class="w-8 h-8 mx-auto mb-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"/>
              </svg>
              <p class="text-sm">Select or configure a stage to see advanced options</p>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="border-t border-gray-200 p-6 bg-gray-50">
            <div class="flex space-x-3">
              <button type="submit"
                      class="flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                      data-stage-config-target="saveButton">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Save Configuration
              </button>
              
              <button type="button" 
