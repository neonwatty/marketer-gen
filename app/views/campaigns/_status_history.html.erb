<div class="status-history">
  <div class="space-y-4">
    <% get_status_history(campaign).each_with_index do |entry, index| %>
      <div class="flex items-start space-x-4">
        <!-- Timeline Indicator -->
        <div class="flex flex-col items-center">
          <div class="w-10 h-10 rounded-full flex items-center justify-center <%= status_history_icon_classes(entry[:action]) %>">
            <% case entry[:action] %>
            <% when 'created' %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"/>
              </svg>
            <% when 'status_changed' %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
              </svg>
            <% when 'activated' %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"/>
              </svg>
            <% when 'paused' %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zM7 8a1 1 0 012 0v4a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v4a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
            <% when 'completed' %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            <% when 'archived' %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8l6 6 6-6"/>
              </svg>
            <% else %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            <% end %>
          </div>
          
          <!-- Connection Line -->
          <% unless index == get_status_history(campaign).length - 1 %>
            <div class="w-0.5 h-8 bg-gray-300 mt-2"></div>
          <% end %>
        </div>
        
        <!-- Event Details -->
        <div class="flex-1 min-w-0 pb-8">
          <div class="flex items-center justify-between mb-2">
            <h5 class="text-sm font-medium text-gray-900">
              <%= status_history_title(entry[:action], entry[:from_status], entry[:to_status]) %>
            </h5>
            <time class="text-xs text-gray-500" datetime="<%= entry[:timestamp] %>">
              <%= time_ago_in_words(Time.parse(entry[:timestamp])) %> ago
            </time>
          </div>
          
          <!-- Status Change Details -->
          <% if entry[:from_status] && entry[:to_status] %>
            <div class="flex items-center space-x-2 mb-2">
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= status_badge_classes(entry[:from_status]) %>">
                <%= entry[:from_status].humanize %>
              </span>
              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= status_badge_classes(entry[:to_status]) %>">
                <%= entry[:to_status].humanize %>
              </span>
            </div>
          <% end %>
          
          <!-- User and Reason -->
          <div class="text-sm text-gray-600">
            <div class="flex items-center mb-1">
              <div class="w-6 h-6 bg-gray-200 rounded-full flex items-center justify-center mr-2">
                <span class="text-xs font-medium"><%= entry[:user][0].upcase if entry[:user] %></span>
              </div>
              <span><%= entry[:user] || 'System' %></span>
            </div>
            
            <% if entry[:reason].present? %>
              <div class="ml-8 italic text-gray-500">
                "<%= entry[:reason] %>"
              </div>
            <% end %>
          </div>
          
          <!-- Additional Metadata -->
          <% if entry[:metadata].present? %>
            <div class="mt-3 p-3 bg-gray-50 rounded-lg">
              <h6 class="text-xs font-medium text-gray-900 mb-2">Additional Details</h6>
              <div class="space-y-1">
                <% entry[:metadata].each do |key, value| %>
                  <div class="flex justify-between text-xs">
                    <span class="text-gray-600"><%= key.humanize %>:</span>
                    <span class="text-gray-900"><%= value %></span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    
    <!-- Empty State -->
    <% if get_status_history(campaign).empty? %>
      <div class="text-center py-8">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <h5 class="text-sm font-medium text-gray-900 mb-2">No Status History</h5>
        <p class="text-sm text-gray-500">No status changes have been recorded for this campaign yet.</p>
      </div>
    <% end %>
  </div>
  
  <!-- History Filters -->
  <div class="mt-6 pt-6 border-t">
    <div class="flex items-center justify-between">
      <h6 class="text-sm font-medium text-gray-900">Filter History</h6>
      <div class="flex items-center space-x-2">
        <select class="text-xs border border-gray-300 rounded px-2 py-1" 
                data-action="change->status-management#filterHistory">
          <option value="">All Events</option>
          <option value="status_changed">Status Changes</option>
          <option value="created">Campaign Created</option>
          <option value="activated">Activations</option>
          <option value="completed">Completions</option>
        </select>
        
        <button type="button" 
                class="text-xs text-blue-600 hover:text-blue-700"
                data-action="click->status-management#exportHistory">
          Export
        </button>
      </div>
    </div>
  </div>
</div>