<div class="bg-white rounded-lg border overflow-hidden" 
     data-controller="campaigns-table sortable bulk-actions column-customizer" 
     data-campaigns-table-url-value="<%= campaigns_path(format: :json) %>"
     role="region" 
     aria-label="Campaigns data table">
  
  <!-- Table Header with Column Customization -->
  <div class="flex items-center justify-between p-4 border-b bg-gray-50">
    <div class="flex items-center gap-4">
      <!-- Select All Checkbox -->
      <div class="flex items-center">
        <input type="checkbox" 
               class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" 
               data-action="change->bulk-actions#toggleSelectAll"
               data-bulk-actions-target="selectAllCheckbox"
               aria-label="Select all campaigns on this page">
        <span class="ml-2 text-sm text-gray-600">Select all</span>
      </div>
      
      <!-- Results Info -->
      <div class="text-sm text-gray-600">
        Showing <%= @campaigns.offset_value + 1 %>-<%= [@campaigns.offset_value + @campaigns.length, @campaigns.total_count].min %> 
        of <%= @campaigns.total_count %> campaigns
      </div>
    </div>
    
    <!-- Column Customization -->
    <div class="flex items-center gap-2">
      <button type="button" 
              class="btn btn-outline btn-sm inline-flex items-center"
              data-action="click->column-customizer#toggle"
              aria-label="Customize table columns">
        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"/>
        </svg>
        Columns
      </button>
      
      <!-- Export Options -->
      <div class="relative" data-controller="dropdown">
        <button type="button" 
                class="btn btn-outline btn-sm inline-flex items-center"
                data-action="click->dropdown#toggle"
                aria-haspopup="true"
                aria-expanded="false">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-4-4m4 4l4-4m5-5V5a2 2 0 00-2-2H5a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2V5a2 2 0 00-2-2z"/>
          </svg>
          Export All
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
        
        <div class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border z-50" data-dropdown-target="menu" role="menu">
          <div class="py-1">
            <%= link_to campaigns_path(format: :csv, **request.query_parameters), 
                        class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                        role: "menuitem" do %>
              <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              Export as CSV
            <% end %>
            <%= link_to campaigns_path(format: :xlsx, **request.query_parameters), 
                        class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                        role: "menuitem" do %>
              <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              Export as Excel
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Column Customization Panel -->
  <div class="hidden border-b bg-gray-50 p-4" data-column-customizer-target="panel">
    <div class="flex items-center justify-between mb-3">
      <h4 class="text-sm font-medium text-gray-900">Customize Columns</h4>
      <button type="button" 
              class="text-sm text-gray-500 hover:text-gray-700"
              data-action="click->column-customizer#reset">
        Reset to default
      </button>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-3" data-column-customizer-target="columnList">
      <% %w[select name status type persona created_at performance actions].each do |column| %>
        <label class="flex items-center space-x-2 text-sm">
          <input type="checkbox" 
                 class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" 
                 data-column="<%= column %>"
                 data-action="change->column-customizer#toggleColumn"
                 <%= column.in?(%w[select name status actions]) ? 'checked disabled' : 'checked' %>>
          <span class="<%= column.in?(%w[select name status actions]) ? 'text-gray-400' : 'text-gray-700' %>">
            <%= column.humanize %>
            <% if column.in?(%w[select name status actions]) %>
              <span class="text-xs">(required)</span>
            <% end %>
          </span>
        </label>
      <% end %>
    </div>
  </div>

  <!-- Table -->
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200" role="table" aria-label="Campaigns table">
      <thead class="bg-gray-50">
        <tr role="row">
          <!-- Select Column -->
          <th scope="col" 
              class="w-12 px-6 py-3 text-left" 
              data-column="select"
              aria-label="Select campaigns">
            <span class="sr-only">Select</span>
          </th>
          
          <!-- Sortable Name Column -->
          <th scope="col" 
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100" 
              data-column="name"
              data-action="click->campaigns-table#sort"
              data-sort-field="name"
              role="columnheader"
              aria-sort="<%= params[:sort] == 'name' ? (params[:direction] == 'asc' ? 'ascending' : 'descending') : 'none' %>">
            <div class="flex items-center space-x-1">
              <span>Campaign Name</span>
              <div class="flex flex-col">
                <svg class="w-3 h-3 <%= params[:sort] == 'name' && params[:direction] == 'asc' ? 'text-blue-600' : 'text-gray-400' %>" 
                     fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"/>
                </svg>
                <svg class="w-3 h-3 <%= params[:sort] == 'name' && params[:direction] == 'desc' ? 'text-blue-600' : 'text-gray-400' %>" 
                     fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
          </th>
          
          <!-- Status Column -->
          <th scope="col" 
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100" 
              data-column="status"
              data-action="click->campaigns-table#sort"
              data-sort-field="status"
              role="columnheader"
              aria-sort="<%= params[:sort] == 'status' ? (params[:direction] == 'asc' ? 'ascending' : 'descending') : 'none' %>">
            <div class="flex items-center space-x-1">
              <span>Status</span>
              <div class="flex flex-col">
                <svg class="w-3 h-3 <%= params[:sort] == 'status' && params[:direction] == 'asc' ? 'text-blue-600' : 'text-gray-400' %>" 
                     fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"/>
                </svg>
                <svg class="w-3 h-3 <%= params[:sort] == 'status' && params[:direction] == 'desc' ? 'text-blue-600' : 'text-gray-400' %>" 
                     fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
          </th>
          
          <!-- Type Column -->
          <th scope="col" 
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100" 
              data-column="type"
              data-action="click->campaigns-table#sort"
              data-sort-field="campaign_type"
              role="columnheader"
              aria-sort="<%= params[:sort] == 'campaign_type' ? (params[:direction] == 'asc' ? 'ascending' : 'descending') : 'none' %>">
            <div class="flex items-center space-x-1">
              <span>Type</span>
              <div class="flex flex-col">
                <svg class="w-3 h-3 <%= params[:sort] == 'campaign_type' && params[:direction] == 'asc' ? 'text-blue-600' : 'text-gray-400' %>" 
                     fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"/>
                </svg>
                <svg class="w-3 h-3 <%= params[:sort] == 'campaign_type' && params[:direction] == 'desc' ? 'text-blue-600' : 'text-gray-400' %>" 
                     fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
          </th>
          
          <!-- Persona Column -->
          <th scope="col" 
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" 
              data-column="persona">
            Persona
          </th>
          
          <!-- Created Date Column -->
          <th scope="col" 
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100" 
              data-column="created_at"
              data-action="click->campaigns-table#sort"
              data-sort-field="created_at"
              role="columnheader"
              aria-sort="<%= params[:sort] == 'created_at' ? (params[:direction] == 'asc' ? 'ascending' : 'descending') : 'none' %>">
            <div class="flex items-center space-x-1">
              <span>Created</span>
              <div class="flex flex-col">
                <svg class="w-3 h-3 <%= params[:sort] == 'created_at' && params[:direction] == 'asc' ? 'text-blue-600' : 'text-gray-400' %>" 
                     fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"/>
                </svg>
                <svg class="w-3 h-3 <%= params[:sort] == 'created_at' && params[:direction] == 'desc' ? 'text-blue-600' : 'text-gray-400' %>" 
                     fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
          </th>
          
          <!-- Performance Column -->
          <th scope="col" 
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100" 
              data-column="performance"
              data-action="click->campaigns-table#sort"
              data-sort-field="performance"
              role="columnheader"
              aria-sort="<%= params[:sort] == 'performance' ? (params[:direction] == 'asc' ? 'ascending' : 'descending') : 'none' %>">
            <div class="flex items-center space-x-1">
              <span>Performance</span>
              <div class="flex flex-col">
                <svg class="w-3 h-3 <%= params[:sort] == 'performance' && params[:direction] == 'asc' ? 'text-blue-600' : 'text-gray-400' %>" 
                     fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"/>
                </svg>
                <svg class="w-3 h-3 <%= params[:sort] == 'performance' && params[:direction] == 'desc' ? 'text-blue-600' : 'text-gray-400' %>" 
                     fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
          </th>
          
          <!-- Actions Column -->
          <th scope="col" 
              class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider" 
              data-column="actions">
            Actions
          </th>
        </tr>
      </thead>
      
      <tbody class="bg-white divide-y divide-gray-200" data-campaigns-table-target="tbody">
        <% @campaigns.each do |campaign| %>
          <%= render 'campaign_table_row', campaign: campaign %>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <!-- Loading State -->
  <div class="hidden p-8 text-center" data-campaigns-table-target="loading">
    <div class="inline-flex items-center">
      <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" aria-hidden="true">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <span class="text-gray-600">Loading campaigns...</span>
    </div>
  </div>
  
  <!-- No Results -->
  <% if @campaigns.empty? %>
    <div class="p-8 text-center text-gray-500">
      <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <p class="text-sm">No campaigns match your current filters.</p>
    </div>
  <% end %>
</div>