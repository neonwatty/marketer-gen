<div class="workflow-visualization" data-controller="workflow-visualization">
  <!-- Workflow Overview -->
  <div class="mb-6">
    <div class="flex items-center justify-between mb-4">
      <h5 class="text-lg font-medium text-gray-900">Campaign Workflow</h5>
      <div class="flex items-center space-x-2">
        <!-- View Toggle -->
        <div class="inline-flex rounded-md shadow-sm" role="group">
          <button type="button" 
                  class="px-3 py-2 text-xs font-medium bg-blue-600 text-white border border-blue-600 rounded-l-md hover:bg-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-500"
                  data-action="click->workflow-visualization#toggleView"
                  data-view="flowchart"
                  data-workflow-visualization-target="viewToggle">
            Flowchart
          </button>
          <button type="button" 
                  class="px-3 py-2 text-xs font-medium bg-white text-gray-700 border border-gray-300 rounded-r-md hover:bg-gray-50 focus:z-10 focus:ring-2 focus:ring-blue-500"
                  data-action="click->workflow-visualization#toggleView"
                  data-view="timeline"
                  data-workflow-visualization-target="viewToggle">
            Timeline
          </button>
        </div>
        
        <!-- Zoom Controls -->
        <div class="flex items-center space-x-1 border rounded-md">
          <button type="button" 
                  class="p-1.5 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-l-md"
                  data-action="click->workflow-visualization#zoomOut"
                  aria-label="Zoom out">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM13 10H7"/>
            </svg>
          </button>
          <span class="px-2 py-1.5 text-xs text-gray-700 border-x" data-workflow-visualization-target="zoomLevel">100%</span>
          <button type="button" 
                  class="p-1.5 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-r-md"
                  data-action="click->workflow-visualization#zoomIn"
                  aria-label="Zoom in">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Workflow Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
      <div class="bg-blue-50 rounded-lg p-4">
        <div class="flex items-center">
          <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center mr-3">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div>
            <div class="text-sm font-medium text-gray-900"><%= get_completed_steps_count(@campaign) %></div>
            <div class="text-xs text-gray-600">Completed Steps</div>
          </div>
        </div>
      </div>
      
      <div class="bg-yellow-50 rounded-lg p-4">
        <div class="flex items-center">
          <div class="w-8 h-8 bg-yellow-600 rounded-full flex items-center justify-center mr-3">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <div class="text-sm font-medium text-gray-900"><%= get_pending_steps_count(@campaign) %></div>
            <div class="text-xs text-gray-600">Pending Steps</div>
          </div>
        </div>
      </div>
      
      <div class="bg-green-50 rounded-lg p-4">
        <div class="flex items-center">
          <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center mr-3">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div>
            <div class="text-sm font-medium text-gray-900"><%= get_workflow_progress(@campaign) %>%</div>
            <div class="text-xs text-gray-600">Progress</div>
          </div>
        </div>
      </div>
      
      <div class="bg-purple-50 rounded-lg p-4">
        <div class="flex items-center">
          <div class="w-8 h-8 bg-purple-600 rounded-full flex items-center justify-center mr-3">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <div>
            <div class="text-sm font-medium text-gray-900"><%= get_estimated_completion(@campaign) %></div>
            <div class="text-xs text-gray-600">Est. Completion</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Interactive Flowchart View -->
  <div class="workflow-container" data-workflow-visualization-target="flowchartView">
    <div class="bg-gray-50 rounded-lg border-2 border-dashed border-gray-300 p-8 overflow-auto"
         data-workflow-visualization-target="canvas"
         style="min-height: 400px;">
      
      <!-- Campaign Flow Nodes -->
      <div class="relative w-full" style="transform-origin: center; transition: transform 0.2s ease;" data-workflow-visualization-target="flowChart">
        
        <!-- Start Node -->
        <div class="absolute" style="left: 50px; top: 50px;">
          <div class="workflow-node start-node" data-node-type="start" data-node-id="start">
            <div class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center shadow-lg">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="mt-2 text-center">
              <div class="text-xs font-medium text-gray-900">Start</div>
              <div class="text-xs text-gray-600">Campaign Created</div>
            </div>
          </div>
        </div>

        <!-- Status Nodes -->
        <% workflow_statuses = ['draft', 'active', 'paused', 'completed'] %>
        <% workflow_statuses.each_with_index do |status, index| %>
          <div class="absolute" style="left: <%= 200 + (index * 180) %>px; top: 150px;">
            <div class="workflow-node status-node <%= @campaign.status == status ? 'current-node' : '' %> <%= status_reached?(@campaign.status, status) ? 'completed-node' : 'pending-node' %>" 
                 data-node-type="status" 
                 data-node-id="<%= status %>"
                 data-action="click->workflow-visualization#selectNode">
              
              <!-- Node Circle -->
              <div class="w-20 h-20 rounded-lg flex items-center justify-center shadow-lg transition-all duration-300 hover:shadow-xl cursor-pointer
                         <%= @campaign.status == status ? 'bg-blue-600 text-white ring-4 ring-blue-200' : 
                             status_reached?(@campaign.status, status) ? 'bg-green-600 text-white' : 
                             'bg-gray-300 text-gray-600' %>">
                
                <!-- Status Icon -->
                <% case status %>
                <% when 'draft' %>
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                <% when 'active' %>
                  <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"/>
                  </svg>
                <% when 'paused' %>
                  <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zM7 8a1 1 0 012 0v4a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v4a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                <% when 'completed' %>
                  <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                <% end %>
              </div>
              
              <!-- Node Label -->
              <div class="mt-3 text-center">
                <div class="text-sm font-medium text-gray-900"><%= status.humanize %></div>
                <div class="text-xs text-gray-600">
                  <% if timestamp = get_status_timestamp(@campaign, status) %>
                    <%= timestamp.strftime('%m/%d/%Y') %>
                  <% else %>
                    Not reached
                  <% end %>
                </div>
              </div>
              
              <!-- Status Indicator -->
              <% if @campaign.status == status %>
                <div class="absolute -top-2 -right-2 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center">
                  <div class="w-3 h-3 bg-white rounded-full animate-pulse"></div>
                </div>
              <% elsif status_reached?(@campaign.status, status) %>
                <div class="absolute -top-2 -right-2 w-6 h-6 bg-green-600 text-white rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Archive Node -->
        <div class="absolute" style="left: 950px; top: 300px;">
          <div class="workflow-node archive-node <%= @campaign.status == 'archived' ? 'current-node' : 'pending-node' %>" 
               data-node-type="archive" 
               data-node-id="archived"
               data-action="click->workflow-visualization#selectNode">
            <div class="w-16 h-16 rounded-lg flex items-center justify-center shadow-lg cursor-pointer
                       <%= @campaign.status == 'archived' ? 'bg-purple-600 text-white ring-4 ring-purple-200' : 'bg-gray-300 text-gray-600' %>">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8l6 6 6-6"/>
              </svg>
            </div>
            <div class="mt-2 text-center">
              <div class="text-xs font-medium text-gray-900">Archived</div>
              <div class="text-xs text-gray-600">Long-term storage</div>
            </div>
          </div>
        </div>

        <!-- Connection Lines -->
        <!-- Start to Draft -->
        <svg class="absolute" style="left: 120px; top: 80px; width: 100px; height: 80px;">
          <path d="M 0 0 Q 50 40 100 70" stroke="#6B7280" stroke-width="2" fill="none" marker-end="url(#arrowhead)"/>
        </svg>

        <!-- Status Connections -->
        <% workflow_statuses.each_with_index do |status, index| %>
          <% unless index == workflow_statuses.length - 1 %>
            <svg class="absolute" style="left: <%= 270 + (index * 180) %>px; top: 180px; width: 130px; height: 40px;">
              <path d="M 0 20 L 130 20" stroke="#6B7280" stroke-width="2" fill="none" marker-end="url(#arrowhead)"/>
            </svg>
          <% end %>
        <% end %>

        <!-- Completed to Archive -->
        <svg class="absolute" style="left: 800px; top: 220px; width: 180px; height: 100px;">
          <path d="M 0 0 Q 90 50 180 80" stroke="#6B7280" stroke-width="2" fill="none" marker-end="url(#arrowhead)"/>
        </svg>

        <!-- Arrow Marker Definition -->
        <svg style="position: absolute; width: 0; height: 0;">
          <defs>
            <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
              <polygon points="0 0, 10 3.5, 0 7" fill="#6B7280"/>
            </marker>
          </defs>
        </svg>
      </div>
    </div>
  </div>

  <!-- Timeline View -->
  <div class="workflow-container hidden" data-workflow-visualization-target="timelineView">
    <div class="bg-white rounded-lg border p-6">
      <div class="space-y-6">
        <% get_workflow_timeline(@campaign).each_with_index do |event, index| %>
          <div class="flex items-start">
            <!-- Timeline Dot -->
            <div class="flex-shrink-0 w-4 h-4 rounded-full mt-2 mr-4
                       <%= event[:completed] ? 'bg-green-500' : 
                           event[:current] ? 'bg-blue-500 animate-pulse' : 
                           'bg-gray-300' %>"></div>
            
            <!-- Timeline Content -->
            <div class="flex-1 min-w-0">
              <div class="flex items-center justify-between mb-1">
                <h6 class="text-sm font-medium text-gray-900"><%= event[:title] %></h6>
                <% if event[:timestamp] %>
                  <span class="text-xs text-gray-500"><%= event[:timestamp].strftime('%m/%d/%Y %I:%M %p') %></span>
                <% end %>
              </div>
              
              <p class="text-sm text-gray-600 mb-2"><%= event[:description] %></p>
              
              <!-- Event Metadata -->
              <% if event[:metadata].present? %>
                <div class="flex items-center space-x-4 text-xs text-gray-500">
                  <% event[:metadata].each do |key, value| %>
                    <span><%= key.humanize %>: <%= value %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <!-- Connection Line -->
            <% unless index == get_workflow_timeline(@campaign).length - 1 %>
              <div class="absolute left-2 w-0.5 h-6 bg-gray-300 mt-6"></div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Node Details Panel -->
  <div class="mt-6 bg-white rounded-lg border p-6 hidden" data-workflow-visualization-target="nodeDetails">
    <div class="flex items-center justify-between mb-4">
      <h5 class="text-lg font-medium text-gray-900" data-workflow-visualization-target="nodeTitle">Node Details</h5>
      <button type="button" 
              class="text-gray-400 hover:text-gray-600"
              data-action="click->workflow-visualization#closeNodeDetails">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
    
    <div data-workflow-visualization-target="nodeContent">
      <!-- Dynamic content based on selected node -->
    </div>
  </div>

  <!-- Workflow Legend -->
  <div class="mt-6 bg-gray-50 rounded-lg p-4">
    <h6 class="text-sm font-medium text-gray-900 mb-3">Legend</h6>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
      <div class="flex items-center">
        <div class="w-4 h-4 bg-blue-600 rounded-full mr-2"></div>
        <span>Current Status</span>
      </div>
      <div class="flex items-center">
        <div class="w-4 h-4 bg-green-600 rounded-full mr-2"></div>
        <span>Completed</span>
      </div>
      <div class="flex items-center">
        <div class="w-4 h-4 bg-gray-300 rounded-full mr-2"></div>
        <span>Pending</span>
      </div>
      <div class="flex items-center">
        <div class="w-4 h-4 bg-yellow-500 rounded-full mr-2"></div>
        <span>In Progress</span>
      </div>
    </div>
  </div>
</div>