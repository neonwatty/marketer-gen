<div class="min-h-screen bg-gray-50" data-controller="brand-compliance" data-brand-id="<%= @brand.id %>">
  <!-- Header Section -->
  <header class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between flex-wrap gap-4">
        <div class="flex items-center space-x-3 sm:space-x-4">
          <%= link_to brands_path, class: "text-gray-500 hover:text-gray-700 transition-colors flex-shrink-0" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
          <% end %>
          <div class="min-w-0 flex-1">
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 truncate"><%= @brand.name %></h1>
            <% if @brand.description.present? %>
              <p class="text-sm text-gray-600 mt-1 hidden sm:block"><%= @brand.description %></p>
            <% end %>
          </div>
        </div>
        
        <div class="flex items-center space-x-2 sm:space-x-3 flex-shrink-0">
          <button data-action="click->brand-compliance#openComplianceChecker" 
                  class="inline-flex items-center px-3 sm:px-4 py-2 border border-indigo-600 text-sm font-medium rounded-lg text-indigo-600 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
            <svg class="h-4 w-4 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="hidden sm:inline">Check Compliance</span>
          </button>
          
          <%= link_to edit_brand_path(@brand), class: "inline-flex items-center px-3 sm:px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
            <svg class="h-4 w-4 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            <span class="hidden sm:inline">Edit Brand</span>
          <% end %>
        </div>
      </div>
      
      <!-- Brand Health Status -->
      <div class="mt-6">
        <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4">
          <!-- Analysis Status -->
          <div class="bg-gradient-to-r from-blue-50 to-blue-100 rounded-lg p-4">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <% if @latest_analysis&.completed? %>
                  <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                <% elsif @latest_analysis&.processing? %>
                  <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center animate-spin">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                  </div>
                <% else %>
                  <div class="w-8 h-8 bg-gray-400 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                <% end %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">Analysis Status</p>
                <p class="text-xs text-gray-600">
                  <% if @latest_analysis&.completed? %>
                    Complete (<%= number_to_percentage(@latest_analysis.confidence_score * 100, precision: 0) %> confidence)
                  <% elsif @latest_analysis&.processing? %>
                    Processing...
                  <% else %>
                    Not Started
                  <% end %>
                </p>
              </div>
            </div>
          </div>
          
          <!-- Brand Assets -->
          <div class="bg-gradient-to-r from-purple-50 to-purple-100 rounded-lg p-4">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                  </svg>
                </div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">Brand Assets</p>
                <p class="text-xs text-gray-600"><%= @brand_assets.count %> files uploaded</p>
              </div>
            </div>
          </div>
          
          <!-- Guidelines -->
          <div class="bg-gradient-to-r from-green-50 to-green-100 rounded-lg p-4">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                </div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">Guidelines</p>
                <p class="text-xs text-gray-600"><%= @guidelines.count %> active rules</p>
              </div>
            </div>
          </div>
          
          <!-- Messaging Framework -->
          <div class="bg-gradient-to-r from-orange-50 to-orange-100 rounded-lg p-4">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-orange-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                  </svg>
                </div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">Messaging</p>
                <p class="text-xs text-gray-600">
                  <% if @messaging_framework&.active? %>
                    Active Framework
                  <% else %>
                    Setup Required
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Tab Navigation -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 mb-8">
      <!-- Mobile Tab Navigation -->
      <div class="sm:hidden">
        <select data-action="change->brand-compliance#switchTabMobile" 
                class="block w-full px-4 py-3 border-0 border-b border-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-transparent bg-transparent">
          <option value="dashboard">Dashboard</option>
          <option value="assets">Brand Assets</option>
          <option value="analysis">Analysis Results</option>
          <option value="messaging">Messaging Framework</option>
          <option value="compliance">Compliance Checker</option>
        </select>
      </div>
      
      <!-- Desktop Tab Navigation -->
      <nav class="hidden sm:flex space-x-8 px-6" aria-label="Tabs">
        <button data-tab="dashboard" data-action="click->brand-compliance#switchTab" 
                class="tab-button active py-4 px-1 border-b-2 border-indigo-500 font-medium text-sm text-indigo-600 whitespace-nowrap">
          Dashboard
        </button>
        <button data-tab="assets" data-action="click->brand-compliance#switchTab"
                class="tab-button py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
          Brand Assets
        </button>
        <button data-tab="analysis" data-action="click->brand-compliance#switchTab"
                class="tab-button py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
          Analysis Results
        </button>
        <button data-tab="messaging" data-action="click->brand-compliance#switchTab"
                class="tab-button py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
          Messaging Framework
        </button>
        <button data-tab="compliance" data-action="click->brand-compliance#switchTab"
                class="tab-button py-4 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
          Compliance Checker
        </button>
      </nav>
    </div>

    <!-- Tab Content -->
    <div class="tab-content">
      <!-- Dashboard Tab -->
      <div data-tab-content="dashboard" class="tab-pane active">
        <%= render 'dashboard', brand: @brand, latest_analysis: @latest_analysis, messaging_framework: @messaging_framework %>
      </div>

      <!-- Brand Assets Tab -->
      <div data-tab-content="assets" class="tab-pane hidden">
        <%= render 'assets', brand: @brand, brand_assets: @brand_assets %>
      </div>

      <!-- Analysis Results Tab -->
      <div data-tab-content="analysis" class="tab-pane hidden">
        <%= render 'analysis_results', brand: @brand, latest_analysis: @latest_analysis %>
      </div>

      <!-- Messaging Framework Tab -->
      <div data-tab-content="messaging" class="tab-pane hidden">
        <%= render 'messaging_framework', brand: @brand, messaging_framework: @messaging_framework %>
      </div>

      <!-- Compliance Checker Tab -->
      <div data-tab-content="compliance" class="tab-pane hidden">
        <%= render 'compliance_checker', brand: @brand %>
      </div>
    </div>
  </main>

  <!-- Real-time Compliance Modal -->
  <div data-brand-compliance-target="complianceModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 z-50">
    <div class="flex items-center justify-center min-h-screen p-2 sm:p-4">
      <div class="bg-white rounded-xl shadow-xl max-w-4xl w-full max-h-screen overflow-y-auto mx-2 sm:mx-0">
        <div class="sticky top-0 bg-white border-b border-gray-200 px-4 sm:px-6 py-4">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900">Real-time Brand Compliance Checker</h3>
            <button data-action="click->brand-compliance#closeComplianceChecker"
                    class="text-gray-400 hover:text-gray-600">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        </div>
        
        <div class="p-4 sm:p-6">
          <%= render 'real_time_compliance_checker', brand: @brand %>
        </div>
      </div>
    </div>
  </div>
</div>
