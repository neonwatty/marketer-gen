<%# Real-time Brand Compliance Checker %>
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <!-- Content Input Section -->
  <div class="space-y-6">
    <!-- Input Area -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h4 class="text-lg font-semibold text-gray-900">Content to Check</h4>
        <div class="flex items-center space-x-2">
          <button data-action="click->brand-compliance#clearContent"
                  class="text-sm text-gray-500 hover:text-gray-700 px-2 py-1 rounded">
            Clear
          </button>
          <button data-action="click->brand-compliance#loadSampleContent"
                  class="text-sm text-indigo-600 hover:text-indigo-700 px-2 py-1 rounded">
            Load Sample
          </button>
        </div>
      </div>
      
      <div class="space-y-4">
        <!-- Content Type Selector -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Content Type</label>
          <select data-brand-compliance-target="contentType" 
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
            <option value="general">General Content</option>
            <option value="email">Email Marketing</option>
            <option value="social">Social Media</option>
            <option value="website">Website Copy</option>
            <option value="ad">Advertisement</option>
            <option value="blog">Blog Post</option>
            <option value="press">Press Release</option>
          </select>
        </div>
        
        <!-- Content Input -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Content</label>
          <textarea data-brand-compliance-target="contentInput"
                    data-action="input->brand-compliance#validateContentRealTime"
                    rows="12"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent resize-none font-mono text-sm"
                    placeholder="Enter your content here to check for brand compliance..."></textarea>
          
          <!-- Character Count -->
          <div class="flex justify-between items-center mt-2 text-xs text-gray-500">
            <span>
              <span data-brand-compliance-target="charCount">0</span> characters
            </span>
            <span>
              <span data-brand-compliance-target="wordCount">0</span> words
            </span>
          </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="flex flex-wrap gap-2">
          <button data-action="click->brand-compliance#validateNow"
                  class="px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors">
            Validate Now
          </button>
          
          <button data-action="click->brand-compliance#generateSuggestions"
                  class="px-4 py-2 border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors">
            Get Suggestions
          </button>
          
          <button data-action="click->brand-compliance#exportReport"
                  class="px-4 py-2 border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors">
            Export Report
          </button>
        </div>
      </div>
    </div>
    
    <!-- Real-time Suggestions -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h4 class="text-lg font-semibold text-gray-900 mb-4">AI Suggestions</h4>
      
      <div data-brand-compliance-target="suggestions" class="space-y-3">
        <div class="text-center py-6 text-gray-500">
          <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <p class="mt-2 text-sm">Enter content to get AI-powered suggestions</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Validation Results Section -->
  <div class="space-y-6">
    <!-- Compliance Score -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h4 class="text-lg font-semibold text-gray-900 mb-4">Compliance Score</h4>
      
      <div data-brand-compliance-target="scoreDisplay" class="text-center">
        <!-- Default State -->
        <div class="score-placeholder">
          <div class="relative inline-flex items-center justify-center w-24 h-24 mb-4">
            <svg class="w-full h-full" viewBox="0 0 100 100">
              <circle cx="50" cy="50" r="40" fill="transparent" stroke="#e5e7eb" stroke-width="8"/>
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-xl font-bold text-gray-400">--</span>
            </div>
          </div>
          <p class="text-sm text-gray-500">Enter content to see compliance score</p>
        </div>
      </div>
      
      <!-- Score Breakdown -->
      <div data-brand-compliance-target="scoreBreakdown" class="hidden mt-6 space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-700">Voice Consistency</span>
          <div class="flex items-center space-x-2">
            <div class="w-16 bg-gray-200 rounded-full h-2">
              <div data-score-bar="voice" class="bg-blue-500 h-2 rounded-full" style="width: 0%"></div>
            </div>
            <span data-score-text="voice" class="text-sm font-medium text-gray-900">0%</span>
          </div>
        </div>
        
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-700">Message Alignment</span>
          <div class="flex items-center space-x-2">
            <div class="w-16 bg-gray-200 rounded-full h-2">
              <div data-score-bar="messaging" class="bg-green-500 h-2 rounded-full" style="width: 0%"></div>
            </div>
            <span data-score-text="messaging" class="text-sm font-medium text-gray-900">0%</span>
          </div>
        </div>
        
        <div class="flex justify-between items-center">
          <span class="text-sm font-medium text-gray-700">Compliance Rules</span>
          <div class="flex items-center space-x-2">
            <div class="w-16 bg-gray-200 rounded-full h-2">
              <div data-score-bar="compliance" class="bg-red-500 h-2 rounded-full" style="width: 0%"></div>
            </div>
            <span data-score-text="compliance" class="text-sm font-medium text-gray-900">0%</span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Validation Results -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h4 class="text-lg font-semibold text-gray-900 mb-4">Validation Results</h4>
      
      <div data-brand-compliance-target="validationResults">
        <!-- Default State -->
        <div class="text-center py-6 text-gray-500">
          <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
          </svg>
          <p class="mt-2 text-sm">Enter content to see validation results</p>
        </div>
      </div>
    </div>
    
    <!-- Violations & Issues -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h4 class="text-lg font-semibold text-gray-900 mb-4">Issues & Violations</h4>
      
      <div data-brand-compliance-target="violations">
        <!-- Default State -->
        <div class="text-center py-6 text-gray-500">
          <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
          </svg>
          <p class="mt-2 text-sm">No issues detected yet</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Real-time Compliance Status Bar -->
<div data-brand-compliance-target="statusBar" 
     class="hidden fixed bottom-4 left-1/2 transform -translate-x-1/2 bg-white rounded-lg shadow-lg border border-gray-200 px-6 py-3">
  <div class="flex items-center space-x-4">
    <div class="flex items-center space-x-2">
      <div data-status-indicator class="w-3 h-3 rounded-full bg-gray-400"></div>
      <span data-status-text class="text-sm font-medium text-gray-700">Ready</span>
    </div>
    
    <!-- Live Score -->
    <div class="flex items-center space-x-2">
      <span class="text-xs text-gray-500">Score:</span>
      <span data-live-score class="text-sm font-bold text-gray-900">--</span>
    </div>
    
    <!-- Processing Indicator -->
    <div data-processing-indicator class="hidden">
      <svg class="w-4 h-4 text-indigo-600 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
      </svg>
    </div>
  </div>
</div>