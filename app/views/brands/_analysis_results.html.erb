<%# Brand Analysis Results Dashboard %>
<div class="space-y-6">
  <% if latest_analysis&.completed? %>
    <!-- Analysis Overview -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-900">Analysis Results</h3>
        <div class="flex items-center space-x-3">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            Completed
          </span>
          <span class="text-sm text-gray-600">
            <time datetime="<%= latest_analysis.updated_at.iso8601 %>">
              Last updated <%= time_ago_in_words(latest_analysis.updated_at) %> ago
            </time>
          </span>
        </div>
      </div>
      
      <!-- Key Metrics -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="text-center">
          <div class="relative inline-flex items-center justify-center w-16 h-16 mb-2">
            <svg class="w-full h-full transform -rotate-90" viewBox="0 0 100 100">
              <circle cx="50" cy="50" r="35" fill="transparent" stroke="#e5e7eb" stroke-width="6"/>
              <circle cx="50" cy="50" r="35" fill="transparent" stroke="#3b82f6" stroke-width="6"
                      stroke-dasharray="<%= (latest_analysis.confidence_score * 219.8).round(2) %>, 219.8"
                      stroke-linecap="round"/>
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-sm font-bold text-gray-900">
                <%= number_to_percentage(latest_analysis.confidence_score * 100, precision: 0) %>
              </span>
            </div>
          </div>
          <h4 class="text-sm font-medium text-gray-900">Overall Confidence</h4>
          <p class="text-xs text-gray-500 mt-1">Analysis accuracy</p>
        </div>
        
        <div class="text-center">
          <div class="relative inline-flex items-center justify-center w-16 h-16 mb-2">
            <svg class="w-full h-full transform -rotate-90" viewBox="0 0 100 100">
              <circle cx="50" cy="50" r="35" fill="transparent" stroke="#e5e7eb" stroke-width="6"/>
              <circle cx="50" cy="50" r="35" fill="transparent" stroke="#10b981" stroke-width="6"
                      stroke-dasharray="<%= ((latest_analysis.voice_attributes['consistency_score'] || 0.8) * 219.8).round(2) %>, 219.8"
                      stroke-linecap="round"/>
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-sm font-bold text-gray-900">
                <%= number_to_percentage((latest_analysis.voice_attributes['consistency_score'] || 0.8) * 100, precision: 0) %>
              </span>
            </div>
          </div>
          <h4 class="text-sm font-medium text-gray-900">Voice Consistency</h4>
          <p class="text-xs text-gray-500 mt-1">Tone alignment</p>
        </div>
        
        <div class="text-center">
          <div class="relative inline-flex items-center justify-center w-16 h-16 mb-2">
            <svg class="w-full h-full transform -rotate-90" viewBox="0 0 100 100">
              <circle cx="50" cy="50" r="35" fill="transparent" stroke="#e5e7eb" stroke-width="6"/>
              <circle cx="50" cy="50" r="35" fill="transparent" stroke="#f59e0b" stroke-width="6"
                      stroke-dasharray="<%= (latest_analysis.messaging_pillars.count > 0 ? 0.9 * 219.8 : 0.3 * 219.8).round(2) %>, 219.8"
                      stroke-linecap="round"/>
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-sm font-bold text-gray-900">
                <%= latest_analysis.messaging_pillars.count %>
              </span>
            </div>
          </div>
          <h4 class="text-sm font-medium text-gray-900">Key Messages</h4>
          <p class="text-xs text-gray-500 mt-1">Identified pillars</p>
        </div>
        
        <div class="text-center">
          <div class="relative inline-flex items-center justify-center w-16 h-16 mb-2">
            <svg class="w-full h-full transform -rotate-90" viewBox="0 0 100 100">
              <circle cx="50" cy="50" r="35" fill="transparent" stroke="#e5e7eb" stroke-width="6"/>
              <circle cx="50" cy="50" r="35" fill="transparent" stroke="#ef4444" stroke-width="6"
                      stroke-dasharray="<%= (latest_analysis.brand_values.count > 0 ? 0.85 * 219.8 : 0.2 * 219.8).round(2) %>, 219.8"
                      stroke-linecap="round"/>
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-sm font-bold text-gray-900">
                <%= latest_analysis.brand_values.count %>
              </span>
            </div>
          </div>
          <h4 class="text-sm font-medium text-gray-900">Brand Values</h4>
          <p class="text-xs text-gray-500 mt-1">Core principles</p>
        </div>
      </div>
    </div>
    
    <!-- Detailed Analysis -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Voice & Tone Attributes -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">Voice & Tone Profile</h4>
        
        <div class="space-y-4">
          <% if latest_analysis.voice_attributes.present? %>
            <% latest_analysis.voice_attributes.each do |attribute, value| %>
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-700 capitalize">
                  <%= attribute.humanize %>
                </span>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= value.is_a?(String) ? value.humanize : value %>
                </span>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-6">
              <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
              <p class="mt-2 text-sm text-gray-500">No voice attributes extracted</p>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Brand Values -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">Brand Values</h4>
        
        <div class="space-y-3">
          <% if latest_analysis.brand_values.any? %>
            <% latest_analysis.brand_values.each do |value| %>
              <div class="flex items-center p-3 bg-green-50 rounded-lg">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900"><%= value %></p>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-6">
              <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
              <p class="mt-2 text-sm text-gray-500">No brand values identified</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Messaging Pillars & Visual Guidelines -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Messaging Pillars -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">Key Messaging Pillars</h4>
        
        <div class="space-y-3">
          <% if latest_analysis.messaging_pillars.any? %>
            <% latest_analysis.messaging_pillars.each_with_index do |pillar, index| %>
              <div class="flex items-start p-3 bg-orange-50 rounded-lg">
                <div class="flex-shrink-0 mt-0.5">
                  <span class="flex items-center justify-center w-5 h-5 text-xs font-bold text-orange-700 bg-orange-200 rounded-full">
                    <%= index + 1 %>
                  </span>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900"><%= pillar %></p>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-6">
              <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <p class="mt-2 text-sm text-gray-500">No messaging pillars identified</p>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Visual Guidelines -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">Visual Guidelines</h4>
        
        <div class="space-y-4">
          <% if latest_analysis.visual_guidelines.present? %>
            <!-- Colors -->
            <% if latest_analysis.visual_guidelines['primary_colors']&.any? %>
              <div>
                <h5 class="text-sm font-medium text-gray-700 mb-2">Primary Colors</h5>
                <div class="flex space-x-2">
                  <% latest_analysis.visual_guidelines['primary_colors'].each do |color| %>
                    <div class="w-8 h-8 rounded-lg shadow-sm border border-gray-200 relative group"
                         style="background-color: <%= color %>"
                         title="<%= color %>">
                      <div class="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-900 text-white text-xs px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity">
                        <%= color %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
            
            <!-- Typography -->
            <% if latest_analysis.visual_guidelines['typography'].present? %>
              <div>
                <h5 class="text-sm font-medium text-gray-700 mb-2">Typography</h5>
                <p class="text-sm text-gray-600">
                  <%= latest_analysis.visual_guidelines['typography'] %>
                </p>
              </div>
            <% end %>
            
            <!-- Imagery Style -->
            <% if latest_analysis.visual_guidelines['imagery_style'].present? %>
              <div>
                <h5 class="text-sm font-medium text-gray-700 mb-2">Imagery Style</h5>
                <p class="text-sm text-gray-600">
                  <%= latest_analysis.visual_guidelines['imagery_style'] %>
                </p>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-6">
              <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"/>
              </svg>
              <p class="mt-2 text-sm text-gray-500">No visual guidelines extracted</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Compliance Rules -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h4 class="text-lg font-semibold text-gray-900 mb-4">Brand Compliance Rules</h4>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Restrictions -->
        <div>
          <h5 class="text-sm font-semibold text-red-700 mb-3 flex items-center">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
            </svg>
            Restrictions
          </h5>
          <div class="space-y-2">
            <% if latest_analysis.extracted_rules.present? && latest_analysis.extracted_rules['restrictions']&.any? %>
              <% latest_analysis.extracted_rules['restrictions'].each do |restriction| %>
                <div class="flex items-start p-2 bg-red-50 rounded-lg">
                  <svg class="h-4 w-4 text-red-500 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                  <p class="text-sm text-gray-700"><%= restriction %></p>
                </div>
              <% end %>
            <% else %>
              <p class="text-sm text-gray-500 italic">No restrictions identified</p>
            <% end %>
          </div>
        </div>
        
        <!-- Requirements -->
        <div>
          <h5 class="text-sm font-semibold text-green-700 mb-3 flex items-center">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Requirements
          </h5>
          <div class="space-y-2">
            <% if latest_analysis.extracted_rules.present? && latest_analysis.extracted_rules['requirements']&.any? %>
              <% latest_analysis.extracted_rules['requirements'].each do |requirement| %>
                <div class="flex items-start p-2 bg-green-50 rounded-lg">
                  <svg class="h-4 w-4 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  <p class="text-sm text-gray-700"><%= requirement %></p>
                </div>
              <% end %>
            <% else %>
              <p class="text-sm text-gray-500 italic">No requirements identified</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Analysis Notes -->
    <% if latest_analysis.analysis_notes.present? %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">Analysis Notes</h4>
        <div class="prose prose-sm max-w-none">
          <p class="text-gray-700"><%= latest_analysis.analysis_notes %></p>
        </div>
      </div>
    <% end %>
    
  <% elsif latest_analysis&.processing? %>
    <!-- Processing State -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12">
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-4">
          <svg class="w-8 h-8 text-blue-600 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Analysis in Progress</h3>
        <p class="text-gray-600">We're analyzing your brand assets to extract key characteristics and guidelines.</p>
        <div class="mt-6">
          <button data-action="click->brand-compliance#refreshAnalysis"
                  class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            Refresh Status
          </button>
        </div>
      </div>
    </div>
    
  <% else %>
    <!-- No Analysis State -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12">
      <div class="text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No Analysis Available</h3>
        <p class="mt-2 text-gray-600">Upload brand assets to generate comprehensive brand analysis and guidelines.</p>
        <div class="mt-6">
          <%= link_to new_brand_brand_asset_path(brand), 
                      class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-sm font-medium rounded-lg text-white hover:bg-indigo-700 transition-colors" do %>
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
            Upload Brand Assets
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>