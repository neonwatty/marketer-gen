<div class="space-y-6">
  <!-- Upload Section -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-semibold text-gray-900">Brand Assets</h3>
      <div class="flex items-center space-x-3">
        <div class="text-sm text-gray-500">
          <span data-assets-count><%= brand_assets.count %></span> files
        </div>
        <%= link_to new_brand_brand_asset_path(brand), 
                    class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add Asset
        <% end %>
      </div>
    </div>
    
    <!-- Drag and Drop Upload Zone -->
    <div data-controller="file-upload" 
         data-brand-id="<%= brand.id %>"
         class="upload-zone border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-gray-400 transition-colors cursor-pointer"
         data-action="dragover->file-upload#dragover dragenter->file-upload#dragenter dragleave->file-upload#dragleave drop->file-upload#drop click->file-upload#click">
      
      <div class="upload-prompt" data-file-upload-target="prompt">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">Upload brand assets</h3>
        <p class="mt-2 text-sm text-gray-500">
          Drag and drop files here, or click to browse
        </p>
        <p class="mt-1 text-xs text-gray-400">
          Supports PDF, DOCX, PNG, JPG (max 25MB each)
        </p>
      </div>
      
      <input type="file" 
             data-file-upload-target="input"
             class="hidden" 
             multiple 
             accept=".pdf,.docx,.doc,.png,.jpg,.jpeg">
    </div>
    
    <!-- Upload Progress -->
    <div data-file-upload-target="progress" class="hidden mt-4">
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="flex items-center justify-between text-sm mb-2">
          <span class="font-medium text-gray-900">Uploading files...</span>
          <span data-file-upload-target="progressText" class="text-gray-600">0%</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div data-file-upload-target="progressBar" 
               class="bg-indigo-600 h-2 rounded-full transition-all duration-300" 
               style="width: 0%"></div>
        </div>
        <div data-file-upload-target="fileList" class="mt-3 space-y-1"></div>
      </div>
    </div>
  </div>
  
  <!-- Filter and Search -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <div class="flex flex-col sm:flex-row gap-4">
      <!-- Search -->
      <div class="flex-1">
        <div class="relative">
          <input type="text" 
                 data-action="input->brand-compliance#filterAssets"
                 class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                 placeholder="Search assets...">
          <svg class="absolute left-3 top-2.5 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
      </div>
      
      <!-- Asset Type Filter -->
      <div class="flex space-x-2">
        <button data-filter="all" 
                data-action="click->brand-compliance#filterByType"
                class="asset-filter-btn active px-3 py-2 text-sm font-medium rounded-lg bg-indigo-100 text-indigo-700 border border-indigo-200">
          All
        </button>
        <button data-filter="pdf" 
                data-action="click->brand-compliance#filterByType"
                class="asset-filter-btn px-3 py-2 text-sm font-medium rounded-lg bg-white text-gray-700 border border-gray-200 hover:bg-gray-50">
          PDF
        </button>
        <button data-filter="image" 
                data-action="click->brand-compliance#filterByType"
                class="asset-filter-btn px-3 py-2 text-sm font-medium rounded-lg bg-white text-gray-700 border border-gray-200 hover:bg-gray-50">
          Images
        </button>
        <button data-filter="document" 
                data-action="click->brand-compliance#filterByType"
                class="asset-filter-btn px-3 py-2 text-sm font-medium rounded-lg bg-white text-gray-700 border border-gray-200 hover:bg-gray-50">
          Documents
        </button>
      </div>
      
      <!-- View Toggle -->
      <div class="flex border border-gray-200 rounded-lg">
        <button data-view="grid" 
                data-action="click->brand-compliance#toggleView"
                class="view-toggle-btn active px-3 py-2 text-sm font-medium text-indigo-600 bg-indigo-50 rounded-l-lg border-r border-gray-200">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
          </svg>
        </button>
        <button data-view="list" 
                data-action="click->brand-compliance#toggleView"
                class="view-toggle-btn px-3 py-2 text-sm font-medium text-gray-700 bg-white rounded-r-lg hover:bg-gray-50">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Assets Grid/List -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <div data-assets-container class="assets-grid">
      <% if brand_assets.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6" data-view-mode="grid">
          <% brand_assets.each do |asset| %>
            <%= render 'brand_assets/asset_card', asset: asset %>
          <% end %>
        </div>
        
        <!-- List View (hidden by default) -->
        <div class="hidden space-y-4" data-view-mode="list">
          <% brand_assets.each do |asset| %>
            <div class="flex items-center p-4 border border-gray-200 rounded-lg hover:shadow-md transition-shadow"
                 data-asset-type="<%= asset.asset_type %>"
                 data-processing-status="<%= asset.processing_status %>"
                 data-filename="<%= asset.original_filename.downcase %>">
              
              <!-- File Icon -->
              <div class="flex-shrink-0 mr-4">
                <%= render "brand_assets/asset_type_icon", type: asset.asset_type, class: "w-8 h-8 text-gray-400" %>
              </div>
              
              <!-- File Info -->
              <div class="flex-1 min-w-0">
                <h4 class="text-sm font-medium text-gray-900 truncate">
                  <%= asset.original_filename %>
                </h4>
                <div class="flex items-center space-x-4 mt-1">
                  <span class="text-xs text-gray-500">
                    <%= asset.asset_type.humanize %>
                  </span>
                  <span class="text-xs text-gray-500">
                    <%= "%.2f MB" % asset.file_size_mb %>
                  </span>
                  <span class="text-xs text-gray-500">
                    <%= time_ago_in_words(asset.created_at) %> ago
                  </span>
                </div>
              </div>
              
              <!-- Status -->
              <div class="flex-shrink-0 mx-4">
                <%= render "brand_assets/processing_status", status: asset.processing_status %>
              </div>
              
              <!-- Actions -->
              <div class="flex-shrink-0">
                <div class="flex items-center space-x-2">
                  <%= link_to brand_brand_asset_path(brand, asset),
                              class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" do %>
                    View
                  <% end %>
                  
                  <div class="relative" data-controller="dropdown">
                    <button type="button"
                            class="text-gray-400 hover:text-gray-600 p-1"
                            data-action="click->dropdown#toggle">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                      </svg>
                    </button>
                    
                    <div data-dropdown-target="menu"
                         class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10 border border-gray-200">
                      <div class="py-1">
                        <%= link_to edit_brand_brand_asset_path(brand, asset),
                                    class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                          Edit
                        <% end %>
                        <%= link_to brand_brand_asset_path(brand, asset),
                                    method: :delete,
                                    data: { 
                                      confirm: "Are you sure you want to delete this asset?",
                                      turbo_method: :delete 
                                    },
                                    class: "block px-4 py-2 text-sm text-red-700 hover:bg-red-50" do %>
                          Delete
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No brand assets</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by uploading your first brand asset.</p>
          <div class="mt-6">
            <%= link_to new_brand_brand_asset_path(brand), 
                        class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-sm font-medium rounded-lg text-white hover:bg-indigo-700 transition-colors" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Upload Asset
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Bulk Actions (shown when assets are selected) -->
  <div data-bulk-actions class="hidden fixed bottom-6 left-1/2 transform -translate-x-1/2 bg-white rounded-xl shadow-lg border border-gray-200 p-4">
    <div class="flex items-center space-x-4">
      <span class="text-sm font-medium text-gray-700">
        <span data-selected-count>0</span> assets selected
      </span>
      
      <div class="flex space-x-2">
        <button data-action="click->brand-compliance#bulkAnalyze"
                class="px-3 py-1.5 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors">
          Analyze Selected
        </button>
        
        <button data-action="click->brand-compliance#bulkDownload"
                class="px-3 py-1.5 bg-gray-600 text-white text-sm font-medium rounded-lg hover:bg-gray-700 transition-colors">
          Download
        </button>
        
        <button data-action="click->brand-compliance#bulkDelete"
                class="px-3 py-1.5 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors">
          Delete
        </button>
        
        <button data-action="click->brand-compliance#clearSelection"
                class="px-3 py-1.5 bg-white text-gray-700 text-sm font-medium rounded-lg border border-gray-300 hover:bg-gray-50 transition-colors">
          Clear
        </button>
      </div>
    </div>
  </div>
</div>