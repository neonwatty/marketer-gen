<div class="grid grid-cols-1 lg:grid-cols-3 gap-4 sm:gap-6 lg:gap-8">
  <!-- Brand Overview Card -->
  <div class="lg:col-span-2">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-900">Brand Overview</h3>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= brand.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
          <%= brand.active? ? 'Active' : 'Inactive' %>
        </span>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:gap-6">
        <!-- Brand Info -->
        <div class="space-y-4">
          <div>
            <h4 class="text-sm font-medium text-gray-700 mb-2">Industry</h4>
            <p class="text-sm text-gray-900"><%= brand.industry || 'Not specified' %></p>
          </div>
          
          <div>
            <h4 class="text-sm font-medium text-gray-700 mb-2">Website</h4>
            <% if brand.website.present? %>
              <%= link_to brand.website, brand.website, 
                          target: '_blank', 
                          class: 'text-sm text-indigo-600 hover:text-indigo-700 hover:underline' %>
            <% else %>
              <p class="text-sm text-gray-500">Not specified</p>
            <% end %>
          </div>
          
          <div>
            <h4 class="text-sm font-medium text-gray-700 mb-2">Last Updated</h4>
            <p class="text-sm text-gray-900">
              <time datetime="<%= brand.updated_at.iso8601 %>">
                <%= time_ago_in_words(brand.updated_at) %> ago
              </time>
            </p>
          </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="space-y-3">
          <h4 class="text-sm font-medium text-gray-700 mb-3">Quick Actions</h4>
          
          <%= link_to new_brand_brand_asset_path(brand), 
                      class: "flex items-center px-3 py-2 text-sm font-medium text-gray-700 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
            Upload Brand Asset
          <% end %>
          
          <% if messaging_framework %>
            <%= link_to brand_messaging_framework_path(brand, messaging_framework), 
                        class: "flex items-center px-3 py-2 text-sm font-medium text-gray-700 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Edit Messaging Framework
            <% end %>
          <% else %>
            <%= link_to new_brand_messaging_framework_path(brand), 
                        class: "flex items-center px-3 py-2 text-sm font-medium text-indigo-700 bg-indigo-50 rounded-lg hover:bg-indigo-100 transition-colors" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Create Messaging Framework
            <% end %>
          <% end %>
          
          <button data-action="click->brand-compliance#generateReport"
                  class="flex items-center px-3 py-2 text-sm font-medium text-gray-700 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors w-full">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Generate Compliance Report
          </button>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Brand Health Sidebar -->
  <div class="space-y-6">
    <!-- Compliance Score -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Brand Health Score</h3>
      
      <% if latest_analysis&.completed? %>
        <div class="text-center">
          <div class="relative inline-flex items-center justify-center w-24 h-24">
            <svg class="w-full h-full transform -rotate-90" viewBox="0 0 100 100">
              <circle cx="50" cy="50" r="40" fill="transparent" stroke="#e5e7eb" stroke-width="8"/>
              <circle cx="50" cy="50" r="40" fill="transparent" stroke="#3b82f6" stroke-width="8"
                      stroke-dasharray="<%= (latest_analysis.confidence_score * 251.2).round(2) %>, 251.2"
                      stroke-linecap="round"/>
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-xl font-bold text-gray-900">
                <%= number_to_percentage(latest_analysis.confidence_score * 100, precision: 0) %>
              </span>
            </div>
          </div>
          
          <p class="text-sm text-gray-600 mt-2">
            <% case latest_analysis.confidence_score %>
            <% when 0.9..1.0 %>
              Excellent brand compliance
            <% when 0.7..0.9 %>
              Good brand compliance
            <% when 0.5..0.7 %>
              Fair brand compliance
            <% else %>
              Poor brand compliance
            <% end %>
          </p>
          
          <div class="mt-4 space-y-2">
            <div class="flex justify-between text-xs">
              <span class="text-gray-500">Voice Consistency</span>
              <span class="font-medium">
                <%= number_to_percentage((latest_analysis.voice_attributes['consistency_score'] || 0.8) * 100, precision: 0) %>
              </span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-1.5">
              <div class="bg-blue-500 h-1.5 rounded-full" 
                   style="width: <%= (latest_analysis.voice_attributes['consistency_score'] || 0.8) * 100 %>%"></div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-6">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No Analysis Available</h3>
          <p class="mt-1 text-sm text-gray-500">Upload brand assets to get started</p>
        </div>
      <% end %>
    </div>
    
    <!-- Recent Activity -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Activity</h3>
      
      <div class="space-y-3">
        <% if latest_analysis %>
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">Brand analysis completed</p>
              <p class="text-xs text-gray-500">
                <time datetime="<%= latest_analysis.updated_at.iso8601 %>">
                  <%= time_ago_in_words(latest_analysis.updated_at) %> ago
                </time>
              </p>
            </div>
          </div>
        <% end %>
        
        <% brand.brand_assets.recent.limit(3).each do |asset| %>
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                </svg>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">Uploaded <%= asset.original_filename.truncate(20) %></p>
              <p class="text-xs text-gray-500">
                <time datetime="<%= asset.created_at.iso8601 %>">
                  <%= time_ago_in_words(asset.created_at) %> ago
                </time>
              </p>
            </div>
          </div>
        <% end %>
        
        <% if brand.brand_assets.empty? %>
          <div class="text-center py-4">
            <p class="text-sm text-gray-500">No recent activity</p>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Brand Color Palette -->
    <% if brand.color_scheme.present? %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Brand Colors</h3>
        
        <div class="grid grid-cols-3 gap-2">
          <% brand.color_scheme.each do |color| %>
            <div class="aspect-square rounded-lg shadow-sm border border-gray-200 relative group cursor-pointer"
                 style="background-color: <%= color %>"
                 title="<%= color %>">
              <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 rounded-lg transition-all duration-200 flex items-center justify-center">
                <span class="text-white text-xs font-medium opacity-0 group-hover:opacity-100 transition-opacity">
                  <%= color %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>