<%# Messaging Framework Integration %>
<div class="space-y-6">
  <% if messaging_framework %>
    <!-- Framework Overview -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-900">Messaging Framework</h3>
        <div class="flex items-center space-x-3">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= messaging_framework.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
            <%= messaging_framework.active? ? 'Active' : 'Inactive' %>
          </span>
          <%= link_to brand_messaging_framework_path(brand, messaging_framework), 
                      class: "inline-flex items-center px-4 py-2 border border-indigo-600 text-sm font-medium rounded-lg text-indigo-600 bg-white hover:bg-indigo-50 transition-colors" do %>
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit Framework
          <% end %>
        </div>
      </div>
      
      <!-- Framework Stats -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <div class="bg-gradient-to-r from-blue-50 to-blue-100 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">Key Messages</p>
              <p class="text-xs text-gray-600">
                <%= (messaging_framework.key_messages || {}).values.flatten.count %> defined
              </p>
            </div>
          </div>
        </div>
        
        <div class="bg-gradient-to-r from-green-50 to-green-100 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">Approved Phrases</p>
              <p class="text-xs text-gray-600">
                <%= (messaging_framework.approved_phrases || []).count %> phrases
              </p>
            </div>
          </div>
        </div>
        
        <div class="bg-gradient-to-r from-red-50 to-red-100 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-red-500 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                </svg>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">Banned Words</p>
              <p class="text-xs text-gray-600">
                <%= (messaging_framework.banned_words || []).count %> restricted
              </p>
            </div>
          </div>
        </div>
        
        <div class="bg-gradient-to-r from-purple-50 to-purple-100 rounded-lg p-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">Tone Attributes</p>
              <p class="text-xs text-gray-600">
                <%= (messaging_framework.tone_attributes || {}).keys.count %> defined
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Framework Content Preview -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Brand Foundation -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">Brand Foundation</h4>
        
        <div class="space-y-4">
          <% if messaging_framework.tagline.present? %>
            <div>
              <h5 class="text-sm font-medium text-gray-700 mb-1">Tagline</h5>
              <p class="text-gray-900 font-medium"><%= messaging_framework.tagline %></p>
            </div>
          <% end %>
          
          <% if messaging_framework.mission_statement.present? %>
            <div>
              <h5 class="text-sm font-medium text-gray-700 mb-1">Mission Statement</h5>
              <p class="text-sm text-gray-600"><%= messaging_framework.mission_statement %></p>
            </div>
          <% end %>
          
          <% if messaging_framework.vision_statement.present? %>
            <div>
              <h5 class="text-sm font-medium text-gray-700 mb-1">Vision Statement</h5>
              <p class="text-sm text-gray-600"><%= messaging_framework.vision_statement %></p>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Key Messages Preview -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">Key Messages</h4>
        
        <div class="space-y-3">
          <% if messaging_framework.key_messages.present? %>
            <% messaging_framework.key_messages.each do |category, messages| %>
              <div>
                <h5 class="text-xs font-semibold text-gray-600 uppercase tracking-wider mb-2">
                  <%= category %>
                </h5>
                <div class="space-y-1">
                  <% messages.first(3).each do |message| %>
                    <p class="text-sm text-gray-900 bg-gray-50 rounded-lg px-3 py-2">
                      <%= message %>
                    </p>
                  <% end %>
                  <% if messages.count > 3 %>
                    <p class="text-xs text-gray-500 px-3">
                      +<%= messages.count - 3 %> more messages
                    </p>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-6">
              <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <p class="mt-2 text-sm text-gray-500">No key messages defined</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Tone & Voice Profile -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h4 class="text-lg font-semibold text-gray-900 mb-4">Tone & Voice Profile</h4>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% if messaging_framework.tone_attributes.present? %>
          <% messaging_framework.tone_attributes.each do |attribute, value| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
              <span class="text-sm font-medium text-gray-700 capitalize">
                <%= attribute.humanize %>
              </span>
              <% if value.is_a?(TrueClass) || value.is_a?(FalseClass) %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= value ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600' %>">
                  <%= value ? 'Yes' : 'No' %>
                </span>
              <% elsif value.is_a?(Numeric) %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= value %>/10
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= value.to_s.humanize %>
                </span>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="col-span-3 text-center py-6">
            <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <p class="mt-2 text-sm text-gray-500">No tone attributes defined</p>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Compliance Rules Preview -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Approved Phrases -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">Approved Phrases</h4>
        
        <div class="space-y-2">
          <% if messaging_framework.approved_phrases&.any? %>
            <% messaging_framework.approved_phrases.first(8).each do |phrase| %>
              <span class="inline-block px-3 py-1 text-sm bg-green-100 text-green-800 rounded-full mr-2 mb-2">
                <%= phrase %>
              </span>
            <% end %>
            <% if messaging_framework.approved_phrases.count > 8 %>
              <p class="text-xs text-gray-500 mt-2">
                +<%= messaging_framework.approved_phrases.count - 8 %> more phrases
              </p>
            <% end %>
          <% else %>
            <div class="text-center py-6">
              <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p class="mt-2 text-sm text-gray-500">No approved phrases defined</p>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Banned Words -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">Banned Words</h4>
        
        <div class="bg-red-50 rounded-lg p-4">
          <% if messaging_framework.banned_words&.any? %>
            <div class="space-y-2">
              <% messaging_framework.banned_words.first(8).each do |word| %>
                <span class="inline-block px-3 py-1 text-sm bg-red-100 text-red-800 rounded-full mr-2 mb-2">
                  <%= word %>
                </span>
              <% end %>
              <% if messaging_framework.banned_words.count > 8 %>
                <p class="text-xs text-red-600 mt-2">
                  +<%= messaging_framework.banned_words.count - 8 %> more restricted words
                </p>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6">
              <svg class="mx-auto h-8 w-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
              </svg>
              <p class="mt-2 text-sm text-red-600">No restricted words defined</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
  <% else %>
    <!-- No Framework State -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12">
      <div class="text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No Messaging Framework</h3>
        <p class="mt-2 text-gray-600">Create a comprehensive messaging framework to ensure consistent brand communication across all channels.</p>
        <div class="mt-6 space-x-3">
          <%= link_to new_brand_messaging_framework_path(brand), 
                      class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-sm font-medium rounded-lg text-white hover:bg-indigo-700 transition-colors" do %>
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Create Framework
          <% end %>
          
          <% if brand.brand_analyses.completed.any? %>
            <button data-action="click->brand-compliance#generateFrameworkFromAnalysis"
                    class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
              Generate from Analysis
            </button>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>