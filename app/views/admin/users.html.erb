<% content_for :title, "Admin - Users" %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">User Management</h1>
  
  <!-- Admin Navigation -->
  <div class="bg-white shadow rounded-lg mb-8">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8 px-6" aria-label="Admin Tabs">
        <a href="/admin" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
          Dashboard
        </a>
        <a href="/admin/users" class="border-blue-500 text-blue-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
          Users
        </a>
        <a href="/admin/activities" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
          Activities
        </a>
        <a href="/admin/audit_logs" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
          Audit Logs
        </a>
      </nav>
    </div>
  </div>

  <!-- Users Table -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">All Users (<%= @users.count %>)</h3>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Joined</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Active</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @users.each do |user| %>
              <tr class="<%= user.suspended? ? 'bg-red-50' : user.locked? ? 'bg-yellow-50' : '' %>">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= user.id %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900"><%= user.full_name %></div>
                      <div class="text-sm text-gray-500"><%= user.email_address %></div>
                      <% if user.phone_number.present? %>
                        <div class="text-xs text-gray-400"><%= user.phone_number %></div>
                      <% end %>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= user.admin? ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800' %>">
                    <%= user.role.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= user.company || "-" %>
                  <% if user.job_title.present? %>
                    <div class="text-xs text-gray-400"><%= user.job_title %></div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if user.suspended? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      Suspended
                    </span>
                    <% if user.suspension_reason.present? %>
                      <div class="text-xs text-gray-500 mt-1">Reason: <%= user.suspension_reason %></div>
                    <% end %>
                  <% elsif user.locked? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      Locked
                    </span>
                    <% if user.lock_reason.present? %>
                      <div class="text-xs text-gray-500 mt-1">Reason: <%= user.lock_reason %></div>
                    <% end %>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Active
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= user.created_at.strftime('%b %d, %Y') %>
                  <div class="text-xs text-gray-400"><%= user.created_at.strftime('%I:%M %p') %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% if user.sessions.any? %>
                    <% last_session = user.sessions.order(:last_active_at).last %>
                    <%= time_ago_in_words(last_session.last_active_at) %> ago
                  <% else %>
                    Never
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex space-x-2">
                    <%= link_to "View", user_path(user), class: "text-indigo-600 hover:text-indigo-900" %>
                    <% unless user == current_user %>
                      <% if user.suspended? %>
                        <button class="text-green-600 hover:text-green-900" title="Unsuspend User">
                          Unsuspend
                        </button>
                      <% else %>
                        <button class="text-red-600 hover:text-red-900" title="Suspend User">
                          Suspend
                        </button>
                      <% end %>
                      <% if user.locked? %>
                        <button class="text-blue-600 hover:text-blue-900" title="Unlock User">
                          Unlock
                        </button>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <% if @users.empty? %>
        <div class="text-center py-8">
          <div class="text-gray-500">No users found.</div>
        </div>
      <% end %>
    </div>
  </div>
</div>