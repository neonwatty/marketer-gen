<% content_for :title, @journey_step.name %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @journey_step.name %></h1>
        <p class="mt-1 text-sm text-gray-500">
          Step <%= @journey_step.position + 1 %> of <%= link_to @journey.name, @journey, class: "text-indigo-600 hover:text-indigo-900" %>
        </p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Edit", edit_journey_step_path(@journey, @journey_step), 
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-8">
      <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900">Description</h3>
            <div class="mt-3">
              <% if @journey_step.description.present? %>
                <p class="text-sm text-gray-600"><%= simple_format(@journey_step.description) %></p>
              <% else %>
                <p class="text-sm text-gray-400 italic">No description provided</p>
              <% end %>
            </div>
          </div>

          <!-- Transitions -->
          <% if @transitions_from.any? || @transitions_to.any? %>
            <div class="mt-8">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Step Flow</h3>
              
              <% if @transitions_to.any? %>
                <div class="mt-4">
                  <h4 class="text-sm font-medium text-gray-700">Previous Steps</h4>
                  <div class="mt-2 space-y-2">
                    <% @transitions_to.each do |transition| %>
                      <div class="flex items-center space-x-2">
                        <span class="text-sm text-gray-500">
                          <%= link_to transition.from_step.name, [@journey, transition.from_step], class: "text-indigo-600 hover:text-indigo-900" %>
                        </span>
                        <svg class="h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <% if @transitions_from.any? %>
                <div class="mt-4">
                  <h4 class="text-sm font-medium text-gray-700">Next Steps</h4>
                  <div class="mt-2 space-y-2">
                    <% @transitions_from.each do |transition| %>
                      <div class="flex items-center space-x-2">
                        <svg class="h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="text-sm text-gray-500">
                          <%= link_to transition.to_step.name, [@journey, transition.to_step], class: "text-indigo-600 hover:text-indigo-900" %>
                        </span>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <!-- Properties -->
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-sm font-medium text-gray-900">Properties</h3>
            <dl class="mt-3 space-y-3">
              <div>
                <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Stage</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= @journey_step.stage.humanize %>
                  </span>
                </dd>
              </div>

              <% if @journey_step.content_type.present? %>
                <div>
                  <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Content Type</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @journey_step.content_type.humanize %></dd>
                </div>
              <% end %>

              <% if @journey_step.channel.present? %>
                <div>
                  <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Channel</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @journey_step.channel.humanize %></dd>
                </div>
              <% end %>

              <% if @journey_step.duration_days.present? %>
                <div>
                  <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Duration</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= pluralize(@journey_step.duration_days, 'day') %>
                  </dd>
                </div>
              <% end %>

              <div>
                <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Position</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @journey_step.position + 1 %></dd>
              </div>

              <% if @journey_step.is_entry_point? %>
                <div>
                  <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Entry Point</dt>
                  <dd class="mt-1">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Yes
                    </span>
                  </dd>
                </div>
              <% end %>

              <% if @journey_step.is_exit_point? %>
                <div>
                  <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Exit Point</dt>
                  <dd class="mt-1">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      Yes
                    </span>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>

          <!-- Actions -->
          <div class="mt-6 bg-white border border-gray-200 rounded-lg p-4">
            <h3 class="text-sm font-medium text-gray-900">Actions</h3>
            <div class="mt-3 space-y-2">
              <%= link_to "Duplicate Step", duplicate_journey_step_path(@journey, @journey_step), method: :post,
                  class: "w-full inline-flex justify-center items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              
              <%= link_to "Delete Step", [@journey, @journey_step], method: :delete,
                  class: "w-full inline-flex justify-center items-center px-3 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                  data: { confirm: "Are you sure you want to delete this step?" } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>