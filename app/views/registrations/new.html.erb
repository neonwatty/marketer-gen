<div class="mx-auto max-w-md mt-4 px-4 sm:px-0">
  <h1 class="text-2xl sm:text-3xl font-bold mb-6 text-center text-gray-900">Sign Up</h1>

  <%= form_with model: @user, url: sign_up_path, local: true, 
      data: { 
        controller: "form-validation", 
        action: "submit->form-validation#submit",
        form_validation_server_validation_value: true,
        form_validation_debounce_value: 300
      } do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= render 'shared/field_with_validation',
        form: form,
        field_name: :email_address,
        field_type: :email_field,
        label: "Email Address",
        required: true,
        server_validation: true,
        table_name: "users",
        placeholder: "email@example.com",
        help_text: "We'll use this to sign you in",
        css_classes: "shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 pr-10 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" %>

    <%= render 'shared/field_with_validation',
        form: form,
        field_name: :password,
        field_type: :password_field,
        label: "Password",
        required: true,
        server_validation: false,
        placeholder: "Enter your password",
        help_text: "Minimum 8 characters",
        css_classes: "shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 pr-10 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" %>

    <%= render 'shared/field_with_validation',
        form: form,
        field_name: :password_confirmation,
        field_type: :password_field,
        label: "Password Confirmation",
        required: true,
        server_validation: false,
        placeholder: "Confirm your password",
        help_text: "Must match your password above",
        css_classes: "shadow appearance-none border border-gray-300 rounded w-full py-2 px-3 pr-10 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" %>

    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0">
      <%= form.submit "Sign Up", 
          data: { form_validation_target: "submit" },
          class: "w-full sm:w-auto bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer transition-colors text-center" %>
      <%= link_to "Sign In", new_session_path, class: "text-center sm:text-left block font-bold text-sm text-blue-500 hover:text-blue-800 transition-colors" %>
    </div>
  <% end %>
</div>