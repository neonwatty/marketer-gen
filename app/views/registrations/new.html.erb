<div class="mx-auto max-w-md mt-10" data-controller="form-validation" data-form-validation-mode-value="registration">
  <h1 class="text-2xl md:text-3xl font-bold mb-6">Sign Up</h1>

  <%= form_with model: @user, url: sign_up_path, local: true do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-5">
      <%= form.label :email_address, class: "block text-gray-700 text-base font-bold mb-2" %>
      <%= form.email_field :email_address, 
          class: "shadow appearance-none border border-gray-400 rounded w-full !px-3 !py-3 text-gray-700 !leading-6 focus-visible:outline-2 focus-visible:outline-blue-600 focus-visible:outline-offset-2 !min-h-[48px] !text-base !h-12 transition-colors duration-200", 
          placeholder: "email@example.com",
          data: { 
            form_validation_target: "emailField",
            action: "input->form-validation#validateEmail blur->form-validation#validateEmail"
          } %>
      <div class="text-red-500 text-sm mt-1 hidden transition-opacity duration-200" data-form-validation-target="emailError"></div>
    </div>

    <div class="mb-5">
      <%= form.label :password, class: "block text-gray-700 text-base font-bold mb-2" %>
      <%= form.password_field :password, 
          class: "shadow appearance-none border border-gray-400 rounded w-full !px-3 !py-3 text-gray-700 !leading-6 focus-visible:outline-2 focus-visible:outline-blue-600 focus-visible:outline-offset-2 !min-h-[48px] !text-base !h-12 transition-colors duration-200",
          data: { 
            form_validation_target: "passwordField",
            action: "input->form-validation#validatePassword blur->form-validation#validatePassword"
          } %>
      <div class="text-red-500 text-sm mt-1 hidden transition-opacity duration-200" data-form-validation-target="passwordError"></div>
      <div class="text-sm mt-1 hidden transition-opacity duration-200" data-form-validation-target="passwordStrength"></div>
    </div>

    <div class="mb-6">
      <%= form.label :password_confirmation, class: "block text-gray-700 text-base font-bold mb-2" %>
      <%= form.password_field :password_confirmation, 
          class: "shadow appearance-none border border-gray-400 rounded w-full !px-3 !py-3 text-gray-700 !leading-6 focus-visible:outline-2 focus-visible:outline-blue-600 focus-visible:outline-offset-2 !min-h-[48px] !text-base !h-12 transition-colors duration-200",
          data: { 
            form_validation_target: "passwordConfirmationField",
            action: "input->form-validation#validatePasswordConfirmation blur->form-validation#validatePasswordConfirmation"
          } %>
      <div class="text-red-500 text-sm mt-1 hidden transition-opacity duration-200" data-form-validation-target="passwordConfirmationError"></div>
    </div>

    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0">
      <%= form.submit "Sign Up", 
          class: "w-full sm:w-auto bg-blue-500 hover:bg-blue-700 active:bg-blue-800 text-white font-bold !px-6 !py-3 rounded focus-visible:outline-2 focus-visible:outline-blue-600 focus-visible:outline-offset-2 cursor-pointer !min-h-[48px] !text-base !h-12 transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed",
          data: { form_validation_target: "submitButton" } %>
      <%= link_to "Sign In", new_session_path, class: "inline-block text-center sm:text-left font-bold text-base text-blue-500 hover:text-blue-800 focus-visible:outline-2 focus-visible:outline-blue-600 focus-visible:outline-offset-2 rounded px-2 py-2 min-h-[44px] flex items-center justify-center sm:justify-start" %>
    </div>
  <% end %>
</div>