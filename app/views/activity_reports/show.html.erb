<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Activity Report</h1>
      <div class="flex space-x-4">
        <%= link_to "Export CSV", export_activity_report_path(format: :csv, start_date: @start_date, end_date: @end_date), 
            class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700" %>
        <%= link_to "View Activities", activities_path, 
            class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
      </div>
    </div>

    <!-- Date Range Filter -->
    <%= form_with(url: activity_report_path, method: :get, local: true, class: "bg-white rounded-lg shadow p-6 mb-8") do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700" %>
          <%= f.date_field :start_date, value: @start_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
        </div>
        <div>
          <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700" %>
          <%= f.date_field :end_date, value: @end_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
        </div>
        <div class="flex items-end">
          <%= f.submit "Generate Report", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700" %>
        </div>
      </div>
    <% end %>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-sm font-medium text-gray-500">Total Activities</h3>
        <p class="mt-2 text-3xl font-semibold text-gray-900"><%= @report[:summary][:total_activities] %></p>
        <p class="mt-1 text-sm text-gray-600">
          <%= pluralize(@report[:summary][:average_daily_activities], 'activity') %>/day
        </p>
      </div>
      
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-sm font-medium text-gray-500">Unique IPs</h3>
        <p class="mt-2 text-3xl font-semibold text-gray-900"><%= @report[:summary][:unique_ips] %></p>
        <p class="mt-1 text-sm text-gray-600">
          <%= pluralize(@report[:summary][:unique_sessions], 'session') %>
        </p>
      </div>
      
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-sm font-medium text-gray-500">Failed Requests</h3>
        <p class="mt-2 text-3xl font-semibold text-red-600"><%= @report[:summary][:failed_requests] %></p>
        <p class="mt-1 text-sm text-gray-600">
          <%= number_to_percentage((@report[:summary][:failed_requests].to_f / @report[:summary][:total_activities] * 100), precision: 1) rescue '0%' %>
        </p>
      </div>
      
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-sm font-medium text-gray-500">Suspicious Activities</h3>
        <p class="mt-2 text-3xl font-semibold text-orange-600"><%= @report[:summary][:suspicious_count] %></p>
        <p class="mt-1 text-sm text-gray-600">
          <%= @report[:suspicious_activities][:patterns][:by_reason]&.keys&.first || 'None' %>
        </p>
      </div>
    </div>

    <!-- Security Alerts -->
    <% if @report[:security_events].any? || @report[:recommendations].any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-8">
        <h2 class="text-lg font-semibold text-red-900 mb-4">Security Alerts</h2>
        
        <% if @report[:security_events].any? %>
          <div class="space-y-3 mb-4">
            <% @report[:security_events].each do |event| %>
              <div class="flex items-start">
                <svg class="h-5 w-5 text-red-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <div class="ml-3">
                  <p class="text-sm text-red-800">
                    <strong><%= event[:type].humanize %>:</strong>
                    <%= event[:count] %> occurrences
                    <% if event[:last_attempt] %>
                      (last: <%= time_ago_in_words(event[:last_attempt]) %> ago)
                    <% end %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
        
        <% if @report[:recommendations].any? %>
          <h3 class="text-sm font-semibold text-red-900 mb-2">Recommendations</h3>
          <ul class="list-disc list-inside space-y-1">
            <% @report[:recommendations].each do |rec| %>
              <li class="text-sm text-red-700"><%= rec[:message] %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    <% end %>

    <!-- Activity Breakdown -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b">
          <h2 class="text-lg font-semibold text-gray-900">Top Activities</h2>
        </div>
        <div class="p-6">
          <div class="space-y-3">
            <% @report[:activity_breakdown].first(10).each do |activity| %>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-900"><%= activity[:controller] %>#<%= activity[:action] %></span>
                <div class="flex items-center space-x-2">
                  <span class="text-sm text-gray-500"><%= activity[:count] %></span>
                  <div class="w-32 bg-gray-200 rounded-full h-2">
                    <div class="bg-blue-600 h-2 rounded-full" style="width: <%= activity[:percentage] %>%"></div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b">
          <h2 class="text-lg font-semibold text-gray-900">Device Usage</h2>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div>
              <h3 class="text-sm font-medium text-gray-700 mb-2">Devices</h3>
              <div class="space-y-2">
                <% @report[:device_usage][:devices].each do |device, count| %>
                  <div class="flex justify-between">
                    <span class="text-sm text-gray-600"><%= device || 'Unknown' %></span>
                    <span class="text-sm font-medium text-gray-900"><%= count %></span>
                  </div>
                <% end %>
              </div>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-700 mb-2">Browsers</h3>
              <div class="space-y-2">
                <% @report[:device_usage][:browsers].each do |browser, count| %>
                  <div class="flex justify-between">
                    <span class="text-sm text-gray-600"><%= browser || 'Unknown' %></span>
                    <span class="text-sm font-medium text-gray-900"><%= count %></span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Performance Metrics -->
    <% if @report[:performance_metrics].any? %>
      <div class="bg-white rounded-lg shadow mb-8">
        <div class="px-6 py-4 border-b">
          <h2 class="text-lg font-semibold text-gray-900">Performance Metrics</h2>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h3 class="text-sm font-medium text-gray-700">Response Times</h3>
              <dl class="mt-2 space-y-1">
                <div class="flex justify-between">
                  <dt class="text-sm text-gray-600">Average:</dt>
                  <dd class="text-sm font-medium text-gray-900"><%= @report[:performance_metrics][:average_response_time] %>ms</dd>
                </div>
                <div class="flex justify-between">
                  <dt class="text-sm text-gray-600">Median:</dt>
                  <dd class="text-sm font-medium text-gray-900"><%= @report[:performance_metrics][:median_response_time] %>ms</dd>
                </div>
              </dl>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-gray-700">Distribution</h3>
              <dl class="mt-2 space-y-1">
                <% @report[:performance_metrics][:response_time_distribution].each do |range, count| %>
                  <div class="flex justify-between">
                    <dt class="text-sm text-gray-600"><%= range.to_s.humanize %>:</dt>
                    <dd class="text-sm font-medium text-gray-900"><%= count %></dd>
                  </div>
                <% end %>
              </dl>
            </div>
          </div>
          
          <% if @report[:performance_metrics][:slowest_actions].any? %>
            <div class="mt-6">
              <h3 class="text-sm font-medium text-gray-700 mb-2">Slowest Actions</h3>
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead>
                    <tr>
                      <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Action</th>
                      <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Time</th>
                      <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Path</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200">
                    <% @report[:performance_metrics][:slowest_actions].each do |action| %>
                      <tr>
                        <td class="px-3 py-2 text-sm text-gray-900"><%= action[:action] %></td>
                        <td class="px-3 py-2 text-sm text-gray-900"><%= action[:response_time_ms] %>ms</td>
                        <td class="px-3 py-2 text-sm text-gray-500"><%= truncate(action[:path], length: 50) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Access Patterns -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b">
        <h2 class="text-lg font-semibold text-gray-900">Access Patterns</h2>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-sm font-medium text-gray-700 mb-2">Activity by Hour</h3>
            <div class="h-48">
              <!-- This would be a chart in a real implementation -->
              <div class="text-sm text-gray-500">
                Most active: <%= @report[:access_patterns][:access_times][:most_active_hour] %>:00
              </div>
            </div>
          </div>
          
          <div>
            <h3 class="text-sm font-medium text-gray-700 mb-2">Top Resources</h3>
            <div class="space-y-1">
              <% @report[:access_patterns][:top_resources].first(5).each do |path, count| %>
                <div class="flex justify-between">
                  <span class="text-sm text-gray-600 truncate"><%= path %></span>
                  <span class="text-sm font-medium text-gray-900"><%= count %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>