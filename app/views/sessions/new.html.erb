<div class="mx-auto md:w-2/3 w-full relative" data-controller="form-validation loading" data-form-validation-mode-value="login" data-loading-type-value="form">
  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>

  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="text-heading-h2 mb-6">Sign in</h1>

  <%= form_with url: session_url, class: "contents" do |form| %>
    <div class="my-5">
      <%= form.email_field :email_address, 
          required: true, 
          autofocus: true, 
          autocomplete: "username", 
          placeholder: "Enter your email address", 
          value: params[:email_address], 
          class: "block shadow-sm rounded-md border border-gray-400 focus-visible:outline-2 focus-visible:outline-blue-600 focus-visible:outline-offset-2 !px-3 !py-3 mt-2 w-full !min-h-[48px] !text-base !leading-6 !h-12 transition-colors duration-200",
          data: { 
            form_validation_target: "emailField",
            action: "input->form-validation#validateEmail blur->form-validation#validateEmail"
          } %>
      <div class="text-red-500 text-sm mt-1 hidden transition-opacity duration-200" data-form-validation-target="emailError"></div>
    </div>

    <div class="my-5">
      <%= form.password_field :password, 
          required: true, 
          autocomplete: "current-password", 
          placeholder: "Enter your password", 
          maxlength: 72, 
          class: "block shadow-sm rounded-md border border-gray-400 focus-visible:outline-2 focus-visible:outline-blue-600 focus-visible:outline-offset-2 !px-3 !py-3 mt-2 w-full !min-h-[48px] !text-base !leading-6 !h-12 transition-colors duration-200",
          data: { 
            form_validation_target: "passwordField",
            action: "input->form-validation#validatePassword blur->form-validation#validatePassword"
          } %>
      <div class="text-red-500 text-sm mt-1 hidden transition-opacity duration-200" data-form-validation-target="passwordError"></div>
    </div>

    <div class="my-5">
      <label class="flex items-center min-h-[44px]">
        <%= form.check_box :remember_me, class: "h-5 w-5 text-blue-600 focus-visible:ring-2 focus-visible:ring-blue-500 border-gray-300 rounded flex-shrink-0" %>
        <span class="ml-3 text-secondary text-base">Remember me for 30 days</span>
      </label>
    </div>

    <div class="col-span-6 sm:flex sm:items-center sm:gap-6">
      <div class="mb-4 sm:mb-0">
        <%= render "shared/loading_button", 
            text: "Sign in",
            loading_text: "Signing in...",
            type: "submit",
            variant: "primary",
            size: "md",
            classes: "w-full sm:w-auto",
            data: { form_validation_target: "submitButton" } %>
      </div>

      <div class="flex flex-col sm:flex-row sm:items-center space-y-3 sm:space-y-0 sm:space-x-4">
        <%= link_to "Forgot password?", new_password_path, class: "text-interactive underline hover:no-underline focus-visible:outline-2 focus-visible:outline-blue-600 focus-visible:outline-offset-2 rounded px-2 py-2 min-h-[44px] flex items-center" %>
        <%= link_to "Sign up", sign_up_path, class: "text-interactive underline hover:no-underline focus-visible:outline-2 focus-visible:outline-blue-600 focus-visible:outline-offset-2 rounded px-2 py-2 min-h-[44px] flex items-center" %>
      </div>
    </div>
  <% end %>
  
  <!-- Form loading overlay -->
  <div class="absolute inset-0 bg-white bg-opacity-75 backdrop-blur-sm flex items-center justify-center hidden"
       data-loading-target="overlay">
    <%= render "shared/loading_spinner", 
        size: "lg", 
        color: "blue", 
        text: "Signing you in...",
        show_text: true %>
  </div>
</div>
