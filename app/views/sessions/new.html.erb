<div class="mx-auto max-w-md px-4 sm:px-0">
  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert" role="alert"><%= alert %></p>
  <% end %>

  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice" role="status"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-2xl sm:text-4xl text-center text-gray-900 mb-8">Sign in</h1>

  <%= form_with url: session_url, class: "contents" do |form| %>
    <div class="my-5">
      <%= form.label :email_address, "Email Address", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.email_field :email_address, 
          required: true, 
          autofocus: true, 
          autocomplete: "email", 
          placeholder: "Enter your email address", 
          value: params[:email_address], 
          aria_label: "Email address",
          class: "block shadow-sm rounded-md border border-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :password, "Password", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.password_field :password, 
          required: true, 
          autocomplete: "current-password", 
          placeholder: "Enter your password", 
          maxlength: 72, 
          aria_label: "Password",
          class: "block shadow-sm rounded-md border border-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0 sm:gap-4">
      <%= form.submit "Sign in", class: "w-full sm:w-auto text-center rounded-md px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" %>

      <%= link_to "Forgot password?", new_password_path, class: "text-center sm:text-left text-sm text-gray-700 underline hover:no-underline transition-colors" %>
    </div>
  <% end %>
</div>
