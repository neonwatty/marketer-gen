<% content_for :title, "#{@error_code} - #{@error_message}" %>

<div class="min-h-[60vh] flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="max-w-max mx-auto">
    <main class="sm:flex">
      <div class="flex-shrink-0 flex justify-center items-center">
        <% case @error_code %>
        <% when 404 %>
          <!-- 404 Icon -->
          <svg class="h-32 w-32 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.137 0-4.146-.832-5.658-2.343m0-3.314a7.962 7.962 0 010-5.686A7.962 7.962 0 0112 1c2.137 0 4.146.832 5.658 2.343" />
          </svg>
        <% when 422 %>
          <!-- 422 Icon -->
          <svg class="h-32 w-32 text-amber-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
        <% when 500 %>
          <!-- 500 Icon -->
          <svg class="h-32 w-32 text-red-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        <% else %>
          <!-- Generic Error Icon -->
          <svg class="h-32 w-32 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% end %>
      </div>
      
      <div class="sm:ml-12 mt-8 sm:mt-0">
        <div class="text-center sm:text-left">
          <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight sm:text-5xl">
            <%= @error_code %>
          </h1>
          <h2 class="mt-2 text-2xl font-bold text-gray-900">
            <%= @error_message %>
          </h2>
          <p class="mt-4 text-base text-gray-500 max-w-md">
            <%= @error_description %>
          </p>
        </div>
        
        <!-- Action buttons -->
        <div class="mt-8 flex flex-col sm:flex-row gap-4">
          <% if @error_code == 404 %>
            <!-- 404 specific actions -->
            <%= link_to root_path, 
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
              <svg class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Go Home
            <% end %>
            
            <button onclick="window.history.back()" 
                    class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
              <svg class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Go Back
            </button>
            
          <% elsif @error_code == 422 %>
            <!-- 422 specific actions -->
            <button onclick="window.history.back()" 
                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors">
              <svg class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Try Again
            </button>
            
            <%= link_to root_path, 
                class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
              <svg class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Go Home
            <% end %>
            
          <% elsif @error_code == 500 %>
            <!-- 500 specific actions -->
            <button onclick="window.location.reload()" 
                    class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors">
              <svg class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
              Retry
            </button>
            
            <%= link_to root_path, 
                class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
              <svg class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Go Home
            <% end %>
          <% end %>
        </div>
        
        <!-- Additional help section -->
        <div class="mt-8 border-t border-gray-200 pt-6">
          <div class="text-sm text-gray-500">
            <% if @error_code == 404 %>
              <h3 class="font-medium text-gray-900 mb-2">What you can try:</h3>
              <ul class="list-disc list-inside space-y-1 text-sm">
                <li>Check the URL for typos</li>
                <li>Use the navigation menu to find what you're looking for</li>
                <li>Visit our <%= link_to "homepage", root_path, class: "text-blue-600 hover:text-blue-500" %> to start over</li>
                <% if authenticated? %>
                  <li>Check your recent <%= link_to "activity", activities_path, class: "text-blue-600 hover:text-blue-500" %> for pages you visited</li>
                <% end %>
              </ul>
            <% elsif @error_code == 422 %>
              <h3 class="font-medium text-gray-900 mb-2">What went wrong:</h3>
              <ul class="list-disc list-inside space-y-1 text-sm">
                <li>Some required information might be missing</li>
                <li>The data format might be incorrect</li>
                <li>You might not have permission for this action</li>
              </ul>
            <% elsif @error_code == 500 %>
              <h3 class="font-medium text-gray-900 mb-2">We're on it:</h3>
              <ul class="list-disc list-inside space-y-1 text-sm">
                <li>Our team has been automatically notified</li>
                <li>This issue is being investigated</li>
                <li>Try refreshing the page in a few minutes</li>
              </ul>
            <% end %>
          </div>
          
          <!-- Contact support -->
          <div class="mt-4 text-sm text-gray-500">
            <p>Still need help? 
              <a href="mailto:support@marketergen.com?subject=Error%20Report%20-%20<%= @error_code %>&body=I%20encountered%20an%20error%20on%20page:%20<%= request.url %>" 
                 class="text-blue-600 hover:text-blue-500 font-medium">
                Contact Support
              </a>
            </p>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<!-- Error reporting for authenticated users -->
<% if authenticated? && @error_code.in?([500, 422]) %>
  <div class="mt-12 max-w-2xl mx-auto" data-controller="form-validation">
    <div class="bg-gray-50 rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Help us improve</h3>
      <p class="text-sm text-gray-600 mb-4">
        You can help us fix this issue by providing additional details about what you were doing when this error occurred.
      </p>
      
      <%= form_with url: error_report_path, 
          scope: :error_report,
          local: false, 
          class: "space-y-4",
          data: { 
            controller: "form-validation",
            form_validation_target: "form",
            action: "ajax:success->form-validation#onSuccess ajax:error->form-validation#onError"
          } do |form| %>
        
        <%= form.hidden_field :error_type, value: @error_type %>
        <%= form.hidden_field :current_url, value: request.url %>
        
        <div>
          <%= form.label :description, "What were you trying to do?", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :description, 
              placeholder: "Describe what you were doing when this error occurred...",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              rows: 3,
              required: true %>
        </div>
        
        <div>
          <%= form.label :expected_behavior, "What did you expect to happen?", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :expected_behavior, 
              placeholder: "What did you expect to happen instead?",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              rows: 2 %>
        </div>
        
        <div class="flex items-center space-x-4">
          <%= form.submit "Send Report", 
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors disabled:opacity-50 disabled:cursor-not-allowed",
              data: { form_validation_target: "submitButton" } %>
          
          <div class="hidden" data-form-validation-target="successMessage">
            <div class="flex items-center text-green-600">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-sm">Report sent successfully!</span>
            </div>
          </div>
          
          <div class="hidden text-red-600" data-form-validation-target="errorMessage">
            <span class="text-sm">Failed to send report. Please try again.</span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>