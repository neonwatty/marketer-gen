<% content_for :title, "404 - Page Not Found" %>

<div class="min-h-[60vh] flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="max-w-max mx-auto">
    <main class="sm:flex">
      <div class="flex-shrink-0 flex justify-center items-center">
        <!-- 404 Illustration -->
        <div class="text-center">
          <div class="text-8xl font-bold text-gray-200 mb-4">404</div>
          <svg class="h-24 w-24 text-gray-300 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.137 0-4.146-.832-5.658-2.343m0-3.314a7.962 7.962 0 010-5.686A7.962 7.962 0 0112 1c2.137 0 4.146.832 5.658 2.343" />
          </svg>
        </div>
      </div>
      
      <div class="sm:ml-12 mt-8 sm:mt-0">
        <div class="text-center sm:text-left">
          <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight sm:text-5xl">
            Page not found
          </h1>
          <p class="mt-4 text-lg text-gray-500 max-w-lg">
            The page you're looking for doesn't exist. It might have been moved, deleted, or you might have typed the URL incorrectly.
          </p>
        </div>
        
        <!-- Action buttons -->
        <div class="mt-8 flex flex-col sm:flex-row gap-4">
          <%= link_to root_path, 
              class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
            <svg class="-ml-1 mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Go Home
          <% end %>
          
          <button onclick="window.history.back()" 
                  class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
            <svg class="-ml-1 mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Go Back
          </button>
        </div>
        
        <!-- Search functionality -->
        <div class="mt-8">
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
            <input type="text" 
                   placeholder="Search for what you're looking for..." 
                   class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                   onkeypress="if(event.key === 'Enter') { performSearch(this.value); }">
          </div>
        </div>
        
        <!-- Help section -->
        <div class="mt-8 border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">What you can try:</h3>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Check the URL for typos or missing characters
            </li>
            <li class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Use the search box above to find what you're looking for
            </li>
            <li class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Visit our <%= link_to "homepage", root_path, class: "text-blue-600 hover:text-blue-500 font-medium" %> to explore
            </li>
            <% if defined?(current_user) && respond_to?(:authenticated?) && authenticated? %>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Check your <%= link_to "recent activity", activities_path, class: "text-blue-600 hover:text-blue-500 font-medium" %> for pages you visited
              </li>
            <% end %>
          </ul>
        </div>
        
        <!-- Contact support -->
        <div class="mt-6 text-sm text-gray-500">
          <p>Still can't find what you're looking for? 
            <a href="mailto:support@marketergen.com?subject=404%20Error%20-%20Page%20Not%20Found&body=I%20was%20looking%20for:%20<%= request.url %>" 
               class="text-blue-600 hover:text-blue-500 font-medium">
              Contact Support
            </a>
          </p>
        </div>
      </div>
    </main>
  </div>
</div>

<script>
  function performSearch(query) {
    if (query.trim() === '') return;
    
    // Simple client-side search suggestions
    const suggestions = [
      { term: 'dashboard', url: '/', label: 'Dashboard' },
      { term: 'profile', url: '/profile', label: 'My Profile' },
      { term: 'activity', url: '/activities', label: 'Activity Log' },
      { term: 'journey', url: '/journeys', label: 'Journeys' },
      { term: 'brand', url: '/brands', label: 'Brands' },
      { term: 'template', url: '/journey_templates', label: 'Templates' },
      { term: 'report', url: '/activity_report', label: 'Activity Report' },
      { term: 'admin', url: '/admin', label: 'Admin Panel' }
    ];
    
    const match = suggestions.find(s => 
      s.term.toLowerCase().includes(query.toLowerCase()) || 
      query.toLowerCase().includes(s.term.toLowerCase())
    );
    
    if (match) {
      window.location.href = match.url;
    } else {
      // Fallback to Google site search
      const searchUrl = `https://www.google.com/search?q=${encodeURIComponent(query + ' site:' + window.location.hostname)}`;
      window.open(searchUrl, '_blank');
    }
  }
</script>