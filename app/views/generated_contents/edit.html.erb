<% content_for :title, "Edit Content" %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Edit Content</h1>
      <p class="text-gray-600 mt-2"><%= @generated_content.title %></p>
    </div>

    <%= form_with model: @generated_content, local: true, class: "space-y-6" do |form| %>
      <% if @generated_content.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <h4 class="text-red-800 font-medium">Please fix the following errors:</h4>
          <ul class="list-disc list-inside text-red-700 mt-2">
            <% @generated_content.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :content_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :content_type, options_for_select(@content_types.map { |type| [type.humanize, type] }, @generated_content.content_type), 
            {}, 
            { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>

      <div>
        <%= form.label :format_variant, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :format_variant, options_for_select(@format_variants.map { |variant| [variant.humanize, variant] }, @generated_content.format_variant), 
            {}, 
            { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>

      <div>
        <%= form.label :body_content, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :body_content, rows: 12, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :status, options_for_select(GeneratedContent::STATUSES.map { |status| [status.humanize, status] }, @generated_content.status), 
            {}, 
            { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>

      <div class="flex justify-between">
        <%= link_to "Cancel", @generated_content, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
        <%= form.submit "Update Content", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
    
    <div class="mt-8 pt-6 border-t border-gray-200">
      <div class="flex space-x-4">
        <%= link_to "View Content", @generated_content, class: "text-blue-600 hover:text-blue-800" %>
        <% if @generated_content.can_be_deleted? %>
          <%= link_to "Delete", @generated_content, method: :delete, 
              confirm: "Are you sure you want to delete this content?", 
              class: "text-red-600 hover:text-red-800" %>
        <% end %>
      </div>
    </div>
  </div>
</div>