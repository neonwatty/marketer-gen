<% content_for :title, "Generate New Content" %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Generate New Content</h1>
      <% if @campaign_plan %>
        <p class="text-gray-600 mt-2">For campaign: <%= @campaign_plan.name %></p>
      <% end %>
    </div>

    <%= form_with model: [@campaign_plan, @generated_content], local: true, class: "space-y-6" do |form| %>
      <% if @generated_content.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <h4 class="text-red-800 font-medium">Please fix the following errors:</h4>
          <ul class="list-disc list-inside text-red-700 mt-2">
            <% @generated_content.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :content_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :content_type, options_for_select(@content_types.map { |type| [type.humanize, type] }), 
            { prompt: "Select content type" }, 
            { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>

      <div>
        <%= form.label :format_variant, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :format_variant, options_for_select(@format_variants.map { |variant| [variant.humanize, variant] }), 
            { prompt: "Select format" }, 
            { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>

      <div>
        <%= form.label :body_content, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :body_content, rows: 8, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <p class="text-sm text-gray-500 mt-1">Provide initial content or leave blank for AI generation</p>
      </div>

      <div class="flex justify-between">
        <%= link_to "Cancel", @campaign_plan ? campaign_plan_generated_contents_path(@campaign_plan) : generated_contents_path, 
            class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
        <%= form.submit "Generate Content", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>