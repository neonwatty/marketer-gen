<% content_for :title, "Content" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Content</h1>
    <% if @campaign_plan %>
      <%= link_to "New Content", new_campaign_plan_generated_content_path(@campaign_plan), 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  </div>

  <% if @generated_contents.any? %>
    <div class="grid gap-6">
      <% @generated_contents.each do |content| %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="text-lg font-semibold text-gray-900"><%= content.title %></h3>
              <p class="text-sm text-gray-600">
                Type: <%= content.content_type.humanize %> | 
                Status: <span class="capitalize"><%= content.status %></span> |
                Version: <%= content.version_number %>
              </p>
            </div>
            <span class="px-2 py-1 text-xs font-semibold rounded-full <%= content.status == 'approved' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
              <%= content.status.humanize %>
            </span>
          </div>
          
          <div class="text-gray-700 mb-4">
            <%= truncate(content.body_content, length: 200) %>
          </div>
          
          <div class="flex justify-between items-center">
            <div class="text-sm text-gray-500">
              Created by <%= content.created_by.full_name %> on <%= content.created_at.strftime("%B %d, %Y") %>
            </div>
            <div class="space-x-2">
              <%= link_to "View", content, class: "text-blue-600 hover:text-blue-800" %>
              <%= link_to "Edit", edit_generated_content_path(content), class: "text-green-600 hover:text-green-800" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <% if @generated_contents.respond_to?(:total_pages) %>
      <div class="mt-8">
        <%= paginate @generated_contents %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12">
      <div class="max-w-md mx-auto">
        <!-- Icon -->
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-gray-100 mb-4">
          <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        
        <!-- Title -->
        <h3 class="text-lg font-medium text-gray-900 mb-2">No content generated yet</h3>
        
        <!-- Description -->
        <p class="text-gray-500 mb-6">
          Start creating AI-powered content for your marketing campaigns. Generate emails, social posts, blog articles, and more.
        </p>
        
        <!-- Actions -->
        <div class="space-y-3">
          <% if @campaign_plan %>
            <%= link_to "Generate First Content", new_campaign_plan_generated_content_path(@campaign_plan), 
                class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          <% else %>
            <%= link_to "Create Campaign Plan", campaign_plans_path, 
                class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
            <p class="text-sm text-gray-500 mt-2">Create a campaign plan first to start generating content</p>
          <% end %>
        </div>
        
        <!-- Onboarding Steps -->
        <div class="mt-8 text-left bg-blue-50 rounded-lg p-6">
          <h4 class="text-sm font-medium text-blue-900 mb-4">Quick Start Guide:</h4>
          <div class="space-y-3">
            <div class="flex items-center">
              <% if Current.user.brand_identities.any? %>
                <div class="flex-shrink-0 w-5 h-5 bg-green-500 rounded-full flex items-center justify-center">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span class="ml-3 text-sm text-green-700 font-medium">Brand identity set up</span>
              <% else %>
                <div class="flex-shrink-0 w-5 h-5 bg-gray-300 rounded-full flex items-center justify-center">
                  <span class="text-xs text-gray-500">1</span>
                </div>
                <%= link_to "Set up your brand identity", new_brand_identity_path, 
                    class: "ml-3 text-sm text-blue-700 hover:text-blue-900 font-medium underline" %>
              <% end %>
            </div>
            
            <div class="flex items-center">
              <% if Current.user.campaign_plans.any? %>
                <div class="flex-shrink-0 w-5 h-5 bg-green-500 rounded-full flex items-center justify-center">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span class="ml-3 text-sm text-green-700 font-medium">Campaign plans created</span>
              <% else %>
                <div class="flex-shrink-0 w-5 h-5 bg-gray-300 rounded-full flex items-center justify-center">
                  <span class="text-xs text-gray-500">2</span>
                </div>
                <%= link_to "Create your first campaign plan", new_campaign_plan_path, 
                    class: "ml-3 text-sm text-blue-700 hover:text-blue-900 font-medium underline" %>
              <% end %>
            </div>
            
            <div class="flex items-center">
              <% if Current.user.journeys.any? %>
                <div class="flex-shrink-0 w-5 h-5 bg-green-500 rounded-full flex items-center justify-center">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span class="ml-3 text-sm text-green-700 font-medium">Customer journeys defined</span>
              <% else %>
                <div class="flex-shrink-0 w-5 h-5 bg-gray-300 rounded-full flex items-center justify-center">
                  <span class="text-xs text-gray-500">3</span>
                </div>
                <%= link_to "Create customer journeys", new_journey_path, 
                    class: "ml-3 text-sm text-blue-700 hover:text-blue-900 font-medium underline" %>
              <% end %>
            </div>
            
            <div class="flex items-center">
              <div class="flex-shrink-0 w-5 h-5 bg-blue-500 rounded-full flex items-center justify-center">
                <span class="text-xs text-white">4</span>
              </div>
              <span class="ml-3 text-sm text-blue-700 font-medium">Generate AI-powered content (you are here!)</span>
            </div>
          </div>
          
          <% if Current.user.campaign_plans.any? %>
            <div class="mt-4 pt-4 border-t border-blue-200">
              <p class="text-xs text-blue-600 mb-2">ğŸ’¡ Pro tip: Content performs better when guided by customer journeys and brand consistency!</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>