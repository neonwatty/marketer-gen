<% content_for :title, "Generated Content" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Generated Content</h1>
    <% if @campaign_plan %>
      <%= link_to "New Content", new_campaign_plan_generated_content_path(@campaign_plan), 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  </div>

  <% if @generated_contents.any? %>
    <div class="grid gap-6">
      <% @generated_contents.each do |content| %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="text-lg font-semibold text-gray-900"><%= content.title %></h3>
              <p class="text-sm text-gray-600">
                Type: <%= content.content_type.humanize %> | 
                Status: <span class="capitalize"><%= content.status %></span> |
                Version: <%= content.version_number %>
              </p>
            </div>
            <span class="px-2 py-1 text-xs font-semibold rounded-full <%= content.status == 'approved' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
              <%= content.status.humanize %>
            </span>
          </div>
          
          <div class="text-gray-700 mb-4">
            <%= truncate(content.body_content, length: 200) %>
          </div>
          
          <div class="flex justify-between items-center">
            <div class="text-sm text-gray-500">
              Created by <%= content.created_by.full_name %> on <%= content.created_at.strftime("%B %d, %Y") %>
            </div>
            <div class="space-x-2">
              <%= link_to "View", content, class: "text-blue-600 hover:text-blue-800" %>
              <%= link_to "Edit", edit_generated_content_path(content), class: "text-green-600 hover:text-green-800" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <% if @generated_contents.respond_to?(:total_pages) %>
      <div class="mt-8">
        <%= paginate @generated_contents %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12">
      <div class="text-gray-500 text-lg mb-4">No content generated yet</div>
      <% if @campaign_plan %>
        <%= link_to "Generate First Content", new_campaign_plan_generated_content_path(@campaign_plan), 
            class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <% end %>
    </div>
  <% end %>
</div>