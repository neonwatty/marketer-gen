<% content_for :title, "Content Schedules" %>

<div class="min-h-screen bg-gray-50">
  <div class="container mx-auto px-6 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Content Schedules</h1>
      <p class="text-gray-600">Manage and track your scheduled content across all platforms</p>
    </div>

    <div class="bg-white rounded-lg shadow-sm border">
      <div class="p-6 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <h2 class="text-xl font-semibold text-gray-800">Scheduled Content</h2>
          <%= link_to new_content_schedule_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700" do %>
            Schedule New Content
          <% end %>
        </div>
      </div>

      <div class="p-6">
        <% if @content_schedules.any? %>
          <div class="space-y-4">
            <% @content_schedules.each do |schedule| %>
              <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
                <div class="flex justify-between items-start">
                  <div>
                    <h3 class="font-semibold text-gray-900"><%= schedule.content_preview %></h3>
                    <p class="text-sm text-gray-600 mt-1">
                      <span class="font-medium"><%= schedule.platform.capitalize %></span> • 
                      <%= schedule.channel.humanize %> • 
                      <span class="<%= schedule.status == 'published' ? 'text-green-600' : 'text-blue-600' %>">
                        <%= schedule.status.humanize %>
                      </span>
                    </p>
                    <p class="text-sm text-gray-500 mt-1">
                      Scheduled for <%= schedule.scheduled_at.strftime("%B %d, %Y at %I:%M %p") %>
                    </p>
                  </div>
                  <div class="flex space-x-2">
                    <%= link_to content_schedule_path(schedule), class: "text-blue-600 hover:text-blue-800 text-sm" do %>
                      View
                    <% end %>
                    <%= link_to edit_content_schedule_path(schedule), class: "text-gray-600 hover:text-gray-800 text-sm" do %>
                      Edit
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <p class="text-gray-500 mb-4">No content scheduled yet</p>
            <%= link_to new_content_schedule_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700" do %>
              Schedule Your First Content
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>