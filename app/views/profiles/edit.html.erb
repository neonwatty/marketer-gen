<div class="max-w-4xl mx-auto py-8 px-6">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white">Edit Profile</h1>
          <p class="text-blue-200">Update your personal information and preferences</p>
        </div>
        <%= link_to "â† Back to Profile", profile_path, 
            class: "bg-white text-blue-600 px-4 py-2 rounded-lg font-medium hover:bg-gray-50 transition-colors" %>
      </div>
    </div>

    <!-- Form -->
    <div class="p-6">
      <%= form_with model: @user, url: profile_path, method: :patch, local: true, multipart: true, class: "space-y-8" do |form| %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
            <h3 class="font-medium">Please fix the following errors:</h3>
            <ul class="mt-2 list-disc pl-5">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Avatar Upload -->
        <div class="border-b border-gray-200 pb-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Profile Picture</h2>
          <div class="flex items-center space-x-6">
            <div class="flex-shrink-0">
              <% if @user.avatar.attached? %>
                <%= image_tag @user.avatar, class: "w-20 h-20 rounded-full object-cover", id: "avatar-preview" %>
              <% else %>
                <div class="w-20 h-20 rounded-full bg-gray-300 flex items-center justify-center text-lg font-semibold text-gray-600" id="avatar-preview">
                  <%= @user.initials %>
                </div>
              <% end %>
            </div>
            <div>
              <%= form.file_field :avatar, accept: "image/*", class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100", onchange: "previewAvatar(this)" %>
              <p class="mt-1 text-sm text-gray-500">JPG, PNG, GIF or WebP. Max 5MB.</p>
            </div>
          </div>
        </div>

        <!-- Personal Information -->
        <div class="border-b border-gray-200 pb-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Personal Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= form.label :first_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :first_name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            </div>
            <div>
              <%= form.label :last_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :last_name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            </div>
            <div>
              <%= form.label :phone, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.telephone_field :phone, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "+1 (555) 123-4567" %>
            </div>
            <div>
              <%= form.label :company, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :company, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            </div>
          </div>
          <div class="mt-6">
            <%= form.label :bio, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :bio, rows: 4, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Tell us about yourself..." %>
            <p class="mt-1 text-sm text-gray-500">Max 500 characters</p>
          </div>
        </div>

        <!-- Notification Preferences -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Notification Preferences</h2>
          <div class="space-y-4">
            <div class="flex items-center">
              <%= form.check_box "notification_preferences[email_notifications]", { checked: @user.notification_preferences['email_notifications'], class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" }, "true", "false" %>
              <%= form.label "notification_preferences[email_notifications]", "Email notifications", class: "ml-2 text-sm text-gray-700" %>
              <p class="ml-6 text-sm text-gray-500">Receive important account and security notifications</p>
            </div>
            <div class="flex items-center">
              <%= form.check_box "notification_preferences[journey_updates]", { checked: @user.notification_preferences['journey_updates'], class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" }, "true", "false" %>
              <%= form.label "notification_preferences[journey_updates]", "Journey updates", class: "ml-2 text-sm text-gray-700" %>
              <p class="ml-6 text-sm text-gray-500">Get notified about changes to your customer journeys</p>
            </div>
            <div class="flex items-center">
              <%= form.check_box "notification_preferences[marketing_emails]", { checked: @user.notification_preferences['marketing_emails'], class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" }, "true", "false" %>
              <%= form.label "notification_preferences[marketing_emails]", "Marketing emails", class: "ml-2 text-sm text-gray-700" %>
              <p class="ml-6 text-sm text-gray-500">Receive updates about new features and tips</p>
            </div>
            <div class="flex items-center">
              <%= form.check_box "notification_preferences[weekly_digest]", { checked: @user.notification_preferences['weekly_digest'], class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" }, "true", "false" %>
              <%= form.label "notification_preferences[weekly_digest]", "Weekly digest", class: "ml-2 text-sm text-gray-700" %>
              <p class="ml-6 text-sm text-gray-500">Weekly summary of your account activity</p>
            </div>
          </div>
        </div>

        <!-- Submit -->
        <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
          <%= link_to "Cancel", profile_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded-lg transition-colors" %>
          <%= form.submit "Update Profile", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
function previewAvatar(input) {
  if (input.files && input.files[0]) {
    const reader = new FileReader();
    
    reader.onload = function(e) {
      const preview = document.getElementById('avatar-preview');
      preview.innerHTML = '';
      const img = document.createElement('img');
      img.src = e.target.result;
      img.className = 'w-20 h-20 rounded-full object-cover';
      preview.appendChild(img);
    }
    
    reader.readAsDataURL(input.files[0]);
  }
}
</script>
