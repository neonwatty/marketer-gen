<div class="max-w-4xl mx-auto py-8 px-6">
  <% if notice %>
    <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-6">
      <%= notice %>
    </div>
  <% end %>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-8">
      <div class="flex items-center space-x-6">
        <div class="flex-shrink-0">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, 
                alt: "Profile picture of #{@user.full_name}", 
                class: "w-24 h-24 rounded-full border-4 border-white shadow-lg object-cover" %>
          <% else %>
            <div class="w-24 h-24 rounded-full border-4 border-white shadow-lg bg-gray-300 flex items-center justify-center text-2xl font-semibold text-gray-600" 
                 role="img" 
                 aria-label="Profile initials for <%= @user.full_name %>">
              <%= @user.initials %>
            </div>
          <% end %>
        </div>
        <div class="text-white">
          <h1 class="text-3xl font-bold"><%= @user.full_name %></h1>
          <p class="text-blue-200 text-lg"><%= @user.email_address %></p>
          <p class="text-blue-200 capitalize"><%= @user.role.humanize %></p>
        </div>
        <div class="ml-auto">
          <%= link_to "Edit Profile", edit_profile_path, 
              class: "bg-white text-blue-600 px-4 py-2 rounded-lg font-medium hover:bg-gray-50 transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Personal Information -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Personal Information</h2>
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Phone</dt>
              <dd class="text-sm text-gray-900"><%= @user.phone.presence || "Not provided" %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Company</dt>
              <dd class="text-sm text-gray-900"><%= @user.company.presence || "Not provided" %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Bio</dt>
              <dd class="text-sm text-gray-900">
                <% if @user.bio.present? %>
                  <p class="whitespace-pre-wrap"><%= @user.bio %></p>
                <% else %>
                  <span class="text-gray-500">No bio provided</span>
                <% end %>
              </dd>
            </div>
          </dl>
        </div>

        <!-- Notification Preferences -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Notification Preferences</h2>
          <dl class="space-y-4">
            <div class="flex items-center justify-between">
              <dt class="text-sm font-medium text-gray-500">Email Notifications</dt>
              <dd>
                <% if @user.notification_preferences['email_notifications'] %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Enabled</span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Disabled</span>
                <% end %>
              </dd>
            </div>
            <div class="flex items-center justify-between">
              <dt class="text-sm font-medium text-gray-500">Journey Updates</dt>
              <dd>
                <% if @user.notification_preferences['journey_updates'] %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Enabled</span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Disabled</span>
                <% end %>
              </dd>
            </div>
            <div class="flex items-center justify-between">
              <dt class="text-sm font-medium text-gray-500">Marketing Emails</dt>
              <dd>
                <% if @user.notification_preferences['marketing_emails'] %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Enabled</span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Disabled</span>
                <% end %>
              </dd>
            </div>
            <div class="flex items-center justify-between">
              <dt class="text-sm font-medium text-gray-500">Weekly Digest</dt>
              <dd>
                <% if @user.notification_preferences['weekly_digest'] %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Enabled</span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Disabled</span>
                <% end %>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Account Statistics -->
      <div class="mt-8 pt-8 border-t border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Account Overview</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600"><%= @user.journeys.count %></div>
            <div class="text-sm text-gray-500">Total Journeys</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-green-600"><%= @user.journeys.where(status: 'active').count %></div>
            <div class="text-sm text-gray-500">Active Journeys</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-purple-600"><%= @user.role.humanize %></div>
            <div class="text-sm text-gray-500">Account Type</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
