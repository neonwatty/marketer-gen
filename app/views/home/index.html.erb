<div class="mx-auto max-w-4xl mt-10">
  <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">Welcome to Marketer Gen</h1>
  <p class="text-base md:text-lg text-gray-600 mb-8">AI-driven content generation platform for marketers</p>
  
  <% if authenticated? %>
    <div class="bg-green-50 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
      <p class="text-sm md:text-base">You are logged in as: <%= Current.user.email_address %></p>
    </div>
    <div class="flex flex-col sm:flex-row gap-4">
      <%= button_to "Sign Out", session_path, method: :delete, class: "bg-red-500 hover:bg-red-700 active:bg-red-800 text-white font-bold px-6 py-3 rounded focus-visible:outline-2 focus-visible:outline-red-600 focus-visible:outline-offset-2 cursor-pointer min-h-[48px] text-base transition-colors duration-200" %>
    </div>
  <% else %>
    <div class="flex flex-col sm:flex-row gap-4">
      <%= link_to "Sign Up", sign_up_path, class: "bg-blue-500 hover:bg-blue-700 active:bg-blue-800 text-white font-bold px-6 py-3 rounded inline-block text-center focus-visible:outline-2 focus-visible:outline-blue-600 focus-visible:outline-offset-2 min-h-[48px] text-base flex items-center justify-center transition-colors duration-200" %>
      <%= link_to "Sign In", new_session_path, class: "bg-gray-500 hover:bg-gray-700 active:bg-gray-800 text-white font-bold px-6 py-3 rounded inline-block text-center focus-visible:outline-2 focus-visible:outline-gray-600 focus-visible:outline-offset-2 min-h-[48px] text-base flex items-center justify-center transition-colors duration-200" %>
    </div>
  <% end %>
</div>