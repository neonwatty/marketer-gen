<%= form_with model: brand_identity, local: true, multipart: true, class: "space-y-6" do |form| %>
  <% if brand_identity.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There were errors with your submission:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% brand_identity.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6">
    <!-- Basic Information -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Basic Information</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :name, 
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
              placeholder: "e.g., Company Brand 2024" %>
        </div>
        
        <div class="md:col-span-2">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :description, 
              rows: 3,
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
              placeholder: "Brief description of this brand identity..." %>
        </div>
      </div>
    </div>

    <!-- File Uploads -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Brand Materials</h3>
      <p class="text-sm text-gray-600 mb-4">Upload your brand guidelines, style guides, logos, and other brand materials. These will be processed to extract brand voice, tone, and messaging guidelines.</p>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Brand Guidelines -->
        <div data-controller="file-upload" data-file-upload-max-files-value="5" data-file-upload-max-size-value="<%= 10.megabytes %>">
          <%= form.label :brand_materials, "Brand Guidelines", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.file_field :brand_materials, 
              multiple: true,
              accept: ".pdf,.doc,.docx,.txt",
              data: { file_upload_target: "input", action: "change->file-upload#change" },
              class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
          <p class="text-xs text-gray-500 mt-1">PDF, Word, or text files (max 10MB each)</p>
          <p data-file-upload-target="count" class="text-xs text-blue-600 mt-1">No files selected</p>
          <div data-file-upload-target="preview" class="mt-2 space-y-2"></div>
        </div>
        
        <!-- Logo Files -->
        <div data-controller="file-upload" data-file-upload-max-files-value="10" data-file-upload-max-size-value="<%= 5.megabytes %>">
          <%= form.label :logo_files, "Logo Files", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.file_field :logo_files, 
              multiple: true,
              accept: "image/*",
              data: { file_upload_target: "input", action: "change->file-upload#change" },
              class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
          <p class="text-xs text-gray-500 mt-1">Image files (PNG, JPG, SVG) (max 5MB each)</p>
          <p data-file-upload-target="count" class="text-xs text-blue-600 mt-1">No files selected</p>
          <div data-file-upload-target="preview" class="mt-2 space-y-2"></div>
        </div>
        
        <!-- Style Guides -->
        <div data-controller="file-upload" data-file-upload-max-files-value="5" data-file-upload-max-size-value="<%= 10.megabytes %>">
          <%= form.label :style_guides, "Style Guides", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.file_field :style_guides, 
              multiple: true,
              accept: ".pdf,.doc,.docx,image/*",
              data: { file_upload_target: "input", action: "change->file-upload#change" },
              class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
          <p class="text-xs text-gray-500 mt-1">Documents or images (max 10MB each)</p>
          <p data-file-upload-target="count" class="text-xs text-blue-600 mt-1">No files selected</p>
          <div data-file-upload-target="preview" class="mt-2 space-y-2"></div>
        </div>
      </div>
    </div>

    <!-- Manual Guidelines -->
    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Manual Guidelines</h3>
      <p class="text-sm text-gray-600 mb-4">You can also manually specify brand guidelines. These will be combined with any extracted information from uploaded files.</p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :brand_voice, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :brand_voice, 
              rows: 4,
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
              placeholder: "Describe your brand voice (e.g., professional yet approachable, technical but friendly...)" %>
        </div>
        
        <div>
          <%= form.label :tone_guidelines, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :tone_guidelines, 
              rows: 4,
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
              placeholder: "Specify tone guidelines (e.g., always positive, avoid overly technical jargon...)" %>
        </div>
        
        <div>
          <%= form.label :messaging_framework, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :messaging_framework, 
              rows: 4,
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
              placeholder: "Core messaging framework and key messages..." %>
        </div>
        
        <div>
          <%= form.label :restrictions, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :restrictions, 
              rows: 4,
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
              placeholder: "Content restrictions, forbidden terms, compliance requirements..." %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", brand_identities_path, 
        class: "bg-white border border-gray-300 rounded-md py-2 px-4 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= form.submit class: "bg-blue-600 border border-transparent rounded-md py-2 px-4 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>