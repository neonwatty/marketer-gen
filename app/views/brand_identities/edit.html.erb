<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Edit Brand Identity</h1>
        <p class="text-gray-600 mt-2">Update your brand guidelines and messaging framework</p>
      </div>
      
      <div class="flex items-center space-x-2">
        <%= link_to "View", brand_identity_path(@brand_identity), 
            class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
        <span class="text-gray-300">|</span>
        <%= link_to "Back to List", brand_identities_path, 
            class: "text-gray-600 hover:text-gray-800 text-sm font-medium" %>
      </div>
    </div>

    <%= render 'form', brand_identity: @brand_identity %>
  </div>
</div>
