<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Brand Identities</h1>
      <p class="text-gray-600 mt-2">Manage your brand guidelines and messaging framework</p>
    </div>
    <%= link_to "Create New Brand Identity", new_brand_identity_path, 
        class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" %>
  </div>

  <% if @active_brand_identity %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-green-800">Active Brand Identity</h3>
          <div class="mt-1 text-sm text-green-700">
            <p><strong><%= @active_brand_identity.name %></strong> is currently active and being used for content generation.</p>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">No Active Brand Identity</h3>
          <div class="mt-1 text-sm text-yellow-700">
            <p>You don't have an active brand identity. Create one and activate it to ensure consistent brand messaging.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <% if @brand_identities.any? %>
      <ul class="divide-y divide-gray-200">
        <% @brand_identities.each do |brand_identity| %>
          <li class="px-6 py-4">
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <div class="flex items-center">
                  <h3 class="text-lg font-medium text-gray-900">
                    <%= link_to brand_identity.name, brand_identity_path(brand_identity), 
                        class: "hover:text-blue-600 transition duration-200" %>
                  </h3>
                  
                  <% if brand_identity.is_active %>
                    <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      Currently Active
                    </span>
                  <% end %>
                  
                  <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                    <%= case brand_identity.status
                        when 'draft' then 'bg-gray-100 text-gray-800'
                        when 'processing' then 'bg-yellow-100 text-yellow-800'
                        when 'active' then 'bg-green-100 text-green-800'
                        when 'archived' then 'bg-red-100 text-red-800'
                        end %>">
                    <%= brand_identity.status.humanize %>
                  </span>
                </div>
                
                <% if brand_identity.description.present? %>
                  <p class="mt-1 text-sm text-gray-600"><%= truncate(brand_identity.description, length: 120) %></p>
                <% end %>
                
                <div class="mt-2 flex items-center text-sm text-gray-500">
                  <span>Created <%= time_ago_in_words(brand_identity.created_at) %> ago</span>
                  
                  <% if brand_identity.processed_guidelines.present? %>
                    <span class="mx-2">â€¢</span>
                    <span><%= brand_identity.processed_guidelines_summary[:files_processed] %> files processed</span>
                  <% end %>
                </div>
              </div>
              
              <div class="flex items-center space-x-2">
                <%= link_to "View", brand_identity_path(brand_identity), 
                    class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
                    
                <%= link_to "Edit", edit_brand_identity_path(brand_identity), 
                    class: "text-gray-600 hover:text-gray-800 text-sm font-medium" %>
                    
                <% unless brand_identity.is_active? %>
                  <%= link_to "Activate", activate_brand_identity_path(brand_identity), 
                      method: :patch,
                      class: "text-green-600 hover:text-green-800 text-sm font-medium",
                      data: { confirm: "This will deactivate any other active brand identity. Continue?" } %>
                <% else %>
                  <%= link_to "Deactivate", deactivate_brand_identity_path(brand_identity), 
                      method: :patch,
                      class: "text-yellow-600 hover:text-yellow-800 text-sm font-medium" %>
                <% end %>
                
                <%= link_to "Delete", brand_identity_path(brand_identity), 
                    method: :delete,
                    class: "text-red-600 hover:text-red-800 text-sm font-medium",
                    data: { confirm: "Are you sure you want to delete this brand identity? This action cannot be undone." } %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No brand identities</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating your first brand identity.</p>
        <div class="mt-6">
          <%= link_to "Create Brand Identity", new_brand_identity_path, 
              class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
