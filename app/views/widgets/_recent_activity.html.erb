<!-- Recent Activity Feed Widget -->
<div class="<%= dashboard_widget_classes(size: 'medium', collapsible: true) %>" 
     data-controller="widget collapsible activity-feed" 
     data-widget-type-value="recent-activity"
     data-activity-feed-auto-refresh-value="30000">
  
  <!-- Widget Header -->
  <div class="widget-header flex items-center justify-between p-6 border-b border-gray-100">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-amber-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-3">
        <h3 class="text-lg font-semibold text-primary">Recent Activity</h3>
        <p class="text-sm text-tertiary">Real-time updates across your campaigns</p>
      </div>
    </div>
    
    <!-- Widget Controls -->
    <div class="flex items-center space-x-2">
      <!-- Live Indicator -->
      <div class="flex items-center">
        <div class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></div>
        <span class="text-xs text-muted">Live</span>
      </div>
      
      <!-- Filter Toggle -->
      <button class="p-1.5 text-muted hover:text-primary hover:bg-gray-100 rounded-md transition-colors"
              data-action="click->activity-feed#toggleFilters"
              aria-label="Filter activities">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.207A1 1 0 013 6.5V4z"></path>
        </svg>
      </button>
      
      <!-- Collapse Toggle -->
      <button class="p-1.5 text-muted hover:text-primary hover:bg-gray-100 rounded-md transition-colors"
              data-action="click->collapsible#toggle"
              data-collapsible-target="trigger"
              aria-label="Collapse widget">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Activity Filters (Hidden by default) -->
  <div data-activity-feed-target="filters" class="activity-filters hidden border-b border-gray-100 p-4 bg-gray-50">
    <div class="flex flex-wrap gap-2">
      <button class="filter-tag active px-3 py-1 text-sm bg-blue-100 text-blue-700 rounded-full hover:bg-blue-200 transition-colors"
              data-action="click->activity-feed#filterByType"
              data-type="all">
        All
      </button>
      <button class="filter-tag px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
              data-action="click->activity-feed#filterByType"
              data-type="campaign">
        Campaigns
      </button>
      <button class="filter-tag px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
              data-action="click->activity-feed#filterByType"
              data-type="content">
        Content
      </button>
      <button class="filter-tag px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
              data-action="click->activity-feed#filterByType"
              data-type="analytics">
        Analytics
      </button>
      <button class="filter-tag px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
              data-action="click->activity-feed#filterByType"
              data-type="user">
        Users
      </button>
    </div>
  </div>
  
  <!-- Widget Content -->
  <div class="widget-content" data-collapsible-target="content">
    <div class="activity-feed-container max-h-96 overflow-y-auto" data-activity-feed-target="container">
      
      <!-- Activity Items -->
      <div class="activity-list divide-y divide-gray-100" data-activity-feed-target="list">
        
        <!-- Recent Activities (Sample Data) -->
        <div class="activity-item p-4 hover:bg-gray-50 transition-colors" data-activity-type="campaign">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center justify-between mb-1">
                <p class="text-sm font-medium text-primary truncate">
                  New campaign "Summer Sale 2024" launched
                </p>
                <span class="text-xs text-muted whitespace-nowrap ml-2">2 min ago</span>
              </div>
              <p class="text-sm text-tertiary line-clamp-2">
                Email campaign targeting existing customers with 25% discount offers across summer collection.
              </p>
              <div class="flex items-center mt-2 space-x-4 text-xs text-muted">
                <span>By <%= current_user.display_name %></span>
                <span>•</span>
                <span class="text-green-600 font-medium">Active</span>
                <span>•</span>
                <span>Reach: 12.5K</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="activity-item p-4 hover:bg-gray-50 transition-colors" data-activity-type="analytics">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center justify-between mb-1">
                <p class="text-sm font-medium text-primary truncate">
                  Weekly performance report generated
                </p>
                <span class="text-xs text-muted whitespace-nowrap ml-2">5 min ago</span>
              </div>
              <p class="text-sm text-tertiary line-clamp-2">
                Automated analytics report showing 15% increase in conversion rates across all active campaigns.
              </p>
              <div class="flex items-center mt-2 space-x-4 text-xs text-muted">
                <span>System Generated</span>
                <span>•</span>
                <span class="text-blue-600 font-medium">
                  <%= link_to "View Report", "#", class: "hover:underline" %>
                </span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="activity-item p-4 hover:bg-gray-50 transition-colors" data-activity-type="content">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0118 12a8 8 0 00-16 0 8.001 8.001 0 004.929 7.392"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center justify-between mb-1">
                <p class="text-sm font-medium text-primary truncate">
                  Brand guidelines updated for "TechStart Inc"
                </p>
                <span class="text-xs text-muted whitespace-nowrap ml-2">12 min ago</span>
              </div>
              <p class="text-sm text-tertiary line-clamp-2">
                Logo variations and color palette updated to reflect new brand identity across all marketing materials.
              </p>
              <div class="flex items-center mt-2 space-x-4 text-xs text-muted">
                <span>By Sarah Wilson</span>
                <span>•</span>
                <span class="text-orange-600 font-medium">Review Required</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="activity-item p-4 hover:bg-gray-50 transition-colors" data-activity-type="campaign">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-amber-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center justify-between mb-1">
                <p class="text-sm font-medium text-primary truncate">
                  A/B test "Spring Headlines" reached significance
                </p>
                <span class="text-xs text-muted whitespace-nowrap ml-2">28 min ago</span>
              </div>
              <p class="text-sm text-tertiary line-clamp-2">
                Variant B outperformed Variant A by 23% with 95% confidence level. Ready for full deployment.
              </p>
              <div class="flex items-center mt-2 space-x-4 text-xs text-muted">
                <span>System Analysis</span>
                <span>•</span>
                <span class="text-green-600 font-medium">Actionable</span>
                <span>•</span>
                <span class="text-blue-600 font-medium">
                  <%= link_to "Deploy Winner", "#", class: "hover:underline" %>
                </span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="activity-item p-4 hover:bg-gray-50 transition-colors" data-activity-type="user">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-indigo-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center justify-between mb-1">
                <p class="text-sm font-medium text-primary truncate">
                  New team member "Alex Chen" joined
                </p>
                <span class="text-xs text-muted whitespace-nowrap ml-2">1 hr ago</span>
              </div>
              <p class="text-sm text-tertiary line-clamp-2">
                Added to Marketing Team with Content Creator role. Access granted to content repository and brand assets.
              </p>
              <div class="flex items-center mt-2 space-x-4 text-xs text-muted">
                <span>By Admin</span>
                <span>•</span>
                <span class="text-blue-600 font-medium">Content Creator</span>
              </div>
            </div>
          </div>
        </div>
        
      </div>
      
      <!-- Load More Button -->
      <div class="p-4 text-center border-t border-gray-100">
        <button class="load-more-btn text-sm text-interactive hover:text-blue-600 font-medium transition-colors"
                data-action="click->activity-feed#loadMore">
          Load more activities →
        </button>
      </div>
      
    </div>
    
    <!-- Empty State -->
    <div class="activity-empty-state hidden p-8 text-center" data-activity-feed-target="emptyState">
      <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <p class="text-gray-500 text-sm mb-2">No recent activity</p>
      <p class="text-gray-400 text-xs">Activity will appear here as you use the platform</p>
    </div>
    
  </div>
</div>