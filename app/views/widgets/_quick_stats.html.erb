<!-- Quick Stats Summary Widget -->
<div class="<%= dashboard_widget_classes(size: 'small', collapsible: true) %>" 
     data-controller="widget collapsible" 
     data-widget-type-value="quick-stats">
  
  <!-- Widget Header -->
  <div class="widget-header flex items-center justify-between p-4 border-b border-gray-100">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-6 h-6 bg-emerald-100 rounded-md flex items-center justify-center">
          <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-2">
        <h3 class="text-sm font-semibold text-primary">Quick Stats</h3>
      </div>
    </div>
    
    <!-- Widget Controls -->
    <div class="flex items-center space-x-1">
      <!-- Refresh Button -->
      <button class="p-1 text-muted hover:text-primary hover:bg-gray-100 rounded-md transition-colors"
              data-action="click->widget#refresh"
              aria-label="Refresh stats">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
      </button>
      
      <!-- Collapse Toggle -->
      <button class="p-1 text-muted hover:text-primary hover:bg-gray-100 rounded-md transition-colors"
              data-action="click->collapsible#toggle"
              data-collapsible-target="trigger"
              aria-label="Collapse widget">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Widget Content -->
  <div class="widget-content" data-collapsible-target="content">
    <div class="p-4 space-y-4">
      
      <!-- Today's Stats -->
      <div class="text-center">
        <p class="text-xs font-medium text-muted uppercase tracking-wider mb-3">Today</p>
        
        <!-- Primary Stat -->
        <div class="mb-3">
          <p class="text-2xl font-bold text-primary" data-widget-target="todayVisitors">
            1,247
          </p>
          <p class="text-xs text-muted">Visitors</p>
          <div class="flex items-center justify-center mt-1">
            <%= trend_indicator(1247, 1156, format: :number) %>
          </div>
        </div>
        
        <!-- Secondary Stats Grid -->
        <div class="grid grid-cols-2 gap-3 text-center">
          <div class="bg-blue-50 rounded-lg p-3">
            <p class="text-lg font-bold text-blue-900" data-widget-target="todayClicks">
              342
            </p>
            <p class="text-xs text-blue-700">Clicks</p>
            <p class="text-xs text-success font-medium mt-1">+12%</p>
          </div>
          
          <div class="bg-green-50 rounded-lg p-3">
            <p class="text-lg font-bold text-green-900" data-widget-target="todayConversions">
              28
            </p>
            <p class="text-xs text-green-700">Conversions</p>
            <p class="text-xs text-success font-medium mt-1">+8%</p>
          </div>
        </div>
      </div>
      
      <!-- Divider -->
      <div class="border-t border-gray-100"></div>
      
      <!-- This Week Stats -->
      <div>
        <p class="text-xs font-medium text-muted uppercase tracking-wider mb-3 text-center">This Week</p>
        
        <div class="space-y-2">
          <!-- Impressions -->
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-2 h-2 bg-blue-500 rounded-full mr-2"></div>
              <span class="text-xs text-secondary">Impressions</span>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium text-primary">87.5K</p>
              <p class="text-xs text-success">+15.2%</p>
            </div>
          </div>
          
          <!-- Engagement -->
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-2 h-2 bg-purple-500 rounded-full mr-2"></div>
              <span class="text-xs text-secondary">Engagement</span>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium text-primary">4.8%</p>
              <p class="text-xs text-success">+0.7%</p>
            </div>
          </div>
          
          <!-- Revenue -->
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
              <span class="text-xs text-secondary">Revenue</span>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium text-primary">$8,947</p>
              <p class="text-xs text-success">+22.1%</p>
            </div>
          </div>
          
          <!-- Leads -->
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-2 h-2 bg-orange-500 rounded-full mr-2"></div>
              <span class="text-xs text-secondary">New Leads</span>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium text-primary">156</p>
              <p class="text-xs text-success">+18.3%</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Divider -->
      <div class="border-t border-gray-100"></div>
      
      <!-- Quick Actions -->
      <div>
        <p class="text-xs font-medium text-muted uppercase tracking-wider mb-3 text-center">Quick Actions</p>
        
        <div class="grid grid-cols-2 gap-2">
          <%= link_to campaigns_path, 
              class: "flex items-center justify-center p-2 bg-blue-50 hover:bg-blue-100 rounded-md transition-colors text-center" do %>
            <div>
              <svg class="w-4 h-4 text-blue-600 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              <span class="text-xs text-blue-700 font-medium">New Campaign</span>
            </div>
          <% end %>
          
          <%= link_to analytics_path, 
              class: "flex items-center justify-center p-2 bg-purple-50 hover:bg-purple-100 rounded-md transition-colors text-center" do %>
            <div>
              <svg class="w-4 h-4 text-purple-600 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <span class="text-xs text-purple-700 font-medium">View Report</span>
            </div>
          <% end %>
        </div>
        
        <!-- Export Data Button -->
        <button class="w-full mt-2 p-2 bg-gray-50 hover:bg-gray-100 rounded-md transition-colors"
                data-action="click->widget#exportData">
          <div class="flex items-center justify-center">
            <svg class="w-3 h-3 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span class="text-xs text-gray-700 font-medium">Export Data</span>
          </div>
        </button>
      </div>
      
    </div>
  </div>
</div>