<!-- Task Progress Tracker Widget -->
<div class="<%= dashboard_widget_classes(size: 'medium', collapsible: true) %>" 
     data-controller="widget collapsible task-progress" 
     data-widget-type-value="task-progress">
  
  <!-- Widget Header -->
  <div class="widget-header flex items-center justify-between p-6 border-b border-gray-100">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-cyan-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
          </svg>
        </div>
      </div>
      <div class="ml-3">
        <h3 class="text-lg font-semibold text-primary">Task Progress</h3>
        <p class="text-sm text-tertiary">Campaign and project completion analytics</p>
      </div>
    </div>
    
    <!-- Widget Controls -->
    <div class="flex items-center space-x-2">
      <!-- View Toggle -->
      <div class="flex rounded-lg bg-gray-100 p-1">
        <button class="view-toggle-btn active px-3 py-1 text-sm bg-white text-primary rounded-md shadow-sm transition-all"
                data-action="click->task-progress#switchView"
                data-view="overview">
          Overview
        </button>
        <button class="view-toggle-btn px-3 py-1 text-sm text-muted hover:text-primary transition-colors"
                data-action="click->task-progress#switchView"
                data-view="detailed">
          Detailed
        </button>
      </div>
      
      <!-- Collapse Toggle -->
      <button class="p-1.5 text-muted hover:text-primary hover:bg-gray-100 rounded-md transition-colors"
              data-action="click->collapsible#toggle"
              data-collapsible-target="trigger"
              aria-label="Collapse widget">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Widget Content -->
  <div class="widget-content" data-collapsible-target="content">
    
    <!-- Overview View -->
    <div class="task-overview-view" data-task-progress-target="overviewView">
      <div class="p-6">
        
        <!-- Progress Summary -->
        <div class="mb-6">
          <div class="flex items-center justify-between mb-4">
            <h4 class="text-sm font-semibold text-primary">Overall Completion</h4>
            <span class="text-2xl font-bold text-primary">67%</span>
          </div>
          
          <!-- Progress Bar -->
          <div class="w-full bg-gray-200 rounded-full h-3 mb-3">
            <div class="bg-gradient-to-r from-cyan-500 to-blue-500 h-3 rounded-full relative transition-all duration-1000 ease-out" 
                 style="width: 67%">
              <div class="absolute right-0 top-0 w-1 h-3 bg-white rounded-r-full opacity-75"></div>
            </div>
          </div>
          
          <!-- Progress Stats -->
          <div class="grid grid-cols-3 gap-4 text-center">
            <div>
              <p class="text-lg font-bold text-green-600">24</p>
              <p class="text-xs text-muted">Completed</p>
            </div>
            <div>
              <p class="text-lg font-bold text-blue-600">12</p>
              <p class="text-xs text-muted">In Progress</p>
            </div>
            <div>
              <p class="text-lg font-bold text-gray-500">8</p>
              <p class="text-xs text-muted">Pending</p>
            </div>
          </div>
        </div>
        
        <!-- Current Projects -->
        <div class="space-y-4">
          <h4 class="text-sm font-semibold text-primary">Active Projects</h4>
          
          <!-- Project 1 -->
          <div class="project-card bg-blue-50 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <h5 class="text-sm font-medium text-blue-900">Q3 Email Campaign Series</h5>
              <span class="text-sm font-bold text-blue-700">85%</span>
            </div>
            <div class="w-full bg-blue-200 rounded-full h-2 mb-2">
              <div class="bg-blue-600 h-2 rounded-full" style="width: 85%"></div>
            </div>
            <div class="flex items-center justify-between text-xs text-blue-700">
              <span>17/20 tasks completed</span>
              <span>Due: Aug 15</span>
            </div>
          </div>
          
          <!-- Project 2 -->
          <div class="project-card bg-green-50 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <h5 class="text-sm font-medium text-green-900">Brand Asset Refresh</h5>
              <span class="text-sm font-bold text-green-700">45%</span>
            </div>
            <div class="w-full bg-green-200 rounded-full h-2 mb-2">
              <div class="bg-green-600 h-2 rounded-full" style="width: 45%"></div>
            </div>
            <div class="flex items-center justify-between text-xs text-green-700">
              <span>9/20 tasks completed</span>
              <span>Due: Sep 1</span>
            </div>
          </div>
          
          <!-- Project 3 -->
          <div class="project-card bg-orange-50 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <h5 class="text-sm font-medium text-orange-900">Analytics Dashboard v2</h5>
              <span class="text-sm font-bold text-orange-700">30%</span>
            </div>
            <div class="w-full bg-orange-200 rounded-full h-2 mb-2">
              <div class="bg-orange-600 h-2 rounded-full" style="width: 30%"></div>
            </div>
            <div class="flex items-center justify-between text-xs text-orange-700">
              <span>6/20 tasks completed</span>
              <span>Due: Sep 15</span>
            </div>
          </div>
        </div>
        
        <!-- Team Performance -->
        <div class="mt-6 pt-6 border-t border-gray-100">
          <h4 class="text-sm font-semibold text-primary mb-4">Team Performance</h4>
          
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-xs font-medium text-blue-600">JS</span>
                </div>
                <span class="text-sm text-secondary">John Smith</span>
              </div>
              <div class="flex items-center space-x-2">
                <div class="w-16 bg-gray-200 rounded-full h-2">
                  <div class="bg-green-500 h-2 rounded-full" style="width: 92%"></div>
                </div>
                <span class="text-sm font-medium text-primary">92%</span>
              </div>
            </div>
            
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-6 h-6 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-xs font-medium text-purple-600">SW</span>
                </div>
                <span class="text-sm text-secondary">Sarah Wilson</span>
              </div>
              <div class="flex items-center space-x-2">
                <div class="w-16 bg-gray-200 rounded-full h-2">
                  <div class="bg-blue-500 h-2 rounded-full" style="width: 78%"></div>
                </div>
                <span class="text-sm font-medium text-primary">78%</span>
              </div>
            </div>
            
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-xs font-medium text-green-600">AC</span>
                </div>
                <span class="text-sm text-secondary">Alex Chen</span>
              </div>
              <div class="flex items-center space-x-2">
                <div class="w-16 bg-gray-200 rounded-full h-2">
                  <div class="bg-yellow-500 h-2 rounded-full" style="width: 65%"></div>
                </div>
                <span class="text-sm font-medium text-primary">65%</span>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
    
    <!-- Detailed View -->
    <div class="task-detailed-view hidden" data-task-progress-target="detailedView">
      <div class="p-6">
        
        <!-- Task List Header -->
        <div class="flex items-center justify-between mb-4">
          <h4 class="text-sm font-semibold text-primary">Task Details</h4>
          <div class="flex items-center space-x-2">
            <select class="text-sm border-gray-300 rounded-md focus:ring-cyan-500 focus:border-cyan-500"
                    data-action="change->task-progress#filterTasks">
              <option value="all">All Tasks</option>
              <option value="pending">Pending</option>
              <option value="in-progress">In Progress</option>
              <option value="completed">Completed</option>
              <option value="overdue">Overdue</option>
            </select>
          </div>
        </div>
        
        <!-- Task List -->
        <div class="task-list space-y-3 max-h-80 overflow-y-auto">
          
          <!-- Task Item 1 -->
          <div class="task-item flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
               data-task-status="completed">
            <div class="flex-shrink-0 mr-3">
              <div class="w-5 h-5 bg-green-500 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-primary line-through">Design email template variations</p>
              <p class="text-xs text-muted">Completed 2 days ago • Q3 Email Campaign</p>
            </div>
            <div class="flex-shrink-0">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                Done
              </span>
            </div>
          </div>
          
          <!-- Task Item 2 -->
          <div class="task-item flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
               data-task-status="in-progress">
            <div class="flex-shrink-0 mr-3">
              <div class="w-5 h-5 bg-blue-500 rounded-full flex items-center justify-center">
                <div class="w-2 h-2 bg-white rounded-full animate-pulse"></div>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-primary">A/B test subject lines</p>
              <p class="text-xs text-muted">Started yesterday • Q3 Email Campaign</p>
            </div>
            <div class="flex-shrink-0">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                In Progress
              </span>
            </div>
          </div>
          
          <!-- Task Item 3 -->
          <div class="task-item flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
               data-task-status="pending">
            <div class="flex-shrink-0 mr-3">
              <div class="w-5 h-5 bg-gray-300 rounded-full flex items-center justify-center">
                <div class="w-2 h-2 bg-white rounded-full"></div>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-primary">Set up automation rules</p>
              <p class="text-xs text-muted">Due in 3 days • Q3 Email Campaign</p>
            </div>
            <div class="flex-shrink-0">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                Pending
              </span>
            </div>
          </div>
          
          <!-- Task Item 4 -->
          <div class="task-item flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
               data-task-status="overdue">
            <div class="flex-shrink-0 mr-3">
              <div class="w-5 h-5 bg-red-500 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-primary">Update brand color palette</p>
              <p class="text-xs text-red-600">Overdue by 2 days • Brand Asset Refresh</p>
            </div>
            <div class="flex-shrink-0">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                Overdue
              </span>
            </div>
          </div>
          
          <!-- Task Item 5 -->
          <div class="task-item flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
               data-task-status="in-progress">
            <div class="flex-shrink-0 mr-3">
              <div class="w-5 h-5 bg-blue-500 rounded-full flex items-center justify-center">
                <div class="w-2 h-2 bg-white rounded-full animate-pulse"></div>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-primary">Implement data visualization components</p>
              <p class="text-xs text-muted">Started 3 days ago • Analytics Dashboard v2</p>
            </div>
            <div class="flex-shrink-0">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                In Progress
              </span>
            </div>
          </div>
          
        </div>
        
        <!-- Task Actions -->
        <div class="mt-4 pt-4 border-t border-gray-100">
          <div class="flex items-center justify-between">
            <button class="text-sm text-interactive hover:text-blue-600 font-medium transition-colors"
                    data-action="click->task-progress#showAllTasks">
              View all tasks →
            </button>
            <button class="px-4 py-2 bg-cyan-600 text-white text-sm font-medium rounded-lg hover:bg-cyan-700 transition-colors"
                    data-action="click->task-progress#createTask">
              Add Task
            </button>
          </div>
        </div>
        
      </div>
    </div>
    
  </div>
</div>