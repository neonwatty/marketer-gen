<!-- Campaign Overview Widget -->
<div class="<%= dashboard_widget_classes(size: 'large', collapsible: true) %>" 
     data-controller="widget collapsible" 
     data-widget-type-value="campaign-overview">
  
  <!-- Widget Header -->
  <div class="widget-header flex items-center justify-between p-6 border-b border-gray-100">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-3">
        <h3 class="text-lg font-semibold text-primary">Campaign Overview</h3>
        <p class="text-sm text-tertiary">Active campaigns and performance metrics</p>
      </div>
    </div>
    
    <!-- Widget Controls -->
    <div class="flex items-center space-x-2">
      <!-- Time Range Selector -->
      <select class="text-sm border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
              data-action="change->widget#updateTimeRange">
        <option value="7d">Last 7 days</option>
        <option value="30d" selected>Last 30 days</option>
        <option value="90d">Last 90 days</option>
      </select>
      
      <!-- Refresh Button -->
      <button class="p-1.5 text-muted hover:text-primary hover:bg-gray-100 rounded-md transition-colors"
              data-action="click->widget#refresh"
              aria-label="Refresh campaign data">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
      </button>
      
      <!-- Collapse Toggle -->
      <button class="p-1.5 text-muted hover:text-primary hover:bg-gray-100 rounded-md transition-colors"
              data-action="click->collapsible#toggle"
              data-collapsible-target="trigger"
              aria-label="Collapse widget">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Widget Content -->
  <div class="widget-content" data-collapsible-target="content">
    <div class="p-6">      
      <!-- Key Metrics Row -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <!-- Active Campaigns -->
        <div class="metric-card bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-blue-700">Active Campaigns</p>
              <p class="text-2xl font-bold text-blue-900" data-widget-target="activeCampaigns">
                <%= Campaign.active.count %>
              </p>
            </div>
            <div class="w-8 h-8 bg-blue-200 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="mt-2">
            <%= trend_indicator(Campaign.active.count, Campaign.active.where('created_at < ?', 30.days.ago).count) %>
          </div>
        </div>
        
        <!-- Total Reach -->
        <div class="metric-card bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-green-700">Total Reach</p>
              <p class="text-2xl font-bold text-green-900" data-widget-target="totalReach">
                <%= format_metric(Campaign.sum(:reach) || 0, type: :human) %>
              </p>
            </div>
            <div class="w-8 h-8 bg-green-200 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <div class="mt-2">
            <span class="text-success text-sm font-medium">↗ 12.5%</span>
          </div>
        </div>
        
        <!-- Conversion Rate -->
        <div class="metric-card bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-purple-700">Avg. Conversion</p>
              <p class="text-2xl font-bold text-purple-900" data-widget-target="conversionRate">
                3.2%
              </p>
            </div>
            <div class="w-8 h-8 bg-purple-200 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <div class="mt-2">
            <span class="text-success text-sm font-medium">↗ 0.8%</span>
          </div>
        </div>
        
        <!-- ROI -->
        <div class="metric-card bg-gradient-to-br from-orange-50 to-orange-100 rounded-lg p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-orange-700">Average ROI</p>
              <p class="text-2xl font-bold text-orange-900" data-widget-target="avgROI">
                4.7x
              </p>
            </div>
            <div class="w-8 h-8 bg-orange-200 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <div class="mt-2">
            <span class="text-success text-sm font-medium">↗ 1.2x</span>
          </div>
        </div>
      </div>
      
      <!-- Campaign Performance Chart -->
      <div class="bg-gray-50 rounded-xl p-4 mb-6">
        <div class="flex items-center justify-between mb-4">
          <h4 class="text-sm font-semibold text-primary">Performance Trends</h4>
          <div class="flex items-center space-x-4 text-xs text-muted">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-blue-500 rounded-full mr-2"></div>
              <span>Impressions</span>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
              <span>Conversions</span>
            </div>
          </div>
        </div>
        
        <!-- Placeholder for Chart -->
        <div class="h-48 bg-white rounded-lg border-2 border-dashed border-gray-300 flex items-center justify-center">
          <div class="text-center">
            <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <p class="text-gray-500 text-sm">Performance chart will be rendered here</p>
            <p class="text-gray-400 text-xs mt-1">Chart.js integration in development</p>
          </div>
        </div>
      </div>
      
      <!-- Top Performing Campaigns -->
      <div>
        <div class="flex items-center justify-between mb-4">
          <h4 class="text-sm font-semibold text-primary">Top Performing Campaigns</h4>
          <%= link_to campaigns_path, 
              class: "text-sm text-interactive hover:text-blue-600 font-medium transition-colors" do %>
            View all →
          <% end %>
        </div>
        
        <div class="space-y-3">
          <% if Campaign.limit(3).any? %>
            <% Campaign.includes(:brand).order(created_at: :desc).limit(3).each do |campaign| %>
              <div class="campaign-item flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="flex items-center min-w-0 flex-1">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                      <span class="text-sm font-medium text-blue-600">
                        <%= campaign.name.first.upcase if campaign.name.present? %>
                      </span>
                    </div>
                  </div>
                  <div class="ml-3 min-w-0 flex-1">
                    <p class="text-sm font-medium text-primary truncate">
                      <%= campaign.name || "Untitled Campaign" %>
                    </p>
                    <p class="text-xs text-muted">
                      <%= campaign.brand&.name || "No Brand" %> • 
                      <%= time_ago_in_words(campaign.created_at) %> ago
                    </p>
                  </div>
                </div>
                <div class="flex items-center space-x-4 text-sm">
                  <div class="text-right">
                    <p class="font-medium text-primary">1,234</p>
                    <p class="text-xs text-muted">Conversions</p>
                  </div>
                  <div class="text-right">
                    <p class="font-medium text-success">+12.5%</p>
                    <p class="text-xs text-muted">Growth</p>
                  </div>
                  <%= link_to campaign_path(campaign), 
                      class: "text-interactive hover:text-blue-600 transition-colors" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-8">
              <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14-7v12a2 2 0 01-2 2H7a2 2 0 01-2-2V4a2 2 0 012-2h10a2 2 0 012 2zM9 11h6"></path>
              </svg>
              <p class="text-gray-500 text-sm">No campaigns yet</p>
              <%= link_to "Create your first campaign", campaigns_path, 
                  class: "text-interactive hover:text-blue-600 text-sm font-medium transition-colors" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>