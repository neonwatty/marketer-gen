<!-- Admin Overview Widget -->
<div class="<%= dashboard_widget_classes(size: 'medium', collapsible: true) %>" 
     data-controller="widget collapsible admin-overview" 
     data-widget-type-value="admin-overview">
  
  <!-- Widget Header -->
  <div class="widget-header flex items-center justify-between p-6 border-b border-gray-100">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-3">
        <h3 class="text-lg font-semibold text-primary">System Overview</h3>
        <p class="text-sm text-tertiary">Platform health and administration</p>
      </div>
    </div>
    
    <!-- Widget Controls -->
    <div class="flex items-center space-x-2">
      <!-- Admin Panel Link -->
      <%= link_to "/admin", 
          class: "p-1.5 text-muted hover:text-primary hover:bg-gray-100 rounded-md transition-colors",
          title: "Open Admin Panel" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      <% end %>
      
      <!-- Collapse Toggle -->
      <button class="p-1.5 text-muted hover:text-primary hover:bg-gray-100 rounded-md transition-colors"
              data-action="click->collapsible#toggle"
              data-collapsible-target="trigger"
              aria-label="Collapse widget">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Widget Content -->
  <div class="widget-content" data-collapsible-target="content">
    <div class="p-6">
      
      <!-- System Health Status -->
      <div class="mb-6">
        <div class="flex items-center justify-between mb-4">
          <h4 class="text-sm font-semibold text-primary">System Health</h4>
          <div class="flex items-center">
            <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
            <span class="text-sm text-green-600 font-medium">All Systems Operational</span>
          </div>
        </div>
        
        <!-- Health Metrics -->
        <div class="grid grid-cols-2 gap-4">
          <div class="text-center p-3 bg-green-50 rounded-lg">
            <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-2">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <p class="text-lg font-bold text-green-900">99.8%</p>
            <p class="text-xs text-green-700">Uptime</p>
          </div>
          
          <div class="text-center p-3 bg-blue-50 rounded-lg">
            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-2">
              <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="text-lg font-bold text-blue-900">142ms</p>
            <p class="text-xs text-blue-700">Avg Response</p>
          </div>
        </div>
      </div>
      
      <!-- User Statistics -->
      <div class="mb-6">
        <h4 class="text-sm font-semibold text-primary mb-4">User Statistics</h4>
        
        <div class="space-y-3">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                <svg class="w-3 h-3 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <span class="text-sm text-secondary">Total Users</span>
            </div>
            <div class="text-right">
              <p class="text-sm font-bold text-primary"><%= User.count %></p>
              <p class="text-xs text-success">+5 this week</p>
            </div>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center mr-3">
                <svg class="w-3 h-3 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-sm text-secondary">Active Users (24h)</span>
            </div>
            <div class="text-right">
              <p class="text-sm font-bold text-primary"><%= User.where('last_sign_in_at > ?', 24.hours.ago).count %></p>
              <p class="text-xs text-success">+12%</p>
            </div>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-6 h-6 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                <svg class="w-3 h-3 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM2 8a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  <path d="M12.93 13.93a10 10 0 01-5.86 0A8.97 8.97 0 003 13a1 1 0 000 2 10.97 10.97 0 007 0 1 1 0 000-2z"></path>
                </svg>
              </div>
              <span class="text-sm text-secondary">Admin Users</span>
            </div>
            <div class="text-right">
              <p class="text-sm font-bold text-primary"><%= User.where(role: :admin).count %></p>
              <p class="text-xs text-muted">System level</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Recent Admin Activities -->
      <div class="mb-6">
        <div class="flex items-center justify-between mb-4">
          <h4 class="text-sm font-semibold text-primary">Recent Admin Activities</h4>
          <%= link_to "/admin", 
              class: "text-xs text-interactive hover:text-blue-600 font-medium transition-colors" do %>
            View All →
          <% end %>
        </div>
        
        <div class="space-y-3">
          <% if AdminAuditLog.limit(3).any? %>
            <% AdminAuditLog.includes(:user).order(created_at: :desc).limit(3).each do |log| %>
              <div class="flex items-start space-x-3 p-3 bg-gray-50 rounded-lg">
                <div class="flex-shrink-0">
                  <div class="w-6 h-6 bg-orange-100 rounded-full flex items-center justify-center">
                    <svg class="w-3 h-3 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm text-primary truncate">
                    <%= log.action || "Admin action performed" %>
                  </p>
                  <p class="text-xs text-muted">
                    By <%= log.user&.display_name || "System" %> • 
                    <%= time_ago_in_words(log.created_at) %> ago
                  </p>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-4">
              <svg class="w-8 h-8 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0118 12a8 8 0 00-16 0 8.001 8.001 0 004.929 7.392"></path>
              </svg>
              <p class="text-sm text-gray-500">No recent admin activities</p>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- System Alerts -->
      <div>
        <div class="flex items-center justify-between mb-4">
          <h4 class="text-sm font-semibold text-primary">System Alerts</h4>
          <span class="text-xs text-muted">Last checked: just now</span>
        </div>
        
        <!-- Alert Items -->
        <div class="space-y-2">
          <!-- Sample Alert -->
          <div class="flex items-center p-3 bg-yellow-50 rounded-lg border-l-4 border-yellow-400">
            <div class="flex-shrink-0">
              <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <p class="text-sm font-medium text-yellow-800">Disk usage above 80%</p>
              <p class="text-xs text-yellow-700">Consider cleaning up old log files or expanding storage</p>
            </div>
            <button class="text-yellow-600 hover:text-yellow-800 transition-colors"
                    data-action="click->admin-overview#dismissAlert"
                    data-alert-id="disk-usage">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          
          <!-- Success State -->
          <div class="flex items-center p-3 bg-green-50 rounded-lg border-l-4 border-green-400">
            <div class="flex-shrink-0">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <p class="text-sm font-medium text-green-800">Daily backup completed successfully</p>
              <p class="text-xs text-green-700">Last completed at 3:00 AM • Next scheduled for 3:00 AM tomorrow</p>
            </div>
          </div>
        </div>
        
        <!-- Quick Admin Actions -->
        <div class="mt-6 pt-4 border-t border-gray-100">
          <h5 class="text-xs font-medium text-muted uppercase tracking-wider mb-3">Quick Actions</h5>
          
          <div class="grid grid-cols-2 gap-3">
            <%= link_to users_path, 
                class: "flex items-center p-3 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors" do %>
              <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
              <span class="text-sm text-blue-700 font-medium">Manage Users</span>
            <% end %>
            
            <button class="flex items-center p-3 bg-purple-50 hover:bg-purple-100 rounded-lg transition-colors"
                    data-action="click->admin-overview#viewSystemLogs">
              <svg class="w-4 h-4 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0118 12a8 8 0 00-16 0 8.001 8.001 0 004.929 7.392"></path>
              </svg>
              <span class="text-sm text-purple-700 font-medium">System Logs</span>
            </button>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>