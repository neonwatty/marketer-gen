<%#
  Smart field component with suggestions and enhanced UX
  
  Usage:
  <%= render 'shared/smart_field',
      form: form,
      field_name: :name,
      field_type: :text_field,
      label: "Campaign Name",
      required: true,
      suggestions_endpoint: "/api/v1/suggestions/campaign_plans",
      placeholder: "Enter campaign name...",
      help_text: "Choose a descriptive name",
      show_suggestions_on_focus: true
  %>
%>

<%
  # Set defaults
  field_type ||= :text_field
  label ||= field_name.to_s.humanize
  required ||= false
  placeholder ||= nil
  help_text ||= nil
  suggestions_endpoint ||= nil
  show_suggestions_on_focus ||= true
  css_classes ||= ""
  
  # Generate unique ID for this field
  field_id = "#{form.object_name}_#{field_name}_#{SecureRandom.hex(4)}"
  
  # Build field attributes
  field_attrs = {
    id: field_id,
    placeholder: placeholder,
    class: "smart-field w-full border border-gray-300 rounded-md px-3 py-2 pr-10 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors #{css_classes}"
  }
  
  field_attrs[:required] = required if required
%>

<div class="smart-field-wrapper mb-4 relative"
     data-controller="smart-suggestions"
     data-smart-suggestions-endpoint-value="<%= suggestions_endpoint %>"
     data-smart-suggestions-field-name-value="<%= field_name %>"
     data-smart-suggestions-show-on-focus-value="<%= show_suggestions_on_focus %>">
  
  <!-- Label -->
  <%= form.label field_name, class: "block text-sm font-medium text-gray-700 mb-1" do %>
    <%= label %>
    <% if required %>
      <span class="text-red-500">*</span>
    <% end %>
  <% end %>
  
  <!-- Input Field Container -->
  <div class="relative">
    <!-- Input Field -->
    <%= form.send(field_type, field_name, field_attrs.merge(
      "data-smart-suggestions-target": "input",
      "data-action": "focus->smart-suggestions#inputFocus blur->smart-suggestions#inputBlur keyup->smart-suggestions#inputKeyup"
    )) %>
    
    <!-- Smart Suggestions Icon -->
    <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
      </svg>
    </div>
    
    <!-- Loading Indicator -->
    <div class="absolute inset-y-0 right-8 flex items-center pr-3 pointer-events-none hidden"
         data-smart-suggestions-target="loadingIndicator">
      <svg class="w-4 h-4 text-blue-500 animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="m4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </div>
  </div>
  
  <!-- Suggestions Dropdown -->
  <div class="absolute z-40 w-full bg-white border border-gray-200 rounded-md shadow-lg mt-1 max-h-48 overflow-y-auto hidden pointer-events-auto"
       data-smart-suggestions-target="suggestionsList">
    <!-- Suggestions will be populated by JavaScript -->
  </div>
  
  <!-- Help Text -->
  <% if help_text %>
    <div class="mt-1 text-sm text-gray-500 flex items-center">
      <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <%= help_text %>
      <% if suggestions_endpoint %>
        <span class="ml-2 text-xs text-blue-500">â€¢ Smart suggestions available</span>
      <% end %>
    </div>
  <% end %>
</div>