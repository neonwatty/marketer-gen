<!-- Global Search Component -->
<div class="global-search relative" data-controller="global-search" data-global-search-debounce-value="300">
  <div class="relative">
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
      <svg class="w-5 h-5 text-muted" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
      </svg>
    </div>
    
    <input type="text" 
           data-global-search-target="input"
           data-action="input->global-search#search focus->global-search#showResults blur->global-search#hideResults keydown->global-search#handleKeydown"
           class="search-input block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg
                  bg-white text-sm placeholder-gray-500
                  focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                  transition-colors duration-200"
           placeholder="Search campaigns, content, analytics..."
           autocomplete="off"
           role="combobox"
           aria-expanded="false"
           aria-haspopup="listbox"
           aria-label="Global search">\n    \n    <!-- Search keyboard shortcut hint -->\n    <div class=\"absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none\">\n      <span class=\"hidden sm:block text-xs text-muted bg-gray-100 px-2 py-1 rounded border\">\n        <kbd class=\"font-mono\">⌘K</kbd>\n      </span>\n    </div>\n  </div>\n\n  <!-- Search Results Dropdown -->\n  <div data-global-search-target=\"results\" \n       class=\"search-results absolute z-50 w-full mt-1 bg-white rounded-lg shadow-lg border border-gray-200 \n              hidden max-h-96 overflow-y-auto\"\n       role=\"listbox\"\n       aria-label=\"Search results\">\n    \n    <!-- Loading State -->\n    <div data-global-search-target=\"loading\" class=\"hidden\">\n      <div class=\"flex items-center justify-center py-4\">\n        <svg class=\"animate-spin h-5 w-5 text-blue-500\" fill=\"none\" viewBox=\"0 0 24 24\">\n          <circle class=\"opacity-25\" cx=\"12\" cy=\"12\" r=\"10\" stroke=\"currentColor\" stroke-width=\"4\"></circle>\n          <path class=\"opacity-75\" fill=\"currentColor\" d=\"M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z\"></path>\n        </svg>\n        <span class=\"ml-2 text-sm text-muted\">Searching...</span>\n      </div>\n    </div>\n    \n    <!-- No Results State -->\n    <div data-global-search-target=\"noResults\" class=\"hidden\">\n      <div class=\"px-4 py-3 text-sm text-muted text-center\">\n        <svg class=\"w-6 h-6 mx-auto mb-2 text-gray-400\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\">\n          <path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0118 12a8 8 0 00-16 0 8.001 8.001 0 004.929 7.392\"></path>\n        </svg>\n        No results found\n      </div>\n    </div>\n    \n    <!-- Search Results List -->\n    <div data-global-search-target=\"resultsList\" class=\"divide-y divide-gray-100\">\n      <!-- Results will be populated dynamically -->\n    </div>\n    \n    <!-- Quick Actions Footer -->\n    <div class=\"bg-gray-50 px-4 py-3 text-xs text-muted border-t border-gray-100\">\n      <div class=\"flex items-center justify-between\">\n        <span>Press <kbd class=\"font-mono bg-white px-1 py-0.5 rounded border\">↑↓</kbd> to navigate</span>\n        <span>Press <kbd class=\"font-mono bg-white px-1 py-0.5 rounded border\">Enter</kbd> to select</span>\n      </div>\n    </div>\n  </div>\n</div>\n\n<!-- Global Keyboard Shortcut Handler -->\n<div data-controller=\"keyboard-shortcuts\" \n     data-action=\"keydown@document->keyboard-shortcuts#handleGlobalShortcuts\"\n     data-keyboard-shortcuts-search-target-value=\"[data-global-search-target='input']\"\n     class=\"hidden\"></div>