<!-- Loading Spinner -->
<div class="flex items-center justify-center gap-3" 
     role="status" 
     aria-live="polite"
     aria-label="Loading">
  
  <!-- Spinner -->
  <div class="w-6 h-6 border-2 border-blue-600 border-t-transparent rounded-full animate-spin" aria-hidden="true"></div>
  
  <!-- Loading text -->
  <% if local_assigns[:show_text] != false && local_assigns[:text] %>
    <span class="text-base text-gray-700">
      <%= local_assigns[:text] %>
    </span>
  <% end %>
</div>