            <div class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 ring-1 ring-black ring-opacity-5 focus:outline-none"
                 data-dropdown-target="menu"
                 role="menu" 
                 aria-orientation="vertical" 
                 aria-labelledby="user-menu-button" 
                 tabindex="-1">
              <%= link_to profile_path, 
                  class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors", 
                  role: "menuitem", 
                  tabindex: "-1" do %>
                <div class="flex items-center space-x-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  <span>Profile</span>
                </div>
              <% end %>
              
              <% if Current.user&.admin? %>
                <%= link_to admin_analytics_index_path, 
                    class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors", 
                    role: "menuitem", 
                    tabindex: "-1" do %>
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <span>Demo Analytics</span>
                  </div>
                <% end %>
                
                <%= link_to rails_admin_path, 
                    class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors", 
                    role: "menuitem", 
                    tabindex: "-1",
                    target: "_blank" do %>
                  <div class="flex items-center space-x-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <span>Admin Panel</span>
                  </div>
                <% end %>
              <% end %>
              
              <div class="border-t border-gray-100"></div>
              <%= button_to session_path, method: :delete, 
                  class: "block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors", 
                  role: "menuitem", 
                  tabindex: "-1" do %>
                <div class="flex items-center space-x-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                  </svg>
                  <span>Sign out</span>
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <!-- Authentication links -->
          <div class="flex items-center space-x-4">
            <%= link_to "Sign In", new_session_path, 
                class: "text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors" %>
            <%= link_to "Sign Up", sign_up_path, 
                class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" %>
          </div>
        <% end %>

        <!-- Mobile menu button -->
        <% if authenticated? %>
          <div class="sm:hidden">
            <button type="button" 
                    data-action="click->mobile-menu#toggle"
                    class="text-gray-700 hover:text-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded-lg p-2 transition-colors"
