  <!-- Mobile menu -->
  <% if authenticated? %>
    <div class="sm:hidden hidden" data-mobile-menu-target="menu" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-gray-200">
        <%= link_to "Dashboard", root_path, 
            class: "block px-3 py-2 text-base font-medium #{'text-blue-600 bg-blue-50' if current_page?(root_path)} #{'text-gray-700 hover:text-blue-600 hover:bg-gray-50' unless current_page?(root_path)} rounded-md transition-colors" %>
        
        <%= link_to "Journeys", journeys_path, 
            class: "block px-3 py-2 text-base font-medium #{'text-blue-600 bg-blue-50' if current_page?(journeys_path)} #{'text-gray-700 hover:text-blue-600 hover:bg-gray-50' unless current_page?(journeys_path)} rounded-md transition-colors" %>
        
        <%= link_to "Campaign Plans", campaign_plans_path, 
            class: "block px-3 py-2 text-base font-medium #{'text-blue-600 bg-blue-50' if current_page?(campaign_plans_path)} #{'text-gray-700 hover:text-blue-600 hover:bg-gray-50' unless current_page?(campaign_plans_path)} rounded-md transition-colors" %>
        
        <%= link_to "Brand Identity", brand_identities_path, 
            class: "block px-3 py-2 text-base font-medium #{'text-blue-600 bg-blue-50' if current_page?(brand_identities_path)} #{'text-gray-700 hover:text-blue-600 hover:bg-gray-50' unless current_page?(brand_identities_path)} rounded-md transition-colors" %>
        
        <%= link_to "Content", generated_contents_path, 
            class: "block px-3 py-2 text-base font-medium #{'text-blue-600 bg-blue-50' if current_page?(generated_contents_path)} #{'text-gray-700 hover:text-blue-600 hover:bg-gray-50' unless current_page?(generated_contents_path)} rounded-md transition-colors" %>
      </div>
    </div>
  <% end %>
