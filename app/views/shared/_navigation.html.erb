              <span class="text-white font-bold text-sm">MG</span>
            </div>
            <span class="text-xl font-bold text-gray-900">Marketer Gen</span>
          <% end %>
        </div>
        
        <% if authenticated? %>
          <!-- Desktop navigation -->
          <div class="hidden sm:ml-8 sm:flex sm:space-x-6">
            <%= link_to "Dashboard", root_path, 
                class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{'text-blue-600 border-b-2 border-blue-600' if current_page?(root_path)} #{'text-gray-700 hover:text-blue-600 transition-colors' unless current_page?(root_path)}" %>
            
            <%= link_to "Journeys", journeys_path, 
                class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{'text-blue-600 border-b-2 border-blue-600' if current_page?(journeys_path)} #{'text-gray-700 hover:text-blue-600 transition-colors' unless current_page?(journeys_path)}" %>
            
            <%= link_to "Campaign Plans", campaign_plans_path, 
                class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{'text-blue-600 border-b-2 border-blue-600' if current_page?(campaign_plans_path)} #{'text-gray-700 hover:text-blue-600 transition-colors' unless current_page?(campaign_plans_path)}" %>
            
            <%= link_to "Brand Identity", brand_identities_path, 
                class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{'text-blue-600 border-b-2 border-blue-600' if current_page?(brand_identities_path)} #{'text-gray-700 hover:text-blue-600 transition-colors' unless current_page?(brand_identities_path)}" %>
            
            <%= link_to "Content", generated_contents_path, 
                class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{'text-blue-600 border-b-2 border-blue-600' if current_page?(generated_contents_path)} #{'text-gray-700 hover:text-blue-600 transition-colors' unless current_page?(generated_contents_path)}" %>
          </div>
        <% end %>
      </div>

      <!-- Right side navigation -->
      <div class="flex items-center space-x-4">
        <!-- Help link -->
        <%= link_to help_page_path, 
            class: "text-gray-700 hover:text-blue-600 p-2 rounded-lg transition-colors",
            title: "Help & Documentation" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        <% end %>
        <% if authenticated? %>
          <!-- User menu -->
          <div class="relative" data-controller="dropdown">
            <button type="button" 
                    data-action="click->dropdown#toggle"
                    class="flex items-center space-x-2 text-sm text-gray-700 hover:text-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded-lg px-2 py-1 transition-colors"
                    id="user-menu-button" 
                    aria-expanded="false" 
                    aria-haspopup="true">
              <% if Current.user.avatar.attached? %>
                <%= image_tag Current.user.avatar, 
                    alt: "Profile picture", 
                    class: "w-8 h-8 rounded-full object-cover" %>
              <% else %>
                <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                  <span class="text-xs font-semibold text-gray-600"><%= Current.user.initials %></span>
                </div>
              <% end %>
              <span class="hidden md:block"><%= Current.user.email_address %></span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>

