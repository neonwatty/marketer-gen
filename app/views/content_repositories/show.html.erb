<% content_for :title, @content_repository.title %>

<div class="content-detail-container" data-controller="content-detail" 
     data-content-detail-content-id-value="<%= @content_repository.id %>"
     data-content-detail-collaboration-url-value="<%= collaboration_content_repository_path(@content_repository) %>">
  
  <!-- Header -->
  <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <nav class="flex mb-4" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <%= link_to content_repositories_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
              Content Library
            <% end %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 truncate"><%= @content_repository.title %></span>
            </div>
          </li>
        </ol>
      </nav>
      
      <div class="flex items-start">
        <div class="flex-1 min-w-0">
          <h1 class="text-3xl font-bold text-gray-900 truncate"><%= @content_repository.title %></h1>
          <div class="mt-2 flex items-center space-x-4">
            <!-- Status Badge -->
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
              <%= case @content_repository.status
                  when 'draft' then 'bg-gray-100 text-gray-800'
                  when 'review' then 'bg-yellow-100 text-yellow-800' 
                  when 'approved' then 'bg-blue-100 text-blue-800'
                  when 'published' then 'bg-green-100 text-green-800'
                  when 'archived' then 'bg-gray-100 text-gray-600'
                  when 'rejected' then 'bg-red-100 text-red-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              <%= @content_repository.status.titleize %>
            </span>
            
            <!-- Content Type -->
            <span class="inline-flex items-center text-sm text-gray-500">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5H9a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V7a2 2 0 00-2-2z"></path>
              </svg>
              <%= @content_repository.content_type.titleize %>
            </span>
            
            <!-- Format -->
            <span class="inline-flex items-center text-sm text-gray-500">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              <%= @content_repository.format.upcase %>
            </span>
            
            <!-- Version Count -->
            <span class="inline-flex items-center text-sm text-gray-500">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              v<%= @content_repository.total_versions %>
            </span>
          </div>
          
          <% if @content_repository.description.present? %>
            <p class="mt-3 text-gray-600"><%= @content_repository.description %></p>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-3 mt-6 lg:mt-0 lg:ml-6">
      <%= link_to edit_content_repository_path(@content_repository), 
          class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
        </svg>
        Edit Content
      <% end %>
      
      <%= link_to preview_content_repository_path(@content_repository), 
          target: "_blank",
          class: "inline-flex items-center px-4 py-2 border border-blue-300 text-sm font-medium rounded-md text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
        Preview
      <% end %>

      <!-- More Actions Dropdown -->
      <div class="relative" data-controller="dropdown">
        <button data-action="click->dropdown#toggle" 
                class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
          </svg>
          More
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>

        <div data-dropdown-target="menu" 
             class="hidden absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10">
          <div class="py-1">
            <%= link_to duplicate_content_repository_path(@content_repository), 
                method: :post,
                class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              Duplicate Content
            <% end %>

            <%= link_to regenerate_content_repository_path(@content_repository), 
                method: :post,
                class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors",
                data: { confirm: 'This will create a new version with AI-generated content. Continue?' } do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Regenerate with AI
            <% end %>

            <% if @content_repository.can_be_published? %>
              <div class="border-t border-gray-100 my-1"></div>
              <%= link_to publish_content_repository_path(@content_repository), 
                  method: :post,
                  class: "flex items-center px-4 py-2 text-sm text-green-700 hover:bg-green-50 transition-colors",
                  data: { confirm: 'Are you sure you want to publish this content?' } do %>
                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Publish Content
              <% end %>
            <% end %>

            <% if @content_repository.can_be_archived? %>
              <%= link_to archive_content_repository_path(@content_repository), 
                  method: :post,
                  class: "flex items-center px-4 py-2 text-sm text-yellow-700 hover:bg-yellow-50 transition-colors",
                  data: { confirm: 'Are you sure you want to archive this content?' } do %>
                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8l6 6 6-6"></path>
                </svg>
                Archive Content
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Content Tabs -->
  <div class="border-b border-gray-200 mb-8">
    <nav class="-mb-px flex space-x-8" data-controller="tabs" data-tabs-active-tab-value="content">
      <button data-action="click->tabs#switchTab" 
              data-tab-id="content"
              data-tabs-target="tab"
              class="content-tab whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm active">
        <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Content
      </button>
      
      <button data-action="click->tabs#switchTab" 
              data-tab-id="versions"
              data-tabs-target="tab"
              class="content-tab whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm">
        <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Version History (<%= @versions.count %>)
      </button>
      
      <button data-action="click->tabs#switchTab" 
              data-tab-id="approvals"
              data-tabs-target="tab"
              class="content-tab whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm">
        <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Approvals (<%= @approvals.count %>)
      </button>
      
      <button data-action="click->tabs#switchTab" 
              data-tab-id="collaboration"
              data-tabs-target="tab"
              class="content-tab whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm">
        <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
        </svg>
        Collaboration
      </button>
    </nav>
  </div>

  <!-- Tab Content -->
  <div class="tab-content">
    <!-- Content Tab -->
    <div data-tabs-target="panel" data-tab-id="content" class="tab-panel">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
              <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold text-gray-900">Current Version</h2>
                <% if @current_version %>
                  <span class="text-sm text-gray-500">
                    Version <%= @current_version.version_number %> • 
                    by <%= @current_version.author.display_name %> • 
                    <%= time_ago_in_words(@current_version.created_at) %> ago
                  </span>
                <% end %>
              </div>
            </div>
            
            <div class="p-6">
              <% if @current_version %>
                <div class="prose max-w-none">
                  <%= simple_format(h(@current_version.body)) %>
                </div>
              <% else %>
                <div class="text-center py-12 text-gray-500">
                  <svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  <p class="text-lg font-medium">No content versions yet</p>
                  <p class="mt-2">Start by creating the first version of this content.</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1 space-y-6">
          <!-- Metadata -->
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Details</h3>
            
            <dl class="space-y-3">
              <div>
                <dt class="text-sm font-medium text-gray-500">Created by</dt>
                <dd class="mt-1 text-sm text-gray-900 flex items-center">
                  <div class="w-5 h-5 bg-gray-300 rounded-full flex items-center justify-center mr-2">
                    <span class="text-xs font-medium text-gray-700">
                      <%= @content_repository.user.display_name.first.upcase %>
                    </span>
                  </div>
                  <%= @content_repository.user.display_name %>
                </dd>
              </div>
              
              <div>
                <dt class="text-sm font-medium text-gray-500">Created</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @content_repository.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </dd>
              </div>
              
              <div>
                <dt class="text-sm font-medium text-gray-500">Last modified</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @content_repository.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                </dd>
              </div>
              
              <% if @content_repository.campaign %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Campaign</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= link_to @content_repository.campaign.name, @content_repository.campaign, class: "text-blue-600 hover:text-blue-500" %>
                  </dd>
                </div>
              <% end %>
              
              <% if @content_repository.target_audience.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Target Audience</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @content_repository.target_audience %></dd>
                </div>
              <% end %>
              
              <% if @content_repository.keywords.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Keywords</dt>
                  <dd class="mt-1">
                    <% @content_repository.keywords.split(',').each do |keyword| %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800 mr-1 mb-1">
                        <%= keyword.strip %>
                      </span>
                    <% end %>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>

          <!-- Tags -->
          <% if @tags.any? %>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Tags</h3>
              <div class="flex flex-wrap gap-2">
                <% @tags.each do |tag| %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= tag.name %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Versions Tab -->
    <div data-tabs-target="panel" data-tab-id="versions" class="tab-panel hidden">
      <%= render 'version_history', versions: @versions, content_repository: @content_repository %>
    </div>

    <!-- Approvals Tab -->
    <div data-tabs-target="panel" data-tab-id="approvals" class="tab-panel hidden">
      <%= render 'approval_workflow', approvals: @approvals, content_repository: @content_repository %>
    </div>

    <!-- Collaboration Tab -->
    <div data-tabs-target="panel" data-tab-id="collaboration" class="tab-panel hidden">
      <%= render 'collaboration_panel', content_repository: @content_repository %>
    </div>
  </div>
</div>

<% content_for :head do %>
  <style>
    .content-tab {
      @apply border-transparent text-gray-500;
    }
    .content-tab.active {
      @apply border-blue-500 text-blue-600;
    }
    .content-tab:hover:not(.active) {
      @apply text-gray-700 border-gray-300;
    }
  </style>
<% end %>