<div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow duration-200" 
     data-content-id="<%= content.id %>">
  <!-- Card Header -->
  <div class="p-6">
    <div class="flex items-start justify-between">
      <div class="flex-1 min-w-0">
        <h3 class="text-lg font-semibold text-gray-900 truncate">
          <%= link_to content.title, content, class: "hover:text-blue-600 transition-colors" %>
        </h3>
        <p class="mt-1 text-sm text-gray-500 line-clamp-2">
          <%= truncate(content.description, length: 100) %>
        </p>
      </div>
      
      <!-- Status Badge -->
      <div class="flex-shrink-0 ml-4">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
          <%= case content.status
              when 'draft' then 'bg-gray-100 text-gray-800'
              when 'review' then 'bg-yellow-100 text-yellow-800' 
              when 'approved' then 'bg-blue-100 text-blue-800'
              when 'published' then 'bg-green-100 text-green-800'
              when 'archived' then 'bg-gray-100 text-gray-600'
              when 'rejected' then 'bg-red-100 text-red-800'
              else 'bg-gray-100 text-gray-800'
              end %>">
          <%= content.status.titleize %>
        </span>
      </div>
    </div>

    <!-- Content Metadata -->
    <div class="mt-4 flex items-center space-x-4 text-sm text-gray-500">
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5H9a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V7a2 2 0 00-2-2z"></path>
        </svg>
        <%= content.content_type.titleize %>
      </div>

      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <%= content.format.upcase %>
      </div>

      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h1a1 1 0 011 1v2h4V2a1 1 0 011-1h1a1 1 0 011 1v2h.5A2.5 2.5 0 0119 6.5v12A2.5 2.5 0 0116.5 21h-9A2.5 2.5 0 015 18.5v-12A2.5 2.5 0 017.5 4H8z"></path>
        </svg>
        v<%= content.total_versions %>
      </div>
    </div>

    <!-- Author and Date -->
    <div class="mt-3 flex items-center justify-between text-sm">
      <div class="flex items-center text-gray-500">
        <div class="w-6 h-6 bg-gray-300 rounded-full flex items-center justify-center mr-2">
          <span class="text-xs font-medium text-gray-700">
            <%= content.user.display_name.first.upcase %>
          </span>
        </div>
        <%= content.user.display_name %>
      </div>
      
      <time class="text-gray-500" datetime="<%= content.updated_at.iso8601 %>">
        <%= time_ago_in_words(content.updated_at) %> ago
      </time>
    </div>
  </div>

  <!-- Card Footer with Actions -->
  <div class="px-6 py-4 bg-gray-50 rounded-b-lg">
    <div class="flex items-center justify-between">
      <!-- Preview/View -->
      <div class="flex space-x-2">
        <%= link_to content_path(content), 
            class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          View
        <% end %>

        <%= link_to edit_content_repository_path(content), 
            class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
          </svg>
          Edit
        <% end %>
      </div>

      <!-- Action Dropdown -->
      <div class="relative" data-controller="dropdown">
        <button data-action="click->dropdown#toggle" 
                class="inline-flex items-center px-2 py-1.5 border border-gray-300 text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
          </svg>
        </button>

        <div data-dropdown-target="menu" 
             class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10">
          <div class="py-1">
            <%= link_to preview_content_repository_path(content), 
                class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors",
                target: "_blank" do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              Preview
            <% end %>

            <%= link_to [content, :content_versions], 
                class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Version History
            <% end %>

            <%= link_to duplicate_content_repository_path(content), 
                method: :post,
                class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              Duplicate
            <% end %>

            <% if content.can_be_published? %>
              <%= link_to publish_content_repository_path(content), 
                  method: :post,
                  class: "flex items-center px-4 py-2 text-sm text-green-700 hover:bg-green-50 transition-colors",
                  data: { confirm: 'Are you sure you want to publish this content?' } do %>
                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Publish
              <% end %>
            <% end %>

            <% if content.can_be_archived? %>
              <%= link_to archive_content_repository_path(content), 
                  method: :post,
                  class: "flex items-center px-4 py-2 text-sm text-yellow-700 hover:bg-yellow-50 transition-colors",
                  data: { confirm: 'Are you sure you want to archive this content?' } do %>
                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8l6 6 6-6"></path>
                </svg>
                Archive
              <% end %>
            <% end %>

            <div class="border-t border-gray-100 my-1"></div>

            <%= link_to content, 
                method: :delete,
                class: "flex items-center px-4 py-2 text-sm text-red-700 hover:bg-red-50 transition-colors",
                data: { confirm: 'Are you sure you want to delete this content? This action cannot be undone.' } do %>
              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Delete
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>