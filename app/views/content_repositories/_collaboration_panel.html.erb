<div class="collaboration-panel-container" data-controller="collaboration">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Collaborators & Permissions -->
    <div class="space-y-6">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-900">Collaborators</h3>
          <button data-action="click->collaboration#showAddCollaboratorModal" 
                  class="inline-flex items-center px-3 py-2 border border-blue-300 text-sm font-medium rounded-md text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Collaborator
          </button>
        </div>

        <!-- Collaborator List -->
        <div class="space-y-3">
          <!-- Owner -->
          <div class="flex items-center justify-between p-3 bg-blue-50 rounded-lg border border-blue-200">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center mr-3">
                <span class="text-sm font-medium text-white">
                  <%= content_repository.user.display_name.first.upcase %>
                </span>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-900"><%= content_repository.user.display_name %></p>
                <p class="text-xs text-blue-600">Owner</p>
              </div>
            </div>
            <div class="flex items-center space-x-2">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                Full Access
              </span>
              <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
          </div>

          <!-- Example Collaborators (would come from content_permissions model) -->
          <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center mr-3">
                <span class="text-sm font-medium text-white">JD</span>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-900">John Doe</p>
                <p class="text-xs text-gray-500">john.doe@company.com</p>
              </div>
            </div>
            <div class="flex items-center space-x-2">
              <select class="text-xs border border-gray-300 rounded px-2 py-1 focus:outline-none focus:ring-1 focus:ring-blue-500">
                <option value="editor">Editor</option>
                <option value="reviewer" selected>Reviewer</option>
                <option value="viewer">Viewer</option>
              </select>
              <button class="text-gray-400 hover:text-red-500 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              </button>
            </div>
          </div>

          <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center mr-3">
                <span class="text-sm font-medium text-white">JS</span>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-900">Jane Smith</p>
                <p class="text-xs text-gray-500">jane.smith@company.com</p>
              </div>
            </div>
            <div class="flex items-center space-x-2">
              <select class="text-xs border border-gray-300 rounded px-2 py-1 focus:outline-none focus:ring-1 focus:ring-blue-500">
                <option value="editor" selected>Editor</option>
                <option value="reviewer">Reviewer</option>
                <option value="viewer">Viewer</option>
              </select>
              <button class="text-gray-400 hover:text-red-500 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Permission Levels Info -->
        <div class="mt-4 p-3 bg-gray-50 rounded-lg">
          <h4 class="text-sm font-medium text-gray-700 mb-2">Permission Levels</h4>
          <div class="space-y-1 text-xs text-gray-600">
            <div class="flex items-center">
              <span class="w-16 font-medium">Editor:</span>
              <span>Can edit content, create versions, and comment</span>
            </div>
            <div class="flex items-center">
              <span class="w-16 font-medium">Reviewer:</span>
              <span>Can review, approve/reject, and comment</span>
            </div>
            <div class="flex items-center">
              <span class="w-16 font-medium">Viewer:</span>
              <span>Can only view content and comment</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Sharing Options -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Sharing Options</h3>
        
        <div class="space-y-4">
          <!-- Public Link -->
          <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.102m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.102 1.102m-.758 4.899L11.172 15"></path>
              </svg>
              <div>
                <p class="text-sm font-medium text-gray-900">Public Preview Link</p>
                <p class="text-xs text-gray-500">Anyone with the link can view</p>
              </div>
            </div>
            <button data-action="click->collaboration#generatePublicLink" 
                    class="inline-flex items-center px-3 py-1.5 border border-gray-300 text-sm font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
              Generate Link
            </button>
          </div>

          <!-- Export Options -->
          <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              <div>
                <p class="text-sm font-medium text-gray-900">Export Content</p>
                <p class="text-xs text-gray-500">Download in various formats</p>
              </div>
            </div>
            <div class="relative" data-controller="dropdown">
              <button data-action="click->dropdown#toggle" 
                      class="inline-flex items-center px-3 py-1.5 border border-gray-300 text-sm font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                Export
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              
              <div data-dropdown-target="menu" 
                   class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10">
                <div class="py-1">
                  <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                    </svg>
                    Export as PDF
                  </a>
                  <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    Export as Word
                  </a>
                  <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                    </svg>
                    Export as Markdown
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Activity Feed & Comments -->
    <div class="space-y-6">
      <!-- Real-time Activity Feed -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Activity</h3>
        
        <div class="space-y-4">
          <!-- Activity Items (these would come from content_revisions or activity tracking) -->
          <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">
                <span class="font-medium">John Doe</span> created version 3
              </p>
              <p class="text-xs text-gray-500 mt-1">2 hours ago</p>
            </div>
          </div>

          <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">
                <span class="font-medium">Jane Smith</span> approved version 2
              </p>
              <p class="text-xs text-gray-500 mt-1">4 hours ago</p>
            </div>
          </div>

          <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">
                <span class="font-medium">Mike Brown</span> added a comment
              </p>
              <div class="mt-1 p-2 bg-gray-50 rounded text-xs text-gray-600">
                "The call-to-action could be more compelling. Consider testing variations."
              </div>
              <p class="text-xs text-gray-500 mt-1">6 hours ago</p>
            </div>
          </div>

          <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 0M12 4.354a4 4 0 100 0M12 4.354V2.5a.5.5 0 01.5-.5h.5a.5.5 0 01.5.5v1.854M12 4.354l1.5 1.5"></path>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">Content was created</p>
              <p class="text-xs text-gray-500 mt-1">1 day ago</p>
            </div>
          </div>
        </div>

        <!-- View All Activity -->
        <div class="mt-4 pt-4 border-t border-gray-200">
          <button class="text-sm text-blue-600 hover:text-blue-500 font-medium">
            View all activity
          </button>
        </div>
      </div>

      <!-- Comments Section -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Comments & Feedback</h3>
        
        <!-- Add Comment Form -->
        <div class="mb-6">
          <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center flex-shrink-0">
              <span class="text-sm font-medium text-gray-700">
                <%= current_user.display_name.first.upcase %>
              </span>
            </div>
            <div class="flex-1">
              <textarea data-collaboration-target="commentField" 
                        rows="3" 
                        class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm"
                        placeholder="Add a comment or feedback..."></textarea>
              <div class="mt-2 flex justify-between items-center">
                <div class="flex items-center space-x-2 text-xs text-gray-500">
                  <label class="flex items-center">
                    <input type="checkbox" class="mr-1">
                    Notify all collaborators
                  </label>
                </div>
                <button data-action="click->collaboration#addComment" 
                        class="inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                  Add Comment
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Comments List -->
        <div class="space-y-4">
          <!-- Example Comment -->
          <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0">
              <span class="text-sm font-medium text-white">JD</span>
            </div>
            <div class="flex-1 min-w-0">
              <div class="bg-gray-50 rounded-lg p-3">
                <div class="flex items-center justify-between mb-1">
                  <h4 class="text-sm font-medium text-gray-900">John Doe</h4>
                  <time class="text-xs text-gray-500">3 hours ago</time>
                </div>
                <p class="text-sm text-gray-700">
                  Great work on the headline! The messaging is much clearer now. I think we should also consider adding some social proof elements to strengthen the value proposition.
                </p>
              </div>
              
              <!-- Comment Actions -->
              <div class="mt-2 flex items-center space-x-4 text-xs">
                <button class="text-gray-500 hover:text-blue-600 transition-colors">Reply</button>
                <button class="text-gray-500 hover:text-red-600 transition-colors">Delete</button>
                <span class="text-gray-400">•</span>
                <span class="text-gray-500">Version 2</span>
              </div>
            </div>
          </div>

          <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center flex-shrink-0">
              <span class="text-sm font-medium text-white">JS</span>
            </div>
            <div class="flex-1 min-w-0">
              <div class="bg-gray-50 rounded-lg p-3">
                <div class="flex items-center justify-between mb-1">
                  <h4 class="text-sm font-medium text-gray-900">Jane Smith</h4>
                  <time class="text-xs text-gray-500">5 hours ago</time>
                </div>
                <p class="text-sm text-gray-700">
                  The tone feels perfect for our target audience. However, I'm concerned about the length - can we trim it down by about 20% without losing impact?
                </p>
              </div>
              
              <div class="mt-2 flex items-center space-x-4 text-xs">
                <button class="text-gray-500 hover:text-blue-600 transition-colors">Reply</button>
                <button class="text-gray-500 hover:text-red-600 transition-colors">Delete</button>
                <span class="text-gray-400">•</span>
                <span class="text-gray-500">Version 1</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add Collaborator Modal -->
<div data-collaboration-target="addCollaboratorModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 z-50 flex items-center justify-center">
  <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Add Collaborator</h3>
    
    <div class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
        <input type="email" 
               data-collaboration-target="collaboratorEmail"
               class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
               placeholder="colleague@company.com">
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Permission Level</label>
        <select data-collaboration-target="collaboratorRole" 
                class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
          <option value="viewer">Viewer - Can view and comment</option>
          <option value="reviewer">Reviewer - Can review and approve</option>
          <option value="editor">Editor - Can edit and create versions</option>
        </select>
      </div>
      
      <div>
        <label class="flex items-center">
          <input type="checkbox" data-collaboration-target="notifyCollaborator" class="mr-2">
          <span class="text-sm text-gray-700">Send notification email</span>
        </label>
      </div>
    </div>
    
    <div class="mt-6 flex justify-end space-x-3">
      <button data-action="click->collaboration#closeAddCollaboratorModal" 
              class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
        Cancel
      </button>
      <button data-action="click->collaboration#addCollaborator" 
              class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
        Add Collaborator
      </button>
    </div>
  </div>
</div>