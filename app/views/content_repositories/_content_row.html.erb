<div class="px-6 py-4 hover:bg-gray-50" data-content-id="<%= content.id %>">
  <div class="grid grid-cols-12 gap-4 items-center">
    <!-- Title (4 columns) -->
    <div class="col-span-4">
      <div class="flex items-center">
        <div class="flex-shrink-0 w-2 h-2 rounded-full mr-3
          <%= case content.status
              when 'draft' then 'bg-gray-400'
              when 'review' then 'bg-yellow-400' 
              when 'approved' then 'bg-blue-400'
              when 'published' then 'bg-green-400'
              when 'archived' then 'bg-gray-300'
              when 'rejected' then 'bg-red-400'
              else 'bg-gray-400'
              end %>">
        </div>
        <div class="min-w-0 flex-1">
          <h3 class="text-sm font-medium text-gray-900 truncate">
            <%= link_to content.title, content, class: "hover:text-blue-600 transition-colors" %>
          </h3>
          <p class="text-xs text-gray-500 truncate mt-1">
            <%= truncate(content.description, length: 60) %>
          </p>
        </div>
      </div>
    </div>

    <!-- Type (2 columns) -->
    <div class="col-span-2">
      <div class="flex items-center text-sm text-gray-900">
        <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5H9a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V7a2 2 0 00-2-2z"></path>
        </svg>
        <%= content.content_type.titleize %>
      </div>
      <div class="text-xs text-gray-500 mt-1">
        <%= content.format.upcase %>
      </div>
    </div>

    <!-- Status (2 columns) -->
    <div class="col-span-2">
      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
        <%= case content.status
            when 'draft' then 'bg-gray-100 text-gray-800'
            when 'review' then 'bg-yellow-100 text-yellow-800' 
            when 'approved' then 'bg-blue-100 text-blue-800'
            when 'published' then 'bg-green-100 text-green-800'
            when 'archived' then 'bg-gray-100 text-gray-600'
            when 'rejected' then 'bg-red-100 text-red-800'
            else 'bg-gray-100 text-gray-800'
            end %>">
        <%= content.status.titleize %>
      </span>
      <div class="text-xs text-gray-500 mt-1">
        v<%= content.total_versions %>
      </div>
    </div>

    <!-- Modified (2 columns) -->
    <div class="col-span-2">
      <div class="text-sm text-gray-900">
        <%= time_ago_in_words(content.updated_at) %> ago
      </div>
      <div class="text-xs text-gray-500 mt-1 flex items-center">
        <div class="w-4 h-4 bg-gray-300 rounded-full flex items-center justify-center mr-1">
          <span class="text-xs font-medium text-gray-700">
            <%= content.user.display_name.first.upcase %>
          </span>
        </div>
        <%= truncate(content.user.display_name, length: 12) %>
      </div>
    </div>

    <!-- Actions (2 columns) -->
    <div class="col-span-2">
      <div class="flex items-center space-x-2">
        <%= link_to content_path(content), 
            class: "inline-flex items-center p-1.5 border border-gray-300 rounded text-gray-400 hover:text-gray-600 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors",
            title: "View content" do %>
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        <% end %>

        <%= link_to edit_content_repository_path(content), 
            class: "inline-flex items-center p-1.5 border border-gray-300 rounded text-gray-400 hover:text-gray-600 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors",
            title: "Edit content" do %>
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
          </svg>
        <% end %>

        <%= link_to [content, :content_versions], 
            class: "inline-flex items-center p-1.5 border border-gray-300 rounded text-gray-400 hover:text-gray-600 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors",
            title: "Version history" do %>
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        <% end %>

        <!-- More Actions Dropdown -->
        <div class="relative" data-controller="dropdown">
          <button data-action="click->dropdown#toggle" 
                  class="inline-flex items-center p-1.5 border border-gray-300 rounded text-gray-400 hover:text-gray-600 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
                  title="More actions">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
            </svg>
          </button>

          <div data-dropdown-target="menu" 
               class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10">
            <div class="py-1">
              <%= link_to duplicate_content_repository_path(content), 
                  method: :post,
                  class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                Duplicate
              <% end %>

              <% if content.can_be_published? %>
                <%= link_to publish_content_repository_path(content), 
                    method: :post,
                    class: "flex items-center px-4 py-2 text-sm text-green-700 hover:bg-green-50 transition-colors",
                    data: { confirm: 'Are you sure you want to publish this content?' } do %>
                  <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Publish
                <% end %>
              <% end %>

              <%= link_to content, 
                  method: :delete,
                  class: "flex items-center px-4 py-2 text-sm text-red-700 hover:bg-red-50 transition-colors",
                  data: { confirm: 'Are you sure you want to delete this content? This action cannot be undone.' } do %>
                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>