<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center">
      <%= link_to brand_brand_asset_path(@brand, @brand_asset),
                  class: "mr-4 text-gray-400 hover:text-gray-600" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Edit Asset</h1>
        <p class="mt-1 text-sm text-gray-500">
          Update asset details and classification
        </p>
      </div>
    </div>
  </div>

  <!-- Edit Form -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Asset Information</h3>
    </div>
    
    <div class="px-6 py-4">
      <%= form_with model: [@brand, @brand_asset], local: true, class: "space-y-6" do |f| %>
        <!-- Current file info -->
        <div class="bg-gray-50 rounded-lg p-4">
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-white rounded-lg flex items-center justify-center shadow-sm">
                <%= render "asset_type_icon", type: @brand_asset.asset_type, class: "w-6 h-6 text-gray-400" %>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-gray-900 truncate">
                <%= @brand_asset.original_filename %>
              </p>
              <div class="flex items-center space-x-2 text-xs text-gray-500">
                <span><%= "%.2f MB" % @brand_asset.file_size_mb %></span>
                <span>•</span>
                <span><%= @brand_asset.file.content_type if @brand_asset.file.attached? %></span>
                <span>•</span>
                <%= render "processing_status", status: @brand_asset.processing_status %>
              </div>
            </div>
            <% if @brand_asset.file.attached? %>
              <%= link_to download_brand_brand_asset_path(@brand, @brand_asset),
                          method: :get,
                          class: "text-indigo-600 hover:text-indigo-500 text-sm font-medium" do %>
                Download
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Asset Type -->
        <div>
          <%= f.label :asset_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :asset_type, 
                       options_for_select(BrandAsset::ASSET_TYPES.map { |type| [type.humanize, type] }, @brand_asset.asset_type),
                       {},
                       class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-sm text-gray-500">
            Categorize this asset to help organize your brand library
          </p>
        </div>

        <!-- Original Filename (read-only display) -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Original Filename</label>
          <div class="block w-full rounded-md border-gray-300 bg-gray-50 shadow-sm px-3 py-2 text-sm text-gray-900">
            <%= @brand_asset.original_filename %>
          </div>
          <p class="mt-1 text-sm text-gray-500">
            The original filename cannot be changed
          </p>
        </div>

        <!-- File replacement (optional) -->
        <div>
          <%= f.label :file, "Replace File (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.file_field :file, 
                           class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100",
                           accept: "image/*,video/*,.pdf,.doc,.docx,.txt,.rtf" %>
          <p class="mt-1 text-sm text-gray-500">
            Upload a new file to replace the current one. Leave empty to keep the existing file.
          </p>
        </div>

        <!-- Error display -->
        <% if @brand_asset.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  There were errors with your submission:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @brand_asset.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Form actions -->
        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to brand_brand_asset_path(@brand, @brand_asset),
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            Cancel
          <% end %>
          
          <%= f.submit "Update Asset",
                       class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>