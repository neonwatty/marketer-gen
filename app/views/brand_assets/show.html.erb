<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center">
      <%= link_to brand_brand_assets_path(@brand),
                  class: "mr-4 text-gray-400 hover:text-gray-600" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <div class="flex-1">
        <h1 class="text-3xl font-bold text-gray-900"><%= @brand_asset.original_filename %></h1>
        <div class="mt-1 flex items-center space-x-4 text-sm text-gray-500">
          <span><%= @brand_asset.asset_type.humanize %></span>
          <span>•</span>
          <span><%= "%.2f MB" % @brand_asset.file_size_mb %></span>
          <span>•</span>
          <span>Uploaded <%= time_ago_in_words(@brand_asset.created_at) %> ago</span>
        </div>
      </div>
      <div class="flex items-center space-x-3">
        <%= render "processing_status", status: @brand_asset.processing_status %>
        
        <!-- Actions dropdown -->
        <div class="relative" data-controller="dropdown">
          <button type="button"
                  class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                  data-action="click->dropdown#toggle">
            Actions
            <svg class="ml-2 -mr-0.5 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
          
          <div data-dropdown-target="menu"
               class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10 border border-gray-200">
            <div class="py-1">
              <% if @brand_asset.file.attached? %>
                <%= link_to download_brand_brand_asset_path(@brand, @brand_asset),
                            method: :get,
                            class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3M3 17V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v10a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
                    </svg>
                    Download
                  </div>
                <% end %>
              <% end %>
              
              <%= link_to edit_brand_brand_asset_path(@brand, @brand_asset),
                          class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Edit Details
                </div>
              <% end %>
              
              <% if @brand_asset.failed? %>
                <%= link_to reprocess_brand_brand_asset_path(@brand, @brand_asset),
                            method: :post,
                            class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    Reprocess
                  </div>
                <% end %>
              <% end %>
              
              <div class="border-t border-gray-100"></div>
              
              <%= link_to brand_brand_asset_path(@brand, @brand_asset),
                          method: :delete,
                          data: { 
                            confirm: "Are you sure you want to delete this asset?",
                            turbo_method: :delete 
                          },
                          class: "block px-4 py-2 text-sm text-red-700 hover:bg-red-50" do %>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1-1v3M4 7h16" />
                  </svg>
                  Delete Asset
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Asset Preview -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Preview</h3>
        </div>
        
        <div class="p-6">
          <% if @brand_asset.file.attached? %>
            <% if @brand_asset.image? %>
              <div class="flex justify-center">
                <%= image_tag @brand_asset.file, 
                              class: "max-w-full h-auto rounded-lg shadow-sm",
                              alt: @brand_asset.original_filename %>
              </div>
            <% elsif @brand_asset.video? %>
              <div class="flex justify-center">
                <video controls class="max-w-full h-auto rounded-lg shadow-sm">
                  <source src="<%= rails_blob_path(@brand_asset.file) %>" type="<%= @brand_asset.file.content_type %>">
                  Your browser does not support the video tag.
                </video>
              </div>
            <% else %>
              <!-- Document/File preview -->
              <div class="text-center py-12">
                <%= render "asset_type_icon", type: @brand_asset.asset_type, class: "w-24 h-24 text-gray-300 mx-auto" %>
                <h3 class="mt-4 text-lg font-medium text-gray-900">Document Preview</h3>
                <p class="mt-2 text-sm text-gray-500">
                  Preview not available for this file type. 
                  <% if @brand_asset.file.attached? %>
                    <%= link_to "Download to view", 
                                download_brand_brand_asset_path(@brand, @brand_asset),
                                method: :get,
                                class: "text-indigo-600 hover:text-indigo-500 font-medium" %>
                  <% end %>
                </p>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No file attached</h3>
              <p class="mt-1 text-sm text-gray-500">
                This asset doesn't have an associated file.
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Asset Details -->
    <div class="space-y-6">
      <!-- Basic Information -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Asset Details</h3>
        </div>
        <div class="px-6 py-4 space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Filename</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @brand_asset.original_filename %></dd>
          </div>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">Asset Type</dt>
            <dd class="mt-1">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= @brand_asset.asset_type.humanize %>
              </span>
            </dd>
          </div>
          
          <% if @brand_asset.file.attached? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">File Size</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= "%.2f MB" % @brand_asset.file_size_mb %></dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Content Type</dt>
              <dd class="mt-1 text-sm text-gray-900 font-mono text-xs"><%= @brand_asset.file.content_type %></dd>
            </div>
          <% end %>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">Processing Status</dt>
            <dd class="mt-1">
              <%= render "processing_status", status: @brand_asset.processing_status %>
            </dd>
          </div>
        </div>
      </div>

      <!-- Timestamps -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Timeline</h3>
        </div>
        <div class="px-6 py-4 space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Uploaded</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <time datetime="<%= @brand_asset.created_at.iso8601 %>">
                <%= @brand_asset.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </time>
            </dd>
          </div>
          
          <% if @brand_asset.processed_at %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Processed</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <time datetime="<%= @brand_asset.processed_at.iso8601 %>">
                  <%= @brand_asset.processed_at.strftime("%B %d, %Y at %I:%M %p") %>
                </time>
              </dd>
            </div>
          <% end %>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">Last Modified</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <time datetime="<%= @brand_asset.updated_at.iso8601 %>">
                <%= @brand_asset.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
              </time>
            </dd>
          </div>
        </div>
      </div>

      <!-- Processing Status Details -->
      <% if @brand_asset.processing? %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4"
             data-controller="status-poller"
             data-status-poller-url-value="<%= status_brand_brand_asset_path(@brand, @brand_asset) %>"
             data-status-poller-interval-value="3000">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-blue-800">Processing in progress</h3>
              <p class="mt-1 text-sm text-blue-700">
                Your asset is being processed. This page will automatically update when complete.
              </p>
            </div>
          </div>
        </div>
      <% elsif @brand_asset.failed? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Processing failed</h3>
              <p class="mt-1 text-sm text-red-700">
                There was an error processing this asset. You can try reprocessing it or contact support.
              </p>
              <div class="mt-3">
                <%= link_to reprocess_brand_brand_asset_path(@brand, @brand_asset),
                            method: :post,
                            class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
                  <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                  Try Again
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% elsif @brand_asset.processed? %>
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-green-800">Processing complete</h3>
              <p class="mt-1 text-sm text-green-700">
                Your asset has been successfully processed and is ready to use.
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>