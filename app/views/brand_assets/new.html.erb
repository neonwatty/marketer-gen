<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center">
      <%= link_to brand_brand_assets_path(@brand),
                  class: "mr-4 text-gray-400 hover:text-gray-600" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Upload Brand Assets</h1>
        <p class="mt-1 text-sm text-gray-500">
          Add files to your brand's asset library
        </p>
      </div>
    </div>
  </div>

  <!-- Upload Form -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden"
       data-controller="file-upload"
       data-file-upload-url-value="<%= brand_brand_assets_path(@brand) %>"
       data-file-upload-csrf-token-value="<%= form_authenticity_token %>">
    
    <!-- Drop Zone -->
    <div class="p-8">
      <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-gray-400 transition-colors duration-200"
           data-file-upload-target="dropzone"
           data-action="dragover->file-upload#handleDragOver dragenter->file-upload#handleDragEnter dragleave->file-upload#handleDragLeave drop->file-upload#handleDrop click->file-upload#openFileSelector">
        
        <div data-file-upload-target="dropzoneContent">
          <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <div class="mt-4">
            <p class="text-xl font-medium text-gray-900">Drop files here to upload</p>
            <p class="mt-2 text-sm text-gray-500">
              or 
              <button type="button" class="font-medium text-indigo-600 hover:text-indigo-500">
                browse your computer
              </button>
            </p>
          </div>
          <div class="mt-6">
            <div class="flex justify-center space-x-6 text-sm text-gray-500">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                </svg>
                Images
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd" />
                </svg>
                Documents
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 6a2 2 0 012-2h6l2 2h6a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
                </svg>
                Videos
              </div>
            </div>
          </div>
        </div>

        <!-- Hidden file input -->
        <input type="file" 
               multiple 
               class="hidden"
               data-file-upload-target="fileInput"
               data-action="change->file-upload#handleFileSelect"
               accept="image/*,video/*,.pdf,.doc,.docx,.txt,.rtf">
      </div>
    </div>

    <!-- File List -->
    <div class="border-t border-gray-200">
      <div class="px-8 py-4 bg-gray-50">
        <h3 class="text-lg font-medium text-gray-900">Selected Files</h3>
      </div>
      
      <div data-file-upload-target="fileList" class="divide-y divide-gray-200">
        <!-- File items will be inserted here dynamically -->
      </div>
      
      <!-- Empty state -->
      <div data-file-upload-target="emptyState" class="px-8 py-12 text-center text-gray-500">
        <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <p class="mt-2">No files selected</p>
      </div>
    </div>

    <!-- Upload Controls -->
    <div class="px-8 py-4 bg-gray-50 border-t border-gray-200">
      <div class="flex justify-between items-center">
        <div class="text-sm text-gray-500">
          <span data-file-upload-target="fileCount">0</span> files selected
        </div>
        <div class="flex space-x-3">
          <button type="button"
                  data-file-upload-target="clearButton"
                  data-action="click->file-upload#clearFiles"
                  class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50 disabled:cursor-not-allowed">
            Clear All
          </button>
          <button type="button"
                  data-file-upload-target="uploadButton"
                  data-action="click->file-upload#uploadFiles"
                  class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50 disabled:cursor-not-allowed">
            <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
            </svg>
            <span data-file-upload-target="uploadButtonText">Upload Files</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Upload Progress -->
  <div data-file-upload-target="progressContainer" class="hidden mt-6 bg-white shadow rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Upload Progress</h3>
    </div>
    
    <div class="p-6">
      <!-- Overall Progress -->
      <div class="mb-6">
        <div class="flex justify-between text-sm font-medium text-gray-900 mb-2">
          <span>Overall Progress</span>
          <span data-file-upload-target="overallProgress">0%</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div data-file-upload-target="overallProgressBar" 
               class="bg-indigo-600 h-2 rounded-full transition-all duration-300" 
               style="width: 0%"></div>
        </div>
      </div>
      
      <!-- Individual File Progress -->
      <div data-file-upload-target="individualProgress">
        <!-- Progress items will be inserted here -->
      </div>
    </div>
  </div>

  <!-- Success/Error Messages -->
  <div data-file-upload-target="messagesContainer" class="mt-6">
    <!-- Messages will be inserted here -->
  </div>
</div>

<!-- File Item Template -->
<template data-file-upload-target="fileItemTemplate">
  <div class="px-8 py-4 flex items-center justify-between" data-file-id="">
    <div class="flex items-center space-x-4">
      <!-- File icon -->
      <div class="flex-shrink-0">
        <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd" />
          </svg>
        </div>
      </div>
      
      <!-- File info -->
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-gray-900 truncate" data-file-name></p>
        <div class="flex items-center space-x-2 text-xs text-gray-500">
          <span data-file-size></span>
          <span>â€¢</span>
          <span data-file-type></span>
        </div>
      </div>
    </div>
    
    <!-- Controls -->
    <div class="flex items-center space-x-2">
      <!-- Asset type selector -->
      <select class="text-xs border-gray-300 rounded-md focus:border-indigo-500 focus:ring-indigo-500" data-asset-type>
        <% BrandAsset::ASSET_TYPES.each do |type| %>
          <option value="<%= type %>"><%= type.humanize %></option>
        <% end %>
      </select>
      
      <!-- Remove button -->
      <button type="button" 
              class="text-gray-400 hover:text-red-500 p-1"
              data-action="click->file-upload#removeFile">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
</template>

<!-- Progress Item Template -->
<template data-file-upload-target="progressItemTemplate">
  <div class="mb-4 last:mb-0" data-progress-id="">
    <div class="flex justify-between text-sm font-medium text-gray-900 mb-1">
      <span data-progress-filename></span>
      <span data-progress-status></span>
    </div>
    <div class="w-full bg-gray-200 rounded-full h-2">
      <div data-progress-bar class="bg-blue-600 h-2 rounded-full transition-all duration-300" style="width: 0%"></div>
    </div>
  </div>
</template>