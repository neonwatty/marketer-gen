<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Brand Assets</h1>
        <p class="mt-1 text-sm text-gray-500">
          Manage your brand's visual identity and documents
        </p>
      </div>
      <%= link_to new_brand_brand_asset_path(@brand),
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Upload Assets
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
    <% BrandAsset::ASSET_TYPES.each do |type| %>
      <% count = @brand_assets.by_type(type).count %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-indigo-500 rounded-md flex items-center justify-center">
                <%= render "asset_type_icon", type: type, class: "w-5 h-5 text-white" %>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  <%= type.humanize.pluralize %>
                </dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= count %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow rounded-lg mb-6" data-controller="asset-filter">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Filter Assets</h3>
    </div>
    <div class="px-6 py-4">
      <div class="flex flex-wrap gap-4">
        <!-- Asset Type Filter -->
        <div class="flex-1 min-w-48">
          <label for="type-filter" class="block text-sm font-medium text-gray-700 mb-1">
            Asset Type
          </label>
          <select id="type-filter" 
                  data-asset-filter-target="typeFilter"
                  data-action="change->asset-filter#filter"
                  class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <option value="">All Types</option>
            <% BrandAsset::ASSET_TYPES.each do |type| %>
              <option value="<%= type %>"><%= type.humanize %></option>
            <% end %>
          </select>
        </div>

        <!-- Status Filter -->
        <div class="flex-1 min-w-48">
          <label for="status-filter" class="block text-sm font-medium text-gray-700 mb-1">
            Processing Status
          </label>
          <select id="status-filter"
                  data-asset-filter-target="statusFilter"
                  data-action="change->asset-filter#filter"
                  class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <option value="">All Statuses</option>
            <% BrandAsset::PROCESSING_STATUSES.each do |status| %>
              <option value="<%= status %>"><%= status.humanize %></option>
            <% end %>
          </select>
        </div>

        <!-- Search -->
        <div class="flex-1 min-w-48">
          <label for="search-filter" class="block text-sm font-medium text-gray-700 mb-1">
            Search Files
          </label>
          <input type="text" 
                 id="search-filter"
                 data-asset-filter-target="searchFilter"
                 data-action="input->asset-filter#filter"
                 placeholder="Search by filename..."
                 class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
        </div>
      </div>
    </div>
  </div>

  <!-- Assets Grid -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Your Assets</h3>
    </div>
    
    <% if @brand_assets.any? %>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 p-6" 
           data-asset-filter-target="assetGrid">
        <% @brand_assets.each do |asset| %>
          <%= render "asset_card", asset: asset %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 2a1 1 0 000 2h6a1 1 0 100-2H9z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12l2 2 4-4" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No assets yet</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by uploading your first brand asset.</p>
        <div class="mt-6">
          <%= link_to new_brand_brand_asset_path(@brand),
                      class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            Upload Your First Asset
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>