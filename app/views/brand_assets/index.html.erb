<% content_for :title, "Brand Assets" %>

<div class="max-w-6xl mx-auto p-6">
  <!-- Header -->
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Brand Assets</h1>
      <p class="text-gray-600">Manage your brand materials and creative assets</p>
    </div>
    
    <div class="flex items-center space-x-3">
      <%= link_to new_brand_asset_path, 
                  class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors flex items-center space-x-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <span>Upload Assets</span>
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow mb-6 p-6">
    <%= form_with url: brand_assets_path, method: :get, local: true, 
                  class: "grid grid-cols-1 md:grid-cols-4 gap-4 items-end" do |form| %>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">File Type</label>
        <%= form.select :file_type,
                        options_for_select([['All Types', '']] + BrandAsset.file_types.keys.map { |type| [type.humanize, type] }, params[:file_type]),
                        {},
                        { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Scan Status</label>
        <%= form.select :scan_status,
                        options_for_select([['All Status', '']] + BrandAsset.scan_statuses.keys.map { |status| [status.humanize, status] }, params[:scan_status]),
                        {},
                        { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
        <%= form.text_field :search,
                            value: params[:search],
                            placeholder: "Search files...",
                            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="flex space-x-2">
        <%= form.submit "Filter", 
                        class: "px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 transition-colors" %>
        <%= link_to "Clear", brand_assets_path,
                    class: "px-4 py-2 text-gray-600 border border-gray-300 rounded-md hover:bg-gray-50 transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- Stats Overview -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Total Assets</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @brand_assets.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Clean Files</p>
          <p class="text-2xl font-semibold text-gray-900"><%= BrandAsset.clean_files.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Pending Scan</p>
          <p class="text-2xl font-semibold text-gray-900"><%= BrandAsset.pending_scan.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Issues Found</p>
          <p class="text-2xl font-semibold text-gray-900"><%= BrandAsset.infected_files.count %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Assets Grid -->
  <div class="bg-white rounded-lg shadow">
    <% if @brand_assets.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
        <% @brand_assets.each do |asset| %>
          <div class="border rounded-lg p-4 hover:shadow-md transition-shadow <%= 'border-red-200 bg-red-50' if asset.quarantined? %>">
            <!-- File Preview -->
            <div class="mb-4 flex justify-center">
              <% if asset.image_file? && asset.safe_to_use? %>
                <%= image_tag asset.file, 
                              class: "w-20 h-20 object-cover rounded",
                              alt: asset.file_name %>
              <% else %>
                <div class="w-20 h-20 bg-gray-100 rounded flex items-center justify-center">
                  <% case asset.file_type %>
                  <% when 'brand_guideline', 'style_guide', 'compliance_document' %>
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                  <% when 'presentation' %>
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"></path>
                    </svg>
                  <% when 'font_file' %>
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                    </svg>
                  <% else %>
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </div>

            <!-- File Info -->
            <div class="space-y-2">
              <h3 class="font-medium text-gray-900 text-sm truncate" title="<%= asset.file_name %>">
                <%= asset.file_name %>
              </h3>
              
              <div class="flex items-center justify-between text-xs text-gray-500">
                <span class="px-2 py-1 bg-gray-100 rounded">
                  <%= asset.file_type.humanize %>
                </span>
                <span><%= asset.human_file_size %></span>
              </div>

              <!-- Scan Status -->
              <div class="flex items-center space-x-2">
                <% case asset.scan_status %>
                <% when 'clean' %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-green-100 text-green-800">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Clean
                  </span>
                <% when 'pending', 'scanning' %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-yellow-100 text-yellow-800">
                    <svg class="w-3 h-3 mr-1 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    <%= asset.scan_status.humanize %>
                  </span>
                <% when 'infected' %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-red-100 text-red-800">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Quarantined
                  </span>
                <% when 'failed' %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-gray-100 text-gray-800">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Scan Failed
                  </span>
                <% end %>
              </div>

              <% if asset.purpose.present? %>
                <p class="text-xs text-gray-600 truncate" title="<%= asset.purpose %>">
                  <%= asset.purpose %>
                </p>
              <% end %>

              <% if asset.has_extracted_text? %>
                <p class="text-xs text-gray-500">
                  <%= asset.word_count %> words extracted
                </p>
              <% end %>

              <div class="text-xs text-gray-400">
                Uploaded <%= time_ago_in_words(asset.created_at) %> ago
              </div>
            </div>

            <!-- Actions -->
            <div class="mt-4 flex items-center justify-between">
              <% if asset.safe_to_use? %>
                <%= link_to asset.file_url, 
                            class: "text-blue-600 hover:text-blue-800 text-sm",
                            target: "_blank" do %>
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  View
                <% end %>
              <% else %>
                <span class="text-gray-400 text-sm">Quarantined</span>
              <% end %>

              <%= link_to brand_asset_path(asset),
                          method: :delete,
                          data: { 
                            confirm: "Are you sure you want to delete this asset?",
                            turbo_method: :delete
                          },
                          class: "text-red-600 hover:text-red-800 text-sm" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Basic pagination info -->
      <% if @brand_assets.count > 0 %>
        <div class="border-t border-gray-200 bg-white px-4 py-3 text-center">
          <p class="text-sm text-gray-700">
            Showing <%= @brand_assets.count %> brand assets
          </p>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="mt-4 text-sm font-medium text-gray-900">No brand assets</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by uploading your first brand asset.</p>
        <div class="mt-6">
          <%= link_to new_brand_asset_path,
                      class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Upload Assets
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>