<% content_for :title, "Brand Assets" %>

<div class="max-w-7xl mx-auto p-6" 
     data-controller="file-manager" 
     data-file-manager-current-view-value="grid"
     data-file-manager-selected-class="ring-2 ring-blue-500 bg-blue-50"
     data-file-manager-grid-active-class="bg-blue-600 text-white"
     data-file-manager-list-active-class="bg-gray-100 text-gray-600">
  
  <!-- Header -->
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Brand Assets</h1>
      <p class="text-gray-600">Manage your brand materials and creative assets</p>
    </div>
    
    <div class="flex items-center space-x-3">
      <!-- View Toggle -->
      <div class="bg-white border border-gray-300 rounded-md p-1 flex">
        <button type="button" 
                class="px-3 py-1 rounded text-sm font-medium transition-colors"
                data-file-manager-target="viewToggle"
                data-view="grid"
                data-action="click->file-manager#toggleView">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
          </svg>
        </button>
        <button type="button" 
                class="px-3 py-1 rounded text-sm font-medium transition-colors"
                data-file-manager-target="viewToggle"
                data-view="list"
                data-action="click->file-manager#toggleView">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <%= link_to new_brand_asset_path, 
                  class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors flex items-center space-x-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <span>Upload Assets</span>
      <% end %>
    </div>
  </div>

  <!-- Enhanced Filters and Bulk Actions -->
  <div class="bg-white rounded-lg shadow mb-6 p-6">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-4">
      <!-- Search Bar -->
      <div class="flex-1 max-w-md mb-4 lg:mb-0">
        <div class="relative">
          <input type="text" 
                 placeholder="Search files, content, and metadata..."
                 class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                 data-file-manager-target="searchInput"
                 data-action="input->file-manager#performSearch keyup->file-manager#performSearch">
          <svg class="w-5 h-5 absolute left-3 top-2.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </div>

      <!-- Bulk Actions (hidden by default) -->
      <div class="hidden" data-file-manager-target="bulkActions">
        <div class="flex items-center space-x-3">
          <span class="text-sm text-gray-600">
            <span data-file-manager-target="selectedCount">0</span> selected
          </span>
          <button type="button" 
                  class="px-3 py-1 text-sm text-red-600 hover:text-red-700 border border-red-300 rounded hover:bg-red-50"
                  data-action="click->file-manager#bulkDelete">
            Delete
          </button>
          <button type="button" 
                  class="px-3 py-1 text-sm text-blue-600 hover:text-blue-700 border border-blue-300 rounded hover:bg-blue-50"
                  data-action="click->file-manager#bulkDownload">
            Download
          </button>
          <button type="button" 
                  class="px-3 py-1 text-sm text-green-600 hover:text-green-700 border border-green-300 rounded hover:bg-green-50"
                  data-action="click->file-manager#bulkCategorize">
            Categorize
          </button>
          <button type="button" 
                  class="px-3 py-1 text-sm text-gray-600 hover:text-gray-700 border border-gray-300 rounded hover:bg-gray-50"
                  data-action="click->file-manager#clearSelection">
            Clear
          </button>
        </div>
      </div>
    </div>

    <!-- Advanced Filters -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">File Type</label>
        <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                data-file-manager-target="fileTypeFilter"
                data-action="change->file-manager#performSearch">
          <option value="">All Types</option>
          <% BrandAsset.file_types.keys.each do |type| %>
            <option value="<%= type %>" <%= 'selected' if params[:file_type] == type %>><%= type.humanize %></option>
          <% end %>
        </select>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Scan Status</label>
        <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                data-file-manager-target="scanStatusFilter"
                data-action="change->file-manager#performSearch">
          <option value="">All Status</option>
          <% BrandAsset.scan_statuses.keys.each do |status| %>
            <option value="<%= status %>" <%= 'selected' if params[:scan_status] == status %>><%= status.humanize %></option>
          <% end %>
        </select>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Sort By</label>
        <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                data-file-manager-target="sortSelect"
                data-action="change->file-manager#performSearch">
          <option value="recent">Most Recent</option>
          <option value="oldest">Oldest First</option>
          <option value="name">Name A-Z</option>
          <option value="name_desc">Name Z-A</option>
          <option value="size">Smallest First</option>
          <option value="size_desc">Largest First</option>
          <option value="file_type">File Type</option>
        </select>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Size Range</label>
        <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                data-action="change->file-manager#performSearch">
          <option value="">Any Size</option>
          <option value="small">< 1MB</option>
          <option value="medium">1-5MB</option>
          <option value="large">> 5MB</option>
        </select>
      </div>

      <div class="flex items-end">
        <button type="button" 
                class="w-full px-4 py-2 text-gray-600 border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
                onclick="window.location.href = '<%= brand_assets_path %>'">
          Clear All
        </button>
      </div>
    </div>
  </div>

  <!-- Stats Overview -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Total Assets</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @brand_assets.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Clean Files</p>
          <p class="text-2xl font-semibold text-gray-900"><%= BrandAsset.clean_files.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Pending Scan</p>
          <p class="text-2xl font-semibold text-gray-900"><%= BrandAsset.pending_scan.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-500">Issues Found</p>
          <p class="text-2xl font-semibold text-gray-900"><%= BrandAsset.infected_files.count %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Files Container -->
  <div class="bg-white rounded-lg shadow">
    <% if @brand_assets.any? %>
      <!-- Selection Header -->
      <div class="border-b border-gray-200 px-4 py-3">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <input type="checkbox" 
                   class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                   data-file-manager-target="selectAll"
                   data-action="change->file-manager#selectAllFiles">
            <label class="ml-2 text-sm text-gray-900">Select All</label>
          </div>
          <div class="text-sm text-gray-500">
            <%= @brand_assets.count %> assets
          </div>
        </div>
      </div>

      <!-- Grid View -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 p-6" 
           data-file-manager-target="fileGrid">
        <% @brand_assets.each do |asset| %>
          <div class="border rounded-lg p-4 hover:shadow-md transition-all duration-200 <%= 'border-red-200 bg-red-50' if asset.quarantined? %>"
               data-file-id="<%= asset.id %>"
               data-file-name="<%= asset.file_name %>"
               data-file-url="<%= asset.file_url %>"
               data-file-type="<%= asset.file_type %>"
               data-content-type="<%= asset.content_type %>"
               data-download-url="<%= asset.file_url %>"
               data-purpose="<%= asset.purpose %>"
               data-metadata="<%= asset.metadata.to_json %>">
            
            <!-- Selection Checkbox -->
            <div class="flex items-center justify-between mb-3">
              <input type="checkbox" 
                     value="<%= asset.id %>"
                     class="file-checkbox h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                     data-action="change->file-manager#selectFile">
              <div class="flex space-x-1">
                <button type="button" 
                        class="p-1 text-gray-400 hover:text-blue-600 transition-colors"
                        data-file-id="<%= asset.id %>"
                        data-action="click->file-manager#previewFile"
                        title="Preview">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                </button>
                <button type="button" 
                        class="p-1 text-gray-400 hover:text-green-600 transition-colors"
                        data-file-id="<%= asset.id %>"
                        data-action="click->file-manager#editMetadata"
                        title="Edit Metadata">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                </button>
              </div>
            </div>

            <!-- File Preview -->
            <div class="mb-4 flex justify-center">
              <% if asset.image_file? && asset.safe_to_use? && asset.file_attached? %>
                <%= image_tag asset.file, 
                              class: "w-20 h-20 object-cover rounded cursor-pointer",
                              alt: asset.file_name,
                              data: { action: "click->file-manager#previewFile", file_id: asset.id } %>
              <% else %>
                <div class="w-20 h-20 bg-gray-100 rounded flex items-center justify-center cursor-pointer"
                     data-action="click->file-manager#previewFile" 
                     data-file-id="<%= asset.id %>">
                  <% case asset.file_type %>
                  <% when 'brand_guideline', 'style_guide', 'compliance_document' %>
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                  <% when 'presentation' %>
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"></path>
                    </svg>
                  <% when 'font_file' %>
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                    </svg>
                  <% else %>
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </div>

            <!-- File Info -->
            <div class="space-y-2">
              <h3 class="font-medium text-gray-900 text-sm truncate" title="<%= asset.file_name %>">
                <%= asset.file_name %>
              </h3>
              
              <div class="flex items-center justify-between text-xs text-gray-500">
                <span class="px-2 py-1 bg-gray-100 rounded">
                  <%= asset.file_type.humanize %>
                </span>
                <span><%= asset.human_file_size %></span>
              </div>

              <!-- Scan Status -->
              <div class="flex items-center space-x-2">
                <% case asset.scan_status %>
                <% when 'clean' %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-green-100 text-green-800">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Clean
                  </span>
                <% when 'pending', 'scanning' %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-yellow-100 text-yellow-800">
                    <svg class="w-3 h-3 mr-1 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    <%= asset.scan_status.humanize %>
                  </span>
                <% when 'infected' %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-red-100 text-red-800">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Quarantined
                  </span>
                <% when 'failed' %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-gray-100 text-gray-800">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Scan Failed
                  </span>
                <% end %>
              </div>

              <% if asset.purpose.present? %>
                <p class="text-xs text-gray-600 truncate" title="<%= asset.purpose %>">
                  <%= asset.purpose %>
                </p>
              <% end %>

              <% if asset.has_extracted_text? %>
                <p class="text-xs text-gray-500">
                  <%= asset.word_count %> words extracted
                </p>
              <% end %>

              <div class="text-xs text-gray-400">
                Uploaded <%= time_ago_in_words(asset.created_at) %> ago
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- List View (hidden by default) -->
      <div class="hidden divide-y divide-gray-200" data-file-manager-target="fileList">
        <% @brand_assets.each do |asset| %>
          <div class="p-4 hover:bg-gray-50 transition-colors"
               data-file-id="<%= asset.id %>"
               data-file-name="<%= asset.file_name %>"
               data-file-url="<%= asset.file_url %>"
               data-file-type="<%= asset.file_type %>"
               data-content-type="<%= asset.content_type %>"
               data-download-url="<%= asset.file_url %>"
               data-purpose="<%= asset.purpose %>"
               data-metadata="<%= asset.metadata.to_json %>">
            
            <div class="flex items-center space-x-4">
              <!-- Selection Checkbox -->
              <input type="checkbox" 
                     value="<%= asset.id %>"
                     class="file-checkbox h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                     data-action="change->file-manager#selectFile">

              <!-- File Icon -->
              <div class="flex-shrink-0">
                <% if asset.image_file? && asset.safe_to_use? && asset.file_attached? %>
                  <%= image_tag asset.file, 
                                class: "w-10 h-10 object-cover rounded",
                                alt: asset.file_name %>
                <% else %>
                  <div class="w-10 h-10 bg-gray-100 rounded flex items-center justify-center">
                    <!-- Same icons as grid view -->
                  </div>
                <% end %>
              </div>

              <!-- File Details -->
              <div class="flex-1 min-w-0">
                <div class="flex items-center justify-between">
                  <h4 class="text-sm font-medium text-gray-900 truncate">
                    <%= asset.file_name %>
                  </h4>
                  <div class="flex space-x-2">
                    <button type="button" 
                            class="p-1 text-gray-400 hover:text-blue-600"
                            data-file-id="<%= asset.id %>"
                            data-action="click->file-manager#previewFile">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                    </button>
                    <button type="button" 
                            class="p-1 text-gray-400 hover:text-green-600"
                            data-file-id="<%= asset.id %>"
                            data-action="click->file-manager#editMetadata">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    </button>
                  </div>
                </div>
                
                <div class="flex items-center mt-1 space-x-4 text-sm text-gray-500">
                  <span class="px-2 py-1 bg-gray-100 rounded text-xs">
                    <%= asset.file_type.humanize %>
                  </span>
                  <span><%= asset.human_file_size %></span>
                  <span>Uploaded <%= time_ago_in_words(asset.created_at) %> ago</span>
                  
                  <!-- Status Badge -->
                  <% case asset.scan_status %>
                  <% when 'clean' %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-green-100 text-green-800">
                      Clean
                    </span>
                  <% when 'pending', 'scanning' %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-yellow-100 text-yellow-800">
                      <%= asset.scan_status.humanize %>
                    </span>
                  <% when 'infected' %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-red-100 text-red-800">
                      Quarantined
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination Container -->
      <div class="border-t border-gray-200 bg-white px-4 py-3" 
           data-file-manager-target="paginationContainer">
        <div class="flex items-center justify-between">
          <div class="text-sm text-gray-700">
            Showing <%= @brand_assets.count %> brand assets
          </div>
          <!-- Pagination controls would go here -->
        </div>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="mt-4 text-sm font-medium text-gray-900">No brand assets</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by uploading your first brand asset.</p>
        <div class="mt-6">
          <%= link_to new_brand_asset_path,
                      class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Upload Assets
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- File Preview Modal -->
  <div class="fixed inset-0 z-50 overflow-y-auto hidden" data-file-manager-target="previewModal">
    <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      <!-- Background overlay -->
      <div class="fixed inset-0 transition-opacity" data-action="click->file-manager#closePreviewModal">
        <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
      </div>

      <!-- Modal content -->
      <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-4xl sm:w-full sm:p-6">
        <div class="absolute top-0 right-0 pt-4 pr-4">
          <button type="button" 
                  class="bg-white rounded-md text-gray-400 hover:text-gray-600 focus:outline-none"
                  data-action="click->file-manager#closePreviewModal">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
            <h3 class="modal-title text-lg leading-6 font-medium text-gray-900 mb-4">
              File Preview
            </h3>
            
            <div data-file-manager-target="previewContent">
              <!-- Preview content will be inserted here -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Metadata Edit Modal -->
  <div class="fixed inset-0 z-50 overflow-y-auto hidden" data-file-manager-target="metadataModal">
    <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      <!-- Background overlay -->
      <div class="fixed inset-0 transition-opacity" data-action="click->file-manager#closeMetadataModal">
        <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
      </div>

      <!-- Modal content -->
      <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">
        <div class="absolute top-0 right-0 pt-4 pr-4">
          <button type="button" 
                  class="bg-white rounded-md text-gray-400 hover:text-gray-600 focus:outline-none"
                  data-action="click->file-manager#closeMetadataModal">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
              Edit File Metadata
            </h3>
            
            <form data-file-manager-target="metadataForm" 
                  data-action="submit->file-manager#saveMetadata">
              
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    File Name
                  </label>
                  <input type="text" 
                         name="file_name"
                         readonly
                         class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-600">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    File Type
                  </label>
                  <select name="file_type"
                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <% BrandAsset.file_types.keys.each do |type| %>
                      <option value="<%= type %>"><%= type.humanize %></option>
                    <% end %>
                  </select>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Purpose/Description
                  </label>
                  <input type="text" 
                         name="purpose"
                         placeholder="e.g., Q1 2024 Brand Guidelines"
                         class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Tags
                  </label>
                  <input type="text" 
                         name="tags"
                         placeholder="brand, logo, guidelines (comma-separated)"
                         class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                  <p class="text-xs text-gray-500 mt-1">Separate tags with commas</p>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Description
                  </label>
                  <textarea name="description"
                           rows="3"
                           placeholder="Detailed description of this asset..."
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"></textarea>
                </div>
              </div>

              <div class="mt-6 flex justify-end space-x-3">
                <button type="button" 
                        class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none"
                        data-action="click->file-manager#closeMetadataModal">
                  Cancel
                </button>
                <button type="submit" 
                        class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none">
                  Save Changes
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>